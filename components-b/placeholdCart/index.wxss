.mini_cart {
  position: relative;
  height: 120rpx;
  background: #fff;
}

.footer {
  z-index: 11;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  -webkit-align-items: center;
  align-items: center;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.footer .background {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.footer .middle {
  flex: 1;
  overflow: hidden;
  margin-left: 20rpx;
  margin-right: 10rpx;
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
  font-size: 0;
}

.footer .none {
  color: #999;
  font-size: 30rpx;
}

.footer .right {
  display: table;
  width: 176rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  background: #CCCCCC
}

.footer .right .button-txt {
  box-sizing: border-box;
  max-width: 176rpx;
  padding: 0 8rpx;
  line-height: 32rpx;
  display: table-cell;
  vertical-align: middle;
  font-weight: bold;
}