page{
    background-color: #f6f6f6;
}
.flex{
    display: flex;
    align-items: center;
    justify-content: center;
}
.banner{
    height: 106rpx; 
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding-left: 24rpx;
    z-index: 100;
}
.price{
    width: 116rpx;
    height: 100%;
    position: relative;
    box-sizing: border-box;
}
.price_bg{
   position: absolute;
   left: 0;
   top: 20rpx;
   z-index: 10;
}
.unit{
    position: absolute;
    left: 22rpx;
    top: 46rpx;
    color: #FF2E48;
    font-size: 24rpx;
    z-index: 15;
}
.unit.qi{
    position: absolute;
    left: 18rpx;
    top: 46rpx;
    color: #FF2E48;
    font-size: 24rpx;
    z-index: 15;
}
.priceText{
    position: absolute;
    color: #FF2E48;
    font-size: 48rpx;
    height: 106rpx;
    line-height: 106rpx;
    z-index: 15;
    left: 34rpx;
}
.priceTagText{
    position: absolute;
    right: 12rpx;
    bottom: 32rpx;
    right: -10rpx;
    color: #FF2E48;
    font-size: 12rpx;
    z-index: 20;
    width: 12rpx;
    height: 16rpx;
    line-height: 16rpx;
}

.text{
    height: 106rpx;
    position: relative;
    margin: 0 24rpx;
    font-size: 28rpx;
    width: 346rpx;
    max-width: 346rpx;
    display: inline-block;
}
.subtext{
    height: 106rpx;
    line-height: 106rpx;
    display: inline;
    white-space: nowrap;
    /* float: left; */
}
.subtext:nth-child(2){
    font-weight: 600;
}   
.countDownText{
    position: relative;
    color: #333;
    font-size: 26rpx;
    height: 106rpx;
    line-height: 106rpx;
}
.countDownTime{
    position: relative;
}
.countDownTime_text{
    width: 32rpx;
    height: 32rpx;
    background: #FF4060;
    border-radius: 4rpx;
    color: #fff;
    font-size: 22rpx;
    font-weight: 500;
    line-height: 32rpx;
    margin-right: 10rpx;
    text-align: center;
    position: relative;
}
.hour::after,
.minute::after{
    content: ':';
    width: 8rpx;
    height: 32rpx;
    color: #FF4060;
    font-size: 22rpx;
    font-weight: 500;
    line-height: 32rpx;
    position: absolute;
    right: -8rpx;
    top: 0;
}
.head {
    padding-top: 20rpx;
    position: fixed;
    left: 0;
    width: 100%;
    height: 120rpx;
    background: #ffffff;
    z-index: 100;
}
.select_one {
    padding: 0 20rpx;
    color: rgb(51, 51, 51);
    font-size: 28rpx;
}
.sort_tag {
    padding-right: 50rpx;
}
.sort_tag_active {
    color: rgb(71, 179, 79);
}
.selector {
    align-items: center;
}
.selector_num {
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    color: rgb(71, 179, 79);
    font-size: 20rpx;
    background: rgb(236, 247, 237);
    border-radius: 50%;
    margin-left: 4rpx;
    position: relative;
    top: -1px;
}
.icon_select {
    margin-left: 6rpx;
    width: 16rpx;
    height: 22rpx;
    background: url("https://storage.360buyimg.com/wximg/common/selector_icon.png")
        no-repeat center;
    background-size: 100% 100%;
}
.select_two {
    margin-top: 10rpx;
    padding: 0 10rpx;
    overflow: hidden;
}
.select_two_item {
    padding: 0 10rpx;
    max-width: 220rpx;
}
.select_two_txt {
    padding: 0 10rpx;
    justify-content: center;
    align-items: center;
    height: 64rpx;
    line-height: 64rpx;
    color: rgb(102, 102, 102);
    font-size: 24rpx;
    background: rgb(248, 248, 248);
    border-radius: 4rpx;
}
.select_two_tab_txt {
    color: rgb(71, 179, 79);
}
.arrow_icon {
    margin-left: 4rpx;
    font-size: 14rpx;
}
.pop_bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 101;
}
.tab_pop {
    /* display: none; */
    padding-top: 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    z-index: 101;
}
.tab_case {
    padding: 0 10rpx;
    margin-bottom: 50rpx;
}
.tab_case_item {
    padding: 0 10rpx;
}
.tab_case_txt {
    justify-content: center;
    align-items: center;
    height: 64rpx;
    line-height: 64rpx;
    color: rgb(102, 102, 102);
    font-size: 24rpx;
    background: rgb(248, 248, 248);
    border-radius: 4rpx;
}
.tab_case_active {
    background: #ffffff;
    border-right: 1rpx solid rgb(245, 245, 245);
    border-left: 1rpx solid rgb(245, 245, 245);
    border-top: 1rpx solid rgb(245, 245, 245);
}
.tag_case {
    flex-wrap: wrap;
    padding: 0 10rpx;
}
.tag_item {
    margin-bottom: 20rpx;
    padding: 0 10rpx;
    width: 33.33%;
    box-sizing: border-box;
}
.tag_item_name {
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    color: rgb(102, 102, 102);
    font-size: 24rpx;
    background: rgb(248, 248, 248);
}
.btn_case {
    margin-top: 20rpx;
}
.btn_item {
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    box-sizing: border-box;
}
.btn_gray {
    color: rgb(204, 204, 204);
    font-size: 28rpx;
    border-top: 1px solid rgb(245, 245, 245);
}
.btn_black {
    color: rgb(51, 51, 51);
    font-size: 28rpx;
    border-top: 1px solid rgb(245, 245, 245);
}
.btn_green {
    background: linear-gradient(
        135deg,
        rgb(85, 216, 94) 0%,
        rgb(72, 193, 81) 100%
    );
    color: rgb(255, 255, 255);
    font-size: 28rpx;
}
.btn_green_active {
    background: linear-gradient(
        135deg,
        rgb(170, 170, 170) 0%,
        rgb(204, 204, 204) 100%
    );
}
.seletor_pop {
    padding-top: 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    z-index: 101;
}
.selector_case {
    margin-top: 50rpx;
}
.selector_title {
    color: rgb(153, 153, 153);
    font-size: 24rpx;
    padding: 0 0 20rpx 20rpx;
}
.select_tag_active {
    background: rgb(236, 247, 237);
    color: rgb(71, 179, 79);
}
.bottom_txt {
    color: rgb(51, 51, 51);
    text-align: center;
    padding: 40rpx 0;
    font-size: 24rpx;
}
.store_item{
    border-top: 1px solid rgb(245, 245, 245);
    border-radius: 24rpx;
    margin: 0 24rpx 12rpx 24rpx;
    overflow: hidden;
}
