.flex {
  display: flex;
}
.flex-auto {
  flex: 1
}
/* AB测试改动3 */
.search-wrapper {
  width: 100%;
  height: 98rpx;
  background: #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-wrapper-b {
  position: fixed;
  top: -1rpx;
  left: 0;
  z-index: 11;
}

.inputinput_search_container {
  width: 682rpx;
  height: 60rpx;
  background: #FFFFFF;
  border-radius: 60rpx;
  padding-left: 20rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}
.input_search_icon {
  width: 28rpx;
  height: 28rpx;
  /* margin-right: 12rpx; */
}
.search-content {
  flex: 1;
  width: 94%;
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius: 0 60rpx 60rpx 0;
}
.search-key-box {
  height: 60rpx;
  padding: 0 18rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1
}
.search-key {
  height: 44rpx;
  padding: 0 20rpx;
  background: #F6F6F6;
  border-radius: 22rpx;
  line-height: 44rpx;
  font-size: 22rpx;
  color: #333;
  max-width: 250rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.scroll-content {
  margin-left: -5rpx;
  flex: 1;
  height: 44rpx;
  white-space: nowrap;
  overflow: hidden;
  border-radius: 0 44rpx 44rpx 0;
  display: flex;
  position: relative;
  z-index: 0;
}
.scroll {
  width: 100%;
  height: 100%;
  display: flex;
  border-radius: 0 44rpx 44rpx 0;
}
.filter-item {
  height: 44rpx;
  padding: 0 20rpx;
  background-color: rgb(226, 244, 228);
  border-radius: 22rpx;
  margin-right: 4rpx;
  display: flex;
  align-items: center;
}
.filter-text {
  color: rgb(0, 207, 55);
  max-width: 168rpx;
  font-size: 22rpx;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.filter-item image {
  width: 16rpx;
  height: 16rpx;
  margin-left: 8rpx;
}