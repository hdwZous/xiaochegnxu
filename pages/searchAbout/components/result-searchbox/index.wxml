<view class='{{(onPullDown || !isHasTabs) ? "search-wrapper search-wrapper-b" : "search-wrapper"}}'>
  <view class="inputinput_search_container">
    <image class="input_search_icon" 
          mode="aspectFit"
          aria-hidden='true' 
          src="https://s.360buyimg.com/wximg/common/icon_search.png"></image>
    <view wx:if="{{searchKey}}" 
          class="search-content" 
          bindtap="onSeachWordClicked">
          <view class='search-key-box' aria-role='link' aria-label="搜索词.{{searchKey}}">
            <view aria-hidden="true" class="search-key">{{searchKey}}</view>
          </view>
          <view class="scroll-content">
            <view style='width: 6rpx; height: 100%' aria-hidden="true"></view>
            <scroll-view  enable-flex="true" 
                          scroll-x="{{true}}"
                          class="scroll"
                          scroll-into-view="{{id}}"
                          scroll-with-animation>
              <view
                wx:if="{{searchTag && searchTag.imgUrl}}"
                class="filter-item"
                data-item="{{searchTag}}"
                catchtap="clickTag"
                aria-role='button'
                aria-label="搜索词.{{searchTag.itemName}}.点击将删除搜索词"
              >
                <view aria-hidden="true" class='filter-text'>{{searchTag.itemName}}</view>
                <image aria-hidden="true" src="https://storage.360buyimg.com/wximg/common/limitGoClose.png" />
              </view>
            </scroll-view>
          </view>
    </view>
  </view>
</view>