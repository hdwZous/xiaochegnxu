<wxs module="tool" src="../../../../common/util/tools.wxs"></wxs>
<view class="good-list-wrapper">
    <view class="topic-main">
        <block wx:for="{{goodList}}" wx:for-item="item" wx:key="index">
          <store-good-list-item
            item="{{item}}"
            imgLazyLoad="{{imgLazyLoad}}"
            keyword="{{keyword}}"
            traceId="{{traceId}}"
            index="{{index}}"
            currentPageName="{{currentPageName}}"
            prePageName="{{prePageName}}"
            pageId="{{pageId}}"
            recommendObj="{{recommendObj}}"
            bind:addMinControllerChange="addMinControllerChange"
          ></store-good-list-item>
          <!-- 推荐购买楼层 -->
          <block wx:if="{{tool.findSkuId(currentCheckList, item)}}">
            <recom-list
              totalTimes="{{totalTimes}}"
              storeId="{{currentRecommd.storeId}}"
              orgCode="{{currentRecommd.orgCode}}"
              skuId="{{currentRecommd.skuId}}"
              excludeSkuIds="{{excludeSkuIds}}"
              buriedObj="{{recommendObj}}"
              couponIds="{{couponIds}}"
              isFollow="{{isFollow}}"
              updateNum="{{updateNum}}"
              pageSource="storeSearchResult"
              addCarPushCoupon="{{addCarPushCoupon}}"
              bind:computeTime="computeTime"
              bind:pageEvent="widgetEvent"
              brandCoupon="{{brandCoupon}}"
            ></recom-list>
          </block>
        </block>
    </view>
</view>