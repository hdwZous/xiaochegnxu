
.recommend-wrapper {
  padding-top: 60rpx;
  background: #fff;
}
.keyword-wrapper {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  margin-bottom: 24rpx;
  margin-left: 20rpx;
}
.keyword-wrapper > .keyword {
  max-width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #FF5757;
}
.good-list-wrapper {
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.good-item {
  width: 220rpx;
  margin: 0 0 0rpx 16rpx;
  background: #fff;
  border-radius: 12rpx;
  position: relative;
  padding-bottom: 24rpx;

}
.logo-wrapper {
  width:344rpx;
  height:346rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.logo-wrapper .logo {
  width:344rpx;
  height:346rpx;
  border-radius:12rpx 12rpx 0px 0px;
}
.logo-wrapper .tags {
  position: absolute;
  bottom: 0;
  left: 20rpx;
  border-radius:12rpx 0rpx 8rpx 0px;
  font-size: 20rpx;
  color: #fff;
  padding: 4rpx 8rpx;
}
.logo-wrapper .freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}

.name {
  font-size:28rpx;
  color: #333;
  width: 304rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.description {
  font-size: 24rpx;
  line-height: 30rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: 8rpx;
  margin-left: 20rpx;
}
.desc-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}
.money {
  font-family: regular;
  display: flex;
  padding-left: 20rpx;
  align-items: center;
  position: relative;
}
.bottom-text {
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 40rpx 0 140rpx 0;
}
.select_case {
  position: absolute;
  right: 10rpx;
  bottom: -4rpx;
}

.go-detail-wrapper {
  position: absolute;
  right: 18rpx;
  bottom: 8rpx;
}
.go-detail {
  width: 44rpx;
  height: 36rpx;
  vertical-align: middle;
}
.price-wrap {
  display: flex;
  flex-direction: column;
}
.sale_bt {
  width: 80rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF; 
  background: linear-gradient(90deg, #45DC6D 0%, #00CF37 100%);
  border-radius: 28rpx;
  position: absolute;
  right: 10rpx;
  bottom: 0;
}