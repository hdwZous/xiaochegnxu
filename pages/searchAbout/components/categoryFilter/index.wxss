  white-space: nowrap;
  padding-bottom: 16rpx;
  margin-left: 24rpx;
}
.category-filter-scroll {
  width: 100%;
  height: 60rpx;
}
.category-item {
  display: inline-block;
  height: 60rpx;
  font-size: 24rpx;
  color: #666;
  background: #fff;
  border-radius: 12rpx;
  text-align: center;
  line-height: 60rpx;
  margin-right: 16rpx;
  padding: 0 24rpx;
  max-width: 144rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
