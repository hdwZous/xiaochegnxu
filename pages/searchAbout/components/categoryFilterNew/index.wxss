@import "/common/css/iconfont.wxss";
@import "/common/css/global.wxss";

.category-filter-wrapper {
	white-space: nowrap;
	position: relative;
}

.category-filter-scroll {
	width: 100%;
	height: 60rpx;
	font-size: 0;
  vertical-align: center;
  padding-bottom: 16rpx;
}

.category-item {
	display: inline-block;
	height: 60rpx;
	font-size: 24rpx;
	color: #333;
	background-color: #fff;
	border-radius: 12rpx;
	text-align: center;
	line-height: 60rpx;
	margin-right: 16rpx;
	padding: 0 24rpx;
  	position: relative;
  	font-weight: 400;
}
.category-item.nobgcolor{
	/* background-color: transparent; */
}
.caterory-flag {
	position: absolute;
	left: 0;
	right: 0;
	/* top: 40rpx; */
	height: 100rpx;
	background: #f6f6f6;
}

.category-item:first-child {
	margin-left: 24rpx;
}

.category-item:last-child {
	margin-right: 24rpx;
}

.selected {
    color: #00CF37;
    background: #E4F8E6;
}

.caterory-wrapper {
	display: flex;
	align-items: center;
}

.caterory-text {
	max-width: 156rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.caterory-text.notext{
	color: transparent;
}
.caterory-icon {
	margin-left: 10rpx;
	align-items: center;
	justify-content: center;
	color: #666;
	font-size: 10rpx;
}

.sub-filter-wrapper {
	position: absolute;
	width: 100vw;
	height: 100vh;
	top: 72rpx;
	z-index: 999;
	background: rgba(0, 0, 0, 0.45);
}

.sub-filter-content {
	background: #fff;
	border-bottom-left-radius: 24rpx;
	border-bottom-right-radius: 24rpx;
	overflow: hidden;
}

.sub-filter-scroll {
	width: 100vw;
	box-sizing: border-box;
	background: #F8F8F8;
	display: flex;
	flex-wrap: wrap;
}

.sub-filter-item {
	width: 50vw;
	box-sizing: border-box;
	padding: 0 40rpx 32rpx 40rpx;
	display: flex;
	align-items: center;
}

.sub-filter-text {
	max-width: 288rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.sub-filter-icon {
	width: 24rpx;
	height: 24rpx;
	margin-left: 16rpx;
}

.activity {
	color: #00CF37;
}

.button-item {
  width: 334rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #EDEDED;
  border-radius: 42rpx;
  text-align: center;
}
.btn_black {
  color: rgb(51, 51, 51);
  font-size: 28rpx;
  border-top: 1px solid rgb(245, 245, 245);
}
.confirm {
  background: linear-gradient( 135deg, rgb(85, 216, 94) 0%, rgb(72, 193, 81) 100% );
  color: rgb(255, 255, 255);
  font-size: 28rpx;
  margin-left: 20rpx;
}
.button-wrapper {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  justify-content: center;
}