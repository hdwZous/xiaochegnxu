<view class='local d-flex' bindtap="clickArrow">
    <image class="local_icon" src="https://storage.360buyimg.com/wxmini/search/local.png" />
  <view class="select_con ellipsis">
    <view>{{nearbyObj.title}}</view>
    <view wx:if="{{nearbyObj.text}}" class='line'></view>
    <view class="ellipsis select mgL8">{{nearbyObj.text}}</view>
  </view>
  <view class="nearby">
    <view class="{{showNearby ? 'select':''}}">附近</view>
    <image wx:if="{{showNearby}}" class="arrow mgL8" src="https://storage.360buyimg.com/wxmini/search/greenArrow.png" />
    <image wx:else class="arrow mgL8" src="https://storage.360buyimg.com/wxmini/search/greyArrow.png" />
  </view>
</view>