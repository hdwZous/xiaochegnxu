.good-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  background: #ffffff;
  border-bottom: solid 2rpx #f5f5f5;
}

.good-item>.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  position: relative;
}

.logo>image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.good-pic {
  width: 184rpx;
  height: 184rpx;
  overflow: hidden;
  border-radius: 12rpx 14rpx;
  margin-right: 16rpx;
  position: relative;
}
.good-pic image {
  width: 184rpx;
  height: 184rpx;
  border-radius: 12rpx 14rpx;
}

.logo-layer {
  background: rgba(0, 0, 0, .02);
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.store_stockCount_tag {
  position: absolute;
  left: 0px;
  top: 0rpx;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  text-align: center;
  line-height: 160rpx;
  color: #FFF;
  font-size: 26rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

.store-sku-remain {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 28rpx;
  font-size: 20rpx;
  color: #FFF;
  text-align: center;
  line-height: 28rpx;
  border-radius: 0 0 8rpx 8rpx;
  background: linear-gradient(to right, #FF5C37 0%, #FF9248 100%);
}

.freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}

.right-info {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}

.sku-name-old {
  width: 490rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.sku-tag {
  display: inline-block;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 8rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  vertical-align: 5rpx
}

.sku-name {
  width: 466rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


.description-old {
  font-size: 24rpx;
  line-height: 30rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: 8rpx;
  width: 506rpx;
}

