@import "../../../../common/css/regular.wxss";

.list-wrapper {
    padding: 0 24rpx;
    overflow-x: hidden;
    /* background: #ffffff; */
}
.good-contanier {
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.good-item-wrapper {
    display: flex;
    padding-bottom: 16rpx;
    justify-content: space-between;
    border-top: solid 1rpx #f6f6f6;
    border-bottom: 1rpx solid #F5F5F5;
}
.good-item-wrapper:first-child {
    border-top: 1rpx solid transparent;
}


.good-item-wrapper-none {
    border-top: 1rpx solid transparent;
}
.good-item-wrapper-none-bottom {
  border-bottom: 1rpx solid transparent;
  padding-bottom: 0;
}

.store-brand {
  width: 56rpx;
  height: 56rpx;
  margin-right: 16rpx;
  border-radius: 8rpx;
  border: 1px solid rgba(0, 0, 0, 0.08);
}
.store-brand-none {
  width: 56rpx;
  height: 56rpx;
  margin-right: 16rpx;
  border-radius: 8rpx;
  background-color: #f4f4f4;
}
.distance-deliveryTime-flex {
  display: flex;
  align-items: center;
  margin-top: 2rpx;
}
.distance-line {
  height: 16rpx;
  width: 2rpx;
  background-color: #e1e1e1;
  margin: 0 10rpx;
}
.store-name-freight {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #666;
    display: flex;
    align-items: center;
}
.store-name-freight .img {
    width: 20rpx;
    height: 20rpx;
    margin-right: 8rpx;
}
.store-name-freight .fresh-tag {
  width: 96rpx;
  height: 26rpx;
}
.store-name-wrap {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 22rpx;
}
.store-name {
  font-weight: 500;
  max-width: 424rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
}
.strore-arrow {
  margin-left: 8rpx;
}
.strore-arrow image {
  width: 12rpx;
  height: 20rpx;
}
.enter-store-btn {
  display: flex;
  align-items: center;
}
.enter-store-btn .enter-store-text{
  color:#333333;
  margin-left:4rpx;
  font-weight: 400;
}
.store_arrow_icon {
    font-size: 20rpx;
    position: relative;
    top: 1px;
}
/* 运费 */
.freight {
  font-size: 22rpx;
  color: #666;
  font-weight: 300;
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}
.freight-line {
  height: 16rpx;
  width: 2rpx;
  background-color: #e1e1e1;
  margin: 0 10rpx;
}
.freight-text{
  max-width: 161rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.text-red {
  color: rgba(255, 30, 26, 1);
}
.freight .line-price {
  text-decoration: line-through;
  margin-left: 6rpx;
  color: #999;
}
.text-bottom {
    color: #666666;
    font-size: 24rpx;
    margin: 0 -24rpx;
    padding: 40rpx 0;
    background: #f6f6f6;
    text-align: center;
}
.sale_bt {
  width: 80rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF; 
  background: linear-gradient(90deg, #45DC6D 0%, #00CF37 100%);
  border-radius: 28rpx;
  position: absolute;
  right: 0;
}
.select_case {
    position: absolute;
    right: 0rpx;
    z-index: 1;
}

.good-time-text{
  color: #2486FF;
}

.freight-time {
  /* height: 26rpx; */
  border-radius: 4rpx;
  display: flex;
}
.freight-time-left {
  font-size: 20rpx;
  padding: 0 6rpx;
  color: #fff;
  height: 28rpx;
  line-height: 28rpx;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
  overflow: hidden;
  background: linear-gradient(90deg, #4C9CFF 0%, #2486FF 100%);
}
.freight-time-right {
  height: 24rpx;
  line-height: 24rpx;
  padding: 0 6rpx;
  font-size: 20rpx;
  border: 2rpx solid #5BA6F5;
  border-left: none;
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
}
.mg10{
  margin:  0 10rpx;
}