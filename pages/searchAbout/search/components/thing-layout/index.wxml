<view class="thing-layout flex-row" bindtap="onTap">
  <view class="thing__left">
    <image aria-role="img" class="thing__img" mode="aspectFit" src="{{imgUrl}}" lazy-load />
    <view class="thing__overlay" />
    <image aria-role="img" wx:if="{{cornerImage}}" class="thing__icon" mode="aspectFit" src="{{cornerImage}}" lazy-load />
  </view>
  <view class="thing__right">
    <slot></slot>
  </view>
</view>
