.tag-box {
  overflow: hidden;
}

.tag {
  height: 26rpx;
  line-height: 26rpx;
  padding: 0 6rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #FF1E19;
  border: 1px solid currentColor;
  white-space: nowrap;
}

.tag__text {
  position: relative;
  top: 0.2px;
}

.tag--coupon {
  position: relative;
  padding: 0 8rpx;
}

.tag--disabled {
  color: #ccc;
}

.coupon__round__before,
.coupon__round__after {
  position: absolute;
  width: 8rpx;
  height: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 1px solid currentColor;
  background: #fff;
}

.coupon__round__before {
  left: -3px;
  border-radius: 0 12rpx 12rpx 0;
  border-left-color: #fff !important;
}

.coupon__round__after {
  right: -3px;
  border-radius: 12rpx 0 0 12rpx;
  border-right-color: #fff !important;
}
