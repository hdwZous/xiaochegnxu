.rank-layout {
  min-width: 460rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.rank-layout__header {
  height: 88rpx;
  background-color: #FFEAE3;
  color: #FF3D39;
  font-size: 32rpx;
  font-weight: 600;
  padding-left: 26rpx;
}

.rank-layout__icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.rank-layout__content {
  height: 752rpx;
  padding: 0 12rpx;
  overflow: hidden;
  background: linear-gradient(180deg, #FFEAE3 0%, #FAFAFA 100%);
}

.rank-layout__slot {
  height: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 12rpx;
  box-sizing: border-box;
}

.rank-layout__footer {
  height: 48rpx;
  padding: 0 12rpx;
  line-height: 48rpx;
  background-color: #FAFAFA;
  color: #c7c9cc;
  font-size: 20rpx;
}
