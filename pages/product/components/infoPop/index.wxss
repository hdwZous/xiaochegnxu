.info_bg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 14;
    background: rgba(0,0,0,.3);
}
.info_wrap {
    position: fixed;
    left: 0;
    bottom: 0;
    transform: translateY(500px);
    width: 100%;
    height: 500px;
    background: #ffffff;
    border-radius: 20rpx 20rpx 0 0;
    z-index: 15;
    transition: transform .3s linear;
}
.info_active {
    transform: translateY(0);
}
.info_title {
    position: relative;
    height: 100rpx;
    justify-content: center;
    color: rgb(51, 51, 51);
    font-size: 32rpx;
    align-items: center;
    border-radius: 20rpx 20rpx 0 0;
}
.info_close {
    position: absolute;
    right: 0;
    top: 0;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #333333;
    font-size: 30rpx;
}
.info_list {
    position: relative;
}
.info_scroll {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}
.info_item {
    padding: 32rpx 20rpx 32rpx 0;
    margin-left: 20rpx;
    /* align-items: center; */
    border-top: 1px solid rgb(245, 245, 245);
}
.info_label {
    width: 120rpx;
    color: rgb(153, 153, 153);
    font-size: 28rpx;
}
.info_content {
    padding-left: 20rpx;
    color: rgb(51, 51, 51);
    font-size: 28rpx;
}
.info_btn_case {
    padding: 10rpx 20rpx;
    background: #ffffff;
}
.info_btn {
    background: rgb(71, 179, 79);
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    color: #ffffff;
    text-align: center;
    box-shadow: rgba(71, 179, 79, 0.2) 8px 4px 10px;
}