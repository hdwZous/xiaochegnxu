<view class="brand_wrap">
  <view class="brand_title" wx:if="{{homeInfo}}" aria-label="品牌会员" aria-role='text'>品牌会员</view>
  <view class="brand_title" wx:if="{{couponInfo && couponInfo.brandTitle}}" aria-label="couponInfo.brandTitle" aria-role='text'>{{couponInfo.brandTitle}}</view>
  <view class="brand_content d-flex flex-row align-items-center">
    <image wx:if="{{homeInfo && homeInfo.brandLogo}}" class="brand_left" src="{{homeInfo.brandLogo}}" />
    <image wx:if="{{couponInfo && couponInfo.brandLogo}}" class="brand_left" src="{{couponInfo.brandLogo}}" />
    <view class="brand_line_box d-flex flex-row align-items-center" wx:if="{{couponInfo}}">
      <view class="brand_line"></view>
      <view class="top_crile"></view>
      <view class="bottom_crile"></view>
    </view>
    <view class="brand_mid">
      <view wx:if="{{couponInfo}}">
        <view class="brand_top">
          <text class="brand_top_symbol" wx:if="{{couponInfo.amountUnit == 1}}">¥</text>
          <text class="brand_top_money">{{couponInfo.amount}}</text>
          <text class="brand_top_symbol" wx:if="{{couponInfo.amountUnit == 2}}">折</text>
          <text class="brand_top_right">{{couponInfo.couponTitle}}</text>
        </view>
        <view class="brand_timer ellipsis">{{couponInfo.avilableDate}}</view>
      </view>
      <view wx:if="{{homeInfo}}">
        <view class="brand_name ellipsis" wx:if="{{homeInfo.brandName}}" style="color: {{homeInfo.brandNameStyle}}" >{{homeInfo.brandName}}</view>
        <view class="brand_desc ellipsis" wx:if="{{homeInfo.promotionWord}}" bind:tap="goToBrand" style="color: {{homeInfo.promotionStyle}}" >{{homeInfo.promotionWord}}</view>
      </view>
    </view>
    <view class="brand_right goin" wx:if="{{homeInfo}}" bind:tap="goToBrand" style="color: {{homeInfo.bntStyle}}" >{{homeInfo.bntWord}}</view>
    <view class="brand_right coupon {{couponInfo.needToUse ? '' : 'get'}}" style="color: {{couponInfo.couponButton.titleColor}};background: linear-gradient(90deg, {{couponInfo.couponButton.startColor}} 0%, {{couponInfo.couponButton.endColor}} 100%)" wx:if="{{couponInfo && couponInfo.couponButton}}" bindtap="clickCoupon" data-info="{{couponInfo}}">
      {{couponInfo.couponButton.title}}
      <view class="shin-border-box" wx:if="{{couponInfo.needToUse}}" style="border-color:#FF3C3B;border-radius: 52rpx"></view>
    </view>
    <image class="coupon_right" wx:if="{{couponInfo && couponInfo.couponRightIcon}}"  src="{{couponInfo.couponRightIcon}}" />
  </view>
  <view class="brand_gap"></view>
</view>
<!--品牌会员弹窗-->
<brand-dialog wx:if="{{dialogShow}}" couponId="{{couponInfo.couponId}}" brandId="{{couponInfo.brandId}}" brandLayerInfo="{{brandLayerInfo}}" bindcloseBrand="closeBrand" bindopenSuccess="openSuccess" options="{{options}}" recommendObj="{{recommendObj}}" storeId="{{storeId}}"></brand-dialog>