.brand_wrap {
  align-items: center;
  padding: 22rpx 24rpx;
  background: #fff;
}

.brand_content {
  background: rgba(255, 87, 87, 0.05);
  height: 120rpx;
  border-radius: 16rpx;
  position: relative;
}

.brand_left {
  width: 72rpx;
  height: 72rpx;
  border-radius: 8rpx;
  margin-left: 24rpx;
  /* border: 1px solid #ffebeb; */
}

.brand_mid {
  flex: 1;
  margin-left: 24rpx;
  margin-right: 8rpx;
}

.brand_name {
  color: rgb(51, 51, 51);
  font-size: 28rpx;
  font-weight: 500;
  line-height: 36rpx;
}

.brand_desc {
  color: #FF3938;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 36rpx;
  margin-top: 8rpx;
}

.brand_right {
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: #FF3938;
  font-size: 24rpx;
  position: relative;
  z-index: 1;
  border-radius: 26rpx;
}

.brand_right.goin {
  margin-right: 30rpx;
}

.brand_right.coupon {
  margin-right: 40rpx;
}

.brand_right.get {
  border: none;
  background: linear-gradient(90deg, #FF623F 0%, #FF3636 100%);
  box-shadow: 0px 4rpx 8rpx 0px rgba(255, 111, 111, 0.5);
  border-radius: 24rpx;
  color: #FFFFFF;
}

.brand_gap {
  height: 1px;
}

.brand_title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 36rpx;
  margin-bottom: 16rpx;
}

.brand_line_box {
  height: 100%;
  margin-left: 24rpx;
  position: relative;
}

.brand_line {
  height: 46px;
  border-left: 1px dotted #FFC5C5;
}

.brand_line_box .top_crile {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #fff;
  top: -10rpx;
  left: -8rpx;
}

.brand_line_box .bottom_crile {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #fff;
  bottom: -10rpx;
  left: -8rpx;
}

.brand_top {
  font-size: 0;
  color: #FF0606;
  margin-bottom: 4rpx;
}

.brand_top .brand_top_symbol {
  display: inline-block;
  font-size: 28rpx;
  font-family: 'regular';
  font-weight: 400;
  vertical-align: 2rpx;
}

.brand_top .brand_top_money {
  display: inline-block;
  line-height: 60rpx;
  font-size: 52rpx;
  font-family: 'regular';
}

.brand_top .brand_top_right {
  font-size: 28rpx;
  color: #333333;
  margin-left: 8rpx;
  display: inline-block;
  line-height: 34rpx;
  vertical-align: 4rpx;
}

.brand_timer {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 30rpx;
}

.coupon_right {
  position: absolute;
  top: 0;
  right: 0;
  width: 88rpx;
  height: 88rpx;
}