.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 15;
}
.product-dialog-wrap {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 16;
}
.product-dialog-content {
  width: 590rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}
.product-dialog-title {
  height: 44rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #030303;
  line-height: 44rpx;
  text-align: center;
  margin-bottom: 40rpx
}
.product-dialog-desc {
  font-size: 24rpx;
  font-weight: 300;
  color: #666666;
  line-height: 32rpx;
}
.close {
  width: 76rpx;
  height: 76rpx;
  background: url('https://storage.360buyimg.com/wximg/common/circle_close.png') no-repeat;
  background-size: 100% 100%;
  margin: 0 auto;
  margin-top: 48rpx;
}