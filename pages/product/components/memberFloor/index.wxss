.vip_card_case {
  background-color: #fff;
  padding-top: 14rpx;
}

.vip_card {
  box-sizing: border-box;
  padding: 0 16rpx;
  margin: 0 auto;
  width: 702rpx;
  height: 84rpx;
  border-radius: 8rpx;
  justify-content: flex-end;
  overflow: hidden;
}

.vip_left {
  align-items: center;
  /* flex: 1 1 0%; */
  overflow: hidden;
  position: relative;
  padding-left: 68rpx;
  margin-right: 24rpx;
}

.vip_img {
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  left: 0;
  z-index: 1;
}
.vip_desc {
  font-size: 24rpx;
  font-weight: 500;
  color: #881A0A;
  /* max-width: 364rpx; */
}
.vip_desc_price{
  position: relative;
  height: 56rpx; 
  font-size: 30rpx;
  color: #FF1E19;
  font-family: 'regular';
  padding-left: 30rpx;
  display: flex;
  align-items: center;  
}
.icon{
  position: absolute;
  left: 0rpx;
  top: 0;
  height: 56rpx;
  width: 110rpx;
  z-index: 1;
}
.price {
  background-color: #fff;
  min-width: 70rpx;
  padding-right: 10rpx;
  line-height: 44rpx;
  position: relative;
  border-radius: 0 8rpx 8rpx 0;
  z-index: 2;
}
.vip_btn {
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  justify-content: right;
  align-items: center;
  flex-shrink: 0;
}
.vip_btn_text{
  /* max-width: 206rpx; */
  /* max-width: 244rpx; */
}
  
.vip_arrow {
  margin-left: 8rpx;
  width: 8rpx;
  height: 16rpx;
}