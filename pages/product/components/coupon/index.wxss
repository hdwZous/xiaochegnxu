@import "/common/css/global";
@import "/common/css/regular.wxss";


.wrap {
    background: url('https://storage.360buyimg.com/wximg/store/red_border.png?1') no-repeat center;
    background-size: 100% 100%;
    margin:0 10rpx;
    padding-right: 44rpx;
    height: 192rpx;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    position: relative;
}
.left{
    padding-left: 16rpx;
    align-items: center;
    width: 60%;
}
.money-cont{
    justify-content: center;
    align-items: center;
    width: 178rpx;
    padding:  0 10rpx;
    box-sizing: border-box;
    margin-top: -8rpx;
    /* margin-top: -10rpx; */
}
.money{
    align-items: baseline;
    color: #FF5757;
    justify-content: center;
    width: 100%;
    font-family: 'regular';
}
.money .unit{
    font-size: 28rpx;
}
.money .num{
    font-size: 64rpx;
}
.money .cent{
    justify-content: center;
    align-items: baseline;
}
.limit{
    font-size: 22rpx;
    color: #333333;
    text-align: center;
    font-weight: 300;
    width: 100%;
}
.coupon {
    width: 55%;
    margin-top: -8rpx;
}
.coupon .title{
    font-size: 28rpx;
    color: #333333;
    font-weight: bold
}
.coupon .tags{
    font-size: 20rpx;
    text-align: center;
}
.blue{
    color: #348BED;
    border-radius:8rpx 2rpx 8rpx 2rpx;
    border:1px solid #348BED;
    margin-right: 8rpx;
    padding: 0rpx 6rpx 0 4rpx;
    margin-top: 10rpx;
}
.red{
    color: #FF4C44;
    border-radius:8rpx 2rpx 8rpx 2rpx;
    border:1px solid #FF4C44;
    margin-right: 8rpx;
    padding: 0rpx 6rpx 0 4rpx;
    margin-top: 10rpx;
}
.coupon .date{
    font-size: 22rpx;
    color: #666666;
    margin-top: 18rpx;
}
.right .btn{
    width: 112rpx;
    height: 48rpx;
    border-radius:24rpx;
    font-size: 24rpx;
    line-height: 48rpx;
    text-align: center;
    margin-top: -8rpx;
    box-sizing: border-box;
}
.go-get{
    background:linear-gradient(315deg,#FF5138 0%,#FF7D7D 100%);
    box-shadow:0px 4rpx 8rpx 0rpx rgba(255,88,67,0.21);
    color: #fff;
}
.has-get{
    border:1px solid #cccccc;
    color: #999999
}
.sold-out{
    background: #cccccc;
    color: #fff;
}
.flag{
    width: 87rpx;
    height: 87rpx;
    position: absolute;
    right: 14rpx;
    top: 12rpx;
}
.conpon-get-btn{
    border-width: 1px;
    border-color: rgb(255, 87, 87);
    border-style: solid;
    border-radius: 24px;
    color: rgb(255, 87, 87);
    font-size: 24rpx;
    width: 108rpx;
    text-align: center;
    padding: 7rpx 0;
    z-index: 20;
}
