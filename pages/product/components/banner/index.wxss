.banner-wrap {
    position: relative;
    height: 750rpx;
}
.swiper {
    width: 750rpx;
    height: 750rpx;
}
.swiper-item {
    width: 750rpx;
    height: 750rpx;
}
.image {
    width: 100%;
    height: 100%;
}
.dot {
    position: absolute;
    width: 82rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    right: 20rpx;
    bottom: 20rpx;
    color: #ffffff;
    font-size: 28rpx;
    border-radius: 24rpx;
    background: rgba(0, 0, 0, 0.3);
}
.shadow {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 74rpx;
    background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0) 0%,
        rgba(0, 0, 0, 0.04) 100%
    );
}
.water_mark {
    position: absolute;
    left: 20rpx;
    bottom: 30rpx;
    color: rgba(51, 51, 51,.3);
    font-size: 20rpx;
}
