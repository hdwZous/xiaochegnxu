.add-min-wrap {
  height: 56rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: flex-end;
  -webkit-justify-content: flex-end;
  align-items: center;
  -webkit-align-items: center;
}

.add-min-wrap .min {
  width: 46rpx;
  height: 46rpx;
  background-image: url("https://storage.360buyimg.com/wximg/store_2.0/min1.png");
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.add-min-wrap .min.disabled {
  background-image: url("https://storage.360buyimg.com/wximg/store_2.0/min2.png");
}

.add-min-wrap .add {
  width: 46rpx;
  height: 46rpx;
  background-image: url("https://storage.360buyimg.com/wximg/store_2.0/add1.png");
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: relative;
}

.add-min-wrap .add.disabled {
  background-image: url("https://storage.360buyimg.com/wximg/store_2.0/add2.png");
}

.add-min-wrap .add-one {
  position: relative;
  width: 46rpx;
  height: 46rpx;
  background-image: url("https://storage.360buyimg.com/wximg/store_2.0/add1.png");
  -webkit-background-size: cover;
  background-size: cover;
}

.add-min-wrap .num {
  width: 64rpx;
  line-height: 44rpx;
  color: #666666;
  font-size: 32rpx;
  text-align: center;
  font-family: regular;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.add-min-wrap .num.weighting {
  font-family: PingFangSC-Regular, PingFang SC;
  font-size: 24rpx;
}

.add-min-wrap .num-one {
  position: absolute;
  right: -7rpx;
  top: -12rpx;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  background: #ff5757;
  border-radius: 100%;
  font-family: regular;
}

.product-detail-add-btn-no {
  display: inline-block;
  padding: 0 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  height: 66rpx;
  line-height: 66rpx;
  -webkit-border-radius: 4rpx;
  -moz-border-radius: 4rpx;
  -ms-border-radius: 4rpx;
  background-color: #fff;
}

.product-detail-add-btn {
  min-width: 160rpx;
  /*height: 66rpx;*/
  display: inline-block;
  padding: 0 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 22px;
  box-sizing: border-box;
  /* -webkit-border-radius: 4rpx;
    -moz-border-radius: 4rpx;
    -ms-border-radius: 4rpx; */
  background: linear-gradient(270deg, rgba(0, 190, 52, 1) 0%, rgba(0, 203, 30, 1) 100%);
}
.add_btn {
  background-color: #c0c0c0;
  width: 190rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 16px;
}