.recommend-layout {
    width: 100vw;
    border-radius: 24rpx;
    background-color: #fff;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.recommend-t {
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
    padding-top: 30rpx;
    padding-left: 20rpx;
    padding-bottom: 20rpx;
}

.rowItem {
    display: inline-flex;
    margin-right: 10px;
    height: 380rpx;
    width: 210rpx;
    /* width: calc((((100vw - 40px) - 20px) / 3) - 3px); */
}

.scroll-x {
    overflow: hidden;
    white-space: nowrap;
    padding: 0px 0px 0px 0px;
    align-items: flex-start;
}

.recommend_item-image {
    width: 210rpx;
    height: 210rpx;
    /* height: calc((((100vw - 40px) - 20px) / 3) - 3px);
    width: calc((((100vw - 40px) - 20px) / 3) - 3px); */
    /* margin-right: 2px; */
    border-radius: 8rpx;
}

.recommend-item-text {
    font-size: 12px;
    height: 32px;
    line-height: 16px;
    text-align: left;
    white-space: normal;
}

.price-group {
    width: 200rpx;
    overflow: hidden;
    height: auto;
    margin-top: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;

    /* display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    -webkit-box-pack: start;
    justify-content: flex-start; */
}

.qi {
    font-size: 20rpx;
    line-height: 28rpx;
    font-weight: "bold";
    align-self: "flex-end";
}

.vipPriceIcon {
    margin-top: 4rpx;
    margin-left: 4rpx;
    align-self: "flex-start";
}

.memberIcon {
    width: 76rpx;
    height: 20rpx;
}

.centerBox {
    position: "absolute";
    top: 0;
    left: 2;
    width: 72rpx;
    height: 20rpx;
    align-items: "center";
    justify-content: "center";
}

.centerText {
    font-size: 16rpx;
    line-height: 16rpx;
    color: "#fff";
}
.maPrice {
    -webkit-box-direction: normal;
    -webkit-box-orient: horizontal;
    flex-direction: row;
    display: inline;
    width: 100%;
}

.cart-price-layout {
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-direction: normal;
    -webkit-box-orient: horizontal;
    flex-direction: row;
    display: flex;
    height: 70rpx;
    margin-bottom: 30rpx;
    width: 100%;
    position: relative;
}

.recommend-image-layout {
    display: block;
    position: relative;
    width: 100%;
}

.recommend-tag-layout {
    position: absolute;
    left: 0px;
    bottom: 10rpx;
    display: flex;
}
.tag_left_top_image_wrap {
    padding: 0 6rpx;
    position: absolute;
    left: 4rpx;
    top: 4rpx;
    align-items: center;
    height: 32rpx;
    border-radius: 4rpx;
}
.tag_left_top_image {
    width: 24rpx;
    height: 24rpx;
}
.tag_left_top_image_txt {
    font-size: 20rpx;
}

.recommend-tag-second-layout {
    border-top-right-radius: 4px;
    border-top-left-radius: 0px;
    border-bottom-right-radius: 0px;
    border-bottom-left-radius: 4px;
    height: 14px;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-direction: normal;
    -webkit-box-orient: horizontal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    padding-left: 3px;
    padding-right: 3px;
    overflow-x: hidden;
    overflow-y: hidden;
}

.recommend-tag-content {
    color: rgb(255, 255, 255);
    font-family: PingFangSC-Regular;
    font-size: 10px;
    max-width: 100%;
    overflow-x: hidden;
    overflow-y: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.detail-coupon-layout {
    align-items: center;
    -webkit-align-items: center;
    overflow-x: auto;
    overflow-y: hidden;
    width: 100%;
    padding-right: 10rpx;
    -webkit-overflow-scrolling: touch;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    margin-left: 38rpx;
    flex-wrap: wrap;
    height: 100rpx;
}
.detail-coupon-tag-layout {
    height: 100rpx;
    display: flex;
    align-items: center;
}
.detail-coupon-tag {
    padding-left: 8rpx;
    padding-right: 12rpx;
    height: 40rpx;
    font-size: 22rpx;
    font-weight: 400;
    color: white;
    border: 1px solid rgb(255, 87, 87);
    margin-right: 20rpx;
    border-radius: 4rpx;
    position: relative;
    align-items: center;
    -webkit-align-items: center;
}
.half_circle {
    height: 0rpx;
    width: 0rpx;
    border-radius: 12rpx 0 0 12rpx;
    border: solid white 8rpx;
    border-right-width: 0;
    position: absolute;
    right: -2rpx;
    top: 14rpx;
}
.half_circle_got {
    height: 10rpx;
    width: 6rpx;
    border: #ff5757 solid 2rpx;
    border-radius: 12rpx 0 0 12rpx;
    border-right-width: 0;
    position: absolute;
    right: -2rpx;
    top: 12rpx;
    background: white;
}
.red_tag_bold {
    font-weight: 500;
    line-height: 28rpx;
    margin-right: 6rpx;
    font-size: 22rpx;
}
.sales-layout {
    display: flex;
}
.sales-second-layout {
    display: inline-block;
    width: 100%;
}
.sales-layout .cx {
    font-size: 28rpx;
    color: #333333;
    padding-left: 20rpx;
    padding-top: 30rpx;
}
.detail-line-view {
    width: calc(100% - 40rpx);
    height: 1px;
    margin-left: 20rpx;
    background: rgba(245, 245, 245, 1);
}
.product-bottom-layout {
    width: 100%;
    height: 130rpx;
}
.recommend2-layout {
    display: flex;
    box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.06);
    margin: 5px 10px 10px 0px;
    border-radius: 4px;
    height: 146rpx;
}
.recommend2-item-image {
    height: 73px;
    width: 73px;
    margin-right: 2px;
}
.rowItem2 {
    display: inline-block;
    width: calc(((100vw - 10px) - 10px) / 1.5);
}
.recommend2-price-layout {
    display: block;
    width: 100%;
    padding-left: 5rpx;
    padding-right: 10rpx;
    padding-top: 6rpx;
    padding-bottom: 10rpx;
}
.recommend2-item-text {
    font-size: 12px;
    text-align: left;
    white-space: normal;
}

.good-title-name {
    margin-left: 8rpx;
  }