<view class="deposit-box">
  <block wx:for="{{info.priceInfoList}}" wx:key="items">
    <view class="deposit_stage">
      <view class="line-box">
        <view class="line_box_cricle" style="background: {{item.color ? item.color : '#D9D9D9'}}"></view>
        <view class="line_box_shin {{(index == info.priceInfoList.length - 1) ? 'last' : ''}}" style="background: {{item.color ? item.color : '#D9D9D9'}}"></view>
      </view>
      <view class="stage_box d-flex flex-row align-items-center">
        <view class="stage_desc">{{item.title}}</view>
        <view class="stage_price">{{item.value}}</view>
      </view>
      <view class="stage_second_desc" wx:if="{{item.second}}">{{item.second}}</view>
    </view>
  </block>
</view>