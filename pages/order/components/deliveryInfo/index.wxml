<!--pages/order/components/deliveryInfo/index.wxml-->
<view class="container" wx:if="{{initData.deliveryInfoList && initData.deliveryInfoList.length}}">
    <view class="title"
          aria-role="text"
          aria-label="配送信息">配送信息</view>
    <view class="item_wrap">
        <view class="item" 
            wx:for="{{initData.deliveryInfoList}}" 
            wx:key="index"
            wx:if="{{index>0}}"
            aria-role="text"
            aria-label="{{item.title}}{{item.value}}"
        >
            <view class="left" aria-hidden="true">{{item.title}}</view>
            <view wx:if="{{item.title == '送达时间：'}}" class="right">
              <rich-text aria-hidden="true" class="ffn"  nodes="{{item.value}}"></rich-text>
              <view class="center_time">
                <view class="micro" aria-hidden="true" wx:if="{{item.flagTitle}}" style="color:{{item.flagColor}};border-color:{{item.color}}">{{item.flagTitle || '微常准准时保障'}}</view>
              </view>
            </view>
            <block wx:else>
              <rich-text wx:if="{{item.valueFlag !==1}}" aria-hidden="true" class="right ffn"  nodes="{{item.value}}"></rich-text>
              <view wx:if="{{item.flagTitle}}" class="micro" aria-hidden="true" style="color:{{item.flagColor}};border-color:{{item.color}}">{{item.flagTitle || '微常准准时保障'}}</view>
              <view wx:if="{{item.valueFlag ==1}}">
                <view
                  class="type"
                  wx:if="{{initData.carrierTag}}"
                  style="color:{{initData.carrierTag.iconTextColorCode}};border-color:{{initData.carrierTag.strokeColorCode}}"
                >{{initData.carrierTag.iconText}}</view>
              </view>
            </block>

<!-- 
            <rich-text wx:if="{{item.title != '送达时间： && item.valueFlag !==1'}}" aria-hidden="true" class="right ffn"  nodes="{{item.value}}"></rich-text>
            <view wx:if="{{(item.title != '送达时间：') && item.flagTitle}}" class="micro" aria-hidden="true" style="color:{{item.flagColor}};border-color:{{item.color}}">{{item.flagTitle || '微常准准时保障'}}</view> -->
        </view>
    </view>
</view>
