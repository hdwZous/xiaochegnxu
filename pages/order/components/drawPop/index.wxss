/* pages/order/components/deliveryInfo/index.wxss */
@import '/common/css/light.wxss';

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 4;
  background: rgb(0, 0, 0, 0.7);
}
.wrap {
  width: 640rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 5;
  transform: translate(-50%, -50%);
}
.container{
    width: 640rpx;
    background: #fff;
    border-radius: 24rpx;
    overflow: hidden;
    padding-bottom: 20rpx;
}
.head-img image {
  width: 100%;
  height: 100%;
}
.no-result {
  width: 600rpx;
  height: 512rpx;
  background: #fff;
  border-radius: 8rpx;
  margin: 0 auto;
}
.no-result .tip-img {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
  padding-top: 80rpx;
}
.tip-img image {
  width: 100%;
  height: 100%;
}
.no-result .tip-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
  margin-top: 26rpx;
  text-align: center;
}

.result-wrap {
  width: 600rpx;
  margin: 0 auto;
}
.item {
  margin-bottom: 16rpx;
}
.item:last-child {
  margin-bottom: 0;
}
.item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.close {
  display: block;
  width: 76rpx;
  height: 76rpx;
  margin: 0 auto;
  margin-top: 60rpx;
}