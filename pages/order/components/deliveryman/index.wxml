<!-- 骑士信息页面 -->
<view class="container">
  <!-- top -->
  <view class="delivery_top">
    <view class="left">
      <image 
        class="avatar"
        aria-role='text'
        aria-label="头像"
        src="https://storage.360buyimg.com/wximg/order/delivery_man.png" />
      <view class="delivery_wrap">
        <view>
          <view
            class="name"
            aria-role='text'
            aria-label="{{initData.deliveryManInfo.deliveryManName}}"
          >{{initData.deliveryManInfo.deliveryManName}}</view>
          <view
            class="type {{initData.deliveryManInfo.deliveryType == '2938' && 'selfSend'}}"
            wx:if="{{initData.carrierTag}}"
            style="color:{{initData.carrierTag.iconTextColorCode}};border-color:{{initData.carrierTag.strokeColorCode}}"
          >{{initData.carrierTag.iconText}}</view>
        </view>
      </view>
    </view>
    <view class="right" wx:if="{{initData.deliveryManInfo.contact && initData.deliveryManInfo.contact.phoneNum}}">
      <image src="https://storage.360buyimg.com/wximg/order/newtel.png" lazy-load="{{true}}"/>
      <text
        class="contact"
        bind:tap="handleContact"
        aria-role='text'
        aria-label="{{initData.deliveryManInfo.contact.buttonName}}"
      > {{initData.deliveryManInfo.contact.buttonName}} </text>
    </view>
  </view>

  <view class="line" wx:if="{{initData.deliveryManInfo.antiEpidemicInfo}}"></view>

  <!-- bottom -->
  <view class="delivery_bottom" wx:if="{{initData.deliveryManInfo.antiEpidemicInfo}}">
    <view class="delivery_man_msg">
      <view wx:for="{{initData.deliveryManInfo.antiEpidemicInfo.antiEpidemicEntryList}}" class="delivery_man_contanier">
        <view
          aria-role='text'
          aria-label="{{item.title}}"
          class="delivery_msg_title"
        >{{item.title}}</view>
        <view
          class="delivery_msg_content"
          aria-role='text'
          aria-label="{{item.content}}"
        >{{item.content}}</view>
      </view>
    </view>
    <view class="delivery_man_explanation" bind:tap="showExp">
      <text
        class="delivery_man_exp_text"
        aria-role='text'
        aria-label="说明"
      >说明</text>
      <image class="delivery_exp_arrow" src="https://storage.360buyimg.com/wximg/order/exp_next.png"></image>
    </view>
  </view>
  <!-- 说明弹窗 -->
  <view class="exp_pop" wx:if="{{isShowAntiInfoPop}}">
    <view class="exp_pop_contanier">
      <view
        class="exp_pop_title"
        aria-role='text'
        aria-label="{{initData.deliveryManInfo.antiEpidemicInfo.antiEpidemicTitle}}"
      >{{initData.deliveryManInfo.antiEpidemicInfo.antiEpidemicTitle}}</view>
      <!-- <view class="exp_pop_content">{{'sadasdasdasd\nsadasdsad'}}</view> -->
      <view
        aria-role='text'
        aria-label="{{antiEpidemicTip}}"
        class="exp_pop_content">{{antiEpidemicTip}}</view>
      <view
        class="exp_pop_button"
        bindtap="hidePop"
        aria-role='button'
        aria-label="我知道了"
      >我知道了</view>
    </view>
  </view>
</view>
