@import '/common/css/global.wxss';
@import '/common/css/light.wxss';

.mask{
    position: fixed;
    left:0;
    right: 0;
    top:0;
    bottom: 0;
    background:rgba(0,0,0,0.7);
    z-index: 99;
}
.container{
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 100;
    background: #fff;
    /* max-height: 90vh; */
    height: 83vh;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
    border-radius: 10px 10px 0 0;
    transition: all ease 0.3s;
}
.title_wrap{
    padding:30rpx 0;
    position: relative;
    font-size: 32rpx;
}
.title{
    text-align:center;
}
.close_wrap{
    display: inline-block;
    position: absolute;
    right: 18rpx;
    top:16rpx;
    width: 60rpx;
    height: 60rpx;
}
.close_icon{
    width: 26rpx;
    height: 26rpx;
    margin-top: 24rpx;
    margin-left: 8px;
}

.select_wrap{
    padding:0 24rpx 0 20rpx;
}
.select_list{
    display: flex;
    justify-content: space-between;
    font-family: 'regular';
    font-size: 28rpx;
    color:#333;
    padding:10rpx 0;
}
.ration_select image{
    width: 44rpx;
    height: 44rpx;
    position: relative;
    right: 4rpx;
}
.ration_select_active image{
    width: 44rpx;
    height: 44rpx;
    position: relative;
    right: 4rpx;
}

.textarea_wrap{
  padding:0 20rpx 15rpx 20rpx;
  position: relative;
}
.ttaa{
    background: #F5F5F5;
    width: 100%;
    /* padding: 10rpx; */
    padding: 20rpx;
    border-radius: 8rpx;
    height: 172rpx;
    box-sizing: border-box;
    font-size: 14px;
    color: #333;
    font-family: 'light';
    bottom: 0;
}
.min_num{
    position: absolute;
    right: 40rpx;
    bottom: 36rpx;
    font-size: 14px;
    color: #999;
    font-family: 'light';
}
.current_num_wrap{
    position: absolute;
    right: 40rpx;
    bottom: 36rpx;
    font-size: 12px;
    color: #ccc;
    font-family: 'light';
    z-index: 100;
}
.current_num{
    color: #333;
}
/* 没选择其他时候样式 */
.textarea_wrap_noactive .ttaa{
    color: #ccc;
}
.textarea_wrap_noactive .current_num{
    color: #ccc;
}


.submit_wrap{
    margin:16rpx 20rpx 30rpx 20rpx;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}
.submit_btn{
    height: 80rpx;
    line-height: 80rpx;
    background:#ccc;
    text-align: center;
    color:#fff;
    font-size: 32rpx;
    border-radius: 40rpx;
}
.submit_btn_active{
    background:linear-gradient(270deg,rgba(0,190,52,1) 0%,rgba(0,203,30,1) 100%);
    box-shadow:0px 4px 8px 0px rgba(71,179,79,0.2);
}

/* type=2的弹窗 */
.select_wrap02{
    padding:0 24rpx 0 20rpx;
}
.select_item_title{
    color: #666;
    font-size: 24rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}
.select_item{
    display: flex;
    justify-content: space-between;
    font-family: 'regular';
    font-size: 28rpx;
    color:#333;
    padding-bottom: 15rpx;
    padding-left: 20rpx;
}
.select_item_other{
    color: #666;
    font-size: 24rpx;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
    padding-left: 0rpx;
}

.scrollViewContainer{
    -webkit-overflow-scrolling: touch;
}


.cancel_tip{
  margin: 0 0 32rpx 0;
  padding: 16rpx 24rpx;
  width: auto;
  background: #FFF6CD;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #713F00;
}
.cancel_tip_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cancel_tip_title_btn image {
  width: 20rpx;
  height: 20rpx;
}
.tip_text{
  font-size: 20rpx;
  font-weight: 400;
  color: #713F00;
  line-height: 36rpx;
  margin-top: 16rpx;
}
