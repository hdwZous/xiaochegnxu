/*更多功能按钮展开后样式*/

.order-ohter-btns {
    position: absolute;
    bottom: 47px;
    left: 13px;
    background: #fff;
    border: 1px solid #e8e8e8;
    border-radius: 3px;
    font-size: 13px;
    padding: 0 5px;
    opacity: 0;
    transition: opacity 0.2s ease-in;
    box-shadow: 0px 1px 1px 0px #e8e8e8;
}

.order-ohter-btns p {
    padding: 10px 5px;
}

.order-ohter-btns p:first-child {
    border-bottom: 1px solid #e8e8e8;
}

.order-ohter-btns::before,
.order-ohter-btns::after {
    border: 8px solid transparent;
    border-top-color: #fff;
    position: absolute;
    content: "";
    left: 5px;
    bottom: -15px;
    z-index: 1000;
}

.order-ohter-btns::before {
    border-top-color: #e8e8e8;
    bottom: -16px;
}

.order-ohter-btns .order-status-icon {
    position: static;
    margin-right: 10px;
    vertical-align: bottom;
}

.order-ohter-btns .icon-dianhua {
    font-size: 20px;
    display: inline-block;
    padding-right: 10px;
}


