/*状态时间*/

.order-item-status-info .status-time,
.order-detail-current-status .status-time {
    position: absolute;
    right: 10px;
    color: #999;
    font-size: 12px;
}

.order-money-detail {
    margin-left: 10px;
    padding: 10px 0;
    color: #666;
    border-bottom: 1rpx solid #e8e8e8;
    overflow: hidden;
    line-height: 60rpx;
}

.order-money-detail .title {
    display: inline-block;
    vertical-align: top;
    width: 50%;
    color: #333;
    font-size: 30rpx;
}

.order-money-detail .value {
    display: inline-block;
    vertical-align: top;
    width: 49%;
    text-align: right;
    position: absolute;
    right: 10px;
    color: #333;
    font-size: 30rpx;
}

.money-container {
    /*display: none;*/
    overflow: hidden;
}

.money-container.order-ease-in {
    -webkit-animation: fadeIn 0.5s linear;
    animation: fadeIn 0.5s linear;
}

.money-container.order-ease-out {
    -webkit-animation: fadeOut 0.5s ease;
    animation: fadeOut 0.5s ease;
}

@keyframes fadeIn {
    0% {
        max-height: 0;
    }
    100% {
        max-height: 999px;
    }
}

@keyframes fadeOut {
    0% {
        max-height: 999px;
    }
    100% {
        max-height: 0;
    }
}

.order-detail-status-footer {
    z-index: 1000;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    border-top: 1rpx solid #d9d9d9;
    background-color: #fff;
    display: flex;
}

.order-detail-icon-btn {
    font-size: 13px;
    margin: 5px 15px;
    display: inline-block;
    padding-top: 22px;
    position: relative;
    background: #fff;
    color: #777;
    /*-webkit-box-flex: 0.5;
  flex: 0.5;*/
}

.order-detail-icon-btn.has-left-line::before {
    position: absolute;
    content: " ";
    border-left: 1rpx solid #d9d9d9;
    height: 30px;
    top: 5px;
    left: -15px;
}

.order-detail-btn {
    font-size: 15px;
    display: block;
    background: #fff;
    color: #777;
    -webkit-box-flex: 1;
    flex: 1;
    /*border-left: 1px solid #d9d9d9;*/
    height: 50px;
    line-height: 50px;
    text-align: center;
}

a.order-detail-btn {
    text-align: center;
    line-height: 50px;
}

.order-detail-btn.pay {
    background: #ff5a5e;
    color: #fff;
    font-size: 14px;
    white-space: nowrap;
    border-left: 0 none;
}

.order-detail-btn.disabled {
    color: #d9d9d9;
}


