@import "../public.wxss";

.order-detial-orderStatus-box {
    margin-top : 10px;
    margin-bottom: 120px;
}
.order-detial-orderStatus-item {
    margin                : 0 10px 20px 44px;
    color                 : #999999;
    border                : 1px solid #e8e8e8;
    border-radius         : 6px;
    font-size             : 12px;
    background-color      : #fff;
    -webkit-border-radius : 6px;
    position: relative;
}

.order-detial-orderStatus-items {
    position : relative;
    width    : 100%;
}
.order-detial-orderStatus-item-line {
    display          : block;
    position         : absolute;
    top              : 0;
    left             : 19px;
    height           : 100%;
    border-left: 1px solid #d9d9d9;
    -webkit-transform: scaleX(.5);
    transform: scaleX(.5);
}
.order-detial-orderStatus-item-lineMask {
    display          : block;
    position         : absolute;
    top              : 0;
    left             : 18px;
    width            : 4px;
    height           : 16px;
    background-color : #f4f4f4;
}
.order-detial-orderStatus-item-lineMask:last-of-type {
    top    : auto;
    bottom : 0;
    height : 42px;
}
.order-state-title{
    font-size: 36rpx;
    color: #484848;
}
.order-detial-orderStatus-item-Fir {
    padding : 10px;
}
.order-detial-orderStatus-item-Fir .order-detial-orderStatus-item-phone{
    font-size: 24rpx;
}
.order-detial-orderStatus-item-Fir:last-child {
    padding-bottom : 0;
}

.order-detial-orderStatus-item-Fir:after,
.order-detial-orderStatus-item-Fir:before {
    content  : '';
    position : absolute;
    top      : 10px;
    width    : 0;
    height   : 0;
    border   : 6px solid transparent;
    top:18px;
}
.order-detial-orderStatus-item-Fir:before {
    left               : -12px;
    border-right-color : #e8e8e8;
}
.order-detial-orderStatus-item-Fir:after {
    left               : -11px;
    border-right-color : white;
}
.order-detial-orderStatus-item-phone {
    position: absolute;
    right: 10px;
}
.order-detial-orderStatus-item-Sec {
    display: flex;
    padding: 8rpx 16rpx 16rpx;
}

.order-detail-state-desc {
    font-size: 28rpx;
    width: 92%;
}

.order-detail-state-button {
    white-space: nowrap;
    margin-left: 16rpx;
    border-radius: 32rpx;
    border: 1px solid;
    font-size: 24rpx;
    height: 34rpx;
    padding: 0 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.refund-detail {
    font-size: 13px;
    color : #2486ff;
}

.reward-deliveryman {
    display: inline-block;
    padding: 5rpx 10rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    color:#FB8217;
    font-size: 22rpx;
    border-radius: 6rpx;
    -webkit-border-radius: 6rpx;
    border: 1px solid #FB8217;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}

.status-icon {
  display: inline-block;
  position: absolute;
  left: -40px;
  top: 10px;
  width: 27px;
  height: 27px;
}
.order-state-phone-new {
  position: absolute;
  top: 45px;
  right: 10px;
  background-position: 0 -32px;
}