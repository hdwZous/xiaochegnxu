@import "/common/css/light.wxss";

.error_box {
    width: 100%;
    height: 100vh;
}

.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container{
    background: #f6f6f6;
    min-height: 100vh;
    padding-top: 86rpx;
    box-sizing: border-box;
}

.notice{
    position: fixed;
    top:0;
    width: 100%;
    color: rgb(113, 63, 0);
    background: rgb(255, 246, 205);
    font-size: 24rpx;
    padding:16rpx 24rpx;
    text-align: left;
    z-index: 10;
}
.notice_icon{
    width: 26rpx;
    height: 26rpx;
    margin-right: 8rpx;
    vertical-align: middle;
    position: relative;
    /* top:-3rpx; */
}


.remark{
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* margin-top: 86rpx; */
    padding:32rpx 24rpx;
    background: #fff;
}
.remark_left{
    font-size: 32rpx;
    color:#333;
    font-weight: bold;
}
.remark_right{
    display: flex;
    align-items: center;
}
.remark_content{
    font-size: 28rpx;
    color:#999;
    max-width: 570rpx;
}
.right_icon{
    width: 26rpx;
    height: 26rpx;
    vertical-align: middle;
    position: relative;
    top:0rpx;
}
.gray_arrow{
    display: inline-block;
    border-bottom-style: solid;
    border-bottom-width: 2rpx;
    border-color: rgb(204, 204, 204);
    border-right-style: solid;
    border-right-width: 2rpx;
    height: 16rpx;
    transform: translateX(-3.25px) rotate(-45deg);
    transform-origin: center center;
    width: 16rpx;
    margin-left: 12rpx;
}
.current_site{
    margin-top: 24rpx;
    background: #fff;
    padding:32rpx 24rpx;
}
.current_site_title{
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    padding-bottom: 24rpx;
}
.current_site_content{
    background: #FAFAFA;
    border-radius: 8rpx;
    padding:32rpx 24rpx;
}
.current_site_top{
    display: flex;
    font-size: 28rpx;
    color:#666;
    padding-bottom: 16rpx;
}
.current_site_name{
    padding-right: 24rpx;
}
.current_site_bottom{
    font-size: 28rpx;
    color:#333;
    line-height: 1.5;
}
.line{
    height: 2rpx;
    background: #f5f5f5;
    width: 100%;
    border-left: 24rpx solid #fff;
    box-sizing: border-box;
}
.choose_site{
    background:#fff;
    padding-bottom: 20rpx;
}

.choose_site_top{
    display: flex;
    justify-content: space-between;
    padding:32rpx 24rpx 10rpx 24rpx;
}
.choose_site_title{
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}
.add_btn{
    display: flex;
    width: 122rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 30rpx;
    border: 1rpx solid #47B34F;
    color: #47B34F;
    font-size: 24rpx;
    font-weight: bold;
    justify-content: center;
    align-items: center;
}
.add_icon{
    width: 20rpx;
    height: 20rpx;
    position: relative;
    /* top:-1rpx; */
    right: 4rpx;
}

.site_wrap{
    padding-left: 24rpx;
}
.site_item{
    display: flex;
    justify-content: space-between;
    padding:28rpx 0 24rpx 0rpx;
    border-bottom: 2rpx solid #f5f5f5;
}
.site_item:last-child{
    border-bottom: 0;
}
.site_item_left{
    display: flex;
}
.site_conent{
    padding-left: 8rpx;
    flex:1
}
.site_content_top{
    display: flex;
    color:#666;
    font-size: 28rpx;
    padding-bottom: 12rpx;
}
.site_username{
    padding-right: 24rpx;
}
.site_label{
    height: 30rpx;
    line-height: 30rpx;
    background: #5FBC65;
    border-radius: 4rpx;
    font-size: 20rpx;
    color:#fff;
    padding:0 6rpx;
    margin-left: 40rpx;
    min-width: 40rpx;
    text-align: center;
}
.site_detail{
    color:#333;
    font-size: 28rpx;
    line-height: 1.5;
}
.select_icon{
    width: 44rpx;
    height: 44rpx;
}
.edit_icon{
    width: 32rpx;
    height: 32rpx;
    padding-right: 24rpx;
}

.out_title{
    height: 72rpx;
    line-height: 72rpx;
    background: #F6F6F6;
    color:#999;
    padding-left: 24rpx;
    font-size: 28rpx;
}
.colorCC{
    color:#ccc;
}
.site_label_gray{
    background: #ccc;
    color:#fff;
}
.sure_btn_wrap{
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    background: #fff;
    text-align: center;
    /* transform: translateX(-50%); */
    /* display: flex;
    align-items: center;
    justify-content: center; */
}
.sure_btn{
    margin-top: 16rpx;
    width: 90%;
    display: inline-block;
    background: linear-gradient(270deg, #00BE34 0%, #00CB1E 100%);
    box-shadow: 0px 8rpx 16rpx 0px rgba(71, 179, 79, 0.2);
    border-radius: 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    font-weight: bold;
    left: 50%;
    /* margin-top: 16rpx; */
}
.grey_btn{
    background: #ccc;
    color: #fff;
    box-shadow: none;
}
.text_wrap{
    position: relative;
}
.text_limit{
    position: absolute;
    bottom: 20rpx;
    right: 60rpx;
    color: #BEBEBE;
    font-size: 28rpx;
}
.ffl{
    font-family: light;
}
.white_blank {
    width: 100%;
    height: 68rpx;
    background-color: #f6f6f6;
}