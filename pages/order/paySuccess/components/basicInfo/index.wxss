@import '/common/css/light.wxss';
@import '/common/css/regular.wxss';

.flex {
  display: -webkit-flex;
  display: flex;
}

.flex_row {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;
}

.align_item_center {
  -webkit-align-items: center;
  align-items: center;
}

.just_content_center {
  justify-content: center;
  -webkit-justify-content: center;
}

.flex_auto {
  -webkit-flex: auto;
  flex: auto;
}

.marL40 {
  margin-left: 40rpx;
}

.basic-container {
  width: 100%;
  background: transparent;
  padding-bottom: 32rpx;
}

.content {
  position: relative;
}

.content .pay-finish-desc {
  font-size: 44rpx;
  line-height: 52rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  margin-left: 48rpx;
  flex: 1;
}

.content .phone-hint,
.content .medicine {
  font-size: 24rpx;
  line-height: 32rpx;
  color: #fff;
  margin-left: 48rpx;
  margin-top: 32rpx;
  width: 480rpx;
  /* height: 72rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.content .empty {
  height: 24rpx;
  width: 200rpx;
  margin-left: 60rpx;
}

.content .price {
  font-size: 48rpx;
  color: #fff;
  font-family: regular;
  margin-top: 16rpx;
  margin-left: 48rpx;
}

.content .webank {
  display: inline-flex;
  border: solid 1rpx #fff;
  font-size: 24rpx;
  color: #fff;
  height: 26rpx;
  line-height: 26rpx;
  padding: 0rpx 6rpx;
  border-radius: 4rpx;
}

.content .final-pay-time {
  font-size: 26rpx;
  color: #FFFFFF;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertival;
  display: -webkit-box;
  margin-left: 48rpx;
  margin-right: 48rpx;
  margin-top: 16rpx;
}

.content .btns_wrap {
  text-align: center;
}

.content .btns {
  display: inline-block;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 32rpx;
}

.content .btn {
  display: inline-block;
  width: 316rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  color: #fff;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.15);
}

.content .follow {
  /* height: 26rpx; */
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 26rpx;
  margin-top: 32rpx;
  margin-right: 48rpx;
}

.pay-store-name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.click_area {
  display: flex;
  /* justify-content: center; */
  padding-left: 48rpx;
  align-items: center;
}

.follow-area {
  width: 40rpx;
  height: 40rpx;
}

.follow image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  margin-top: 7rpx;
  margin-left: 7rpx;
}

.basic-flex {
  display: flex;
  align-items: center;
}
.pay-finish-btn {
  font-size: 28rpx;
  color: #fff;
  font-weight: 400;
  font-family: regular;
  padding-right: 48rpx;
}

.delivery_time{
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 8rpx;
  margin-left: 48rpx;
}

.reminder {
  padding-top: 24rpx;
  font-size: 24rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
  color: #fff;
  margin-top: 24rpx;
  border-top: dashed 2rpx rgba(255, 255, 255, 0.6);
}