
@import '/common/css/light.wxss';
@import '/common/css/iconfont.wxss';
.draw-container {
  width: 100%;
  background: transparent;
}
.top {
  margin: 20rpx 0;
  position: relative;
}
.top .title {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
}
.top .rule-text {
    position: absolute;
    right: 30rpx;
    top: 5rpx;
    line-height: 24rpx;
}
.top .rule {
  font-size: 24rpx;
  color: #fff;
}
.top .icon-next {
  font-size: 24rpx;
  color: #fff;
  margin-left: 10rpx;
}
.content {
  width: 100%;
  height: 498rpx;
  background: transparent;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
}
.item-wrap {
  width: 222rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #fff;
}
.item-wrap .item-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.active {
  background: #FFEFB8;
}
.scale {
  animation: myscale 1s infinite;
  animation-direction:alternate;
  -webkit-animation-timing-function: ease-in-out;

}
@keyframes myscale {
  0%{
    transform: scale(1); 
  }
  100%{
    transform: scale(0.9); 
  }
}