
<view class="rec-container">
  <view class="title">{{title}}</view>
  <view  class="list">
    <view class="left" id="left" wx:if="{{leftList.length>0}}">
      <view class="item" 
            wx:for="{{leftList}}" 
            wx:key="index" 
            bind:tap="handleJump" 
            data-item="{{item.data}}">
              <view class="img_wrap">
                <view class="brand-logo">
                  <image src="{{item.data.storeLogo}}" class="store_logo"></image>
                </view>
                <image src="{{imgLazyLoad['left' + index] ? item.data.imgUrl : ''}}" 
                       data-lazy-img-id="{{'left' + index}}"
                       class="item_img lazy-load lazy_load_img {{imgLazyLoad['left' + index] ? 'lazy_load_img_active' : ''}}" />
                <view class="img_tags" wx:if="{{item.data.tags && item.data.tags.length>0}}">
                  <view class="img_tags_item" style="background: linear-gradient(to right, {{item.data.tags[0].startColorCode}} 0%, {{item.data.tags[0].endColorCode}} 100%);">
                    {{item.data.tags[0].iconText}}
                  </view>
                </view>
              </view>
              <view class="center_wrap">
                <view class="name ellipsis2">
                  <sku-name-tag wx:if="{{item.data.skuNameTag && item.data.skuNameTag.iconText}}" infos="{{item.data.skuNameTag}}"></sku-name-tag>
                    {{item.data.skuName}}
                  </view>
                <view class="sale-price" wx:if="{{item.data.majorPrice && item.data.majorPrice.price}}">
                  <view style="color: {{item.data.majorPrice.priceColor}}">¥{{item.data.majorPrice.price}}</view>
                  <block wx:if="{{item.data.majorPrice.priceType == 3 ||item.data.majorPrice.priceType == 4}}">
                    <view class='vip-icon' wx:if="{{!item.data.majorPrice.deleteLine}}" style="background: url('{{item.data.majorPrice.vipPriceIcon}}') no-repeat;  background-size: auto 100%;"></view>
                    <view wx:else class='gray-icon' style="background: url('{{item.data.majorPrice.iconGray}}') no-repeat; background-size: auto 100%">
                      {{item.data.majorPrice.iconGrayText}}
                    </view>
                  </block>
                </view>
                <view class='basic-price' wx:if="{{item.minorPrice &&  item.minorPrice.price}}">
                  <view style="text-decoration:{{item.minorPrice.deleteLine ? 'line-through' : 'none'}}">
                    {{item.minorPrice.price == "暂无报价" ? '' : '¥'}}{{item.minorPrice.price}}
                  </view>
                  <block wx:if="{{item.minorPrice.priceType == 3 ||item.minorPrice.priceType == 4}}">
                    <view class='vip-icon' wx:if="{{!item.minorPrice.deleteLine}}" style="background: url('{{item.minorPrice.vipPriceIcon}}') no-repeat;  background-size: auto 100%;"></view>
                    <view wx:else class='gray-icon' style="background: url('{{item.minorPrice.iconGray}}') no-repeat; background-size: auto 100%">
                      {{item.minorPrice.iconGrayText}}
                    </view>
                  </block>
                </view>
              </view>
      </view>
    </view>
    <view class="right" id="right" wx:if="{{rightList.length>0}}">
      <view class="item" 
            wx:for="{{rightList}}" 
            wx:key="index" 
            bind:tap="handleJump" 
            data-item="{{item.data}}">
              <view class="img_wrap">
                <image src="{{item.data.storeLogo}}" class="store_logo" />
                <image src="{{imgLazyLoad['right' + index] ? item.data.imgUrl : ''}}" 
                       data-lazy-img-id="{{'right' + index}}"
                       class="item_img lazy-load lazy_load_img {{imgLazyLoad['right' + index] ? 'lazy_load_img_active' : ''}}" />
                <view class="img_tags" wx:if="{{item.data.tags && item.data.tags.length>0}}">
                  <view class="img_tags_item" style="background: linear-gradient(225deg, {{item.data.tags[0].startColorCode}} 0%, {{item.data.tags[0].endColorCode}} 100%);">
                    {{item.data.tags[0].iconText}}
                  </view>
                </view>
              </view>
              <view class="center_wrap">
                <view class="name ellipsis2">{{item.data.skuName}}</view>
                <view class="sale-price" wx:if="{{item.data.majorPrice && item.data.majorPrice.price}}">
                  <view style="color: {{item.data.majorPrice.priceColor}}">
                    ¥{{item.data.majorPrice.price}}
                  </view>
                  <block wx:if="{{item.data.majorPrice.priceType == 3 ||item.data.majorPrice.priceType == 4}}">
                    <view class='vip-icon' wx:if="{{!item.data.majorPrice.deleteLine}}" style="background: url('{{item.data.majorPrice.vipPriceIcon}}') no-repeat;  background-size: auto 100%;"></view>
                    <view wx:else class='gray-icon' style="background: url('{{item.data.majorPrice.iconGray}}') no-repeat; background-size: auto 100%">
                      {{item.data.majorPrice.iconGrayText}}
                    </view>
                  </block>
                </view>
                <view class='basic-price' wx:if="{{item.minorPrice &&  item.minorPrice.price}}">
                  <view style="text-decoration:{{item.minorPrice.deleteLine ? 'line-through' : 'none'}}">
                    {{item.minorPrice.price == "暂无报价" ? '' : '¥'}}{{item.minorPrice.price}}
                  </view>
                  <block wx:if="{{item.minorPrice.priceType == 3 ||item.minorPrice.priceType == 4}}">
                    <view class='vip-icon' wx:if="{{!item.minorPrice.deleteLine}}" style="background: url('{{item.minorPrice.vipPriceIcon}}') no-repeat;  background-size: auto 100%;"></view>
                    <view wx:else class='gray-icon' style="background: url('{{item.minorPrice.iconGray}}') no-repeat; background-size: auto 100%">
                      {{item.minorPrice.iconGrayText}}
                    </view>
                  </block>
                </view>
              </view>
      </view>
    </view>
  </view>
</view>
