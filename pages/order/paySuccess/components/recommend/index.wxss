
@import '/common/css/light.wxss';
@import '/common/css/regular.wxss';
.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.ellipsis2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.rec-container {
  background: #f8f8f8;
  padding-bottom: 60rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  padding: 60rpx 0 10rpx 20rpx;
}
.list {
  width: 710rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.left, .right {
  width: 344rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}
.list .item {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 8rpx;
}
.item .img_wrap{
    width: 344rpx;
    height: 344rpx;
    background: #FFFFFF;
    border-radius: 8rpx 8rpx 0px 0px;
    overflow: hidden;
    margin: 0 auto;
    position: relative;
}
.item .item_img{
    display: block;
    width: 344rpx;
    height: 344rpx;
    border-radius: 12px 12px 0px 0px;
    margin: 0 auto;
}
.item .img_tags{
  position: absolute;
  left: 20rpx;
  bottom: 0;
}
.item .img_tags_item{
    font-size: 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    border-radius: 4rpx;
    padding: 0 8rpx;
    color: #fff;
}
.item .brand-logo {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 48rpx;
  height: 48rpx;
  /* border: 1rpx solid rgba(0, 0, 0, 0.08); */
  border-radius: 25rpx; 
  overflow: hidden;
  z-index: 2;
}
.item .store_logo {
  display: block;
  width: 100%;
  height: 100%;
}
.item .center_wrap {
  margin-bottom: 20rpx;
}
.item .name{
    font-size: 28rpx;
    line-height: 34rpx;
    color: #333;
    margin-top: 10rpx;
    margin-left: 20rpx;
} 
.sale-price {
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 36rpx;
  font-family: regular;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.sale-price .vip-icon, .basic-price .vip-icon {
  flex: 1;
  height: 21rpx;
}
.sale-price .gray-icon, .basic-price .gray-icon{
  font-size: 16rpx;
  line-height: 21rpx;
  padding-left: 10rpx;
  flex: 1;
  height: 21rpx;
  color: #fff;
}
.basic-price {
  margin-left: 20rpx;
  margin-top: 4rpx;
  color: #999;
  font-size: 24rpx;
  font-family: light;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}