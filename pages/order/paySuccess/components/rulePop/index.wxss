
@import '/common/css/light.wxss';
@import '/common/css/regular.wxss';
::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 4;
}
.container {
  width: 590rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 5;
}
.wrap {
  width: 530rpx;
  padding: 0 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding-bottom: 24rpx;
  padding-top: 40rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #030303;
  text-align: center;
  
}
.content {
  max-height: 504rpx;
  margin-top: 30rpx;
}
.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #030303;
  line-height: 34rpx;
  margin-top: 40rpx;
}
.name:first-child {
  margin-top: 0;
}
.text {
  font-size: 24rpx;
  font-weight: 300;
  color: #333333;
  line-height: 36rpx;
  margin-top: 20rpx;
}
.close {
  display: block;
  width: 76rpx;
  height: 76rpx;
  margin: 0 auto;
  margin-top: 60rpx;
}