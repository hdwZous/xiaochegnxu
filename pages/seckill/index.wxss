@import '../../common/css/regular.wxss';
.seckill {
  width: 100%;
  font-size: 0;
}

.seckill .content {
  width: 100%;
  box-sizing: border-box;
  min-height: 100vh;
}

.seckill .back-top {
  width: 96rpx;
  height: 96rpx;
  position: fixed;
  right: 30rpx;
  /* bottom: 30rpx; */
  bottom: 268rpx;
  z-index: 30;
}

.tab-wrap {
  position: sticky;
  position: -webkit-sticky;
  background: #FF2626;
  padding: 0 24rpx;
  z-index: 99;
}
.tab-wrap.tabFixd {
  padding: 0;
}

.list-wrap {
  position: relative;
  padding-top: 16rpx;
  background: rgb(246, 246, 246);
}

.list-wrap .list-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 700rpx;
  background-image: linear-gradient(rgb(255, 38, 38) 0%, rgb(246, 246, 246) 100%);
}

.bottom {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  margin-top: 60rpx;
  text-align: center;
}

.share_pop {
    z-index: 101;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.share_case {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 60rpx 0;
    background: #ffffff;
    z-index: 101;
}

.img_case {
    height: 108rpx;
    width: 108rpx;
    margin: 0 auto;
}

.img_case .img {
    width: 100%;
    height: 100%;
}

.share_case .txt {
    font-size: 24rpx;
    color: #666666;
    margin-top: 20rpx;
    text-align: center;
}

.button {
    padding: 0;
    margin: 0;
    background: #fff;
}

.button::after {
    border: none;
    outline: none;
}

button {
    padding-left: 0 !important;
    padding-right: 0 !important;
}

button:after {
    border: 0;
}