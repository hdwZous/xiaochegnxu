.nav_box{
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  position: fixed;
  background-color: #FF3030;
}
.nav_bar{
  position: relative;
}
.nav_bar .back_white{
  width: 28rpx;
  height:36rpx;
  background: url('https://storage.360buyimg.com/wximg/storewin/white-arrow.png') no-repeat center;
  background-size: 100% 100%;
  -webkit-background-size: 100% 100%;
  margin-left: 28rpx;
}
.nav_bar .title {
  width: 200rpx;
  height: 44rpx;
  margin-left: 26rpx;
  margin-right: 16rpx;
}

.nav_box .bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-image: url("https://storage.360buyimg.com/wximg/seckill/tabbg.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  opacity: 1;
  transition: all 0.3s;
}

