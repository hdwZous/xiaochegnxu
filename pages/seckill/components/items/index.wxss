@import '../../wxss/reset.wxss';
@import '../../../../common/css/regular.wxss';
@import '../../../../common/css/light.wxss';
/*一行打点*/

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.items-box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 8rpx;
}

.detail .img-box {
  width: 216rpx;
  height: 216rpx;
  border-radius: 8rpx;
  position: relative;
}

.img-box .img {
  border-radius: 8rpx;
  width: 100%;
  height: 100%;
}

.img-box .lazy_stroken {
  border-radius: 8rpx;
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}

.img-box .bao {
  position: absolute;
  top: 0;
  left: 0;
  width: 82rpx;
  height: 82rpx;
}

.descript-box {
  margin-left: 16rpx;
  flex: 1;
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-right: 8rpx;
}

.head .title .hot {
  width: 40rpx;
  height: 40rpx;
}

.head .title .name {
  max-width: 340rpx;
  margin-left: 8rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 40rpx;
  color: #333333;
}

.head .coucp {
  margin-top: 10rpx;
}

.coucp .coupon {
  height: 36rpx;
  position: relative;
  box-sizing: border-box;
  line-height: 32rpx;
  margin-right: 12rpx;
  border-width: 1px;
  border-style: solid;
  border-radius: 6rpx;
}

