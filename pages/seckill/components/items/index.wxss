.coucp .coupon .money-icon {
  width: 34rpx;
  height: 32rpx;
}

.coucp .coupon .coupon-des {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 30, 25, 1);
  margin: 0 8rpx;
}

.store-info {
  margin-top: 16rpx;
}

.store-info .store-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.store-info .store-name {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.3);
}

.footer {
  position: relative;
}

.footer .buy-button {
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 10;
  width: 154rpx;
  height: 64rpx;
  background: linear-gradient(90deg, #FF3C30 0%, #FF067A 100%);
  border-radius: 8rpx;
}

.footer .buy-button .txt {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #fff;
}

.footer .buy-button .arrow {
  width: 12rpx;
  height: 20rpx;
  margin-left: 12rpx;
}