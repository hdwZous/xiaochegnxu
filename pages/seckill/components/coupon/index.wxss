.coupon_wrap {
    background: #FF2626;
    padding: 0 24rpx;
    padding-bottom: 16rpx;
}

.case_one, .case_two {
    width: 702rpx;
    height: 162rpx;
    position: relative;
    background-image: url('https://storage.360buyimg.com/wximg/storewin/case_one.png');
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
}

.case_two {
    width: 346rpx;
    background-image: url('https://storage.360buyimg.com/wximg/storewin/case_two.png');
}

.case_space_line {
    height: 122rpx;
    border-right: 1px dashed #E0590B;
    transform: scaleX(0.5);
}

.case_left_wrap, .case_right_wrap {
    height: 100%;
    position: relative;
}

.case_one .case_left_wrap {
    width: 526rpx;
}

.case_one .case_right_wrap {
    width: 174rpx;
}

.case_two .case_left_wrap {
    width: 282rpx;
}

.case_two .case_right_wrap {
    width: 62rpx;
}

.price-box {
    font-family: 'regular';
    font-weight: 400;
}

.case_one .price-box {
    margin-left: 56rpx;
    margin-right: 70rpx;
}

.case_two .price-box {
    margin-bottom: 8rpx;
    text-align: center;
}

.price-box .price-symbol {
    font-size: 28rpx;
}

.price-box .price {
    display: inline-block;
    font-size: 96rpx;
    line-height: 64rpx;
}

.case_two .price-box .price {
    display: inline-block;
    font-size: 64rpx;
}

.desc-box {
    flex: 1;
    overflow: hidden;
    position: relative;
}

.desc-box .couponTitle {
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
}

.case_one .desc-box .couponTitle {
    font-size: 28rpx;
    line-height: 34rpx;
    margin-bottom: 8rpx;
}

.case_two .desc-box .couponTitle {
    font-size: 20rpx;
    line-height: 24rpx;
    margin-bottom: 4rpx;
    text-align: center;
}

.desc-box .couponLimit {
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
}

.desc-box .couponExpire {
  font-family: 'light';
  font-weight: 400;
}

.case_one .desc-box .couponLimit {
    font-size: 24rpx;
    line-height: 30rpx;
    margin-bottom: 24rpx;
}

.case_two .desc-box .couponLimit {
    font-size: 20rpx;
    line-height: 24rpx;
    margin-bottom: 4rpx;
    text-align: center;
}

.case_one .desc-box .couponExpire {
    font-size: 24rpx;
    line-height: 30rpx;
}

.case_two .desc-box .couponExpire {
    font-size: 20rpx;
    line-height: 24rpx;
    text-align: center;
}

.left-icon {
    position: absolute;
    top: 0;
    left: 0;
    height: 28rpx;
    line-height: 28rpx;
    color: #fff;
    padding: 0 8rpx;
    font-size: 20rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    border-radius: 12rpx 0px 8rpx 0px;
}

.case_one .case_bt {
    width: 112rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 24rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #fff;
}

.case_one .case_bt.red {
    background: linear-gradient(270deg, #FF2A26 0%, #FF6461 100%);
    box-shadow: 0px 4rpx 8rpx 0px rgba(252, 44, 50, 0.19);
}

.case_one .case_bt.gray {
    background: #CCCCCC;
}

.case_two .case_bt {
    width: 26rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
}

.case_two:first-child {
    margin-right: 10rpx;
}

/* 券状态 */

.status_case {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 12rpx;
}

.status_case .status_wrap {
    padding: 0 16rpx;
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    transform: translateY(-50%);
    box-sizing: border-box;
}

.status_case .text_case {
    text-align: right;
}

.status_case .text {
    min-width: 60%;
    max-width: 100%;
    display: inline-block;
    color: #282727ff;
    font-size: 26rpx;
    text-align: center;
    font-weight: bold;
}

.status_case .btn_case {
    text-align: right;
}

.status_case .btn_wrap {
    width: 60%;
    text-align: center;
    display: inline-block;
}

.status_case .btn {
    display: inline-block;
    background: rgba(0, 0, 0, 0.6);
    font-size: 30rpx;
    border-radius: 30rpx;
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    padding: 5rpx 20rpx;
}

.status_case .red {
    background: #ff5843ff;
}

.help-icon {
  width: 88rpx;
  height: 70rpx;
  position: absolute;
  right: 0;
  top: 0;
}