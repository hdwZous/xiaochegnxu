.wrap {
  position: relative;
  padding-top: 14rpx;
  padding-bottom: 16rpx;
  background-color: #FF3030;
  z-index: 9;
  box-sizing: border-box;
}

.wrap .bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-image: url("https://storage.360buyimg.com/wximg/seckill/baopinbg.png");
  background-size: 100% auto;
  background-repeat: no-repeat;
  opacity: 1;
  transition: all 0.3s;
}

.swiper {
  height: 292rpx;
}

.swiper .swiper-item {
  width: 656rpx;
  height: 100%;
  background: linear-gradient(284deg, rgba(255, 251, 240, 1) 0%, rgba(255, 250, 241, 1) 100%);
  border-radius: 16rpx;
  transition: all 300ms;
  transform: scale(0.94);
}

.swiper .swiper-item.swiper-active {
  transform: scale(1);
  margin-left: 24rpx !important;
}

.dot {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  bottom: 22rpx;
}

.dot_item {
  margin: 0 5rpx;
  width: 12rpx;
  height: 6rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, .1);
}

.dot_active {
  width: 16rpx;
  height: 6rpx;
  border-radius: 20rpx;
  background: #00CF37;
}

.flex-row {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;
}

.flex-none {
  -webkit-flex: none;
  flex: none;
}