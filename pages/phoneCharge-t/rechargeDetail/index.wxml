<block wx:if="{{$taroCompReady}}"><block><block wx:if="{{isLoading}}"><template is="renderLoading" data="{{...anonymousState__temp}}"></template></block><block wx:else><block><block wx:if="{{showError}}"><template is="renderNull" data="{{...anonymousState__temp2}}"></template></block><block wx:else><view class="{{[style.box]}}"><view class="{{[style.content]}}"><view class="{{[style.title]}}"><view class="{{style.logo}}"><image class="{{style.logo_img}}" src="{{scopeData[result.operator]}}"></image></view><view class="{{style.title_info}}">{{result.orderDesc || ''}}</view></view><view class="{{[style.money]}}">¥{{result.orderAmount || ''}}</view><view class="{{[style.status, statusColor]}}">{{result.orderStatusDesc || ''}}</view><view class="{{[style.flex_2]}}"><view class="{{[style.left]}}">充值号码</view><view class="{{[style.right]}}">{{result.rechargeMobile + "(" + result.city + ")" || ''}}</view></view><view class="{{[style.flex_2]}}"><view class="{{[style.left]}}">充值面额</view><view class="{{[style.right]}}">{{result.faceValue || ''}}元</view></view><block wx:if="{{result.couponAmount}}"><view class="{{[style.flex_2]}}"><view class="{{[style.left]}}">话费券优惠</view><view class="{{[style.right]}}">-{{result.couponAmount || ''}}元</view></view></block><view class="{{[style.flex_2]}}"><view class="{{[style.left]}}">下单时间</view><view class="{{[style.right]}}">{{showTime}}</view></view><view class="{{[style.flex_2, style.pd_btm40]}}"><view class="{{[style.left]}}">订单号</view><view class="{{[style.right]}}">{{result.orderId || ''}}</view></view></view><block wx:if="{{result.orderStatus == 31000}}"><view class="{{style.waitForPay}}"><view class="{{style.time}}">支付倒计时 {{minute}}:{{second}}</view><view bindtap="rechargePaymentFn" class="{{style.btn}}" data-e-tap-so="this">立即充值</view></view></block></view></block></block></block></block></block>
<template name="renderLoading"><block><view class="{{style.isLoading}}"><image class="{{style.isLoadingImg}}" mode="aspectFit" src="https://storage.360buyimg.com/wximg/common/loading.gif"></image>loading...</view></block></template>
<template name="renderNull"><block><view class="{{style.center}}"><image class="{{style.noDataImg}}" src="https://storage.360buyimg.com/wximg/common/errorbar_icon_nothing.png"></image><view class="{{style.noData}}">信息走丢了</view><view bindtap="goHome" class="{{style.toCharge}}" data-e-tap-so="this">回充值首页</view></view></block></template>
