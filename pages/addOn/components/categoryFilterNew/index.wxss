@import "/common/css/iconfont.wxss";

.category-filter-wrapper {
	white-space: nowrap;
	position: relative;
}

.category-filter-scroll {
	width: 100%;
	height: 72rpx;
	font-size: 0;
	vertical-align: center;
	background: #fff;
}

.category-item {
	display: inline-block;
	height: 56rpx;
	font-size: 24rpx;
	color: #666;
	background: #f6f6f6;
	border-radius: 6rpx;
	text-align: center;
	line-height: 56rpx;
	margin-right: 16rpx;
	padding: 0 24rpx;
	position: relative;
}

.caterory-flag {
	position: absolute;
	left: 0;
	right: 0;
	top: 40rpx;
	height: 100rpx;
	background: #f6f6f6;
}

.category-item:first-child {
	margin-left: 24rpx;
}

.category-item:last-child {
	margin-right: 24rpx;
}

.selected {
	color: #00CF37;
	background: #ECF7ED;
}

.caterory-wrapper {
	display: flex;
	align-items: center;
}

.caterory-text {
	max-width: 156rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.caterory-icon {
	margin-left: 10rpx;
	align-items: center;
	justify-content: center;
	color: #666;
	font-size: 10rpx;
}

.sub-filter-wrapper {
	position: absolute;
	width: 100vw;
	height: 100vh;
	top: 72rpx;
	z-index: 999;
	background: rgba(0, 0, 0, 0.45);
}

.sub-filter-content {
	background: #fff;
	border-bottom-left-radius: 24rpx;
	border-bottom-right-radius: 24rpx;
	overflow: hidden;
}

.sub-filter-scroll {
	width: 100vw;
	box-sizing: border-box;
	background: #F8F8F8;
	display: flex;
	flex-wrap: wrap;
}

.sub-filter-item {
	width: 50vw;
	box-sizing: border-box;
	padding: 0 40rpx 32rpx 40rpx;
	display: flex;
	align-items: center;
}

.sub-filter-text {
	max-width: 288rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.sub-filter-icon {
	width: 24rpx;
	height: 24rpx;
	margin-left: 16rpx;
}

.activity {
	color: #00CF37;
}

.button-wrapper {
	display: flex;
}

.button-item {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 84rpx;
	background: #fff;
	font-size: 28rpx;
	font-weight: 400;
	color: #666;
}

.confirm {
	background: #00CF37;
	color: #fff;
}