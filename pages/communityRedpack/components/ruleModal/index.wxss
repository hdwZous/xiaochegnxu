@import "/common/css/iconfont.wxss";

.rule-modal {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,0.7);
}

.rule-wrapper {
    position: relative;
    height: 737rpx;
    width: 590rpx;
    background: #fff;
    border-radius: 32rpx;
}

.rule-title {
    width: 590rpx;
    height: 110rpx;
    background: url('https://storage.360buyimg.com/wximg/communityRedpack/ruleBg.png') center no-repeat;
    background-size: cover;
    display: flex;
    justify-content: center;
    align-items: center;
}

.title-text {
    font-size: 44rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #870E02;
}

.rule-content {
    box-sizing: border-box;
    height: 627rpx;
    width: 590rpx;
    padding: 29rpx 35rpx;
}

.rule-item {
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #333;
    line-height: 46rpx;
}

.close-button-wrapper {
    height: 58rpx;
    width: 58rpx;
    border-radius: 50%;
    border: 1px solid #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: -103rpx;
    left: 50%;
    transform: translateX(-50%);
}

.close-button {
    color: #fff;
    font-size: 24rpx;
}