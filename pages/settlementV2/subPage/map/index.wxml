<view class="wrap">
    <!--内容部分-->
    <view class="section">
        <!--地图-->
        <view class="map_case">
            <map id="map"
                 class="map"
                 show-location="true"
                 longitude="{{storeLng}}"
                 latitude="{{storeLat}}"
                 markers='{{markers}}'
                 scale="{{14}}"
            >
                <cover-view slot="callout">
                    <block wx:for="{{markers}}" wx:key="index">
                    <cover-view  class="customCallout" marker-id="{{item.id}}" >
                        <cover-view class="head-wrap">
                            <cover-image class="bg-head" src="https://storage.360buyimg.com/wxmini/map/bg-store-dot.png" referrer-policy='no-referrer'></cover-image>
                            <cover-image class="icon-head" src="{{item.head}}" referrer-policy='no-referrer'></cover-image>
                            <!-- <cover-view></cover-view> -->
                            <!-- <cover-image class="icon-location" src="https://storage.360buyimg.com/wxmini/map/icon-location.png" referrer-policy='no-referrer'></cover-image> -->
                        </cover-view>
                    </cover-view>
                    </block>
                </cover-view>
                <cover-image class="controls"
                             wx:if='{{storeIcon}}'
                             bindtap="resetMap"
                             src="https://storage.360buyimg.com/wxmini/map/icon-location-store.png"
                ></cover-image>
            </map>
        </view>
        <!--地址-->
        <view class="footer">
            <view class="name-wrap">
                <view class='store-name'>
                    {{storeName}}
                </view>
                <view class="distance">{{distanceExplain}}</view>
            </view>
            <view class="address-wrap">
                <view class='address'>
                    {{storeAddress}}
                </view>
              <view catchtap='copy' class="btn-copy">
                <image class="icon-copy" src="https://storage.360buyimg.com/wxmini/map/icon-copy.png" mode="aspectFit" />
                点击复制
              </view>
            </view>
        </view>
    </view>
</view>
