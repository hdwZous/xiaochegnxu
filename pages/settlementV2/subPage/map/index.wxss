    position: relative;
    -webkit-flex: auto;
    flex: auto;
} */
.section .footer {
    background: #FFFFFF;
    box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.08);
    border-radius: 12px 12px 0px 0px;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    padding: 32rpx 24rpx;
}
.footer .name-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #333333;
}
.footer .distance {
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #666666;
}
.footer .address-wrap {
    background: #F6F6F6;
    border-radius: 16rpx;
    margin-top: 32rpx;
    padding: 24rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
}
.footer .btn-copy {
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #348BED;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10rpx;
}
.footer .icon-copy {
    width: 32rpx;
    height: 32rpx;
}
.footer .store-name {
    width: 522rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.footer .address {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    overflow:hidden;
    /* autoprefixer: ignore next */
    -webkit-box-orient: vertical;
}

.customCallout {
    /* border: 1px solid red; */
    display: flex;
    justify-content: center;
    flex-direction: column;
    position: relative;
}
.head-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    transform: translateX(-50%);
    width: 82px;
    height: 97px;
    padding: 4px;
    position: relative;
    left: 50%;
    z-index: 99;
}
.bg-head {
    /* border: 1px solid red; */
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.icon-head {
    background-color: #f2f1ed;
    overflow: hidden;
    border: 0;
    width: 54px;
    height: 54px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -69%);
    z-index: 999;
    /* border: 1px solid blueviolet; */
}
.icon-location {
    width: 20rpx;
    height: 20rpx;
    position: relative;
    left: 26rpx;
    top: 30rpx;
}