.wrap {
    height: 100vh;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
}
.wrap .section {
    position: relative;
    -webkit-flex: auto;
    flex: auto;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
}
.wrap .hide {
    display: none;
}
.section .map_case {
    position: relative;
    -webkit-flex: auto;
    flex: auto;
}
.section .map {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.section .controls {
    width:80rpx;
    height:80rpx;
    position:absolute;
    bottom:40rpx;
    right:20rpx;
    z-index: 1;
}
.section .marker {
    width: 52rpx;
    height: 72rpx;
    position: absolute;
    z-index: 1;
    left: 50%;
    top: 50%;
    margin-top: -36rpx;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
