.dt_wrap {
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  z-index: 30;
}

.content_box {
  width: 540rpx;
  background: #fff;
  border-radius: 24rpx;
}

.content_top {
  width: 100%;
  height: 232rpx;
  border-bottom: 1px solid #F5F5F5;
  text-align: center;
}

.content_top .top_title {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 44rpx;
  padding-top: 40rpx;
}

.content_top .top_desc {
  font-size: 28rpx;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: #666666;
  line-height: 44rpx;
  margin-top: 50rpx;
}

.content_bottom {
  width: 100%;
  height: 104rpx;
}

.content_bottom .bottom_btn {
  flex: 1;
  text-align: center;
  line-height: 104rpx;
  font-size: 36rpx;
}

.content_bottom .bottom_btn.left {
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.content_bottom .bottom_btn.right {
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #00CF37;
}

.content_bottom .shin-border {
  width: 1px;
  height: 100%;
  background: #F5F5F5;
}

/* 8.9.5  */

.new_layer_wrap {
  width: 676rpx;
  height: 500rpx;
  background-image: url("https://storage.360buyimg.com/wximg/storewin/detention_one.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
}

.new_layer_wrap.two {
  height: 680rpx;
  background-image: url("https://storage.360buyimg.com/wximg/storewin/detention_two.png");
}

.new_layer_wrap .layer_title_box {
  margin-left: 240rpx;
  margin-top: 40rpx;
  margin-right: 25rpx;
  height: 120rpx;
}

.layer_title_box .layer_title_content {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 40rpx;
}

.new_layer_wrap .layer_coupon_box {
  margin: 0 40rpx;
  margin-top: 17rpx;
}

.coupon_item {
  height: 164rpx;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 16rpx 0px rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.coupon_item:last-of-type {
  margin-bottom: 0;
}

.new_layer_wrap .layer_btn_box {
  margin: 0 40rpx;
  margin-top: 40rpx;
}

.layer_btn_box .btn {
  width: 276rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 42rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.layer_btn_box .btn.btn_left {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-weight: 400;
}

.layer_btn_box .btn.btn_right {
  background: #FFFFFF;
  box-shadow: 0px 4rpx 16rpx 0px rgba(0, 0, 0, 0.06);
  color: #FF201B;
  font-weight: 500;
}

.coupon_item_seckill {
  padding: 0 36rpx;
}

.coupon_item_seckill .item_seckill_line {
  height: 110rpx;
  border-left: 1px dotted #C7BF9B;
}

.coupon_item_seckill .item_seckill_right {
  margin-left: 34rpx;
  font-family: 'regular';
  font-weight: 400;
  color: #FF1E19;
}

.coupon_item_seckill .item_seckill_right .seckill_right_symbol {
  font-size: 40rpx;
}

.coupon_item_seckill .item_seckill_right .seckill_right_money {
  font-size: 72rpx;
}

.coupon_item_seckill .item_seckill_left {
  flex: 1;
}

.coupon_item_seckill .item_seckill_left .item_seckill_title {
  font-size: 32rpx;
  font-family: PingFangTC-Medium, PingFangTC;
  font-weight: 500;
  color: #333333;
  line-height: 32rpx;
}

.coupon_item_seckill .item_seckill_left .item_seckill_timer {
  margin-top: 10rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 28rpx;
}

.coupon_item_seckill .item_seckill_left .item_seckill_countdown {
  margin-top: 10rpx;
}

.item_seckill_countdown .times .times-item {
  width: 32rpx;
  height: 22rpx;
  background: linear-gradient(146deg, #FF5451 0%, #FF1E19 100%);
  border-radius: 2rpx;
  line-height: 22rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.item_seckill_countdown .times .symbol {
  margin: 0 6rpx;
  color: #FF1E19;
  font-size: 22rpx;
}

.item_seckill_countdown .countdown_txt {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  margin-left: 14rpx;
}

.coupon_item_goods {
  padding: 32rpx 40rpx 0 20rpx;
}

.coupon_item_goods .item_goods_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.coupon_item_goods .item_goods_content {
  flex: 1;
  overflow: hidden;
}

.item_goods_content .item_goods_title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}

.item_goods_content .item_goods_title .goods_title_tag {
  height: 28rpx;
  padding: 0 8rpx;
  line-height: 28rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  margin-right: 12rpx;
  flex-shrink: 0;
  flex-grow: 0;
}

.item_goods_content .item_goods_price {
  margin-top: 4rpx;
  font-size: 0;
}

.item_goods_price .txt {
  font-size: 28rpx;
  font-family: 'regular';
  font-weight: 400;
  color: #333333;
}

.item_goods_price .txt.goods_price_normal {
  margin-right: 16rpx;
}

.item_goods_price .txt.goods_price_delete {
  font-family: 'light';
  font-weight: 300;
  color: #999999;
  text-decoration-line: line-through;
}

.item_goods_content .item_goods_tag {
  margin-top: 8rpx;
  font-size: 0;
}

.item_goods_tag .goods_tags {
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 6rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF5757;
  border-radius: 4rpx;
  border: 1px solid #FF9191;
}