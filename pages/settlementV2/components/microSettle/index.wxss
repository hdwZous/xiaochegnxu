@import "/common/css/global.wxss";

.flex-row {
  -webkit-box-orient: horizontal !important;
  -webkit-box-direction: normal !important;
  -webkit-flex-direction: row !important;
  -ms-flex-direction: row !important;
  flex-direction: row !important;
}

.we_bank_wrap {
  /* margin-top: 20rpx; */
  border-radius: 24rpx;
  padding: 20rpx 20rpx 30rpx;
  background: #ffffff;
}
.we_bank_title {
  align-items: center;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
.we_bank_line {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.we_bank_back {
  padding: 0 5rpx;
  display: inline-block;
  color: #2464d8;
  font-size: 24rpx;
  border-radius: 2px;
  /* vertical-align: 2rpx; */
  border: 1px solid rgba(36, 100, 216, 1);
  font-size: 20rpx;
  line-height: normal;
  position: relative;
  top:-6rpx;
}
.we_bank_icon {
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  background: url("https://storage.360buyimg.com/wximg/settlement/tip.png")
    no-repeat center;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
  vertical-align: -2rpx;
  margin: 0 10rpx 0 5rpx;
}
.we_bank_text {
  margin-top: 10px;
  position: relative;
  font-size: 24rpx;
  font-weight: 300;
  color: #333;
  margin-right: 45px;
}
.switch_webank {
    position: absolute;
    right: -44px;
    top: -80rpx;
}
.switch_webank>image {
    width: 80rpx;
}
.desc{
  font-size: 24rpx;
  color:#999;
}