.vnl-box {
  z-index: 11;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.vnl-bg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, .7);
}

.vnl-box .vnl-body {
  background: #F6F6F6;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
  bottom: -1000px;
  width: 100%;
  height: 80vh;
  transition: all ease 0.3s;
  -webkit-transition: all ease 0.3s;
}

.vnl-body .title-box {
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 48rpx;
  padding: 32rpx 24rpx;
  position: relative;
}

.vnl-body .vnl-close {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 112rpx;
  background-image: url("https://storage.360buyimg.com/wximg/storewin/settle-vnl-close.png");
  background-repeat: no-repeat;
  background-size: 32rpx 32rpx;
  background-position: center center;
}

.solt-content {
  padding: 80rpx 0;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  text-align: center;
}

.vnl_scroll {
  flex: 1;
  overflow-y: scroll;
}

.content {
  width: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
  height: calc(80vh - 224rpx);
  height: -webkit-calc(80vh - 224rpx);
  -webkit-overflow-scrolling: touch;
}

.content.ipx {
  height: calc(80vh - 284rpx);
  height: -webkit-calc(80vh - 284rpx);
}

.list-floor {
  padding-top: 32rpx;
}

.list-title {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 36rpx;
}

.coupon-items {
  margin-top: 16rpx;
}

.vnl-bottom {
  height: 112rpx;
  box-sizing: border-box;
  padding-right: 24rpx;
  background: #FFFFFF;
}

.vnlb-bt {
  width: 208rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: linear-gradient(270deg, #00CF37 0%, #0FDF46 100%);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 24rpx;
}

.vnlb-tn {
  font-size: 36rpx;
  font-family: 'regular';
  font-weight: 400;
  color: #FF1E19;
  line-height: 44rpx;
  margin-left: 8rpx;
}

.no_bag {
  text-align: center;
}

.no_bag_image {
  width: 300rpx;
  height: 300rpx;
  background: url("https://storage.360buyimg.com/wximg/common/errorbar_icon_nothing.png") no-repeat center center;
  background-size: cover;
  margin: 0 auto;
}

.no_bag_text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 80rpx;
}