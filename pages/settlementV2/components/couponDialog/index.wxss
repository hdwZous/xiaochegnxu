@import "/common/css/global";
@import "/common/css/light.wxss";
@import "/common/css/regular.wxss";
.dialog {
    position: fixed;
    top:0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,.6);
    z-index: 11;
}
.dialog .case {
    position: fixed;
    left: 0;
    right: 0;
    bottom: -1000px;
    width: 100%;
    background: #ffffff;
    border-radius:10px 10px 0px 0px;
    transition: all ease .3s !important;
    -webkit-transition: all ease .3s !important;
    z-index: 10;
}
.close {
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #666666;
    font-size: 50rpx;
}
.title {
    color: #333333;
    text-align: center;
    font-size: 32rpx;
    height: 50px;
    line-height: 50px;
    font-weight: bold;
}
.content {
    min-height: 260rpx;
    max-height: 80vh;
    -webkit-overflow-scrolling: touch;
    width: 100%;
}
.content_case {
    padding-top: 30rpx;
    padding-bottom: 20px;
}
.coupon {
    margin-top: 20rpx;
    padding-right: 20rpx;
    position: relative;
    padding-left: 84rpx;
}
.coupon:first-child{
    margin-top: 0;
}
.icon {
    position: absolute;
    left: 24rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 46rpx;
    height: 44rpx;
}
.coupon_10 .icon {
    background: url("https://storage.360buyimg.com/wximg/settlement/10.png") no-repeat center;
    -webkit-background-size: 100% 100%;
    background-size: 100% 100%;
}
.coupon_20 .icon {
    background: url("https://storage.360buyimg.com/wximg/settlement/20.png") no-repeat center;
    -webkit-background-size: 100% 100%;
    background-size: 100% 100%;
}
.coupon_30 .icon {
    background: url("https://storage.360buyimg.com/wximg/settlement/30.png") no-repeat center;
    -webkit-background-size: 100% 100%;
    background-size: 100% 100%;
}
.info {
    position: relative;
    height: 160rpx;
    align-items: center;
    box-shadow:0px 2px 8px 0px rgba(0,0,0,0.06);
    border:1px solid rgba(255,87,87,0.2);
    border-radius: 4rpx;
}
.left {
    position: relative;
    text-align: center;
    width: 200rpx;
}
.left_tag {
    position: absolute;
    left: -1rpx;
    top: -2rpx;
    padding: 2rpx 10rpx;
    font-size: 20rpx;
    color: #FFFFFF;
    background:linear-gradient(315deg,rgba(255,81,56,1) 0%,rgba(255,125,125,1) 100%);
    border-radius:0rpx 0px 6px 0px;
}
.left_tag_gray {
    /* background: linear-gradient(135deg, rgb(204, 204, 204) 0%, rgb(204, 204, 204) 100%); */
    background:rgba(255,159,0,0.1);
    color: #FF9F00;
    left: 0rpx;
    top: 0rpx;
}
.left_tag_gray image{
    width: 10rpx;
    height: 14rpx;
    padding-left: 2rpx;
    padding-right: 4rpx;
}

.reason {
    position: absolute;
    bottom: 40rpx;
    left: 0;
    white-space: pre-wrap;
    background: #ffffff;
    color: #F5A623;
    font-size: 20rpx;
    padding: 12rpx 24rpx;
    width: 300rpx;
    box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,.06);
    border-radius: 6rpx;
}
.reason:before {
    content: "";
    width: 0;
    height: 0;
    border: 6px solid transparent;
    border-top-color: #ffffff;
    position: absolute;
    bottom: -11px;
    left: 60rpx;
}
.reason_first {
    position: absolute;
    top: 47rpx;
    left: -10rpx;
    white-space: pre-wrap;
    background: #ffffff;
    color: #F5A623;
    font-size: 20rpx;
    padding: 12rpx 24rpx;
    width: 300rpx;
    box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,.06);
    border-radius: 6rpx;
    z-index: 3;
}
.reason_first:before {
    content: "";
    width: 0;
    height: 0;
    border: 6px solid transparent;
    border-bottom-color: #f4f4f4;
    position: absolute;
    top: -11px;
    left: 60rpx;
}
.reason_title {
    font-size: 24rpx;
}
.right {
    position: relative;
    overflow: hidden;
}
.right_tag {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    right: 0;
    top: 0;
    overflow: hidden;
}
.right_tag_con {
    padding: 0 8rpx;
    color: #FF5757;
    font-size: 20rpx;
    width: 150rpx;
    background: rgba(255,238,238,1);
    transform: rotate(45deg);
    text-align: center;
    position: absolute;
    right: -53rpx;
    top: 15rpx;
}
.price {
    padding-top: 4rpx;
    color: #FF5757;
    /* font-size: 44rpx; */
    text-align: center;
    /* font-weight: bold; */
}
.symbol {
    font-size: 28rpx;
    font-family: regular;
}
.amount {
    font-family: regular;
    font-size: 64rpx;
    /* font-weight: bold; */
}
.txt {
    color: #333333;
    font-size: 22rpx;
}
.name {
    color: #333333;
    font-size: 28rpx;
    padding-right: 55rpx;
    font-weight: bold;
}
.time {
    margin-top: 10rpx;
    color: #666666;
    font-size: 22rpx;
    font-family: 'light';
}
.tag {
    position: relative;
    top: -2rpx;
    display: inline-block;
    color: #348BED;
    font-size: 20rpx;
    padding: 0 10rpx;
    border-radius:4px 1px 4px 1px;
    border:1px solid rgba(52,139,237,1);
}
.coupon_30 .info {
    box-shadow:0px 2rpx 16rpx 0px rgba(0,0,0,0.06);
    border:1rpx solid rgba(0,0,0,0.1);
}
.coupon_30 .tag {
    color: #CCCCCC;
    border:1rpx solid #CCCCCC;
}
.coupon_30 .name, .coupon_30 .time, .coupon_30 .price, .coupon_30 .txt {
    color: #CCCCCC;
}
