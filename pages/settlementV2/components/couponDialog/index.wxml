<!--背景-->
<view class="dialog"
      catchtap="closePop"
      wx:if="{{isShow}}"
      catchtouchmove='ture'
>

<!--内容-->
<view class="case"
    bindtap="clickContent"
    style="bottom:{{showDialog?0:'-1000px'}}"
>
    <view class="close"
        catchtap="closePop"
    >×</view>
    <view class="title">优惠券</view>
    <scroll-view scroll-y
                class="content"
    >
        <view class="content_case">
            <view class="coupon coupon_{{item.selectedState}}"
                wx:for="{{list}}"
                wx:key="index"
                data-index="{{index}}"
                data-state="{{item.selectedState}}"
                catch:tap="clickCoupon"
            >
                <view class="icon"></view>
                <coupon-item item="{{item}}" isFirst="{{index==0&&true}}" orderPageId="{{orderPageId}}" unuseType="skuCoupon" hasSkuImg="{{true}}" couponCacheId="{{couponCacheId}}" unique="{{unique}}" noNeedExposure="{{true}}" currentPageName="{{buriedObj.currentPageName}}" prePageName="{{buriedObj.prePageName}}"></coupon-item>      
            </view>
            <view style="height: 60rpx" wx:if="{{isIpx}}"></view>
        </view>
    </scroll-view>
</view>

</view>