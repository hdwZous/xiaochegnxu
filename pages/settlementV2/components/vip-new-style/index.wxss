/* 新红包楼层 */
.wrap_nv {
  background: linear-gradient(180deg, #FFFCF6 0%, #FFF8EA 100%);
  border-radius: 16rpx;
  border-top-left-radius: 18rpx;
  border: 0.5px solid #FAF0DC;
  overflow: hidden;
  position: relative;
}

.bt {
  position: absolute;
  top: -0px;
  height: 6rpx;
  width: 100%;
  margin-left: 24rpx;
  background: #292C33;
  border-radius: 16rpx 8rpx 0 0;
}

.wrap_nv_header_left {
  width: 134rpx;
  height: 44rpx;
  border-top-left-radius: 16rpx;
  position: relative;
}

.wrap_nv_bg {
  position: absolute;
  z-index: 0;
  width: 134rpx;
  height: 44rpx;
  top: 0;
  left: 0;
}

.wrap_nv_header_title_icon {
  width: 34rpx;
  height: 20rpx;
  margin-left: 16rpx;
  margin-right: 4rpx;
  position: relative;
  z-index: 1;
}

.wrap_nv_ttx {
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFE7B8;
  line-height: 32rpx;
  position: relative;
  z-index: 1;
}

.wrap_nv_header_right {
  flex: 1;
  margin-left: 6rpx;
  margin-right: 16rpx;
  height: 44rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  color: #999999;
}

.wn_des {
  margin-top: 20rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

.wn_des .wn_des_txt {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}

.wn_des_img {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.origin_price {
  font-size: 32rpx;
  font-weight: 300;
  color: #999999;
  line-height: 44rpx;
  font-family: 'light';
  text-decoration: line-through;
}

.true_price {
  font-size: 32rpx;
  font-family: regular;
  color: #333333;
  line-height: 44rpx;
  margin-left: 8rpx;
}

.btn_check {
  width: 44rpx;
  height: 44rpx;
  margin-left: 12rpx;
}

.wnb {
  padding: 16rpx;
}

.vlmr-wrap {
  width: 360rpx;
  height: 108rpx;
}

.wrap_nv-agreement {
  font-size: 0;
  padding: 0 16rpx;
  margin-bottom: 16rpx;
}

.wrap_nv-agreement .wrap_nv-agreement-txt {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #999999;
  line-height: 28rpx;
}

.vl-bubble-wrap {
  width: 156rpx;
}

.vl-bubble {
  padding-top: 10rpx;
  background-image: url("https://storage.360buyimg.com/wximg/storewin/mini-vl-bubble.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 32rpx 40rpx;
}

.vlbb-box {
  max-width: 196rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  background: #FF5757;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 10px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  border-radius: 8rpx;
}

.wn_sub_des {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 24rpx;
  margin-top: 4rpx;
  margin-left: 16rpx;
}

.wrap_nv_renewal {
  font-size: 0;
  padding: 0 16rpx;
  margin-bottom: 8rpx;

}

.wnr_tip {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
}

.wnb_vlist {
  min-width: 204rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
  position: relative;
  padding: 8rpx 8rpx 8rpx 16rpx;
  background: linear-gradient(135deg, #FFE5B7 0%, #FFE0A9 100%);
  border-radius: 12rpx;
}

.wnb_vlist.checked {
  border: 4rpx solid #FFDA9A;
  padding: 8rpx 4rpx 4rpx 12rpx;
  background: #FFFFFF;
  padding-right: 4rpx;
  box-shadow: 0px 0px 12rpx 0px rgba(172,158,123,0.0800); 
}

.wnb_vlist:last-of-type {
  margin-bottom: 0;
}

.wnbvl_btn {
  width: 32rpx;
  height: 32rpx;
}

.wnbvl_left_name {
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 24rpx;
  margin-right: 8rpx;
}

.wnbvl_left_money {
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}

.wnbvl_m_sys {
  font-family: 'regular';
}

.wnbvl_m_count {
  font-size: 24rpx;
  font-family: 'regular';
  font-weight: 400;
  line-height: 40rpx;
}

.wnbvl_m_cycle {
  color: #666666;
}

.wnbvl_mark {
  padding: 0 8rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: linear-gradient(90deg, #FF6461 0%, #FF2A26 100%);
  border-radius: 16rpx 12rpx 0px 16rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  position: absolute;
  right: 0;
  top: 0;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
}

.wnb_vlist.checked .wnbvl_mark {
  transform: translate(4rpx, -50%);
  -webkit-transform: translate(4rpx, -50%);
}



