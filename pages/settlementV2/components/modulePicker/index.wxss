.picker_box {
  background: white;
  margin-top: 20rpx;
  border-radius: 24rpx;
}

.picker_box .white_item {
  line-height: 36rpx;
  padding: 30rpx 20rpx;
  align-items: center;
  -webkit-align-items: center;
}

.picker_box .white_item .white_title {
  font-weight: bold;
  color: #333;
  line-height: 36rpx;
  font-size: 28rpx;
}

.picker_box .white_item .white_value {
  font-size: 28rpx;
  line-height: 36rpx;
  justify-content: flex-end;
  -webkit-justify-content: flex-end;
  text-align: right;
  overflow: hidden;
  margin-left: 40rpx;
}

.store_item_line {
  position: relative;
  background-color: #f5f5f5;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.ts_next {
  font-size: 22rpx;
  margin-left: 15rpx;
  color: #666;
}

.remark_text {
  width: 400rpx;
  color: #999;
}

.color00 {
  color: #333;
}

.lack {
  position: relative;
}

.half_bg {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 12;
}

.half_content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 0;
  transition: transform 0.3s ease;
  -webkit-transition: transform 0.3s ease;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 12;
}

.show_content {
  height: 30vh;
}

.half_content .header {
  background-color: rgb(244, 244, 244);
  height: 100rpx;
  border-radius: 20rpx 20rpx 0 0;
  flex: none;
}

.header .lack_bt {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  color: rgb(71, 179, 79);
  font-size: 28rpx;
}

.header .title {
  font-size: 36rpx;
  color: rgb(51, 51, 51);
}

.scroll_box {
  width: 100%;
  height: 100%;
}

.picker_select {
  height: 80rpx;
}

.scroll_item {
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  padding: 0 40rpx;
}

.module_icon {
  width: 26rpx;
  height: 26rpx;
  margin-left: 8rpx;
}