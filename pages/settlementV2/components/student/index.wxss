@import "/common/css/iconfont.wxss";

.student{
    background: #ffffff;
    padding:32rpx 24rpx;
    border-radius:24rpx;
}
.frist_line{
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: auto;
}
.title{
    font-size: 32rpx;
    color:#333;
    font-weight: bold;
}
.user{
    font-size: 32rpx;
    color: #FF5757;
    font-weight: bold;
}
.qu_icon{
    width: 26rpx;
    height: 26rpx;
    padding-right: 48rpx;
    padding-left: 10rpx;
    position: relative;
    top: 2rpx;
}
.ts_next{
    color: #666;
    font-size: 24rpx;
    padding-left: 6rpx;
    position: relative;
    top: -2rpx;
}
.content{
    color:#999;
    font-size: 24rpx;
    padding-top: 10rpx;
}


.mask{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 99;
}
.wrap{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    overflow: scroll;
    width: 78%;
}
.container{
    max-height: 50%;
    border-radius: 16rpx;
    background: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.over_scroll{
    max-height: 600rpx;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
}
.over_scroll::-webkit-scrollbar {
    display: none; /* Chrome Safari */
}
.notice_title{
    font-size: 36rpx;
    font-weight: bold;
    line-height: 44rpx;
    text-align: center;
    color: rgb(51,51,51);
    padding-bottom: 30rpx;
}
.content02{
    color: rgb(51, 51, 51);
    font-size: 24rpx;
}
.item{
    display: flex;
    margin-bottom: 20rpx;
}
.left{
    margin-right: 8rpx;
}
.close_wrap{
    margin-top: 40rpx;
    width: 100%;
    display: flex;
    justify-content: center;
}
.close {
    width: 74rpx;
    height: 74rpx;
    background: url("https://storage.360buyimg.com/wximg/bargain/close.png") no-repeat center;
    -webkit-background-size: 100% 100%;
    background-size: 100% 100%;
}
.active{
    color: #333;
}