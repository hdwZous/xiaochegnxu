}
.buttons {
    /* width: 100%; */
    /* padding: 0 40rpx; */
    position:absolute;
    left:0;
    bottom:41rpx;
    box-sizing:border-box;
    z-index: 99;
    /* text-align: center; */
}
.item {
    height: 80rpx;
    background: transparent;
}
.cancel_btn{
    box-sizing: border-box;
    width:244rpx;
    height:80rpx;
    line-height: 80rpx;
    /* border-radius:40rpx; */
    /* border:1rpx solid rgba(255,255,255,1); */
    color:#39323F;
    text-align: center;
    margin-left: 40rpx;
    margin-right: 20rpx;
    position: relative;
}
.border::after { 
    content: '';
    position: absolute;  /* 把父视图设置为relative，方便定位*/
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    box-sizing: border-box;
    border-radius: 80rpx;
    border: 1px solid #323648;
  }
.confirm_btn{
    box-sizing: border-box;
    width:248rpx;
    height:80rpx;
    line-height: 80rpx;
    border-radius:40rpx;
    /* border:1rpx solid rgba(255,255,255,1); */
    color:#FFE0C2;
    text-align: center;
    background:linear-gradient(315deg,rgba(42,36,45,1) 0%,rgba(62,55,69,1) 100%);
}
.line{
    position: relative;
    background-color: #999;
    height: 1px !important;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    margin: 0px 50rpx;
    margin-top: 20rpx;
}