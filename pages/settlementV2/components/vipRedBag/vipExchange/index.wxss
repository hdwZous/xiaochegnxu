.price {
    padding-top: 39rpx;
    color: #323648;
    font-weight: bold;
    font-size: 48rpx;
}
.symbol {
    font-size: 22rpx;
    color: #323648;
}
.name {
    margin: 0 20rpx;
    padding-top: 25rpx;
