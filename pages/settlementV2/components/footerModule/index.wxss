@import "/common/css/global.wxss";
@import "/common/css/iconfont.wxss";

.flex-row {
  -webkit-box-orient: horizontal !important;
  -webkit-box-direction: normal !important;
  -webkit-flex-direction: row !important;
  -ms-flex-direction: row !important;
  flex-direction: row !important;
}

.wrap {
  background: #fff;
  border-radius: 24rpx;
}

.white_box {
  background: white;
  margin-top: 20rpx;
  border-radius: 24rpx;
}

.white_box .white_item {
  line-height: 36rpx;
  padding: 30rpx 20rpx;
  align-items: center;
  -webkit-align-items: center;
}

.white_box .white_item .white_title {
  font-weight: bold;
  color: #333;
  line-height: 36rpx;
  font-size: 28rpx;
}

.white_box .white_item .white_value {
  font-size: 28rpx;
  line-height: 36rpx;
  justify-content: flex-end;
  -webkit-justify-content: flex-end;
  text-align: right;
}

.store_item_line {
  position: relative;
  background-color: #f5f5f5;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.ts_next{
  font-size:22rpx;
  margin-left:15rpx;
  color:#666;
}
.remark_text{
  width: 400rpx;
  color: #999;
}
.color00{
  color: #333;
}

/* 发票 */
.invoice_wrap{
  display: flex;
  justify-content: space-between;
  padding:32rpx 24rpx;
}
.invoice_left{
  font-size: 28rpx;
  color:#333;
  font-weight: bold;
}
.invoice_right{
  text-align: right;
}
.selected_invoice{
  font-size: 28rpx;
  color:#999;
  max-width: 550rpx;
}
.tableWareLine {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 24rpx;
}
.tableWareLine_left {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  font-family: PingFangSC-Medium,PingFang SC;
}
.tableWareLine_right {
  text-align: right;
  display: flex;
  align-items: center;
}
.tableWareLine_img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}
.tableWareLine_img image {
  width: 28rpx;
  height: 28rpx;
  display: block;
}
.tableWareLine_text {
  font-size: 28rpx;
  color: #333333;
  font-family: light;
}
.tableWareLine_icon {
  width: 22rpx;
  height: 24rpx;
}