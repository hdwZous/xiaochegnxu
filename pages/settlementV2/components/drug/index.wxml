<view class="drug">
    <view class="frist_line">
        <view class="left log_drug_icon">
            <text class="title" aria-role="text" aria-label="{{initData.data.useDrugHead}}" >{{initData.data.useDrugHead}}</text> 
            <image src="https://storage.360buyimg.com/wximg/settlement/tip.png" class="qu_icon" aria-role="button" aria-label="点击展开介绍弹层" bind:tap="handleClickQuestion" wx:if="{{initData.data.readmeList && initData.data.readmeList.length>0}}"/> 
        </view>
        <view class="right log_drug_h5" bind:tap="goToH5Page" aria-role="button" aria-label="点击跳转填写信息页面"><text class="user {{initData.data.useDrugName && 'active'}}">{{initData.data.useDrugName?initData.data.useDrugName:initData.data.useDrugStatus?initData.data.useDrugStatus:'请填写'}}</text> <text class="dj_icon ts_next"></text>  </view>
    </view>
    <view class="content" aria-role="text" aria-label="{{initData.data.useDrugTail}}">{{initData.data.useDrugTail}}</view>
</view>

<view class="mask" catch:tap="close" wx:if="{{visible}}">
    <view class="wrap">
        <view class="container" catch:tap="stopBubble">
            <view class="over_scroll">
                <view class="notice_title" aria-role="text" aria-label="{{noticeList[0].text.title}}">{{noticeList[0].text.title}}</view>
                <view class="content02">
                <view class="item" wx:for="{{noticeList}}" wx:key="index" wx:if="{{index>0}}">
                    <view class="left" aria-role="text" aria-label="{{item.text.title}}">{{item.text.title}}</view>
                    <view class="right" aria-role="text" aria-label="{{item.text.content}}">{{item.text.content}}</view>
                </view>
                </view>
            </view>
        </view>
        <view class="close_wrap" catch:tap="close" aria-role="button" aria-label="关闭弹窗">
          <view class="close"></view>
        </view>
    </view>
</view>