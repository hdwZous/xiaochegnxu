<view class="home-picker-mask flex-col" wx:if="{{show}}">
  <view class="flex-auto" bindtap="hide" aria-role="button" aria-label="关闭弹窗"></view>
  <view class="home-picker-box flex-none flex-col {{showBox?'show':''}}">
    <view class="title d-flex flex-row justify-content-center align-items-center">
      <view class="title-text" aria-role="text" aria-label="{{infos.data.timeSelectedLayerTitle}}">{{infos.data.timeSelectedLayerTitle}}</view>
      <view class="title_close">
        <text class="dj_icon ts_close close" bindtap="hide" aria-role="button" aria-label="关闭弹窗"></text>
      </view>
    </view>
    <view class="title_botton_line"></view>
    <view class="content flex-auto d-flex flex-column">
      <scroll-view class="left d-flex flex-row flex-nowrap" scroll-x="true" enable-flex scroll-with-animation scroll-into-view="A{{selectedIndex>=2?selectedIndex-2:0}}">
        <block wx:for="{{infos.data.serviceDateTimeItems}}" wx:for-item="item" wx:key="key" wx:for-index="index">
          <view class="left-item flex-none {{index==selectedIndex?'active':''}}" data-ids="{{index}}" bindtap="selectCurDateIndex" id="A{{index}}">
            <view class="li_week">{{item.dateWithWeekText}}</view>
            <view class="li_date">{{item.dateText}}</view>
            <view class="li_active_line" wx:if="{{index==selectedIndex}}"></view>
          </view>
        </block>
      </scroll-view>
      <scroll-view class="right d-flex flex-row flex-wrap" catchtouchmove="true" scroll-y="true" enable-flex scroll-with-animation scroll-into-view="A{{timeIndex}}">
        <block wx:for="{{infos.data.serviceDateTimeItems[selectedIndex].serviceTimeItems}}" wx:for-item="item" wx:key="key" wx:for-index="index">
          <view class="right-item flex-none d-flex flex-column justify-content-center align-items-center {{item.selectable==2?'active':''}}" data-status="{{item.selectable||''}}" data-time-index="{{index}}" data-infos="{{item}}" bindtap="selectTimeIndex" id="A{{index}}">
            <view class="right-item-text {{item.selectable==3||item.selectable==4?'gray':''}}">{{item.timeText}}</view>
            <view wx:if="{{item.statusTip.length}}" class="status-tip" >{{item.statusTip}}</view>
            <image class="selected-icon" wx:if="{{item.selectable==2}}" src="https://storage.360buyimg.com/peibanjia/dj_wx/home-making-selected.png"></image>
          </view>
        </block>
      </scroll-view>
    </view>
  </view>
</view>