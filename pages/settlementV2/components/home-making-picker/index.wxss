.home-picker-mask {
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 11;
  width: 100%;
  height: 100%;
  bottom: 0;
  top: 0;
}

.home-picker-box {
  position: absolute;
  bottom: 0;
  height: 0rpx;
  width: 100%;
  overflow: hidden;
  border-radius: 20rpx 20rpx 0px 0px;
  background-color: white;
  transition: height 300ms ease-out;
  -webkit-transition: height 300ms ease-out;
}

.home-picker-box.show {
  height: 80vh;
}

.home-picker-box .title {
  margin: 32rpx 0;
  position: relative;
}

.home-picker-box .title .title-text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 40rpx;
}

.title_botton_line {
  height: 1px;
  background: linear-gradient(360deg, #F5F5F5 0%, rgba(255,255,255,0) 100%);
}

.title_close {
  z-index: 10;
  position: absolute;
  padding: 0 24rpx;
  right: 0;
  height: 100%;
  line-height: 100%;
}

.title_close .close {
  font-weight: 300;
  color: #333;
  font-size: 26rpx;
}

.home-picker-box .content .left {
  height: 120rpx;
  padding-top: 32rpx;
  box-sizing: border-box;
}

.left .left-item {
  width: 80rpx;
  color: #333;
  text-align: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.left-item:first-of-type {
  padding-left: 44rpx;
}

.left .left-item:last-of-type {
  padding-right: 60rpx;
}

.left .left-item.active {
  color: #00CF37;
}

.li_week {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  line-height: 40rpx;
}

.li_date {
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 400;
  line-height: 32rpx;
  margin-top: 4rpx;
  margin-bottom: 8rpx;
}

.li_active_line {
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(270deg, #00CF37 0%, #0FDF46 100%);
  border-radius: 2rpx;
}

.left .left-item.active .li_date {
  font-weight: 600;
}

.home-picker-box .right {
  box-sizing: border-box;
  padding-top: 32rpx;
  padding-left: 24rpx;
}

.home-picker-box .right-item {
  width: 164rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #F6F6F6;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.home-picker-box .right-item.active {
  background: linear-gradient(270deg, #00CF37 0%, #0FDF46 100%);
}

.home-picker-box .right-item.active .right-item-text {
  color: #fff;
}

.home-picker-box .right-item-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 36rpx;
}

.home-picker-box .right-item-text.gray {
  font-weight: 400;
  color: #999999;
}

.home-picker-box .right .selected-icon {
  width: 36rpx;
  height: 28rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.home-picker-box .status-tip {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 32rpx;
  margin-top: 4rpx;
}