@import "/common/css/global.wxss";
@import "/common/css/iconfont.wxss";
.half_bg{
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,0.7);
}
.half_content {
    height: 60vh;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    transform: translateY(60vh);
    -webkit-transform: translateY(60vh);
    transition: transform 0.3s ease;
    -webkit-transition: transform 0.3s ease;
    background: white;
    position: fixed;
    bottom: 0;
    left:0;
    right: 0;
    width: 100%;
    border-radius: 20rpx 20rpx 0 0;
}
.show_content{
    transform: translateY(0)!important;
}
.title{
    padding-top: 40rpx;
    padding-bottom: 20rpx;
    text-align: center;
    font-weight:bold;
    color:#333;
    line-height:40rpx;
    font-size:32rpx;

}
.title .close{
    position: absolute;
    right: 24rpx;
    top: 42rpx;
    height: 36rpx;
    width: 36rpx;
    font-weight: 300;
    color: #333;
    font-size: 26rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: center;
    -webkit-justify-content: center;
}
.flex_row {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
}


.flex_col {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
}

.flex_none {
    -webkit-flex: none;
    flex: none;
}

.flex_auto {
    -webkit-flex: auto;
    flex: auto;
}
