<half-screen show="{{isShow}}" height="80vh" title="{{settlementBusinessTag===1?'选择上门地址':'选择收获地址'}}" from="address" bindcloseBg="closeBg">
  <view class="wrap flex_col flex_auto">
    <!-- 地址列表 -->
    <view class="address flex_auto">
      <!-- 地址 -->
      <scroll-view class="scroll" scroll-y>
        <block wx:if="{{!showEmpty}}">
          <!-- 可配送范围地址 -->
          <view wx:if="{{inAddress.length>0}}">
            <!-- 地址详情 -->
            <view class="item flex-row" wx:for="{{inAddress}}" wx:for-item="item" wx:for-index="index" wx:key="inAddress" data-poi="{{item.poi}}" data-latitude="{{item.latitude}}" data-longitude="{{item.longitude}}" data-city-id="{{item.cityId}}" data-county-id="{{item.countyId}}" data-id="{{item.id}}" data-county-name="{{item.countyName}}" data-city-name="{{item.cityName}}" data-address-name="{{item.addressName}}" data-mobile="{{item.mobile}}" data-name="{{item.name}}" bindtap="selectAddress">
              <view wx:if="{{showChooseIcon}}" class="selectd-box">
                <view class='icon-cont {{item.target?"choose":"noChoose"}}'></view>
              </view>
              <view class="info">
                <view class="location" aria-role="text" aria-label="{{item.tags?item.tagName:''}}{{item.fullAddress}}">
                  <view class="tag" wx:if="{{item.tags}}">{{item.tagName}}</view>
                  <view class="text">{{item.fullAddress}}</view>
                </view>
                <view class="txt" aria-role="text" aria-label="{{item.name}},{{item.mobile}}">
                  <text class="name">{{item.name}}</text>
                  {{item.mobile}}
                </view>
              </view>
              <view class="edit" catchtap="goToEditAddress" data-from="edit" data-can-delivery="{{item.canDelivery}}" data-longitude="{{item.longitude}}" data-latitude="{{item.latitude}}" data-city-id="{{item.cityId}}" data-city-name="{{item.cityName}}" data-county-name="{{item.countyName}}" data-poi="{{item.poi}}" data-county-id="{{item.countyId}}" data-id="{{item.id}}" data-address-detail="{{item.addressDetail}}" data-name="{{item.name}}" data-mobile="{{item.mobile}}" data-tags="{{item.tags}}" aria-role="link" aria-label="点击跳转编辑地址页面"></view>
            </view>
          </view>
          <!-- 不可配送范围地址 -->
          <view wx:if="{{outAddress.length>0}}">
            <!-- 地址头部 -->
            <view class="disabled_title" aria-role="text" aria-label="以下地址超出配送范围">* 以下地址超出配送范围</view>
            <!-- 地址详情 -->
            <view class="item disabled" wx:for="{{outAddress}}" wx:for-item="item" wx:for-index="index" wx:key="outAddress" >
              <view class="info">
                <view class="location" aria-role="text" aria-label="{{item.tags?item.tagName:''}}{{item.fullAddress}}">
                  <view class="tag" wx:if="{{item.tags}}">{{item.tagName}}</view>
                  <view class="text">{{item.fullAddress}}</view>
                </view>
                <view class="txt" aria-role="text" aria-label="{{item.name}},{{item.mobile}}">
                  <text class="name">{{item.name}}</text>
                  {{item.mobile}}
                </view>
              </view>
              <view class="edit log_edit_address" catchtap="goToEditAddress" data-from="edit" data-can-delivery="{{item.canDelivery}}" data-longitude="{{item.longitude}}" data-latitude="{{item.latitude}}" data-city-id="{{item.cityId}}" data-city-name="{{item.cityName}}" data-county-name="{{item.countyName}}" data-poi="{{item.poi}}" data-county-id="{{item.countyId}}" data-id="{{item.id}}" data-address-detail="{{item.addressDetail}}" data-name="{{item.name}}" data-mobile="{{item.mobile}}" data-tags="{{item.tags}}" aria-role="link" aria-label="点击跳转编辑地址页面"></view>
            </view>
          </view>
          <view class="blank_white"></view>
        </block>
        <block wx:else>
          <default fromPositon='settlementV2-address' type="{{type}}" btnText="{{btnText}}" tips="{{tips}}" src="{{src}}" buriedObj="{{buriedObj}}" bind:defaultBtnEvent="onDefaultBtnEvent"></default>
        </block>
      </scroll-view>
      <!-- 登录默认页 -->
    </view>
    <!-- 新建地址按钮 -->
    <view class="btn_box flex_none" style="{{isIPX?'height:160rpx':''}}">
      <view class="btn flex_auto" data-from="order_settle" wx:if="{{!showEmpty}}" bindtap="goToEditAddress" aria-role="button" aria-label="点击跳转新建地址页面">
        {{settlementBusinessTag===1?'新建上门地址':'新建收货地址'}}
      </view>
    </view>
  </view>
</half-screen>