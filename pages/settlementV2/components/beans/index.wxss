  /* 仙豆弹层 */
  .bean_bg {
    z-index: 100;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
  }
  .bean_pop {
    position: absolute;
    width: 80%;
    left: 50%;
    top: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    margin-top: -100rpx;
    background: #FFFFFF;
    padding:40rpx;
    -webkit-box-sizing:border-box;
    box-sizing:border-box;
    border-radius:24rpx;
  }
  .close {
    width: 74rpx;
    height: 74rpx;
    position: absolute;
    bottom: -134rpx;
    left: 50%;
    margin-left: -37rpx;
    background: url("https://storage.360buyimg.com/wximg/bargain/close.png") no-repeat center;
    -webkit-background-size: 100% 100%;
    background-size: 100% 100%;
  }
