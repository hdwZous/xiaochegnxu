.sku-wrapper {
    /* position: relative; */
    padding: 0 24rpx;
    /* height: 274rpx; */
    margin-bottom: 16rpx;
}

.sku {
    /* position: absolute; */
    /* left: 24rpx; */
    /* right: 24rpx; */
    /* z-index: 1; */
    padding: 16rpx;
    border-radius: 16rpx;
    background: #fff;
}

.sku-item {
    display: flex;
    position: relative;
}

.sku-img {
    height: 202rpx;
    width: 202rpx;
    margin-right: 14rpx;
    border-radius: 12rpx;
}

.sku-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.sku-name {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.sku-name-tag {
    font-size: 20rpx;
    font-weight: 400;
    display: inline-block;
    padding: 2rpx 8rpx;
    white-space: nowrap;
    border-radius: 4rpx;
    position: relative;
    top: -4rpx;
}

.sku-coupon {
    height: 36rpx;
    overflow: hidden;
    width: 100%;
    margin-top: 8rpx;
    align-items: center;
}

.coupon-wrapper {
    height: 36rpx;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 0;
    font-size: 0;
}

.coupon-item {
    display: inline-block;
    font-size: 22rpx;
    height: 30rpx;
    line-height: 30rpx;
    border: 2rpx solid;
    padding: 0 8rpx;
    border-radius: 4rpx;
}

.sku-price {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.price-text {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
}

.real-price {
    font-size: 18px;
    font-weight: 400;
    color: #FF3017;
    margin-right: 8rpx;
    height: 18px;
    line-height: 18px;
}

.basic-price {
    height: 12px;
    line-height: 12px;
    font-size: 12px;
    font-weight: 300;
    color: rgba(153, 153, 153, 1);
}

.price-btn {
    width: 132rpx;
    height: 64rpx;
    background: linear-gradient(139deg, #F23461 0%, #FF2A26 100%, #FF2A26 100%);
    border-radius: 32px;
    font-size: 28rpx;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}

.store-info {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-top: 10rpx;
}

.store-img {
    height: 36rpx;
    width: 36rpx;
    margin-right: 8rpx;
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.15);
}

.store-name {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.3);
}

.d-flex {
    display: -webkit-box !important;
    display: -webkit-flex !important;
    display: -ms-flexbox !important;
    display: flex !important;
}

.flex-row {
    -webkit-box-orient: horizontal !important;
    -webkit-box-direction: normal !important;
    -webkit-flex-direction: row !important;
    -ms-flex-direction: row !important;
    flex-direction: row !important;
}

.flex-wrap {
    -webkit-flex-wrap: wrap !important;
    -ms-flex-wrap: wrap !important;
    flex-wrap: wrap !important;
}

/* 价格 */
.price-group{
    margin-top: 24rpx;
    margin-bottom: 12rpx;
    /* display: flex;
    align-items: baseline; */
}

.top_left_tag{
    position: absolute;
    top:8rpx;
    left:8rpx;
    /* background: linear-gradient(90deg, #6785FF 0%, #2D56FF 100%); */
    border-radius: 4rpx;
    font-size: 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    display: flex;
    align-items: center;
    padding:0 8rpx 0 4rpx;
}
.top_left_tag-icon{
    width: 20rpx;
    height: 20rpx;
}

.store-img-default {
    height: 36rpx;
    width: 36rpx;
    margin-right: 8rpx;
}