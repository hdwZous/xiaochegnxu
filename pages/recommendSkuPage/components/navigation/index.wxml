<view class="nav_box">
  	<!--状态栏高度-->
  	<view class="status_bar" style="height:{{statusBarHeight}}rpx"></view>
  	<!--导航 与 标题-->
  	<view class="nav_bar d-flex flex-row justify-content-center align-items-center"bindtap="goBack">
		<view class="back_white"></view>
		<image
			class="title"
			wx:if="{{titlePicUrl.length && !imageError}}"
			src="{{titlePicUrl}}" mode="widthFix" lazy-load
		/>
		<view class="title-text">
			{{title}}
		</view>
	</view>
	<!--tab标签-->
	<view wx:if="{{tabList.length > 1}}" style="position: relative;">
		<view class="classify d-flex flex-row align-items-center">
			<view class="scroll-wrap__top">
				<view wx:if="{{tabList.length <= 3}}" class="d-flex flex-row" style="flex: 1">
					<block wx:for="{{tabList}}" wx:key="classificationId">
						<view
							class="channel_comp_ep tab-item__flex tabs-item__top ellipsis {{ activeTab == item.classificationId ? 'actived' : '' }} flex-1 log_tab_item"
							id="A{{item.classificationId}}"
							data-active="{{item.classificationId}}"
							data-ids="{{index}}"
							data-name="{{item.classificationName}}"
							catchtap="clickTab"
							data-user-action='{{item.userAction}}'
							data-trace-id='{{traceId}}'
							data-page-id="{{recommendObj.pageIdFirstPage}}"
							data-current-page-name="{{recommendObj.currentPageName}}"
							data-pre-page-name='{{recommendObj.prePageName}}'>
							<image
								wx:if="{{activeTab == item.classificationId}}"
								src="https://storage.360buyimg.com/wximg/channel/loaction-img.png"
								class="tab-icon__top"
							/>
							{{item.classificationName}}
						</view>
					</block>
				</view>
				<view wx:else style="flex: 1; overflow: hidden; position: relative;">
					<scroll-view
						scroll-x="true"
						scroll-into-view="A{{currentView}}"
						scroll-with-animation="{{ainmation}}">
						<view class="tabs-box">
							<block wx:for="{{tabList}}" wx:key="classificationId">
								<view
									class="channel_comp_ep tabs-items tabs-item__top ellipsis {{ activeTab == item.classificationId ? 'actived' : '' }} log_tab_item"
									id="A{{item.classificationId}}"
									data-active="{{item.classificationId}}"
									data-ids="{{index}}"
									data-name="{{item.classificationName}}"
									catchtap="clickTab"
									data-user-action='{{item.userAction}}'
									data-trace-id='{{traceId}}'
									data-page-id="{{recommendObj.pageIdFirstPage}}"
									data-current-page-name="{{recommendObj.currentPageName}}"
									data-pre-page-name='{{recommendObj.prePageName}}'>
									<view class="d-flex flex-row tabs-item__flex">
										<image
											wx:if="{{activeTab == item.classificationId}}"
											src="https://storage.360buyimg.com/wximg/channel/loaction-img.png"
											class="tab-icon__top"
										/>
										{{item.classificationName}}
									</view>
								</view>
							</block>
						</view>
					</scroll-view>
					<image
						class="ty-icon"
						src="https://storage.360buyimg.com/wximg/seckill/touying.png"
					/>
				</view>
				<view wx:if="{{tabList.length > 3}}" class="flei-icon" bindtap="showPop"></view>
			</view>
		</view>	
		<view class="popup" wx:if="{{popup}}" catchtouchmove="touchHandler">
				<view class="head d-flex flex-row justify-content-between align-items-center">
					<text class="title">全部目录</text>
					<text class="ts-up" bindtap="hidePop"></text>
				</view>
				<view class="contain d-flex flex-row flex-wrap">
					<block wx:for="{{tabList}}" wx:key="classificationId">
						<view
							class="channel_comp_ep category {{ activeTab == item.classificationId ? 'actived' : '' }}"
							data-active="{{item.classificationId}}"
							data-ids="{{index}}"
							data-name="{{item.classificationName}}"
							catchtap="clickTab"
							data-from="pop"
							data-user-action='{{item.userAction}}'
							data-trace-id='{{traceId}}'
							data-page-id="{{recommendObj.pageIdFirstPage}}"
							data-current-page-name="{{recommendObj.currentPageName}}"
							data-pre-page-name='{{recommendObj.prePageName}}'>
							<text class="category_txt ellipsis">{{item.classificationName}}</text>
						</view>
					</block>
				</view>
		</view>
		<view class="popup-bg" wx:if="{{popup}}" bindtap="hidePop" catchtouchmove="touchHandler"></view>
	</view>
</view>