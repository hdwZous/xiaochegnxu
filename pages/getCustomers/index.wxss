@import "../../common/css/global";

.getCustomers {
    width: 100vw;
    min-height: 100vh;
    background: #FF6C1D;
}

.position {
    position: relative;
    height: 46rpx;
    margin-bottom: 40rpx;
}

.positionBtn {
    font-size: 26rpx;
    color: #fff;
    border: 1rpx solid #fff;
    display: flex;
    width: 160rpx;
    border-radius: 6rpx;
    height: 46rpx;
    line-height: 46rpx;
    justify-content: center;
    position: absolute;
    left: 50%;
    margin-left: -45px;
}

.positionBtn image {
    width: 20rpx;
    height: 26rpx;
    padding: 10rpx;
}

.formGroup input {
    width: 585rpx;
    height: 88rpx;
    padding: 0 50rpx;
    margin: 0 auto;
    background: #fff;
    -webkit-border-radius: 100rpx;
    -moz-border-radius: 100rpx;
    border-radius: 100rpx;
    line-height: 88rpx;
    font-size: 30rpx;
    color: #999;
    text-align: center;
}

.welcomeCode {
    margin-bottom: 32rpx;
}

.phoneNum {
    margin-bottom: 20rpx;
}

.getTicket {
    margin: 32rpx 30rpx 0 30rpx;
    height: 90rpx;
    background: linear-gradient(0deg, rgba(253, 202, 0, 1) 0%, rgba(255, 234, 0, 1) 99%);
    box-shadow: 0px 12px 102px 0px rgba(228, 79, 0, 1);
    background-size: cover;
    border-radius: 45rpx;
    text-align: center;
    color: #FB3141;
    font-size: 38rpx;
    line-height: 90rpx;
    font-weight: 500;
}
.noReceive{
    background:linear-gradient(0deg, rgba(253, 202, 0, 1) 0%, rgba(188, 188, 188, 1) 0%, rgba(216, 216, 216, 1) 99%);
    box-shadow:0px 6px 51px 0px rgba(228, 79, 0, 1);
    color: #fff
}

.footerMsg {
    font-size: 26rpx;
    color: #FFDC6D;
    padding: 0 45rpx;
    padding-bottom: 50px;
    margin-top: 30rpx;
}

.footerMsg .title {
    text-align: center;
    margin-bottom: 50rpx;
}

.couponGroup {
    margin: 0 30rpx;
    padding: 45rpx 30rpx 26rpx;
    background: #EC5200;
    border-radius: 12rpx;
}

.couponGroup .title {
    display: flex;
    font-size: 26rpx;
    justify-content: center;
    color: #fff;
    margin-bottom: 37rpx;
}

.couponGroup .phone {
    color: #FFDC6D;
    padding: 0 5rpx;
}

.couponContent {
    display: flex;
    background: #fff;
    border-radius: 6rpx;
    margin-bottom: 30rpx;
}

.couponContent .number {
    color: #FF5757;
    font-size: 60rpx;
    width: 100px;
    line-height: 134rpx;
    position: relative;
    align-items: baseline;
    justify-content: center
}
.couponContent .number text{
    display: block
}
.couponContent .number ::before {
    content: "";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    height: 200%;
    border-right: 1px dashed #FE5757;
    -webkit-transform-origin: left top;
    transform-origin: left top;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
}

.couponContent .unit {
    font-size: 30rpx;
    padding-left: 5rpx;
    font-weight: 500;
}

.couponContent .message {
    padding: 15rpx 0;
    font-size: 28rpx;
    flex: auto;
    color: #333;
    margin-right: 20rpx;
    padding-left: 40rpx;
    position: relative;
}

.couponContent .details,
.message .date {
    font-size: 20rpx;
}

.couponContent .message view {
    margin-bottom: 12rpx;
}

.couponContent .details {
    color: #FF5757;
    margin-bottom: 10rpx;
}

.couponContent .date {
    margin-bottom: 0 !important;
}

.radio_top {
    overflow: hidden;
    position: absolute;
    top: -4px;
    width: 8px;
    height: 8px;
    border: 1px solid #EC5200;
    border-radius: 100% 0 0 100%/50%;
    border-right: none;
    -webkit-transform: scale(0.6) rotate(-90deg);
    transform: scale(0.6) rotate(-90deg);
    background: #EC5200;
    left: -5px;
}

.radio_bottom {
    overflow: hidden;
    position: absolute;
    bottom: -10px;
    width: 8px;
    height: 8px;
    border: 1px solid #EC5200;
    border-radius: 100% 0 0 100%/50%;
    border-right: none;
    -webkit-transform: scale(0.6) rotate(90deg);
    transform: scale(0.6) rotate(90deg);
    background: #ffffff;
    background: #EC5200;
    left: -5px;
}

.useNow {
    margin-top: 41rpx;
}

.noceMore {
    font-size: 26rpx;
    text-decoration: underline;
    color: #fff;
    text-align: center;
    margin-top: 38rpx;
    font-weight: bold
}

.couponGroupPage {
    padding-bottom: 60rpx;
}