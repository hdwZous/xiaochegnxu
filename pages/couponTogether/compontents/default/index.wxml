<view 
  id="default-container"
  class="default flex-col {{  isRest ? '' : 'height-fill'}} {{  readySuccess ? '' :  'view-opacity' }}" 
  style="{{  isRest ? 'height:' +  restHeight : '' }}"
>
<!-- style="{{height? 'min-height: 80vh':'min-height: 100vh'}}" -->
  <block>
    <block wx:if="{{src}}">
      <image class="net_error {{type==0?'loading':''}}" src="{{src}}"></image>
    </block>
    <block wx:if="{{type!=0}}">
      <view class="text">{{tips}}</view>
      <block wx:if="{{btnType}}">
        <button bindtap="dealDefault" class="btn" open-type="{{btnType}}">{{btnText}}</button>
      </block>
      <block wx:else>
        <view wx:if="{{btnText}}" bindtap="dealDefault" class="btn">{{btnText}}</view>
      </block>
    </block>
  </block>
</view>