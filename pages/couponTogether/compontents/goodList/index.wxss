.flex_row {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
}
.flex_row_reverse {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row-reverse;
    flex-direction: row-reverse;
}

.flex_col {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
}

.flex_none {
    -webkit-flex: none;
    flex: none;
}

.flex_auto {
    -webkit-flex: auto;
    flex: auto;
}

.z_index1 {
    z-index: 1;
}
.z_index2 {
    z-index: 2;
}
.line-through {
  text-decoration: line-through;
}
.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.ellipsis2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.align_item_center {
    align-items: center;
    -webkit-align-items: center;
}
.just_content_center {
    justify-content: center;
    -webkit-justify-content: center;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
    display: none;
}
scroll-view {
    -webkit-overflow-scrolling: touch;
}

/* 商品列表 */
.product_scroll {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: block;
    padding: 0 0 70rpx;
    position: relative;
}
.product_scroll.noCart{
    padding: 0;
}
/* 底部提示 */
.product_bottom_text {
    padding: 60rpx 0 20rpx;
    text-align: center;
    color: #333;
    font-size: 24rpx;
    height: 140px;
}
.blank {
    height: 100rpx;
    width: 100%;
}