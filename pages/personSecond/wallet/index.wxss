
.person-content-item-bg {
    display: flex;
    flex-direction: column;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
  }
  
  .person-content-item {
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .person-item-title {
    font-size: 28rpx;
    margin-left: 10rpx;
    width: fit-content;
    height: fit-content;
    color: #333;
  }
  .person-item-icon {
    height: 44rpx;
    width: 44rpx;
    margin-left: 34rpx;
  }
  .person-item-empty {
    flex: 1;
  }
  .person-item-tip {
    font-size: 28rpx;
    color: #999;
  }
  .person-item-arrow {
    width: 20rpx;
    height: 20rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
  }
  .line_wrap {
    width: 100%;
    padding-left: 30rpx;
    box-sizing: border-box;
  }
  
  .person-item-line {
    height: 1rpx;
    border-top: 1rpx solid #E8E8E8;
  }