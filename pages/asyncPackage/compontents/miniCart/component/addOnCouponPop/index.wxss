}

.header {
  position: fixed;
  width: 100%;
  background: #fff;
  z-index: 100;
  background: #f8f8f8;
  border-radius: 20rpx 20rpx 0 0;
}

.coupon:nth-child(2) {
  padding-top: 115rpx;
}

.couponItemWrap {
  margin: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 20rpx 10rpx 20rpx;
}

