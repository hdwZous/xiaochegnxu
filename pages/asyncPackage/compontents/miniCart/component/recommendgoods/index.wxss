.recommend-goods {
  padding-top: 50rpx;
}

.recommend-goods .recommend-title {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  margin-left: 20rpx;
  margin-bottom: 24rpx;
}

.recommend-goods .recommend-content {
  box-sizing: border-box;
  padding-left: 24rpx;
}

.recommend-goods .recommend-content .recommend-sku-box {
  width: 224rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.recommend-sku-box .recommend-sku-imgbox {
  position: relative;
  font-size: 0;
}

.recommend-sku-box .recommend-sku-imgbox .recommend-sku-image {
  width: 224rpx;
  height: 224rpx;
  border-radius: 8rpx;
}

.recommend-sku-box .recommend-sku-imgbox .recommend-sku-tags {
  position: absolute;
  left: 0;
  bottom: 0;
  border-radius: 0 8rpx 0 8rpx;
  padding: 0 6rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #fff;
  line-height: 24rpx;
}

.recommend-sku-box .recommend-sku-name {
  margin-top: 8rpx;
  margin-bottom: 10rpx;
  width: 210rpx;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}

.recommend-sku-box .recommend-sku-name.one {
  height: 30rpx;
}

.recommend-sku-box .recommend-sku-bottom {
  height: 64rpx;
}

.recommend-sku-box .recommend-price .majorPrice {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 30, 26, 1);
  line-height: 34rpx;
  font-family: 'regular';
}

.recommend-sku-box .recommend-price .minorPrice {
  font-size: 24rpx;
  font-family: 'light';
  font-weight: 300;
  color: #999999;
  line-height: 26rpx;
}

.recommend-sku-box .recommend-price .majorPrice .delete, .recommend-sku-box .recommend-price .minorPrice .delete, .section .price-box .normalPrice-detail .normalPrice-basePrice.delete, .section .gift-item .normalPrice-gift-basePrice.delete {
  position: relative;
}

.recommend-sku-box .recommend-price .majorPrice .delete::after, .recommend-sku-box .recommend-price .minorPrice .delete::after, .section .price-box .normalPrice-detail .normalPrice-basePrice.delete::after, .section .gift-item .normalPrice-gift-basePrice.delete::after {
  position: absolute;
  content: '';
  width: 95%;
  height: 1px;
  background: rgba(153, 153, 153, 1);
  top: 50%;
  left: 5%;
}

.left-tags {
  position: absolute;
  left: 0;
  top: 0;
  height: 24rpx;
  line-height: 26rpx;
  text-align: center;
  padding: 0 4rpx;
  border-radius: 8rpx 0px 8rpx 0px;
  color: #fff;
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.info-tags {
  padding: 0 6rpx;
  font-size: 20rpx;
  font-weight: 400;
  height: 24rpx;
  line-height: 24rpx;
  display: inline-block;
}

.recommend-freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}

.recommend-sku-cate {
  overflow: hidden;
  height: 30rpx;
}

.rsc_item {
  background-color: rgb(246, 246, 246);
  margin-right: 8rpx;
  padding: 0 8rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: rgb(102, 102, 102);
  font-size: 20rpx;
  flex-shrink: 0;
  flex-grow: 0;
}