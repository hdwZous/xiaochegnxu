@import "/common/css/global.wxss";

.wrap {
  display: flex;
  min-height: 120rpx;
  width: 100%;
  background-size: 100% 100%;
  position: relative;
  border-radius: 3px;
}

.left {
  width: 190rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 0 20rpx 0;
  border: 1rpx solid;
  border-right-width: 0 !important;
}

.just-center {
  justify-content: center;
}

.unit {
  font-size: 28rpx;
  font-family: regular;
}

.cent {
  justify-content: center;
  align-items: baseline;
  font-size: 64rpx;
  font-family: regular;
}

.num {
  font-size: 64rpx;
}

.limit {
  font-size: 22rpx;
  text-align: center;
  font-weight: 300;
  /* width: 100%; */
  width: 166rpx;
}

.money {
  font-family: regular;
  align-items: baseline;
  color: #ff5757;
  justify-content: center;
}

.center {
  width: 50%;
  display: flex;
  align-items: center;
  padding: 18rpx 0 20rpx 0;
  flex: auto;
  border: 1rpx solid;
  border-right-width: 0;
  border-left-width: 0 !important;
  min-height: 160rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.line {
  width: 21rpx;
  /* background: red; */
  overflow: hidden;
  position: relative;
  /* z-index: -1; */
}

.line_top {
  width: 18rpx;
  height: 20rpx;
  border-radius: 50%;
  position: absolute;
  top: -11rpx;
  left: 0;
  border: 1rpx solid black;
  z-index: 10;
  box-shadow: rgba(0, 0, 0, 0.02) 0px 0px 10px inset
}

.line_bottom {
  width: 18rpx;
  height: 20rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -11rpx;
  left: 0;
  border: 1rpx solid black;
  z-index: 10;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 10px inset
}

.dashed {
  width: 1rpx;
  border-left: 1px dashed rgba(0, 0, 0, 0.1);
  position: absolute;
  left: 9rpx;
  height: 74%;
  top: 50%;
  transform: translateY(-50%) scaleX(0.5);
  z-index: 10;

}

.center_bottom {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon_title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.date {
  font-size: 22rpx;
  color: #666666;
  margin-top: 18rpx;
  /* font-family: light; */
}

.maxWidth {
  width: 284rpx;
}

.tags-container {
  display: flex;
  padding-left: 2rpx;
}

.tagItem {
  /* border-radius: 12rpx 4rpx 12rpx 4rpx; */
  padding: 0rpx 6rpx;
  color: #ff4c44;
  font-size: 20rpx;
  position: relative;
  top: 2rpx;
  margin-right: 8rpx;
}

.oneBorder {
  position: absolute;
  width: 200%;
  height: 200%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0.5);
  transform-origin: center;
  /* border-radius:6px 1px 6px 1px; */
  border-radius: 16rpx;
  border: 1px solid rgba(255, 30, 25, 0.3);
}

.right {
  display: flex;
  align-items: center;
  width: 160rpx;
  position: relative;
  justify-content: center;
  /* border-left: 1rpx dashed rgba(0,0,0,0.05); */
  padding: 18rpx 0 20rpx 0;
  border: 1rpx solid;
  border-left-width: 0 !important;
}

.rightWrap {
  position: relative;
  z-index: 2;
  margin-top: 12rpx;
  margin-right: 12rpx;
}

.rightBtn {
  width: 112rpx;
  height: 48rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
}

.flag {
  width: 87rpx;
  height: 87rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.cricle_icon {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 0;
  right: 70rpx;
  overflow: hidden;
}

.cricle_icon image {
  width: 100%;
  position: relative;
  top: -10rpx;
}

/* 0.5px边框 */
.right .btn-has-grap:after {
  /*z-index: -999;*/
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid;
  width: 200%;
  height: 200%;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(0.5, 0.5);
  transform: scale(0.5, 0.5);
  box-sizing: border-box;
  border-radius: 60rpx;
}

.leftIcon {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  background: linear-gradient(315deg, rgba(255, 81, 56, 1) 0%, rgba(255, 125, 125, 1) 100%);
  border-radius: 4rpx 0px 8rpx 0px;
  padding: 0 6rpx;
}

.leftArrow {
  width: 14rpx;
  height: 16rpx;
  padding-left: 6rpx;
  padding-right: 4rpx;
}

.boxShadow {
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.06);
}

.desc_wrap {
  display: flex;
  border-top-width: 0 !important;
  padding-bottom: 20rpx;
}

.desc_left {
  width: 180rpx;
}

.desc_right {
  width: calc(100% - 200rpx);
  display: flex;
  justify-content: space-between;
  border-top: 1rpx dashed #ECECEC;
  box-sizing: border-box;
  margin-right: 24rpx;
  padding-top: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.desc_arrow {
  transition: all ease 0.3s;
  width: 13px;
  height: 13px;
}

.desc_arrow image {
  width: 100%;
  padding-left: 10rpx;
}

.arrow_up {
  transform: rotateX(180deg);
}

.content_wrap {
  flex: 1;
  overflow: hidden;
}