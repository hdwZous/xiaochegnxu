 .notice {
   background: rgba(255, 246, 205, 0.9);
   color: #713F00;
   font-size: 24rpx;
   padding: 0 20rpx;
   height: 68rpx;
   line-height: 68rpx;
 }

 .go_add {
   flex: none;
   padding-left: 6rpx;
 }

 .red_arrow {
   width: 20rpx;
   height: 26rpx;
   position: relative;
   top: 5rpx;
 }

 .conetent {
   padding-left: 24rpx;
 }

 .select_item {
   display: flex;
   align-items: center;
   flex-direction: row;
 }

 .ratio_btn {
   margin-right: 20rpx;
   width: 44rpx;
   height: 44rpx;
 }

 .disabled {
   background: url('https://storage.360buyimg.com/wximg/store_2.0/disabled.png') no-repeat center center;
   background-size: contain;
 }

 .unchecked {
   background: url('https://storage.360buyimg.com/wximg/store_2.0/unchecked.png') no-repeat center center;
   background-size: contain;
 }

 .checked {
   background: url('https://storage.360buyimg.com/wximg/store_2.0/checked.png') no-repeat center center;
   background-size: contain;
 }

 .product_item {
   display: flex;
   flex: 1;
   border-top: 1rpx solid #F5F5F5;
   padding: 20rpx 20rpx 20rpx 0;
 }

 .product_item:first-child {
   border-top: 0 !important;
 }

 .right {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   flex: 1;
 }

 .price_num {
   display: flex;
   width: 100%;
   justify-content: space-between;
 }

 .product_name {
   font-size: 28rpx;
   color: #333;
   display: -webkit-box;
   overflow: hidden;
   text-overflow: ellipsis;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
 }

 .left {
   display: flex;
   width: 100rpx;
   height: 100rpx;
   align-items: center;
   position: relative;
   margin-right: 20rpx;
   border-radius: 8rpx;
 }

 .ladder {
   position: absolute;
   left: 0;
   right: 0;
   bottom: 0;
   background: linear-gradient(316deg, rgba(255, 146, 72, 1) 0%, rgba(255, 92, 55, 1) 100%);
   border-radius: 0px 0px 8rpx 8rpx;
   color: #fff;
   font-size: 20rpx;
   text-align: center;
 }

 .sold_out {
   width: 100rpx;
   height: 100rpx;
   border-radius: 8rpx;
   text-align: center;
   display: flex;
   align-items: center;
   justify-content: center;
   position: absolute;
   left: 0;
   top: 0;
   right: 0;
   width: 100%;
   background: rgba(0, 0, 0, 0.5);
   font-size: 26rpx;
   color: #fff;
 }

 .left-tags {
   position: absolute;
   left: 0;
   top: 0;
   height: 24rpx;
   line-height: 24rpx;
   text-align: center;
   padding: 0 4rpx;
   border-radius: 8rpx 0px 8rpx 0px;
   color: #fff;
   font-size: 16rpx;
   font-family: PingFangSC-Regular, PingFang SC;
   font-weight: 400;
 }

 .product_img {
   width: 100rpx;
   height: 100rpx;
   border-radius: 8rpx;
 }

 .real_price {
   font-size: 28rpx;
   color: #FF5757;
   font-family: regular;
 }

 .origin_price {
   font-size: 28rpx;
   color: #9B9B9B;
   font-family: light;
   padding-left: 10rpx;
   text-decoration: line-through;
 }

 .num {
   font-size: 28rpx;
   color: #333;
 }

 .footer {
   width: 100%;
   height: 100rpx;
   line-height: 100rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
 }

 .footer_left {
   color: #333;
   font-size: 34rpx;
   padding-left: 30rpx;
 }

 .footer_right {
   width: 176rpx;
   height: 80rpx;
   line-height: 80rpx;
   border-radius: 40rpx;
   margin-right: 24rpx;
   text-align: center;
   font-size: 32rpx;
   color: #fff;
   background-image: linear-gradient(135deg, rgb(204, 204, 204) 0%, rgb(170, 170, 170) 100%);
 }

 .red {
   color: #FF5757;
 }

 .active {
   background: linear-gradient(135deg, rgb(69, 220, 109) 0%, rgb(0, 207, 55) 100%);
 }

 .color999 {
   color: #999;
 }

 .weight-price-info {
   font-size: 28rpx;
   font-weight: 400;
 }

 .weight-fuffix {
   font-size: 24rpx;
   color: #666666
 }

 .info-tags {
   padding: 0 6rpx;
   font-size: 20rpx;
   font-weight: 400;
   height: 30rpx;
   line-height: 30rpx;
   display: inline-block;
 }