 @import '/common/css/global.wxss';

 .mask {
   position: fixed;
   left: 0;
   right: 0;
   top: 0;
   bottom: 0;
   z-index: 20;
   background: rgba(0, 0, 0, 0.5);
   /* border-radius: 18rpx; */
 }

 .cart_gift_container {
   /* position: absolute; */
   position: fixed;
   left: 0;
   right: 0;
   width: 100%;
   min-height: 0;
   max-height: 0;
   bottom: 0;
   height: auto;
   z-index: 99;
   background: #fff;
   transition: All 0.5s ease;
   -webkit-transition: All 0.5s ease;
   -webkit-overflow-scrolling: touch;
   border-radius: 18rpx 18rpx 0 0;
 }

 .showCont {
   max-height: 80vh;
   min-height: 80vh;
 }

 .header {
   position: relative;
   box-sizing: border-box;
   width: 100%;
   height: 104rpx;
   text-align: center;
   color: #333;
   font-size: 32rpx;
   padding: 30rpx 0;
   border-bottom: 1rpx solid #F5F5F5;
 }

 .close_wrap {
   position: absolute;
   width: 84rpx;
   height: 44rpx;
   line-height: 44rpx;
   right: 0;
   top: 30rpx;
   text-align: center;
 }

 .close {
   width: 24rpx;
   height: 24rpx;
 }

 .scroll-content {
   height: calc(80vh - 272rpx);
 }

