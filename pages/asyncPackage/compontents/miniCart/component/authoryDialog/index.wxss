  text-align: center;
  font-size: 36rpx;
  padding-top: 80rpx;
  padding-bottom: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.tableWarePopUp_btns {
  display: flex;
}
.tableWarePopUp_btn1 {
  border-right: 1rpx solid #f5f5f5;
}
.tableWarePopUp_line {
