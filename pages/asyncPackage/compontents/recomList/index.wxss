.recomList-wrapper {
  width: 542rpx;
  height: 400rpx;
  border-radius: 16rpx;
  margin: 0 auto;
  margin-top: 18rpx;
  background: linear-gradient(360deg, #FBFBFB 0%, #F6F6F6 100%, #F6F6F6 100%);
  position: relative;
}
.recomList-wrapper::before {
  content: '';
  background-image: url('https://storage.360buyimg.com/wximg/common/triangel.png');
  background-size: cover;
  width: 60rpx;
  height: 18rpx;
  position: absolute;
  top: -18rpx;
  left: 32rpx
}
.rec-title {
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  font-weight: bold;
  color: #333333;
  padding: 24rpx 0 16rpx 24rpx;
}
.rec-list {
  display: flex;
  margin-left: 8rpx;
}
.scroll {
    width: auto;
    height: auto;
    overflow: hidden;
}
.rec-list1 {
    display: flex;
    margin: 0 0 0 16rpx;
    overflow-x: auto;
}
.blank-seat {
    width: 8rpx;
    height: 100rpx;
    flex-shrink: 0;
}
.storeSearchResult {
  width: 700rpx;
  height: 384rpx;
  margin-top: 0;
  background: linear-gradient(360deg, #FFFFFF 0%, #F3FFF1 30%, #F3FFF1 100%);
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  animation: moveIn .3s;
  overflow: hidden;
}
.storeSearchResult .rec-title {
  padding: 16rpx 20rpx;
}
.storeSearchResult .sku-name {
  margin-top: 8rpx;
}
@keyframes moveIn {
  0% {
    height: 0
  }
  100% {
    height: 384rpx
  }
}