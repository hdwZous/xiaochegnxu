@import "/common/css/light.wxss";
@import "/common/css/regular.wxss";
.fon24 {
    font-size: 24rpx;
}
.fon26 {
    font-size: 28rpx;
}
.fon44 {
    font-size: 44rpx;
}
.inline-block {
    display: inline-block;
}
.recom-list-coupon-wrapper {
  width: 542rpx;
  height: 224rpx;
  border-radius: 16rpx;
  margin: 0 auto;
  margin-top: 18rpx;
  background: linear-gradient(360deg, #FBFBFB 0%, #F6F6F6 100%, #F6F6F6 100%);
  position: relative;
}
.recom-list-coupon-wrapper::before {
  content: '';
  background-image: url('https://storage.360buyimg.com/wximg/common/triangel.png');
  background-size: cover;
  width: 60rpx;
  height: 18rpx;
  position: absolute;
  top: -18rpx;
  left: 32rpx
}
.rec-title {
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  font-weight: bold;
  color: #333333;
  padding: 20rpx 0 10rpx 24rpx;
}
.container_case {
    padding: 0 20rpx;
}
.recom-list-coupon-container {
    height: 136rpx;
    border-radius: 14rpx;
    margin: 0 auto;
    background: #fff;
    box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.06);
    align-items: center;
}
.left {
    width: 120rpx;
    color: #F61F19;
    font-weight: 400;
    font-family: 'regular';
    text-align: center;
}
.center {
    margin-left: 8rpx;
    overflow: hidden;
}
.center .coupon-title {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    line-height: 36rpx;
    height: 36rpx;
    overflow: hidden;
}
.center .coupon-rules {
    font-size: 24rpx;
    color: #666;
    font-weight: 300;
    line-height: 32rpx;
    margin-top: 6rpx;
}
.center .tag-wrap {
    margin-top: 4rpx;
    /* height: 32rpx; */
    height: 36rpx;
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
}
.center .coupon-tag {
    padding: 0rpx 8rpx;
    font-size: 20rpx;
    border-radius: 8rpx;
    border-width: 1rpx;
    border-style: solid;
    border-color: #FF1E19;
    height: 32rpx;
    line-height: 30rpx;
    margin-right: 8rpx;
    box-sizing: border-box;
}
.recom-right {
    width: 116rpx;
    height: 100%;
    position: relative;
    justify-content: flex-start;
    align-items: center;
}
.recom-right .btn {
    /* display: inline-flex;
    justify-content: center;
    align-items: center; */
    font-size: 24rpx;
    width: 92rpx;
    height: 40rpx;
    text-align: center;
    line-height: 44rpx;
    border-radius: 22rpx;
    border: 1px solid;
}
.border-top {
  position: relative;
}

.border-top:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 200%;
  height: 1rpx;
  background: #f5f5f5;
  -webkit-transform-origin: left top;
  transform-origin: left top;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
}
.recom-right .right-icon {
    width: 76rpx;
    height: 76rpx;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 0;
}
.recom-right .right-icon .img {
    width: 100%;
    height: 100%;
}
.left_item {
    display: inline-block;
}
.cp-yhy-tag {
  padding: 0 8rpx;
  margin-bottom: 4rpx;
  margin-right: 8rpx;
  font-size: 20rpx;
  height: 32rpx;
  font-weight: 400;
  position: relative;
  overflow: initial;
  display: flex;
  align-items: center;
  margin-top: 2rpx;
  margin-left: 2rpx;
}
.cp-yhy-tag-text {
  line-height: 24rpx;
  max-width: 100%;
  overflow: hidden;
}

.cp-yhy-tag-border {
  position: absolute;
  width: 200%;
  height: 200%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0.5);
  transform-origin: center;
  border-radius: 16rpx;
}