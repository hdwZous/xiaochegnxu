/* components/newPeserPop/index.wxss */

@import "/common/css/global";
.pop-Con {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: rgba(0, 0, 0, 0.7);
    z-index: 110;
}
.img_case{
    background-color: rgba(0, 0, 0, 0)
}
.coupon-img {
    position: fixed;
    align-items: center;
    justify-content: center;
    width: 100%;
    z-index: 111;
    top: 190rpx
}

.coupon-img .coupon {
    width: 560rpx;
    height: 702rpx;
}

.hide-btn {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    margin-top: 20rpx;
}
.exclusive_coupon {
    position: relative;
}
.text_case {
    text-align: center;
    position: absolute;
    left: 50%;
    top: 265rpx;
    width: 80%;
    transform: translateX(-50%);
    color: #FD474E;
    font-size: 92rpx;
}
.price {
    font-size: 80rpx;
    font-weight: bold;
}
.symbol {
    font-size: 30rpx;
}
.tips {
    font-size: 40rpx;
    line-height: 1em;
}
