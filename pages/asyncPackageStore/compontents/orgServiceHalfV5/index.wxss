/* 店铺评分 */
.store-comment {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  margin-top: 40rpx;
}
.store-comment-line {
    width: 2rpx;
    height: 102rpx;
    background: #F5F5F5;
}
.store-comment-right .store-comment-left {
  text-align: center;
}
.store-comment-text {
    height: 60rpx;
    font-size: 44rpx;
    font-weight: 500;
    color: #333333;
    line-height: 60rpx;
    text-align: center;
}
.store-comment-title {
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #666666;
    line-height: 34rpx;
    margin-top: 6rpx;
}
.store-comment-showmore {
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
    line-height: 34rpx;
    text-align: center;
    margin: 58rpx auto 0rpx;
}
.store-comment-showmore-arrow {
  width: 8rpx;
  height: 16rpx;
  margin-left: 6rpx;
}
.service-time {
  display: inline-block;
}