
.content{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #ffffff;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    border-radius: 20rpx 20rpx 0 0;
    height: auto;
    transition: all 0.5s ease;
    -webkit-transition: all 0.5s ease;
    z-index: 20;
    background: #F6F6F6;
    max-height: 80vh;
    min-height: 60vh;
    transform: translateY(101%);
}
.show_cont{
  transform: translateY(0%);
    /* max-height: 80vh;
    min-height: 60vh; */
    /* height: 800rpx; */
}
.header {
    position: sticky;
    top: 0;
    text-align: center;
    width: 100%;
    /* height:46px;
    line-height: 46px; */
    border-radius:10px 10px 0px 0px;
    font-size: 36rpx;
    color: #333333;
    z-index: 100;
    font-weight: bold;
    padding-top: 20rpx;
}
.icon_close {
    position: absolute;
    width: 27rpx;
    height: 27rpx;
    right: 24rpx;
    top: 24rpx;
    color: #c1c1c1;
    font-size: 25rpx;
}

.gray{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 20;
}
.gray-bg{
    background: #000000;
    opacity: .7;
    z-index: 19;
}
.service-card {
    width: 702rpx;
    margin: 0 auto;
    border-radius: 24rpx;
    background-color: #fff;
    padding: 24rpx;
    padding-bottom: 4rpx;
    box-sizing: border-box;
}
.service-card1 {
  width: 702rpx;
  margin: 0 auto;
  border-radius: 24rpx;
  background-color: #fff;
  padding: 24rpx;
  padding-bottom: 48rpx;
  box-sizing: border-box;
}
.store-comment-blank {
  color: #333;
  font-size: 24rpx;
  width: 702rpx;
  margin: 0 auto;
  background-color: #fff;
  padding: 100rpx 0;
  box-sizing: border-box;
  text-align: center;
  border-radius: 24rpx;
}
.store_info_box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}
.fade-out{
  animation: fadeOut 1.5s;
}
@keyframes fadeOut
{
  0% {
    opacity: 0;
  }
  99% {
    opacity: 0;
  }
  100% {
    opacity: 1
  }
}
.store_info_wrap {
    position: relative;
    color: #000;
    font-size: 24rpx;
    padding-bottom: 20rpx;
}
.sale_box {
    padding: 0 24rpx;
    /* border-radius: 0 0 20rpx 20rpx; */
    position: relative;
    min-height: 100rpx;
    padding-bottom: 60rpx;
}
.sale_title {
    font-size: 36rpx;
    font-weight: 500;
    margin-top: 48rpx;
    color: #333;
    margin-bottom: 24rpx;
}
.store-address {
  text-align: justify;
  text-align-last: justify;
  width: 108rpx;
}
