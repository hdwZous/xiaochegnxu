/* 满减信息 */
.manjian {
  margin: 48rpx 24rpx 0;
  width: 702rpx;
}
.title {
  height: 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 36rpx;
}
.coupon_desc {
  align-items: center;
}
.sale_item {
  margin-top: 16rpx;
}
.sale_item_tag {
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 8rpx;
  border-radius: 8rpx;
  border-width: 1rpx;
  border-style: solid;
  /* border: 1px solid rgba(255, 30, 25, 0.3); */
  color: white;
  font-weight: 400;
  font-size: 20rpx;
  text-align: center;
  margin-right: 16rpx;
}
.sale_item_msg {
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
  line-height: 36rpx;
  word-break: break-all;
  height: 36rpx;
  line-height: 36rpx;
}
.rotate1 {
  transform: rotateZ(-90deg);
  font-size: 22rpx;
  color: #999;
  transition: all 0.5s;
  margin-left: 4rpx;
}
.rotate {
  transform: rotateZ(90deg);
  font-size: 22rpx;
  color: #999;
  transition: all 0.5s;
  margin-left: 4rpx;
}
.more {
  height: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  line-height: 32rpx;
  display: flex;
  justify-content: center;
}