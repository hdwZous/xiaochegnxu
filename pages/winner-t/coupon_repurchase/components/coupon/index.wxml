<block wx:if="{{$taroCompReady}}">
    <view class="{{styles.couponContainer}}">
        <view class="{{styles.amount}}"><text class="{{styles.amountNum}}">{{couponItem.amount / 100}}</text><text class="{{styles.unit}}">元</text>
        </view>
        <view class="{{styles.name}}">{{couponItem.couponTitle}}</view>
        <view class="{{styles.type}}">{{couponItem.couponTypeDesc}} {{couponItem.limitRule}}</view>
