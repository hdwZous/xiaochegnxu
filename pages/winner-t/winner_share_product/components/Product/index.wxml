<block wx:if="{{$taroCompReady}}">
    <view>
        <view class="{{styles.product}}">
            <block wx:if="{{product.commissionAmountTextArr.length > 0}}">
                <view class="{{styles.tag}}">
                    <view class="{{styles.text}}">{{product.commissionAmountTextArr[0]}}</view>
                    <view class="{{styles.amount}}">{{product.commissionAmountTextArr[1]}}</view>
                </view>
            </block>
            <view class="{{styles.picBox}}">
                <image class="{{styles.pic}}" mode="aspectFit" src="{{product.skuImageUrl || product.imgUrl}}"></image>
            </view>
            <view class="{{styles.content}}">
                <view class="{{styles.title}}">{{product.skuName}}</view>
                <view class="{{styles.ivt_box}}">
                    <block wx:if="{{anonymousState__temp2}}">
                        <view class="{{styles.product_tag}}">{{product.discountMsg}}</view>
                    </block>
                    <view class="{{styles.ivt}}">库存 {{product.stockCount}}</view>
                </view>
                <view class="{{styles.bottomBar}}">
                    <view class="{{styles.price_box}}">
                        <view class="{{styles.price}}">¥{{(product.currentPrice ? product.currentPrice : product.originalPrice) || product.majorPrice.price}}</view>
                        <block wx:if="{{(product.currentPrice || product.minorPrice.price) && product.originalPrice}}">
                            <view class="{{styles.originalPrice}}">¥{{product.originalPrice || product.minorPrice.price}}</view>
                        </block>
                    </view>
                    <view class="{{styles.bottomRight}}">
                        <block wx:if="{{anonymousState__temp3}}">
                            <image src="https://image3.imdada.cn/12c4f7563c414a24a37c1cf2f1e87af6.png" class="{{styles.downloadButton}}" bindtap="anonymousFunc0"></image>
                        </block>
                        <block wx:if="{{anonymousState__temp4}}">
                            <button open-type="share" disabled="{{product.stockCount === 0}}" class="{{anonymousState__temp}}" id="{{product.skuId}}">
                                <block>
                                    <block wx:if="{{product.stockCount === 0}}"><text>已售罄</text>
                                    </block>
                                    <block wx:else>
                                        <view class="{{styles.shareButtonContent}}">
                                            <image src="https://image3.imdada.cn/41b7f54f179846bcb7621534220505d4.png" class="{{styles.shareIcon}}"></image><text>点击分享</text>
                                        </view>
                                    </block>
                                </block>
                            </button>
                        </block>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>