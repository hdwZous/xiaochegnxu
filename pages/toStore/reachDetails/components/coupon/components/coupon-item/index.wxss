.product_coupon_item {
  display: inline-block;
  position: relative;
  padding: 0 16rpx;
  margin: 0 8rpx;
  width: 248rpx;
  height: 96rpx;
  overflow: hidden;
  border-radius: 14rpx;
  background: linear-gradient(129deg, #ff6640 0%, #ff3737 100%);
}

.product_coupon_item_inner {
  height: 100%;
}

.product_coupon_item:first-of-type {
  margin-left: 22rpx;
}

.product_coupon_item:last-of-type {
  margin-right: 22rpx;
}

.product_coupon_item::before {
  content: "";
  position: absolute;
  left: -14rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
  border-radius: 24rpx;
  background: #ffffff;
}

.product_coupon_item::after {
  content: "";
  position: absolute;
  right: -14rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
  border-radius: 24rpx;
  background: #ffffff;
}

.product_coupon_item_price_case {
  align-items: baseline;
  margin-bottom: 8rpx;
}

.product_coupon_item_symbol {
  font-size: 28rpx;
  font-weight: 400;
  color: #ffffff;
  font-family: "regular";
}

.product_coupon_item_num {
  font-size: 40rpx;
  color: #ffffff;
  font-family: "regular";
}

.product_coupon_btn_box {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}

.product_coupon_btn {
  text-align: center;
  width: 76rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #fff0df;
  box-shadow: 0 4rpx 8rpx 0 rgba(255, 88, 67, 0.21);
  border-radius: 30rpx;
  color: #ff1e19;
  font-size: 20rpx;
  border: 1px solid transparent;
}

.product_coupon_btn_active {
  text-align: center;
  width: 76rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  color: #fff0df;
  font-size: 20rpx;
  border: 1px solid #fff0df;
}

.product_coupon_btn_disable {
  text-align: center;
  width: 76rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(255, 240, 223, 0.5);
  border-radius: 30rpx;
  color: rgba(255, 30, 25, 0.5);
  font-size: 20rpx;
  border: 1px solid transparent;
}

.product_coupon_item_info_txt {
  font-size: 20rpx;
  color: #ffffff;
  height: 20rpx;
  line-height: 20rpx;
  transform: translateY(-4rpx);
}
