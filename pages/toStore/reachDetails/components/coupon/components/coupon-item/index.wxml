<view
  class="product_coupon_item product_coupon_item__ep"
  data-user-action="{{curCoupon.userAction}}"
  data-trace-id="{{traceId}}"
  data-page-id="{{buriedObj.pageIdFirstPage}}"
  data-current-page-name="{{buriedObj.currentPageName}}"
  data-pre-page-name="{{buriedObj.prePageName}}"
  bind:tap="clickCoupon"
  data-item="{{curCoupon}}"
  aria-label="{{curCoupon.couponTitle}}.{{curCoupon.price}}元.{{curCoupon.couponLimit}}"
  aria-role="button"
>
  <view class="product_coupon_item_inner d-flex flex-column justify-content-center">
    <view class="product_coupon_item_price_case flex-row">
      <view class="product_coupon_item_symbol flex-none">¥</view>
      <view class="product_coupon_item_num flex-auto">{{curCoupon.price}}</view>
    </view>
    <view class="product_coupon_item_info_txt" wx:if="{{curCoupon.couponLimit}}">
      {{curCoupon.couponLimit}}
    </view>
  </view>
  <view class="product_coupon_btn_box">
    <view class="product_coupon_btn flex-none" wx:if="{{curCoupon.markState == 2}}">
      {{curCoupon.couponButton.title}}
    </view>
    <view class="product_coupon_btn_active flex-none" wx:elif="{{curCoupon.markState == 3}}">
      {{curCoupon.couponButton.title}}
    </view>
    <view class="product_coupon_btn_disable flex-none" wx:else>
      {{curCoupon.couponButton.title}}
    </view>
  </view>
</view>