<view class="banner-wrap" aria-label="商品轮播图，共{{images.length}}张">
    <swiper class="swiper" bindchange="onBindChange">
        <block wx:for="{{images}}" wx:for-item="item" wx:for-index="index" wx:key="*this">
            <swiper-item>
                <view class="swiper-item">
                    <image class="image" src="{{item.big}}" aria-label="商品图{{index + 1}}" aria-role="text" />
                </view>
            </swiper-item>
        </block>
    </swiper>
    <!-- 点 -->
    <view class="dot" wx:if="{{images.length}}">{{current+1}}/{{images.length}}</view>
    <!-- 阴影 -->
    <view class="shadow"></view>
    <!-- 水印 -->
    <view class="water_mark" wx:if="{{imageWaterMark}}">{{imageWaterMark}}</view>
</view>