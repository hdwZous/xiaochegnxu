.set-meal__container {
    padding-top: 2rpx;
    overflow: hidden;
}

.set-meal__item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 24rpx;
}

.set-meal__name {
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
    position: relative;
    padding-left: 26rpx;
}

.set-meal__name::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 8rpx;
    height: 8rpx;
    margin-top: -4rpx;
    background-color: #DADADA;
    border-radius: 4rpx;
}

.set-meal__detail {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.set-meal__num {
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
}

.set-meal__price {
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
}