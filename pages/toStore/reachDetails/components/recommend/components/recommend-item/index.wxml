<view
  class="recommend__item recommend__item__ep"
  bindtap="openNewDetail"
  data-user-action="{{sku.userAction}}"
  data-trace-id="{{traceId}}"
  data-page-id="{{buriedObj.pageIdFirstPage}}"
  data-current-page-name="{{buriedObj.currentPageName}}"
  data-pre-page-name="{{buriedObj.prePageName}}"
>
  <view class="recommend__image-box align-self-start">
    <image aria-role="img" class="recommend__image" src="{{sku.imgUrl}}" mode="aspectFit" />
    <view class="recommend__overlay" />
  </view>
  <view aria-role="text" aria-label="{{sku.skuName}}" class="recommend__name ellipsis2">{{sku.skuName}}</view>
  <view class="recommend__down flex-row align-items-center justify-content-between">
    <view>
      <coupon-price majorPrice="{{sku.majorPrice}}" majorPriceFz="28rpx" />
      <coupon-price minorPrice="{{sku.minorPrice}}" majorPriceFz="24rpx" />
    </view>
    <button class="recommend__buy">抢购</button>
  </view>
</view>
