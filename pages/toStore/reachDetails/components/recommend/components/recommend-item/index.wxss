.recommend__item {
  width: 210rpx;
  /* height: 324rpx; */
  position: relative;
  /* border: 1px solid red; */
  margin: 0 10rpx;
  overflow: hidden;
  display: inline-block;
}

.recommend__item:first-of-type {
  margin-left: 24rpx;
}

.recommend__item:last-of-type {
  margin-right: 24rpx;
}

.recommend__image-box {
  position: relative;
}

.recommend__image {
  width: 210rpx;
  height: 210rpx;
  border-radius: 8rpx;
}

.recommend__overlay {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .02);
  z-index: 1;
  border-radius: 8rpx;
  pointer-events: none;
}

.recommend__name {
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  line-height: 30rpx;
  margin: 10rpx 0;
  height: 60rpx;
}

.recommend__down {
  height: 80rpx;
}

.recommend__buy {
  min-width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: linear-gradient(270deg, #FF2A26 0%, #FF6461 100%);
  border-radius: 27rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 400;
  text-align: center;
  margin: 0;
}