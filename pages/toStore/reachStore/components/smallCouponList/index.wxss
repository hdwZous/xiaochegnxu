.coupon-scroll {
  width: 702rpx;
  display: flex;
  height: 44rpx;
  white-space: nowrap;
}
.coupon-item {
  /* width: 176rpx; */
  height: 100%;
  margin-right: 12rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 12rpx;
  box-sizing: border-box;
}
.bg1 {
  background: linear-gradient(150deg, #FFEBC4 0%, #FFE1A4 100%);
}
.bg2 {
  background: linear-gradient(142deg, #FF6963 0%, #FF4141 100%);
}
.bg3 {
  background: #FEF5F3;
  border-left: 1rpx solid #FF8E8C;
  border-color: #FF8E8C;
  border-right: 1rpx solid #FF8E8C;
}
.bg4 {
  background: #F6F6F6;
  border-left: 1rpx solid #999999;
  border-right: 1rpx solid #999999;
}

.coupon-left_p {
  width: 44rpx;
  height:100%;
  border-radius: 8rpx 0rpx 16rpx 8rpx;
  display: flex;
  align-items: baseline;
  justify-content: center;
  line-height: 44rpx;
  box-sizing: border-box;
}
.coupon-left {
  width: 60rpx;
  height:100%;
  border-radius: 8rpx 0rpx 16rpx 8rpx;
  display: flex;
  align-items: baseline;
  justify-content: center;
  line-height: 44rpx;
  box-sizing: border-box;
}
.coupon-left1 {
  width: 60rpx;
  height:100%;
  border-radius: 8rpx 0rpx 16rpx 8rpx;
  display: flex;
  align-items: baseline;
  justify-content: center;
  line-height: 44rpx;
  box-sizing: border-box;
}
.coupon-center {
  height:100%;
  font-size: 20rpx;
  line-height: 44rpx;
  padding: 0rpx 8rpx 0rpx 8rpx;
  display: flex;
  align-items: baseline;
  box-sizing: border-box;
}
.coupon-center-peng {
  height:100%;
  font-size: 20rpx;
  line-height: 44rpx;
  padding: 0rpx 8rpx 0rpx 8rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.coupon-right {
  font-size: 20rpx;
  font-weight: 400;
  color: #FFFFFF;
  height:100%;
  line-height: 44rpx;
  padding: 0rpx 8rpx 0rpx 6rpx;
  box-sizing: border-box;
}
.coupon-line {
  width: 8rpx;
  height: 100%;
}
.coupon-line .coupon-line-img {
  width: 100%;
  height: 100%;
}
.left-bg1 {
  background: linear-gradient(90deg, #FFE9B5 0%, #FFC96F 100%);
}
.left-bg2 {
  background: linear-gradient(142deg, #FE5731 0%, #F32323 100%);
}
.left-bg3 {
  background: rgba(255, 30, 25, 0.08);
}
.left-bg4 {
  background: #999999;
}
.color1 {
  color: #8F4C3B;
}
.color2 {
  color: #fff;
}
.color3 {
  color: #FF1E19;
  border-top: solid 1rpx #FF8E8C;
  border-bottom: solid 1rpx #FF8E8C;
}
.color4 {
  color: #fff;
  border-top: solid 1rpx #999;
  border-bottom: solid 1rpx #999;
}
.color5 {
  color: #999;
  border-top: solid 1rpx #999;
  border-bottom: solid 1rpx #999;
}
.font20 {
  font-size: 20rpx;
}
.border-radius-right {
  border-radius: 0 12rpx 12rpx 0;
}
.border-radius-left {
  border-radius: 12rpx 0 0rpx 12rpx;
  height: 100%;
  box-sizing: border-box;
}
.price-unit {
  font-size: 16rpx;
  font-family: regular;
}
.price {
  font-size: 28rpx;
  font-family: regular;
  font-weight: 400;
}
.price-peng {
  font-size: 24rpx;
  font-family: regular;
  font-weight: 400;
}
.price-small {
  font-size: 16rpx;
  font-family: regular;
  font-weight: 400;
}
.v {
  width: 34rpx;
  height: 22rpx;
  margin-top: 11rpx;
}
.p {
  width: 44rpx;
  height: 44rpx;
}

.coupon-more {
  height: 44rpx;
  background: #F6F6F6;
  padding: 0 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #666;
  text-align: center;
  line-height: 44rpx;
  margin-right: 12rpx;
}