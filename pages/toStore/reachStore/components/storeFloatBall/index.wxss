/* 悬浮球 */
.movearea{
  position: fixed;
  right: 0;
  width: 220rpx;
  top: 188rpx;
  height: 68vh;
  z-index: 4;
  pointer-events: none;
}
.moveview {
  width: 100%;
  height: 68rpx;
  pointer-events: auto;
}
.store-float-ball {
  /* position: fixed;
  right: 0;
  top: 188rpx; */
  /* z-index: 2; */
  height: 68rpx;
  transform: translateX(100%); 
}
.store-float-ball-view {
  padding: 0 8rpx 0 16rpx;
  height: 100%;
  background: linear-gradient(138deg, #FCA06F 0%, #FF4545 100%);
  box-shadow: 0px 2rpx 12rpx 0px rgba(0,0,0,0.09), inset 0px 0px 8rpx 0px rgba(250,61,61,0.5);
  border-radius: 200rpx 0px 0px 200rpx;
  transition: transform 1s;
  transform: translateX(-100%); 
}
.store-float-ball-image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.store-float-ball-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 68rpx;
  text-shadow: 0px 2rpx 12rpx rgba(0,0,0,0.09);
  margin-left: 8rpx;
}
.store-float-ball-move {
  transform: translateX(-56rpx); 
}