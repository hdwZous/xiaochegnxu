.error_box {
  width: 100%;
  height: 100vh;
}

.settlementV2 {
  min-height: 100vh;
  position: relative;
  padding: 24rpx;
  padding-bottom: 0;
  background: #F6F6F6;
  font-size: 0;
}

.settle_box {
  position: relative;
  z-index: 1;
}

.background_box {
  width: 100%;
  height: 380rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(180deg, #00CF37 0%, #95D99A 65%, #F6F6F6 100%);
}

.to_settle_space_line {
  width: 100%;
  height: 1px;
  background: linear-gradient(360deg, #F5F5F5 0%, rgba(255,255,255,0) 100%);
}

.module_box {
  background: #FFFFFF;
  padding: 0 24rpx 32rpx 24rpx;
}

.mb_title {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.ts_next {
  font-size: 24rpx;
  color: #999;
}

.rs_money {
  background: #fff;
  padding: 0 24rpx 32rpx 0;
  border-radius: 0 0 24rpx 24rpx;
}

.save_money {
  font-size: 28rpx;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: #666666;
  margin-right: 32rpx;
}

.save_money_sys {
  color: #FF5757;
  font-family: 'light';
}

.order_t {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}

.order_money {
  font-size: 44rpx;
  font-family: 'regular';
  font-weight: 400;
  color: #333333;
}

.submit-view {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 112rpx;
  padding-right: 24rpx;
  background-color: #fff;
  box-shadow: 0px -2rpx 0px 0px #F5F5F5;
}

.totalMoney-text-discount {
  font-size: 24rpx;
  color: #666;
}

.total-discount-num {
  color: #FF5757;
  font-family: light;
  margin-right: 14rpx;
}

.totalMoney-text {
  font-size: 40rpx;
  color: #333;
  font-family: regular;
}

.btn-submit {
  background: linear-gradient(270deg, #00CF37 0%, #0FDF46 100%);
  border-radius: 50rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  height: 80rpx;
  width: 208rpx;
  text-align: center;
  margin: 0;
  margin-left: 28rpx;
}
