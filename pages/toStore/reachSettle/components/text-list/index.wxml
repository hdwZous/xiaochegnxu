<view class="text_list">
  <block wx:for="{{infos}}" wx:key="items">
    <block wx:if="{{item.type == 2}}">
      <text class="text_list_num" style="color:{{item.fontColor}};font-size:{{item.fontSize*2}}rpx;font-weight:{{item.fontWeight==1?'bold':item.fontWeight==2?'lighter':'normal'}};">{{item.text}}</text>
    </block>
    <block wx:if="{{item.type == 1}}">
      <text class="text_list_sym" style="color:{{item.fontColor}};font-size:{{item.fontSize*2}}rpx;font-weight:{{item.fontWeight==1?'bold':item.fontWeight==2?'lighter':'normal'}};">{{item.text}}</text>
    </block>
    <block wx:if="{{item.type == 3}}">
      <image class="text_list_icon flex-none" src="{{item.url}}" />
    </block>
  </block>
</view>