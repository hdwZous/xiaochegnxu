<view class="red_layer_box d-flex flex-column justify-content-center align-items-center" wx:if="{{show}}" catchtouchmove='true'>
  <view class="red_layer-bg" wx:if="{{show}}" bindtap="hide"></view>
  <view class="red_layer-body d-flex flex-column" style="bottom:{{showDialog?0:'-1000px'}}">
    <view class="title-box d-flex flex-row align-items-center justify-content-center">
      <text>红包</text>
      <view class="red_layer-close" bindtap="hide"></view>
    </view>
    <scroll-view scroll-y class="res_layer_content {{isIpx?'ipx':''}}" catchtouchmove="true">
      <view class="d-flex flex-column align-items-center">
        <view class="rlc_top d-flex flex-row align-items-center">
          <image class="rlct_img flex-none" src="https://storage.360buyimg.com/peibanjia/dj_wx/re_settle_red.png" />
          <view class="rlct_red">账户红包总额：<text class="rlct_num">{{infos.totalJdRedPacket}}</text></view>
          <view class="red_layer_explain" bindtap="explain" wx:if="{{infos.useRule}}">使用规则</view>
        </view>
        <image class="rlct_arrow" src="https://storage.360buyimg.com/peibanjia/dj_wx/re_settle_red_arrow.png" />
      </view>
      <view class="rl_select d-flex flex-row justify-content-between">
        <text-list infos="{{infos.jdRedPacketDiscountText.textItemList}}"></text-list>
        <image class="rls_check" bindtap="selectRed" data-status="{{infos.selected}}" src="{{infos.selected?'https://storage.360buyimg.com/wximg/settleV2/check-true-green.png':'https://storage.360buyimg.com/wximg/settleV2/check-false.png'}}" />
      </view>
      <view class="to_settle_space_line" style="margin: 26rpx 0 32rpx 0;"></view>
      <view class="rl_red_list">
        <block wx:for="{{infos.jdRedPacketItemList}}" wx:key="items">
          <view class="rl_red_item">
            <view class="d-flex flex-row align-items-center justify-content-between" style="margin-bottom:2rpx;">
              <view class="d-flex flex-row align-items-center justify-content-between">
                <text-list infos="{{item.title.textItemList}}"></text-list>
                <text-list infos="{{item.money.textItemList}}"></text-list>
              </view>
              <text-list wx:if="{{infos.selected}}" infos="{{item.discountText.textItemList}}"></text-list>
            </view>
            <text-list infos="{{item.validTime.textItemList}}"></text-list>
          </view>
        </block>
      </view>
      <view style="height:64rpx"></view>
    </scroll-view>
    <view class="red_layerb-bt" bindtap="confirm">确定</view>
    <view style="height: 60rpx;background: #fff;" wx:if="{{isIpx}}"></view>
  </view>
</view>
<tip-dialog types="{{tipDialog.types}}" show="{{tipDialog.show}}" title="{{tipDialog.title}}" desc="{{tipDialog.desc}}" readmeList="{{tipDialog.readmeList}}" bindtipClose="tipClose"></tip-dialog>