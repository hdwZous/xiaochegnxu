@import "/common/css/light.wxss";
@import "/common/css/regular.wxss";

::-webkit-scrollbar {
  display:none;
  width: 0;
  height: 0;
  color: transparent;
}
.hidden {
  overflow: hidden;
  height: 100vh;
}
.sort-category-goodlist {
  background: #fff;
  position: relative;
  margin-top: -20rpx;
}
.page-nav{
  border-radius: 24rpx 24rpx 0 0;
  position: sticky;
  left: 0;
  right: 0;
  top: 60px;
  /* z-index: 1; */
  z-index: 2;
}

.category-filter-wrapper {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  padding-bottom: 16rpx;
  background: #fff;
}
.category-filter-scroll {
  width: 726rpx;
  height: 64rpx;
  margin-left: 24rpx;
}
.zhanwei {
  display: inline-block;
  height: 64rpx;
  width: 24rpx;
}
.category-item {
  display: inline-block;
  height: 64rpx;
  font-size: 24rpx;
  color: #666;
  background: #f8f8f8;
  border-radius: 6rpx;
  text-align: center;
  line-height: 64rpx;
  margin-right: 16rpx;
  width: 144rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.category-item:first-child{
  /* margin-left: 24rpx; */
}
.category-item:last-child{
  margin-right: 24rpx;
}
.selected {
  color: #00CF37;
  background: #ECF7ED;
  font-weight: bold;
}



.goodlist-wraper {
  margin: 0 24rpx;
}


.more {
  padding: 50rpx 0 260rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.more .text {
  color: rgb(73, 186, 70);
  font-size: 24rpx;
  text-align: center;
}
.more  .img {
  display: block;
  width: 20rpx;
  height: 20rpx;
}
  
.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2;
}