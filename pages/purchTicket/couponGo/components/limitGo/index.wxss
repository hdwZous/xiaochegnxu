.gray{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 20;
}
.gray-bg{
  background: #000000;
  opacity: .9;
  z-index: 2;
}
.content{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  overflow: scroll;
  border-radius: 20rpx 20rpx 0 0;
  height: auto;
  min-height: 0;
  max-height: 0;
  z-index: 3;
  transition: All 0.5s ease;
  -webkit-transition: All 0.5s ease;
  -webkit-overflow-scrolling: touch
}
.showCont {
  max-height: 70vh;
  background: #fff;
}
.head {
  margin-top: 32rpx;
  position: relative;
  overflow: hidden;
}
.head .title{
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  text-align: center;
}
.head .close {
  width:24rpx;
  height:24rpx;
  background: url(https://storage.360buyimg.com/wximg/common/limitGoClose.png) no-repeat;
  background-size: 100% 100%;
  position: absolute;
  right: 28rpx;
  top: 16rpx;
}
.recommend {
  margin-top: 42rpx;
  padding: 0 24rpx;
}
.recommend .recommend-title {
  font-size:28rpx;
  color: #666;
}
.recommend-title .tag {
  padding: 0 6rpx;
  display: inline-block;
  line-height: 30rpx;
  height: 28rpx;
  border: 1rpx solid;
  vertical-align: middle;
  font-size: 20rpx;
  border-radius: 4rpx;
  margin: 0 2rpx;
  position: relative;
  top: -4rpx;
}
.recommend-title .title {
  display: inline-block;
}
.recommend .recommend-list {
  display: flex;
  justify-content: flex-start;
  margin-top: 16rpx;
  height: 174rpx;
}
.recommend .recommend-item {
  width: 132rpx;
  height: 174rpx;
  margin-right: 8rpx;
}
.recommend .sku-img {
  width:132rpx;
  height:132rpx;
  background:#f4f4f4;
  border-radius: 8rpx;
}
.sku-img .img{
  width: 100%;
  height: 100%;
  border-radius:8rpx;
}
.recommend .sku-count {
  font-size:24rpx;
  color: #999;
  text-align: center;
  margin-top: 8rpx;
  font-family: regular;
}

.continue {
  margin-top: 40rpx;
  padding: 0 24rpx;
}
.continue  .continue-title {
  font-size:28rpx;
  color: #666;
}
.continue  .product {
  width:702rpx;
  background:#f8f8f8;
  border-radius:12rpx;
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-start;
  padding: 16rpx 0;
}
.continue .left {
  width:160rpx;
  height:160rpx;
  background:#fff;
  margin: 0rpx 0 0 16rpx;
  border-radius:8rpx;
}
.continue .img {
  width: 100%;
  height: 100%;
  border-radius:8rpx;
}
.continue .right {
  margin-left: 16rpx;
  position: relative;
  flex: 1;
}
.continue .title {
  width: 494rpx;
  max-height: 90rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:32rpx;
  color: #333;
  font-weight: bold;
}
.continue .tag {
  display: inline-block;
  padding: 0 6rpx;
  color: #FF1E1A;
  font-size: 20rpx;
  line-height: 30rpx;
  border: 1rpx solid;
  border-radius: 4rpx;
  /* border: 1rpx solid rgba(255,30,26,0.5); */
  height: 28rpx;
  margin-top: 8rpx;
  position: relative;
}
