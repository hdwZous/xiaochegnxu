<view>
  <view class="content {{showPop ?'showCont':''}}">
    <view class='head'>
      <view class='title'>{{limitPop.title}}</view>
      <view class='close log-limit-close' 
            data-store-id="{{storeId}}"
            bindtap="hidePop"></view>
    </view>
    <view class="recommend" wx:if="{{skuList.length > 0}}">
      <view class="recommend-title">
        “<view class="tag" style="color: {{tag.iconTextColorCode}}; border: solid 1rpx {{tag.iconTextColorCode}}">
          {{tag.iconText}}
        </view>”{{tips}}
      </view>
      <scroll-view class="recommend-list" scroll-x="true" enable-flex="true">
        <block wx:for="{{skuList}}" wx:key="index" wx:for-item="item">
          <view class='recommend-item'>
            <view class='sku-img'>
              <image class='img' src="{{item.imgUrl}}" />
            </view>
            <view class='sku-count'>x{{item.incartCount}}</view>
          </view>
        </block>
      </scroll-view>
    </view>
    <view class='continue' style="padding-bottom: {{isIphoneX ? '116rpx' : '48rpx'}}">
      <view class="continue-title">{{keepBuyInfo.title}}</view>
      <view class='product'>
        <view class='left'>
          <image class='img' src="{{keepBuyInfo.skuInfo.imgUrl}}" />
        </view>
        <view class='right'>
          <view class='title'>{{keepBuyInfo.skuInfo.skuName}}</view>
          <view>
            <view class='tag' wx:if="{{keepBuyInfo.skuInfo.tags &&  keepBuyInfo.skuInfo.tags.length > 0}}" style="color: {{item.iconTextColorCode}}; border: solid 1rpx {{item.iconTextColorCode}}" wx:for="{{keepBuyInfo.skuInfo.tags}}" wx:for-item="item" wx:key="index">
              {{item.iconText}}
            </view>
          </view>
          <view class='price'>{{keepBuyInfo.skuInfo.realTimePrice}}</view>
          <view class='log-limit_buy buy-btn' 
                data-org-code="{{keepBuyInfo.skuInfo.orgCode}}" 
                data-store-id="{{itkeepBuyInfo.skuInfoem.storeId}}" 
                data-sku-id="{{keepBuyInfo.skuInfo.skuId}}" 
                data-item="{{keepBuyInfo.skuInfo}}" 
                bindtap="add">
            {{keepBuyInfo.cartButton.buttonName}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="gray gray-bg"
        bindtap="hidePop" 
        data-store-id="{{storeId}}"
        wx:if="{{showPop}}"></view>
</view>