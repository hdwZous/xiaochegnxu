<view class="nav_box" 
      wx:if="{{compatible}}"
      style="z-index: {{showMask ? 4 : 2}}">
    <!--状态栏高度-->
    <view class="status_bar" style="height:{{capsule.top}}px"></view>
    <!--导航 与 搜索框-->
    <view class="nav_bar flex_row  align_item_center" style="width:{{capsule.left-10}}px;height:{{capsule.height}}px">
        <!-- 返回按钮 -->
        <view class="nav_left flex align_item_center" 
              data-type="{{showBack?'goBack':'goHome'}}" 
              bindtap="{{showBack?'goBack':showHome?'goHome':''}}"
              aria-role='link'
              aria-label="返回">
            <view aria-hidden="true" class="flex_row align_item_center">
                <view class="back_black"  wx:if="{{showBack}}"></view>
                <view class="home_box" wx:if="{{showHome}}">
                    <view class="home_black" ></view>
                </view>
            </view>
        </view>

        <block wx:if="{{busiCode === '0' || busiCode === '1'}}">
          <!--搜索框-->
          <view class="log-foucus-search search_box flex_auto flex_row just_content_center align_item_center" bindtap="clickInput">
              <view class="flex_auto flex_row input_box" >
                  <view class="icon_search flex_none" aria-hidden="true"></view>
                  <input class="place_holder flex_auto" 
                        type="text" 
                        placeholder="搜索你想要的商品" 
                        value="{{keyword}}"
                        bindconfirm="bindConfirm"
                        bindinput="bindKeyInput"
                        aria-role='input'
                        aria-label="{{keyword}}"
                        aria-placeholder="搜索你想要的商品" />
              </view>
              <view class="search_opacity"></view>
          </view>
          <!-- 搜索按钮 -->
          <view class="log-search search-btn" 
                data-keyword="{{keyword}}" 
                wx:if="{{showMask}}" 
                bindtap="bindConfirm"
                aria-role='link'
                aria-label="搜索">
              搜索
          </view>
        </block>
        <block wx:else>
          <view class="flex_auto title">京东到家</view>
        </block>
    </view>
</view>
<!--因为上边用的fixed, 占位用的-->
<view wx:if="{{compatible}}">
    <view style="height:{{statusBarHeight}}px"></view>
    <view style="height:{{titleBarHeight}}px"></view>
</view>
<view class="mask"
      style="z-index: {{showMask ? 3 : 2}}"
      wx:if="{{showMask}}" 
      bindtap="hideMask"
      aria-role='button'
      aria-label='取消搜索'></view>


