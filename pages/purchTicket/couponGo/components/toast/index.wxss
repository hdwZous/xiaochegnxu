

/* 筛选蒙层 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  background: rgba(0,0,0,0.05);
  z-index: 20;
}
.text-wrap {
  position: absolute;
  top: 50%;
  left: 0%;
  transform: translate(0%, -50%);
  z-index: 21;
  text-align: center;
  width: 100%;
}
.text {
  display: inline-block;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 16rpx;
  border-radius: 10rpx;
}
