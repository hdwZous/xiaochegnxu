.good-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: solid 2rpx #f5f5f5;
  position: relative;
}

.good-item>.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  position: relative;
  background: #f8f8f8;
}

.logo>image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.logo>.ad-icon {
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 24rpx;
}

.logo .store_stockCount_tag {
  position: absolute;
  left: 0px;
  top: 0rpx;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  text-align: center;
  line-height: 160rpx;
  color: #FFF;
  font-size: 26rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

.logo .store-sku-remain {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 28rpx;
  font-size: 20rpx;
  color: #FFF;
  text-align: center;
  line-height: 28rpx;
  border-radius: 0 0 8rpx 8rpx;
  background: linear-gradient(to right, #FF5C37 0%, #FF9248 100%);
}

.logo .freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}

.right-info {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}

.right-info .sku-name {
  width: 490rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.right-info .ad-word {
  width: 526rpx;
  height: 28rpx;
  font-size: 22rpx;
  color: #666;
  line-height: 28rpx;
  margin-bottom: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.description {
  font-size: 24rpx;
  line-height: 30rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: 8rpx;
  font-weight: 300;
}

.desc-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}

.right-info .month-highopinion {
  display: flex;
  justify-content: flex-start;
  color: #666;
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.high-opinion {
  margin-left: 16rpx;
}

.tags {
  margin-bottom: 12rpx;
  display: flex;
  justify-content: flex-start;
}

.tags .tag {
  font-size: 20rpx;
  padding: 0rpx 8rpx;
  color: #fff;
  border-radius: 4rpx;
  margin-right: 8rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.rec-word {
  display: inline-block;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 3rpx;
  font-size: 20rpx;
  color: #FF1E19;
  padding: 0 8rpx;
  background: rgba(255, 30, 25, 0.05);
}

.select_case {
  position: absolute;
  right: 0;
  bottom: 16rpx;
}

.buy {
  position: absolute;
  right: 0rpx;
  bottom: 16rpx;
  min-width: 58rpx;
  height: 32rpx;
  padding: 6rpx 8rpx;
  background: linear-gradient(270deg, #00CF37 0%, #45DC6D 100%);
  border-radius: 22rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
}

.sku-name-tag {
  height: 28rpx;
  /* line-height: 30rpx; */
  font-size: 20rpx;
  padding: 0rpx 8rpx;
  color: #fff;
  border-radius: 4rpx;
  margin-right: 8rpx;
  vertical-align: 5rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.sky-yhe-one-business-tag {
  position: absolute;
  left: 16rpx;
  top: 16rpx;
}
.good-title-name {
  margin-left: 8rpx;
}