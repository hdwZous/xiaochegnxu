@import "/common/css/global";
@import "/common/css/regular.wxss";

.ex_case {
    margin: 30rpx;
    background:rgba(255,255,255,1);
    border-radius: 8rpx;
    box-shadow:0 4rpx 8rpx 0 rgba(0,0,0,0.05);
}
.ex_head {
    padding: 24rpx;
    align-items: center;
}
.ex_image {
    position: relative;
    margin-right: 20rpx;
    width: 154rpx;
    height: 154rpx;
    border-radius: 12rpx;
}
.coupon_price {
    position: absolute;
    width: 100%;
    text-align: center;
    top: 50%;
    transform: translateY(-50%);
    color: #F64005;
    font-size: 28rpx;
}
.num {
    font-size: 42rpx;
    font-family: 'regular';
}
.ex_img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}
.price {
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: #F64005;
    font-size: 42rpx;
}
.symbol {
    font-size: 28rpx;
}
.ex_info {

}
.ex_name {
    color: #333333;
    font-size: 30rpx;
}
.ex_process {
    overflow: hidden;
    margin: 15px 0 12px;
    width: 122px;
    position: relative;
    height: 15px;
    line-height: 15px;
    text-align: center;
    color: #FF5757;
    font-size: 10px;
    background:rgba(255,87,87,0.1);
    border-radius:8px;
}
.cover {
    position: absolute;
    left: 0;
    top: 0;
    height: 15px;
    background:linear-gradient(to right,rgba(255,92,55,1),rgba(255,146,72,1));
    border-radius:8px 0px 0px 8px;
    overflow: hidden;
}
.up_word {
    text-align: center;
    position: absolute;
    left: 0;
    top: 0;
    height: 15px;
    line-height: 15px;
    width: 122px;
    color: #FFFFFF;
    font-size: 10px;
}
.process {
    overflow: hidden;
    position: absolute;
    left: 0;
    top: 0;
    height: 30rpx;
    background:linear-gradient(317deg,rgba(255,146,72,1) 0%,rgba(255,92,55,1) 100%);
    border-radius:16rpx 0 0 16rpx;
}
.ex_txt {
    position: absolute;
    left: 0;
    top: 0;
    color: #FFFFFF;
    font-size: 22rpx;
    width: 260rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
}
.ex_time {
    color: #999999;
    font-size: 20rpx;
    border-radius:16rpx;
}
.ex_btn {
    color: #FFFFFF;
    font-size: 26rpx;
    width:140rpx;
    height:52rpx;
    line-height: 52rpx;
    text-align: center;
    background:rgba(254,87,87,1);
    border-radius:63px;
}
.ex_rule {
    position: relative;
    color: #999999;
    font-size: 22rpx;
    border-top: 1rpx solid #eeeeee;
    padding: 14rpx 30rpx;
}
button:after {
    border: 0;
}
.arrow {
    position: absolute;
    right: 14rpx;
    top: 11rpx;
    width:14rpx;
    height:14rpx;
    border:1rpx solid #b2b2b2;
    border-top-width:0;
    border-left-width:0;
    -webkit-transform-origin:center center;
    -webkit-transform:rotate(45deg);
    -webkit-transition:all ease-in 400ms;
}
.arrow_up {
    top:20rpx;
    -webkit-transform:rotate(225deg);
}