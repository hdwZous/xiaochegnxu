.mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.69);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
}
.change-pop-content {
    width: 540rpx;
    height: 330rpx;
    background: #FFFFFF;
    border-radius: 24rpx;
    /* filter: blur(10rpx); */
    position: fixed;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
}
.change-pop-title {
    font-size: 36rpx;
    font-weight: 500;
    color: #333333;
    line-height: 44rpx;
    text-align: center;
    margin-top: 40rpx;
}
.change-pop-input-wrap {
    width: 462rpx;
    height: 80rpx;
    background: #FAFAFA;
    border-radius: 4rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
}
.border-red {
    border: solid 1rpx red;
}
.input {
    width: 422rpx;
    height: 34rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #666;
    line-height: 34rpx;
}
.input-placeholder {
    color: #bebebe;
}
.button-wrap {
    height: 104rpx;
    width: 100%;
    margin-top: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: solid 2rpx #f5f5f5;
}
.cancel, .confirm {
    width: 50%;
    height: 100%;
    line-height: 104rpx;
    text-align: center;
    font-size: 36rpx;
}
.cancel {
    color: #999;
    border-right: solid 2rpx #f5f5f5;
}
.confirm {  
    color: #47B34F;
}