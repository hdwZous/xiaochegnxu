<view class='chooseStore wrap' catchtap="elementTracker">
	<!--搜索-->
  <view class="search">
    <view class="input" bindtap="goToSearch">
      <view class="icon_search"></view>
      <view class="placeholder">选择城市、小区、写字楼、学校</view>
    </view>
  </view>
	  <!--内容框-->
	<view class="section">
	    <!--定位-->
	    <view class='position' bindtap='goToMap'>
				<image src="https://storage.360buyimg.com/wximg/coupon/voucher_position.png"></image>
				<text>{{stroeName}}</text>
				<image src="https://storage.360buyimg.com/wximg/coupon/voucher_more.png"></image>
			</view>
	    <!--附近可领优惠券门店-->
	    <view class="title">附近门店</view>
	    <view class="stroeList">
	    	<scroll-view scroll-y style="height: 100%" class='scroll' bindscrolltolower="loadingMore">
	      	<view class="list" 
	      		wx:for="{{storeListData}}"
	      		wx:key="{{index}}" 
	      		data-stroe-No="{{item.stationNo}}" 
	      		data-org-Code="{{item.orgCode}}"
            data-statio-Name="{{item.statioName}}"
            data-poi="{{item.statioName}}"
	      		bindtap="getStoreVoucher">
	      		<view class="stroeName">
	      			<text>{{item.statioName}}</text>
	      			<image src="https://storage.360buyimg.com/wximg/coupon/voucher_position_b.png"></image>
	      		</view>
	      		<view class="stroePosition">
	      			<view class='addressDeatil'>{{item.stationAddress}}</view>
	      			<text>{{item.distanceDesc}}</text>
	      		</view>
	      		<view class="storeWorktime">
	      			<!-- 门店营业时间： -->
	      			<text>{{item.serviceTimesDesc}}</text>
	      		</view>
	      	</view>
	      </scroll-view>
	    </view>
	</view>
</view>