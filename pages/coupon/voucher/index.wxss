@import "/common/css/global.wxss";

.voucher {
  height: 100vh;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.voucher .position {
	padding:30rpx 20rpx;
	line-height:30rpx;
  border-bottom:1rpx solid #eee;
}
.voucher .position image:nth-child(1){
	width:24rpx;
	height:32rpx;
	float:left;
}
.voucher .position image:nth-child(3){
	width:12rpx;
	height:24rpx;
	float:right;
  margin-top:6rpx;
}

.voucher .position text {
	font-size:30rpx;
	color:#47B34F;
	padding-left:6rpx;
}
.voucher .scrollView {
	padding:0 20rpx;
	margin: 30rpx 0;
  height: 190rpx;
  position: relative;
}
.voucher swiper {
	height: 100%;
}
.voucher .scrollView  image{
	width:100%;
	height:200rpx;
}
.voucher .voucherList {
	position:relative;
  -webkit-flex:auto;
  flex:auto;
  display:-webkit-flex;
  display:flex;
  -webkit-flex-direction:column;
  flex-direction:column;
  padding-bottom:100rpx;
}
.voucher .voucherList .voucher_list {
  padding:0 20rpx;
  position:relative;
  -webkit-flex:auto;
  flex:auto;
}
.voucher .voucherList .scroll {
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
}
.voucher  .voucherList .title{
	padding:25rpx 30rpx;
	line-height:40rpx;
}
.voucher  .voucherList .title> text {
	font-size:36rpx;
	color:#333;
	font-weight:600;
}
.voucher  .voucherList .title view {
	font-size:24rpx;
	color:#666;
	float:right;
}
.voucher  .voucherList .title view image{
	width:24rpx;
	height:24rpx;
	position:absolute;
	right:130rpx;
	padding:10rpx;
  top:22rpx;
}
.voucher  .voucherList .title image {
	width:26rpx;
	height: 26rpx;
}
.voucher .content {
	margin: 0 15px;
	position: relative;
  overflow: hidden;
}
.voucher .content .voucherContent {
	display:flex;
	overflow: hidden;
  position: relative;
  justify-content:space-between;
  background:rgba(255,87,87,0.02);
  margin:15rpx 0;
}
.voucher .content .voucherContent .leftContent {
	width:145rpx;
	line-height:145rpx;
	border-left:6rpx solid #FF5757;
	border-top: 1rpx solid #FF5757;
	border-bottom: 1rpx solid #FF5757;
	font-size:28rpx;
	color:#FF5757;
	text-align: center;
  border-top-left-radius:10rpx;
  border-bottom-left-radius:10rpx;
}
.voucherContent {
	overflow:hidden;
  margin:30rpx 0;
}
.voucher .content .voucherContent .leftContent text {
	font-size: 30rpx;
}
.voucher .content .voucherContent .mainContent {
	padding:16rpx 0;
  -webkit-justify-content:center;
  justify-content:center;
  -webkit-flex:auto;
  flex:auto;
  border-top: 1rpx solid #FF5757;
	border-bottom: 1rpx solid #FF5757;
  position: relative;
}
.voucher .content .voucherContent .mainContent .rule {
	color:#333;
	font-size:30rpx;
}
.voucher .content .voucherContent .mainContent  .userPosition {
	color:#666;
	font-size:22rpx;
	padding-top:10rpx;
}
.voucher .content .voucherContent .mainContent  .date {
	color:#666;
	font-size:22rpx;
	padding-top:10rpx;
}
.voucher .content .voucherContent .rightContent {
	text-align: center;
	position: relative;
	border-top: 1rpx solid #FF5757;
	border-bottom: 1rpx solid #FF5757;
	/* border-left: 1rpx dashed #FF5757; */
	border-right: 1rpx solid #FF5757;
  width: 79px;
  line-height:75px;
  border-radius:10rpx;
}
.voucher .mainContent::before {
  content: "";
  position: absolute;
  right: 1px;
  top: 0;
  width: 1px;
  height: 200%;
  border-right: 1px dashed #FE5757;
  -webkit-transform-origin: left top;
  transform-origin: left top;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
}
.voucherempty .mainContent::before {
   border-right: 1px dashed #ccc !important;
}
.voucher .content .voucherContent .cricleTop {
  overflow:hidden;
  position:absolute;
  right:76px;
  top:-9px;
  width:10px;
  height:20px;
  border:1px solid #FE5757;
  border-radius:100% 0 0 100%/50%;
  border-right:none;
  -webkit-transform:scale(0.6) rotate(-90deg);
  transform:scale(0.6) rotate(-90deg);
  background:#ffffff;
  z-index:999;
}
.voucherempty .cricleTop, .voucherempty .cricleBottom{
  border:1px solid #ccc !important;
}
.voucher .content .voucherContent  .cricleBottom {
  overflow:hidden;
  position:absolute;
  bottom:-17rpx;
  right:76px;
  width:10px;
  height:20px;
  border:1px solid #FE5757;
  border-radius:100% 0 0 100%/50%;
  border-right:none;
  -webkit-transform:scale(0.6) rotate(90deg);
  transform:scale(0.6) rotate(90deg);
  background:#ffffff;
  z-index: 999
}
.voucher .content .voucherContent .rightContent .getVoucher {
	font-size:26rpx;
	background:#FF5757;
	color:#fff;
	padding:5rpx 25rpx;
	border-radius:100rpx;
}
.voucher .content .voucherTake .voucherContent .rightContent .getVoucher{
	font-size:26rpx;
	background:#fff;
	color:#FF5757;
	padding:5rpx 15rpx;
	border-radius:100rpx;
	border: 1px solid #FF5757;
}
.voucher .content .voucherContent .rightContent image {
	width:82rpx;
	height:58rpx;
	position:absolute;
	right:0;
}
.voucher .voucherempty .voucherContent .leftContent {
	color:#ccc;
	border-left:6rpx solid #ccc;
	border-top:1rpx solid #ccc;
	border-bottom:1rpx solid #ccc;
}
.voucher .voucherempty .voucherContent .mainContent {
	border-top:1rpx solid #ccc;
	border-bottom:1rpx solid #ccc;
}
.voucher .voucherempty  .voucherContent .mainContent .rule {
	color:#ccc;
}
.voucher .voucherempty  .voucherContent .mainContent  .userPosition {
	color:#ccc;
}
.voucher .voucherempty  .voucherContent .mainContent  .date {
	color:#ccc;
}
.voucher .voucherempty  .voucherContent .rightContent {
	border-top:1rpx solid #ccc;
	border-bottom:1rpx solid #ccc;
	border-right:1rpx solid #ccc;
}
.voucher .voucherempty .voucherContent .rightContent .cricle {
	border:1rpx solid #ccc;
}
.voucher .voucherempty .voucherContent .rightContent .getVoucher {
	background:#ccc;
}
/*dialog*/
.dialogTitle {
	padding:40rpx;
	text-align:center;
	font-size:28rpx;
	font-weight:600;
	color:#030303;
}
.dialogContent {
	font-size:13px;
	color:#333;
	padding:0 64rpx;
}
.dialogContent>view {
	position: relative;
	margin-bottom: 20rpx;
}
.dialogContent>view text:nth-child(1) {
 	position: absolute;
 	left: -25rpx;
}

.dots {
  position: absolute;
  bottom: 20rpx;
  right: 45%;
}

.dots .item {
  width: 8rpx;
  height: 8rpx;
  background: #d8d8d8;
  border-radius: 4rpx;
  margin-right: 4rpx;
}

.dots .current {
  width: 22rpx;
  background: #47B34F;
}
.swiper-raduis  {
	height:190rpx;
	border-radius:10rpx;
	overflow:hidden;
	position:relative;
	z-index:999;
	background:#fff;
	width:100%;
}
