<movable-area class="movearea">
  <movable-view direction="vertical" y="{{390}}" inertia="{{true}}">
    <image
      src="{{data[0].imgUrl}}"
      bind:tap="handleClick"
      data-user-action='{{data[0].userAction}}'
      data-trace-id="{{traceId}}"
      data-page-id="{{pageId}}"
      data-current-page-name="{{currentPageName}}"
      data-pre-page-name='{{prePageName}}'
      class="channel_comp_ep movearea_img {{siderHide && 'hide'}}"
    />
  </movable-view>
</movable-area>