@import "/common/css/iconfont.wxss";

.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.header{
    display: flex;
    align-items: center;
    position: relative;
    z-index: 20;
}
.header_left{
    display: flex;
    align-items: center;
}
.back{
    width: 76rpx;
    height: 48rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0px 100px 100px 0px;
    display: flex;
    align-items: center;
}
.back_icon{
    width: 18rpx;
    height: 30rpx;
    margin-left: 32rpx;
    background: url('https://storage.360buyimg.com/wximg/channel/back_page.png') no-repeat left center;
    background-size: cover;
}
.title{
    color: #fff;
    font-weight: bold;
    font-size: 44rpx;
    padding-left: 16rpx;
    max-width: 200rpx;
}
.search{
    flex: 1;
    height: 60rpx;
    background: #FFFFFF;
    border-radius: 60rpx;
    margin-left: 20rpx;
    display: flex;
    align-items: center;
}
.search_icon{
    color:#D8D8D8;
    font-size:32rpx;
    padding-left:20rpx;
}
.swiper{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.49);
    padding-left: 16rpx;
}
.swiper_wrap{
    min-width: 170rpx;
}

.swiper-item{
    width: 120rpx;
}