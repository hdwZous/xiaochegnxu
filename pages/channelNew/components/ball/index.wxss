.wrap01{
    display: flex;
    width: 100%;
    /* background: linear-gradient(180deg, #FFFFFF 0%, #F6F6F6 100%); */
    padding: 0rpx 24rpx 0rpx 24rpx;
    box-sizing: border-box;
    border-radius: 12px;
    overflow: hidden;
}
.item01{
    flex:1;
    text-align: center;
    padding-top: 24rpx;
}
.img_wrap01{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 104rpx;
    height: 104rpx;
    margin: 0 auto;
    position: relative;
}
.tooltips{
    position: absolute;
    height: 38rpx;
    line-height: 38rpx;
    width: 80rpx;
    background: url('https://storage.360buyimg.com/wximg/channel/tooltips.png') no-repeat center center;
    top:-12rpx;
    left: 30rpx;
    background-size:contain;
    font-size: 20rpx;
    color: #fff;
    text-align: center;
}
.tooltips_word{
    position: relative;
    top:-4rpx;
}
.img01{
    width: 96rpx;
    height: 96rpx;
    border: 4rpx solid transparent; 
    border-radius: 50%;  
    transition: all ease 0.3s;
}
.title{
    width: 124rpx;
    height: 36rpx;
    border-radius: 26rpx;
    font-size: 24rpx;
    margin: 0 auto;
    margin-top: 16rpx;
    text-align: center;
}

/* 分类球2 */
.wrap02{
    padding-left: 0;
    display: flex;
    /* background: linear-gradient(180deg, #FFFFFF 0%, #F6F6F6 100%); */
    /* padding: 0rpx 24rpx 0rpx 24rpx; */
    box-sizing: border-box;
    border-radius: 12px;
}
.item02{
    padding-top: 24rpx;
    margin-right: 12rpx;
}
.item02:first-child{
    padding-left: 24rpx;
}
.item02:last-child{
    padding-right: 24rpx;
}

.wrap03{
   flex-wrap: wrap;
   padding-bottom: 0;
}
.item03{
    width: 140rpx;
    padding-top: 24rpx;
}

/* 分类球4 */
.container04{
    /* background:linear-gradient(180deg, #FFFFFF 0%, #F6F6F6 100%); */
    border-radius: 12px;
    overflow: hidden;
    -webkit-backface-visibility: hidden;
    -webkit-transform: translate3d(0, 0, 0);
}
.wrap04{
    flex-wrap: wrap;
    padding-bottom: 0;
    padding-left: 0rpx;
    padding-right: 0rpx;
    padding-top: 24rpx;
 }
 .item04{
    width: 148rpx;
    padding-bottom: 24rpx;
}

.bar{
    margin-top: 12rpx;
    width: 48rpx;
    height: 8rpx;
    background: #EFEFEF;
    border-radius: 4rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}
.bar_bg{
    width: 24rpx;
    height: 8rpx;
    background: #00C91C;
    border-radius: 4rpx;
    position: absolute;
    left:0;
    top: 0;
}
.scroll04{
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
}