<view class="wrap">
  <block wx:if="{{newData.length > 1}}">
    <swiper
      indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}"
      interval="{{3000}}"
      duration="{{500}}"
      circular="{{true}}"
      bindchange="handleSwiperChange">
      <block wx:for="{{newData}}" wx:key="index">
        <swiper-item>
          <view
            class="swiper-item channel_comp_ep" 
            bind:tap="handlePageJump" 
            data-user-action="{{item.userAction}}"
            data-trace-id="{{traceId}}"
            data-page-id="{{pageId}}"
            data-current-page-name="{{currentPageName}}"
            data-pre-page-name='{{prePageName}}'
            data-item="{{item}}"
            aria-label='广告图'
            aria-role='link'
          ><webp-img src="{{item.imgUrl}}" webp-img="swiper-item-img"/>
          </view>
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">
      <text class="dots_item {{currentIndex==index&&'active'}}" wx:for="{{data.data}}" wx:key="index"></text>
    </view>
  </block>
  <block wx:else>
    <view
      class="swiper-item channel_comp_ep" 
      bind:tap="handlePageJump" 
      data-user-action="{{newData[0].userAction}}"
      data-trace-id="{{traceId}}"
      data-page-id="{{pageId}}"
      data-current-page-name="{{currentPageName}}"
      data-pre-page-name='{{prePageName}}'
      data-item="{{newData[0]}}"
      aria-label='广告图'
      aria-role='link'
    ><webp-img src="{{newData[0].imgUrl}}" webp-img="swiper-item-img"/>
    </view>
  </block>
</view>
