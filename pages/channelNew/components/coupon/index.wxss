/* 一行二样式 */
.case_four {
    /* padding: 20rpx 10rpx 0; */
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    /* padding-top: 12px; */
}
.img_item{
    width: 31%;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}
.img_item:nth-child(4),.img_item:nth-child(5),.img_item:nth-child(6){
    margin-bottom: 0;
}
.img_item:nth-child(3),.img_item:nth-child(6){
    margin-right: 0;
}
.case_four .image_case {
    position: relative;
    /* margin: 0 10rpx; */
    border-radius: 12rpx;
}
.case_four .img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}
/* 券状态 */
.status_case {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    /* width: 100%; */
    height: 100%;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 12rpx;
}
.status_case .status_wrap {
    padding: 0 16rpx;
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    transform: translateY(-50%);
    box-sizing: border-box;
}
.status_case .text_case {
    width: 100%;
    text-align: center;
    font-weight: bold;
}
.status_case .text {
    min-width: 60%;
    max-width: 100%;
    display: inline-block;
    color: #282727ff;
    font-size: 26rpx;
    text-align: center;
}
.status_case .btn_case {
    text-align: right;
}
.status_case .btn_wrap {
    width: 100%;
    text-align: center;
    display: inline-block;
}
.status_case .btn {
    display: inline-block;
    background: rgba(0, 0, 0, 0.7);
    font-size: 28rpx;
    border-radius: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    padding: 5rpx 20rpx;
}
.status_case .red {
    background: #ff5843ff;
}

.adTag {
    position: absolute;
    font-size: 16rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.08);
    right: 8rpx;
    bottom: 8rpx;
  }