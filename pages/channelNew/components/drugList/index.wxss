/*一行打点*/
.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.ellipsis3 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
  
.item{
    background: #fff;
    border-radius: 24rpx;
    padding: 16rpx 16rpx 24rpx 16rpx;
    margin-bottom: 24rpx;
}
.item_content{
    display: flex;
}
.img_wrap{
    margin-right: 16rpx;
}
.img{
    width: 140rpx;
    height: 140rpx;
}
.name_wrap{
    max-width: 518rpx;
    margin-bottom: 8rpx;
}
.icon{
   display: inline-block;
   height: 28rpx;
   line-height: 28rpx;
   font-size: 20rpx;
   border-radius: 4rpx;
   padding:0 8rpx;
   margin-right: 8rpx;
}
.item_content_right{
    flex: auto;
}
.name{
    color: #333;
    font-size: 28rpx;
}
.desc{
    color: #999;
    font-size: 24rpx;
    line-height: 1.5;
    max-width: 518rpx;
}

/* 价格 */
.pirce_item{
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-top: 8rpx;
}
.price-group{
    display: flex;
    align-items: baseline;
}

.buy{
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #00CF37;
    border-radius: 26rpx;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    position: relative;
    left:-2rpx;
}

.footer{
    margin-top: 24rpx;
    display:flex;
    justify-content: space-between;
    align-items: center;
    height: 56rpx;
    line-height: 56rpx;
    font-size: 24rpx;
    padding:0 16rpx 0 24rpx;  
    background: rgba(255, 30, 25, 0.06);
    border-radius: 16rpx;
    color: #333;
    position: relative;
}
.footer_left{
    flex: 1;
}
.store_logo{
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    border-radius: 50%;
    margin-right: 8rpx;
    position: relative;
    top: -2rpx;
    border: 1rpx solid #F0F0F0;
}
.red_color{
    color: #FF1E19;
}
.red_arrow{
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: relative;
    top: -3rpx;
}
.nav_arrow{
    position: absolute;
    width: 46rpx;
    height: 16rpx;
    left: 50rpx;
    top: -12rpx;
}
.footer_right {
    color: #999;
    padding-right: 12rpx;
}
/* 热门店铺 */
.hot_stores {
    width: 700rpx;
    height: 292rpx;
    position: relative;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 40rpx;
    background-image: url(https://storage.360buyimg.com/wxmini/cash/hotstorebg.png);
    background-size: 100% auto;
    background-position: top;
    background-repeat: no-repeat;
}
.hot_stores_container {
    display: flex;
    position: absolute;
    top: 86rpx;
    left: 0;
    right: 0;
    border-bottom-left-radius: 40rpx;
    border-bottom-right-radius: 40rpx;
}
.hot_stores_single {
    width: 176rpx;
    height: 206rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}
.hot_stores_logo {
    width: 88rpx;
    height: 88rpx;
    border-radius: 100%;
    overflow: hidden;
    margin-bottom: 16rpx;
    border: 1px solid #E5E5E5;
}
.hot_stores_logo image {
    width: 100%;
    height: 100%;
}
.hot_stores_name {
    text-align: center;
    color: #333;
    font-size: 28rpx;
    width: 140rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
/* 优惠券 */
.coupon-item {
    overflow: hidden;
    margin: 10rpx 10rpx 0 0;
}
.coupon-tag {
    padding: 0 10rpx;
    position: relative;
    border-radius: 4rpx;
    font-size: 20rpx;
    white-space: nowrap;
}
.left-radio {
    position: absolute;
    width: 10rpx;
    height: 10rpx;
    left: -8rpx;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 50%;
    background: #ffffff;
}
.right-radio {
    position: absolute;
    width: 10rpx;
    height: 10rpx;
    right: -8rpx;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 50%;
    background: #ffffff;
}
.drug-banner {
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    border-radius: 24rpx;
}
.banner-image {
    height: 220rpx;
    width: 700rpx;
    margin: 0 auto;
    border-radius: 24rpx;
}
.pictext-contanier {
    display: flex;
    background-color: #fff;
    height: 136rpx;
    width: 710rpx;
    margin: 0 auto;
    align-items: center;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 24rpx;
}
.pictext {
    flex: 1;
    display: flex;
    margin-right: 48rpx;
}
.pictext-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.pictext-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 12rpx;
}
.pictext-solgon {
    font-size: 28rpx;
    color: #999;
}
.pictext-img {
    width: 96rpx;
    height: 96rpx;
}
.pictext-image {
    max-width: 96rpx;
    max-height: 96rpx;
}
.hot_stores_title-line {
    display: flex;
    align-items: center;
    width: 100%;
    border-top-right-radius: 24rpx;
    border-top-left-radius: 24rpx;
    padding-left: 16rpx;
    box-sizing: border-box;
    padding-top: 24rpx;
}
.hot_stores_title {
    font-size: 32rpx;
    color: #FF2626;
    font-family: PingFangSC-Medium, PingFang SC;
}