<view
  class="wrap">
  <view class="item ellipsis log_click_sec_category {{type==2&&'item2'}} channel_comp_ep" 
    data-name="{{item.name}}"
    data-id="{{item.tagId}}"
    wx:for="{{navArr}}" 
    wx:key="index" 
    data-index="{{index}}"
    data-item="{{item}}"
    data-trace-id='{{traceId}}'
    data-user-action="{{item.userAction}}"
    data-page-id="{{pageId}}"
    data-current-page-name="{{currentPageName}}"
    data-pre-page-name='{{prePageName}}'
    bind:tap="handleNavClick"
    style="margin-right:{{(index+1)%4==0&&0}};font-weight:{{currentIndex==index&&'bold'}};background:{{(item.isfold || !item.name) && 'transparent'}}">
    <text
      class="bg"
      style="background:{{(item.isfold || !item.name) ? 'transparent' : (currentIndex==index && config.cateBallConfig.selectedCateBgColor)}};"
    ></text>
    <view
      class="name"
      aria-label='当前选中的是{{item.name}}分类'
      aria-role='tab'
      style="color:{{!item.name?'transparent':currentIndex==index&&config.cateBallConfig.selectedCateBgColor}}"
    >{{item.name || '空'}}   
      <text
        class="dj_icon ts_next"
        wx:if="{{item.isfold}}"
        style="transform:rotate({{item.fold?90:-90}}deg)"
      ></text> 
    </view>
  </view>
</view>
