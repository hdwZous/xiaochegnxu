}

.circular-flag {
  height: 72rpx;
  width: 12rpx;
  background: #fff;
  position: absolute;
}

.circular-left {
  left: -12rpx;
}

.circular-left::after {
  content: "";
  position: absolute;
  background: #FBFBFB;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  border-bottom-right-radius: 12rpx;
}

.circular-right {
  right: -12rpx;
}

.circular-right::after {
  content: "";
  position: absolute;
  background: #FBFBFB;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  border-bottom-left-radius: 12rpx;
}