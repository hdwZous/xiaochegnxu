@import "/common/css/global";

.product-list {
  border-radius: 24rpx;
  overflow: hidden;
}

.list-header {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.tab-wrapper {
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 32rpx;
}

.tab-item {
  height: 16px;
  line-height: 16px;
  font-size: 14px;
  margin-right: 24rpx;
  position: relative;
}

.active-item {
  font-size: 16px;
}

.tab-flag {
  position: absolute;
  bottom: -6px;
  left: 50%;
  transform: translateX(-50%);
  height: 6rpx;
  width: 48rpx;
  border-radius: 4rpx;
  opacity: 0.7;
}

.product-wrapper {
  white-space: nowrap;
  height: 356rpx;
  padding: 16rpx;
  font-size: 0;
}

.product-item {
  display: inline-block;
  width: 196rpx;
  height: 356rpx;
  margin-right: 8rpx;
  border-radius: 12rpx;
  vertical-align: bottom;
}

.source-image {
  width: 196rpx;
  height: 356rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.product-info {
  padding: 8rpx 16rpx 0;
  position: relative;
}

.product-img {
  height: 164rpx;
  width: 164rpx;
  border-radius: 8rpx;
  position: relative;
}

.product-img_image {
  height: 164rpx;
  width: 164rpx;
}

.product-slogon {
  font-size: 24rpx;
  color: #666666;
  width: 170rpx;
  margin-top: 4rpx;
}

.product-tag {
  width: 164rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 0px 8rpx 0px 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-text {
  padding-top: 12rpx;
}

.product-price {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-top: 8rpx;
}

.product-name {
  padding: 8prx 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  /* white-space: normal; */
  color: #333;
}

.product-name-height {
  height: 60rpx;
  line-height: 30rpx;
}

.product-name-tag {
  display: inline-block;
  padding: 0 8rpx;
  white-space: nowrap;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 400;
  height: 28rpx;
  line-height: 28rpx;
  box-sizing: border-box;
}

.image {
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
}

.more-product {
  display: inline-block;
  height: 306rpx;
  width: 80rpx;
  position: relative;
  margin: 0 32rpx 0 16rpx;
}

.more-icon {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  height: 30rpx;
  width: 30rpx;
}

.more-text {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  font-size: 14px;
  width: 14px;
  white-space: pre-wrap;
  overflow-wrap: break-word;
  color: #666;
}

.top_left_tag{
  position: absolute;
  top:8rpx;
  left:8rpx;
  /* background: linear-gradient(90deg, #6785FF 0%, #2D56FF 100%); */
  border-radius: 4rpx;
  font-size: 20rpx;
  height: 32rpx;
  line-height: 32rpx;
  display: flex;
  align-items: center;
  padding:0 8rpx 0 4rpx;
  z-index: 1;
}
.top_left_tag-icon{
  width: 20rpx;
  height: 20rpx;
}

