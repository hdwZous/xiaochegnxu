.store-wrapper {
    -webkit-overflow-scrolling: touch;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.store-list {
    background: #fff;
    overflow: hidden;
    padding: 24rpx;
    border-radius: 24rpx;
    padding-right: 0;
}

.store-list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 24rpx;
}

.title {
    font-size: 16px;
    font-weight: 500;
    color: #333;
}

.look-more {
    font-size: 12px;
    font-weight: 400;
    color: #333;
}

.more-arrow {
    display: inline-block;
    width: 8px;
    height: 13px;
    margin-left: 10rpx;
    background-image: url("https://storage.360buyimg.com/wximg/home/home_icons.png");
    background-repeat: no-repeat;
    background-position: 0 -40px;
    -webkit-background-size: 14px;
    background-size: 45px;
    vertical-align: -2px;
}

.store-wrapper {
    white-space: nowrap;
    height: 306rpx;
    padding-top: 16rpx;
}

.store-item {
    height: 306rpx;
    width: 204rpx;
    border-radius: 12rpx;
    background: #FAFAFA;
    display: inline-block;
    margin-right: 16rpx;
    position: relative;
    text-align: center;
    font-size: 0;
    vertical-align: top;
}

.store-img {
    height: 138rpx;
    position: relative;
}
.store-img_logo {
    position: absolute;
    top: 0;
    left: 0;
    width: 176rpx;
    height: 32rpx;
    background-repeat: no-repeat;
    background-position: left;
    background-size: contain;
    z-index: 2;
}

.store-img_image {
    height: 138rpx;
    width: 204rpx;
}

.store-logo {
    height: 88rpx;
    width: 88rpx;
    border-radius: 50%;
    position: absolute;
    top: 104rpx;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    margin: 0 auto;
}
