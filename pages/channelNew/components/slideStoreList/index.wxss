.store-logo_image {
    height: 88rpx;
    width: 88rpx;
}

.round-top {
    border-radius: 12rpx 12rpx 0 0;
}

.round {
    border-radius: 50%;
}

.image {
    height: 100%;
    width: 100%;
}

.store-name {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    padding: 70rpx 16rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.store-start {
    padding-top: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.store-score {
    font-size: 20rpx;
    font-weight: 400;
    color: #FF9415;
    padding-left: 2px;
}

.store-default {
    font-size: 24rpx;
    color: #999;
}

.store-coupon {
    display: inline-block;
    margin-top: 8rpx;
    font-size: 20rpx;
    border-radius: 2px;
    padding: 0 4px;
    border: 1px solid;
}

.more-store {
    display: inline-block;
    height: 306rpx;
    width: 50px;
    position: relative;
    margin-left: 16rpx;
}

.more-icon {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    height: 30rpx;
    width: 30rpx;
}

.more-text {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    font-size: 14px;
    width: 14px;
    white-space: pre-wrap;
    overflow-wrap: break-word;
    color: #666;
}
.expand-image {
    min-width: 32rpx;
    height: 32rpx;
    background-image: url(https://storage.360buyimg.com/wxmini/newuser/pengzhangicon.png);
    background-repeat: no-repeat;
    background-size: 100% auto;
    margin-right: 6rpx;
}
.expand {
    display: flex;
    height: 32rpx;
    background: linear-gradient(142deg, #FF6963 0%, #FF4141 100%);
    border-radius: 4rpx;
    margin: 0 auto;
    align-items: center;
    margin-top: 8rpx;
    max-width: 182rpx;
    padding-right: 2rpx;
}
.expand-text {
    font-size: 22rpx;
    color: #fff;
    margin-right: 2rpx;
    min-width: 85rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.expand-price {
    font-size: 24rpx;
    color: #fff;
    font-family: regular;
    line-height: 29rpx;
}
.dj_tag {
    position: absolute;
    top: 0;
    left: 0;
}