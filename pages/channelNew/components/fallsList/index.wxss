/* 推荐店铺 */
.recommend_store{
    padding:0 24rpx;
    background: url('https://storage.360buyimg.com/wximg/channel/feed.png') no-repeat center top;
    background-size: 100% auto;
    background-color: #fff;
    margin-bottom: 16rpx;
    border-radius: 24rpx;
}
.recommend_store_title{
    padding:40rpx;
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
    text-align: center;
}
.recommend_store_list{
    display: flex;
    align-items: center;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    border-bottom: 1rpx solid #f6f6f6;
}
.recommend_store_list:first-child{
    padding-top: 0rpx;
}
.recommend_store_list:last-child{
    border-bottom: 0;
}
.recommend_store_img{
    width: 80rpx;
    height: 80rpx;
    margin-right: 16rpx;
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.08);
}
.recommend_store_name{
    max-width: 200rpx;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}
.top_left_tag{
    position: absolute;
    top:24rpx;
    left:24rpx;
    /* background: linear-gradient(90deg, #6785FF 0%, #2D56FF 100%); */
    border-radius: 4rpx;
    font-size: 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    display: flex;
    align-items: center;
    padding:0 8rpx 0 4rpx;
}
.top_left_tag-icon{
    width: 20rpx;
    height: 20rpx;
}

.cpmp_item {
    margin-bottom: 16rpx;
}

.goods-wrapper {
    margin-bottom: 16rpx;
}