.tipDialog {
  z-index: 100;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.dialog-content {
  position: relative;
  z-index: 21;
  border-radius: 16rpx;
  max-height: 50%;
  overflow-y: scroll;
  padding: 40rpx;
  width: 70%;
  color: rgb(51, 51, 51);
  background: #fff;
}

.dialog-content.showBtn {
  border-radius: 16rpx 16rpx 0 0;
}

.dialog-content .title {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.dialog-content .desc {
  margin-top: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: normal;
}

.close {
  position: relative;
  z-index: 21;
  width: 74rpx;
  height: 74rpx;
  margin-top: 60rpx;
  background: url("https://storage.360buyimg.com/wximg/bargain/close.png") no-repeat center;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}

.tipDialog .bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .7);
  z-index: 20;
}

.bean-item {
  justify-content: space-between;
  -webkit-justify-content: space-between;
  display: flex;
  display: -webkit-flex;
  padding-bottom:16rpx;
  align-items: flex-end;
}

.bean-item-line {
  border-top:1rpx solid #e8e8e8;
  margin-top:20rpx;
  margin-bottom:20rpx;
}

.bean-item-title {
  font-weight:bold;
  font-size:28rpx;
  color: #030303;
}

.bean-detail-item {
  font-size: 26rpx;
  color: #333333;
  line-height: 35rpx;
  word-break: break-all;
  width: 485rpx;
}
.bean-detail-title {
  font-size: 26rpx;
  color: #333333;
  line-height: 35rpx;
  word-break: break-all;
  min-width: 30rpx;
  max-width: 40rpx;
}

.bean-description {
  font-weight:bold;
  font-size: 19rpx;
  color: #999999;
  margin-top: 8rpx;
  line-height: 32rpx;
}
.bean-content{
  margin: 10rpx 0;
}

.bottom_btn {
  width: 70%;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  font-size: 36rpx;
  color: #47b34f;
  padding: 0 40rpx;
  border-radius: 0 0 16rpx 16rpx;
  z-index: 21;
  background: #fff;
}

.bean-item_top_tit {
  font-family: PingFangSC-Regular;
  font-size: 18px;
  font-weight: bold;
  color: rgb(51, 51, 51);
  margin-bottom: 10rpx;
  text-align: center;
}