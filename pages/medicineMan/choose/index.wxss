    height: 36rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 4rpx 8rpx 0px rgba(201, 192, 192, 0.16);
    border: 3rpx solid rgba(204, 204, 204, 1);
    box-sizing: border-box */
}

.person-info .choose {
    background: url("https://storage.360buyimg.com/wximg/medicine/choose.png") center no-repeat;
    background-size: 48rpx;
}

.person-info .info-cont .person-name {
    font-size: 28rpx;
    color: #333;
}

.person-info .info-cont .person-name view {
    margin-right: 16rpx;
}

.person-info .info-cont .born-date {
    font-size: 26rpx;
    color: #999;
    margin-top: 22rpx;
    align-items: center
}

.person-info .info-cont .born-date view {
    padding-right: 10rpx;
}

.create {
    margin: 0 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: rgba(71, 179, 79, 1);
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(71, 179, 79, 0.27);
    border-radius: 6rpx;
    font-size: 40rpx;
    color: #fff;
    text-align: center;
    margin-bottom: 16rpx;
}

.default-cont {
    margin-top: 50%;
    transform: translateY(-50%);
}