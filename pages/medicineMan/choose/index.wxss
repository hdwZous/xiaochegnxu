/* pages/medicineMan/choose/index.wxss */

@import "/common/css/global.wxss";
.page-cont {
    font-weight: 400;
    height: 100vh;
}

.person-list {
    position: relative;
}

.scroll-cont {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.item-cont {
    padding-left: 20rpx;
}

.person-list .item {
    align-items: center;
    height: 142rpx;
    border-bottom: 1rpx solid #f5f5f5;
    padding-right: 20rpx;
}

.edit {
    width: 31rpx;
    height: 31rpx;
    background: url("https://storage.360buyimg.com/wximg/medicine/edit.png") center no-repeat;
    background-size: 31rpx;
}

.person-info {
    flex: 1;
}

.person-info .icon {
    width: 44rpx;
    height: 44rpx;
    border-radius: 100%;
    margin-right: 16rpx;
}

.person-info .icon-cont {
    width: 44rpx;
    height: 44rpx;
    border-radius: 100%;
    margin-right: 16rpx;
    background: url("https://storage.360buyimg.com/wximg/medicine/noChoose.png") center no-repeat;
    background-size: 44rpx;
}

.person-info .noChoose {
