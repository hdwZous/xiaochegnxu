/*mini购物车*/

@import "/common/css/global";
.content {
  width: 100wh;
  overflow: hidden;
  height: 100vh;
}

.scrollCont {
  position: relative;
}

.scrollView {
  position: absolute;
  top: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
}

.actImg {
  width: 100%;
}

.actImg image {
  width: 100%;
  display: block;
}

.goodsListCont {
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-top: 46rpx;
  padding-bottom: 28rpx;
}

.minicart {
  position: relative;
    /*
   bottom: 0;
  width: 100%;
  z-index: 9999; */
}

.cart_ball {
  z-index: 999;
  width: 20px;
  height: 20px;
  background: red;
  border-radius: 20px;
  position: fixed;
}

.back_top {
  position: fixed;
  right: 20rpx;
  width: 96rpx;
  height: 96rpx;
  z-index: 9;
}
.back_top_img {
  width: 100%;
  height: 100%;
}

