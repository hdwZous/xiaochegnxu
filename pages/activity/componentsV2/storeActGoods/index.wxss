} */

.select {
    position: absolute;
    bottom: 14rpx;
    left: 0;
    right: 0;
}

.cart_ball {
    z-index: 999;
    width: 20px;
    height: 20px;
    background: red;
    border-radius: 20px;
    position: fixed;
}

.name-tag {
    display: inline-block;
    font-size: 20rpx;
    height: 28rpx;
    line-height: 28rpx;
    padding: 0 8rpx;
    white-space: nowrap;
    border-radius: 4rpx;
}

.go-buy {
    background-image: linear-gradient(135deg, rgb(69, 220, 109) 0%, rgb(0, 207, 55) 100%);
    border-radius: 24rpx;
    font-size: 24rpx;
    padding: 6rpx 12rpx;
    color: #FFFFFF;
}