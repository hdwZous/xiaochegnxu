.store-three {
  box-sizing: border-box;
  padding: 10rpx 24rpx;
}

.store-three .wrap-box {
  background: #fff;
  width: 100%;
  border-radius: 12px;
  box-sizing: border-box;
  padding: 24rpx;
}

.scroll-container {
  display: flex;
  height: 300rpx;
}

.closeTip {
  display: inline-block;
  max-width: 148rpx;
  height: 32rpx;
  line-height: 32rpx;
  box-sizing: border-box;
  padding: 0 8rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgb(36, 134, 255);
  background-color: rgba(36, 134, 255, 0.1)
}

.rating-box .star_number {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF9415;
  margin-left: 4rpx;
}

.rating-box .star_txt {
  color: rgb(153, 153, 153);
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
}

.coupon {
  display: inline-block;
  padding: 0 8rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  position: relative;
}

.coupon .border {
  position: absolute;
  width: 200%;
  height: 200%;
  left: 50%;
  top: 50%;
  border-width: 1px;
  border-style: solid;
  border-radius: 8rpx;
  transform-origin: center;
  -webkit-transform-origin: center;
  transform: translate(-50%, -50%) scale(0.5);
  -webkit-transform: translate(-50%, -50%) scale(0.5);
}

.log-good-three-store {
  margin-left: 8rpx;
  height: 100%;
}

.log-good-three-store .arrow {
  width: 30rpx;
  height: 30rpx;
  margin-right: 40rpx;
}

.log-good-three-store .door {
  width: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}

.scroll-container .arrow {
  width: 30rpx;
  height: 30rpx;
}

.door {
  width: 28rpx;
  color: rgb(102, 102, 102);
  text-align: center;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
}