.info {
    width: 200rpx;
    margin-top: 8rpx;
}

.info .name {
    font-size: 24rpx;
    color: #333;
    line-height: 30rpx;
}

.info .name.max {
    height: 60rpx;
}

.info .red-price {
    font-size: 28rpx;
    color: #ff5757;
    font-family: 'regular';
}

.info .base {
    font-size: 24rpx;
    text-decoration: line-through;
    color: #999999;
    font-family: 'light';
}

.sub {
    height: 66rpx;
    margin-top: 4rpx;
}

.price-group {
    flex: 1;
}

.price-group .main-price {
    font-size: 28rpx;
    line-height: 34rpx;
    font-family: regular;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.price-group .mino-price {
    font-size: 24rpx;
    line-height: 28rpx;
    font-family: light;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: 2rpx;
}

.price-group .vip-icon {
    flex: 1;
    height: 21rpx;
}

.price-group .gray-icon {
    font-size: 16rpx;
    line-height: 21rpx;
    padding-left: 10rpx;
    flex: 1;
    height: 21rpx;
    color: #fff;
}

.sub-add-img {
    width: 56rpx;
    height: 56rpx;
}

.name-tag {
    display: inline-block;
    font-size: 20rpx;
    height: 28rpx;
    line-height: 28rpx;
    padding: 0 8rpx;
    white-space: nowrap;
    border-radius: 4rpx;
    position: relative;
    top: -4rpx;
}

.go-buy {
    background-image: linear-gradient(135deg, rgb(69, 220, 109) 0%, rgb(0, 207, 55) 100%);
    border-radius: 24rpx;
    font-size: 24rpx;
    padding: 6rpx 12rpx;
    color: #FFFFFF;
}
.dd_three_banner_biz_tag {
    position: absolute;
    top: 0;
    left: 0;
}

.dd-store-msg {
    display: flex;
    margin-top: 10rpx;
    padding-top: 10rpx;
    border-top: 1rpx solid #eeeeee;
}
.dd-store-logo {
    border: 1rpx solid #E9E9E9;
    border-radius: 4prx;
    width: 28rpx;
    height: 28rpx;
    margin-right: 8rpx;
}
.dd-store-logo image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 8rpx;
}
.dd-store-name {
    width: 160rpx;
    font-size: 20rpx;
    color: #333;
}