.item {
    box-sizing: border-box;
    margin-bottom: 8rpx;
    padding: 16rpx;
    width: 232rpx;
    border-radius: 12rpx;
    display: inline-block;
    height: 420rpx;
    background: #fff;
    position: relative;
}

.item.no-padding {
    padding: 0;
}

.item .banner-img {
    width: 232rpx;
    height: 368rpx;
    border-radius: 12rpx;
}

.image {
    width: 200rpx;
    height: 200rpx;
    position: relative;
    border-radius: 8rpx;
}

.image .img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 8rpx;
}

.image .tag {
    position: absolute;
    left: 0;
    bottom: 0;
    max-width: 210rpx;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    border-radius: 0 8rpx 0 8rpx;
    color: #FFFFFF;
    font-size: 20rpx;
    padding: 0 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

