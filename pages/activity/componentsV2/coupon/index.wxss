/* 侧滑样式 */
.case_one {
    padding:10rpx 0;
}
.case_one .item {
    padding: 0 10rpx;
    border-radius: 12rpx;
}
.case_one .item:first-child {
    padding-left: 20rpx;
}
.case_one .item:last-child {
    padding-right: 20rpx;
}
.case_one .image_case {
    position: relative;
}
.case_one .img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}
/* 一行一样式 */
.case_two {
    display: flex;
    padding: 10rpx 20rpx;
}
.case_two .image_case {
    overflow: hidden;
    position: relative;
    border-radius: 12rpx;
    margin-right: 20rpx;
}
.case_two .image_case:last-child {
    margin-right: 0;
}
.case_two .img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}
.case_two .help_case {
    position: absolute;
    right: 20%;
    top: -30rpx;
    width: 128rpx;
    height: 128rpx;
}
.case_two .status_img {
    width: 100%;
    height: 100%;
}
/* 一行一带商品图样式 */
.case_three {
    padding:10rpx 0;
}
.case_three .image_case {
    position: relative;
    width: 710rpx;
    height: 210rpx;
    margin: 0 auto;
    background-image: url("https://storage.360buyimg.com/wximg/coupon/activity_coupon_bg.png");
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100% 100%;
}
.case_three .left {
    padding: 0 20rpx;
    overflow: hidden;
}
.case_three .right {
    width: 218rpx;
    text-align: center;
    align-items: center;
}
.case_three .top {
    align-items: center;
    padding: 15rpx 0;
}
.case_three .tag {
    margin-right: 8rpx;
    padding: 2rpx 8rpx;
    font-size: 20rpx;
    color: #ff0500ff;
    background: #ffd7d4;
    border-radius: 12rpx 4rpx 12rpx 4rpx;
}
.case_three .title {
    color: #333333ff;
    font-size: 24rpx;
}
.case_three .goods_case {
    width: 100rpx;
    margin: 0 auto;
    text-align: center;
}
.case_three .img {
    width: 100%;
    height: 100rpx;
}
.case_three .price {
    font-size: 28rpx;
    color: #ff1e1aff;
    line-height: 1em;
    font-weight: bold;
}
.case_three .coupon_price {
    padding-top: 17rpx;
    font-size: 52rpx;
    color: #ff1e1aff;
    font-weight: bold;
}
.case_three .coupon_rule {
    font-size: 24rpx;
    color: #666666;
}
.case_three .right_btn {
    margin: 16rpx auto 0;
    width: 152rpx;
    height: 44rpx;
    line-height: 44rpx;
    color: #ffffffff;
    font-size: 24rpx;
    text-align: center;
    background: linear-gradient(129deg, #ff6640 0%, #ff3737 100%);
    border-radius: 26rpx;
}
.case_three .goods_symbol {
    letter-spacing: -6rpx;
}

/* 一行二样式 */
.case_four {
    padding: 10rpx;
}
.case_four .image_case {
    position: relative;
    margin: 0 10rpx;
    border-radius: 12rpx;
}
.case_four .img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}
/* 券状态 */
.status_case {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 12rpx;
}
.status_case .status_wrap {
    padding: 0 16rpx;
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    transform: translateY(-50%);
    box-sizing: border-box;
}
.status_case .text_case {
    text-align: right;
}
.status_case .text {
    min-width: 60%;
    max-width: 100%;
    display: inline-block;
    color: #282727ff;
    font-size: 26rpx;
    text-align: center;
    font-weight: bold;
}
.status_case .btn_case {
    text-align: right;
}
.status_case .btn_wrap {
    width: 60%;
    text-align: center;
    display: inline-block;
}
.status_case .btn {
    display: inline-block;
    background: rgba(0, 0, 0, 0.6);
    font-size: 30rpx;
    border-radius: 30rpx;
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    padding: 5rpx 20rpx;
}
.status_case .red {
    background: #ff5843ff;
}
.mask-btn{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.6);
}
.mask-btn .mask-text{
    position: absolute;
    right: 20%;
    top: 50%;
    width: 122rpx;
    height: 50rpx;
    transform: translate(0,-50%);
    background: #000000;
    border-radius: 26rpx;
    opacity: 0.6;
    font-size: 28rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 50rpx;
    text-align: center;
}
.adTag {
  position: absolute;
  font-size: 16rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.08);
  right: 8rpx;
  bottom: 8rpx;
}
.height100 {
  height: 100%;
}
.coupon-img {
  height: 100%;
  margin-right: 20rpx;
}
.coupon-img:last-child {
  margin-right: 0;
}