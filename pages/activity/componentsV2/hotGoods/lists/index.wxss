.wrap {
  margin: 0 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.wrap.tpl1 {
  padding: 5rpx;
}

.wrap .card {
  border: 1px solid rgba(255, 87, 87, 0.2);
  border-radius: 12rpx;
  padding: 20rpx;
}

.wrap .left {
  position: relative;
  margin-right: 20rpx;
  width: 240rpx;
  height: 240rpx;
  border-radius: 8rpx;
  background: #F4F4F4;
}

.wrap .tag {
  position: absolute;
  left: 0;
  bottom: 0;
  max-width: 80%;
  height: 36rpx;
  line-height: 36rpx;
  color: #FFFFFF;
  font-size: 22rpx;
  text-align: center;
  padding: 0 10rpx;
  border-radius: 8rpx 0 8rpx 0;
  background: #FF5757;
  z-index: 1;
}

.wrap .left .hotImg {
  width: 240rpx;
  height: 240rpx;
  border-radius: 8rpx;
}

.wrap .right {
  flex: 1;
  font-size: 0;
  overflow: hidden;
}

.wrap .name {
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  margin-right: 4rpx;
  overflow: hidden;
}

.wrap .name .name-hot {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
  margin-top: 5rpx;
}

.wrap .name .name-txt {
  flex: 1;
}

.wrap .brief {
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  color: #FF5757;
  text-align: center;
  font-size: 28rpx;
  position: relative;
  margin-left: 2rpx;
}

.wrap .brief::after {
  position: absolute;
  content: '';
  width: 200%;
  height: 200%;
  left: 50%;
  top: 50%;
  border-radius: 40rpx;
  border: 1px solid #FF5757;
  transform: translate(-50%, -50%) scale(0.5);
  -webkit-transform: translate(-50%, -50%) scale(0.5);
  transform-origin: center;
  -webkit-transform-origin: center;
}

.sub {
  flex: 1;
  margin-top: 5rpx;
}

.price-group {
  flex: 1;
}

.price-group .main-price {
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.price-group .mino-price {
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.price-group .price-big {
  font-size: 50rpx;
  font-family: 'regular';
}

.hotGoods-weight {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
}

.price-group .price-small {
  font-family: 'light';
}

.price-group .vip-icon {
  flex: 1;
  height: 21rpx;
}

.price-group .gray-icon {
  font-size: 16rpx;
  line-height: 21rpx;
  padding-left: 10rpx;
  flex: 1;
  height: 21rpx;
  color: #fff;
}

.wrap .tag_img {
  margin-left: 10rpx;
  width: 64rpx;
  height: 22rpx;
}

.wrap .size_big {
  font-size: 40rpx;
}

.wrap .size_small {
  font-size: 24rpx;
}

.wrap .red {
  color: #FF5757
}

.wrap .blue {
  color: #007AC9;
}

.wrap .gray {
  color: #999999;
  text-decoration: line-through;
}

.wrap .button-btn {
  width: 86rpx;
  height: 86rpx;
}

.wrap .disabled {
  background: #CCCCCC;
}

.wrap .line {
  height: 1px;
  margin: 20rpx 0;
}

.wrap .store_name {
  color: #999999;
  font-size: 22rpx;
  -webkit-align-items: center;
  align-items: center;
}

.wrap .icon_store {
  margin-right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  background: url("data:image/png;base64,") no-repeat center;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}