.classify {
    box-sizing: border-box;
    position: relative;
    background: #fff;
    font-size: 0;
    border-radius: 12rpx;
}

.classify.tabFixd {
    border-radius: 0;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.scroll-wrap {
    flex: 1;
    overflow-x: hidden;
}

.tabs-items {
    /* flex-grow放大比例 flex-shrink缩小比例 */
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: auto;
    padding: 24rpx 20rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    position: relative;
}

.tabs-items .tabs-item-txt {
    font-size: 28rpx;
    line-height: 36rpx;
}

.tabs-items .location {
    width: 24rpx;
    height: 32rpx;
    display: inline-block;
    position: relative;
    overflow: hidden;
    margin-right: 4rpx;
}

.tabs-items .location .location-img {
    width: 28rpx;
    height: 32rpx;
    position: absolute;
    top: 0;
    left: -1px;
}

.tabs-items.actived {
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
}

.tabs-right {
    width: 96rpx;
    height: 84rpx;
    position: relative;
}

.ty-icon {
    position: absolute;
    top: 0;
    left: -24rpx;
    width: 96rpx;
    height: 84rpx;
}

.flei-icon {
    position: absolute;
    right: 0;
    top: 0;
    width: 96rpx;
    height: 84rpx;
    background-image: url("https://storage.360buyimg.com/wximg/activity/arrow-down.png");
    background-repeat: no-repeat;
    background-size: 24rpx 12rpx;
    background-position: 42rpx center;
}

.classify .bg {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 99;
    background: rgba(0, 0, 0, 0.7);
}

.popup {
    position: absolute;
    top: 0;
    /* width: 702rpx; */
    box-sizing: border-box;
    padding: 24rpx;
    padding-bottom: 8rpx;
    box-shadow: 0px 6rpx 10rpx 0px rgba(0, 0, 0, 0.04);
    border-radius: 24rpx;
    background: #fff;
    z-index: 100;
}

.popup.yetTop {
    left: 0;
    width: 100%;
    border-radius: 0 0 24rpx 24rpx;
}

.popup .head .title {
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
    line-height: 34rpx;
}

.popup .head .ts-up {
    width: 48rpx;
    height: 24rpx;
    background-image: url("https://storage.360buyimg.com/wximg/activity/arrow-up.png");
    background-repeat: no-repeat;
    background-size: 24rpx 12rpx;
    background-position: right top;
}

.popup .contain {
    margin-top: 38rpx;
    margin-right: -30rpx;
}

.popup .contain .category {
    width: 200rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    background: #F6F6F6;
    border-radius: 26rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    margin-bottom: 28rpx;
    margin-right: 28rpx;
    position: relative;
}

.popup.yetTop .contain .category {
    width: 212rpx;
}

.category_txt {
    display: inline-block;
    max-width: 170rpx;
}

.popup .contain .category.actived {
    background: transparent;
}

.popup .contain .category.actived::after {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    left: 50%;
    top: 50%;
    border-width: 1px;
    border-style: solid;
    border-radius: 52rpx;
    transform: translate(-50%, -50%) scale(0.5);
    -webkit-transform: translate(-50%, -50%) scale(0.5);
    transform-origin: center;
    -webkit-transform-origin: center;
}

.d-flex {
    display: -webkit-box !important;
    display: -webkit-flex !important;
    display: -ms-flexbox !important;
    display: flex !important;
}

.flex-row {
    -webkit-box-orient: horizontal !important;
    -webkit-box-direction: normal !important;
    -webkit-flex-direction: row !important;
    -ms-flex-direction: row !important;
    flex-direction: row !important;
}

.justify-content-around {
    -webkit-justify-content: space-around !important;
    -ms-flex-pack: distribute !important;
    justify-content: space-around !important;
}

.justify-content-between {
    -webkit-box-pack: justify !important;
    -webkit-justify-content: space-between !important;
    -ms-flex-pack: justify !important;
    justify-content: space-between !important;
}

.align-items-center {
    -webkit-box-align: center !important;
    -webkit-align-items: center !important;
    -ms-flex-align: center !important;
    align-items: center !important;
}

.flex-wrap {
    -webkit-flex-wrap: wrap !important;
    -ms-flex-wrap: wrap !important;
    flex-wrap: wrap !important;
}

/*一行打点*/

.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}