.flat-wrap {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: -58px;
  z-index: 19;
}

.flat-tips {
  margin-bottom: 4rpx;
}

.tips-detail {
  height: 27px;
  padding: 0 12px;
  color: #fff;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 17px;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.38);
  background: rgba(0, 0, 0, 0.7);
  border-radius: 15px;
}

.tips-detail .close {
  padding-left: 5px;
}

.tips-detail .close .ts_close {
  font-size: 11px !important;
}

.down-box {
  width: 27px;
  height: 11px;
  background-image: url('https://storage.360buyimg.com/wximg/storewin/black-arrow.png');
  background-size: 27px 11px;
  background-repeat: no-repeat;
  background-position: center;
  opacity: 0.8;
}

.flat-down {
  width: 27px;
  height: 12px;
}

.scroll-wrap {
  height: 58px;
  background: #FFFFFF;
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.2);
  border-radius: 29px;
  box-sizing: border-box;
  transition: width 250ms linear;
  transform-origin: center;
  overflow-x: hidden;
  transform: translate3d(0,0,0);
}

.scroll-wrap .flat-box {
  height: 58px;
  padding: 0 8px;
  border-radius: 29px;
}

.flat-box .store_icon {
  width: 42px;
  height: 42px;
  border: 1px solid rgba(0,0,0,0.08);
  border-radius: 50%;
  font-size: 0;
}

.detail {
  width: 251px;
  margin-left: 8px;
  padding-right: 4px;
  font-size: 12px;
  text-align: left;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 17px;
}

.detail .green {
  color: #00CF37;
}

.detail .ts_next.green {
  font-size: 12px;
}

.shin-bottom {
  flex-shrink: 0;
  flex-grow: 0;
  width: 1px;
  height: 30px;
  background: #F6F6F6;
  border-radius: 1px;
  margin: 0 8px;
}

.mg-block {
  flex-shrink: 0;
  flex-grow: 0;
  width: 8px;
  height: 100%;
}