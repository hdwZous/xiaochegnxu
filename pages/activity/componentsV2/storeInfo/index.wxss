.storeinfo {
  position: fixed;
  top: 0;
  z-index: 21;
  width: 100%;
  height: 60px;
  background: #fff;
  box-sizing: border-box;
  padding: 0 24rpx;
}

.left-box .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.detail {
  font-size: 0;
}

.detail .name {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #333333;
}

.detail .direction {
  font-size: 24rpx;
  line-height: 30rpx;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: #666666;
  margin-top: 8rpx;
}

.right-box {
  width: 132rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: linear-gradient(135deg, #00BE34 0%, #00CB1E 100%);
  border-radius: 26rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}