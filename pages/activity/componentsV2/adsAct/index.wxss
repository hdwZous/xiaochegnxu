.ads_wrap {
    padding: 10rpx 0;
    font-size: 20rpx;
    color: black;
}
.ads_case {
    margin-bottom: 20rpx;
}
.ads_case:last-child {
    margin-bottom: 0;
}
.ads_case_item {
    margin-right: 10rpx;
    background: transparent;
    border-radius: 12rpx;
}
.ads_case_item:last-child {
    margin-right: 0;
}
.ads_img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}
.active_odd {
    animation: action 3s linear infinite;
}
.active_even {
    animation: action 3s linear infinite 1.5s;
}
@keyframes action {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(0.9);
    }
    100% {
        transform: scale(1);
    }
}