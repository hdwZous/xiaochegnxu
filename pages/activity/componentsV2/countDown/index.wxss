.countdown {
    padding: 10rpx 0;
    /* padding-bottom: 20rpx; */
}

.countdown .count-box {
    margin: 0 24rpx;
    height: 72rpx;
    border-radius: 12rpx;
    font-size: 0;
}

.count-box .adWords {
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
}

.count-box .times {
    margin: 0 8rpx;
}

.count-box .times .times-box {
    display: inline-block;
    width: 28rpx;
    height: 40rpx;
    border-radius: 4rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 36rpx;
    font-family: 'regular';
    font-weight: 400;
}

.count-box .times .times-box:first-child {
    margin-right: 8rpx;
}