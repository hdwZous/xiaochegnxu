.wrap {
    position: relative;
    padding: 10rpx 0;
}
.swiper {
    margin: 0 auto;
    height: 186rpx;
}
.dot {
    position: absolute;
    left: 50%;
    bottom: 40rpx;
    transform: translateX(-50%);
}
.item {
    margin: 0 4rpx;
    width: 12rpx;
    height: 6rpx;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 8rpx;
}
.active {
    width: 16rpx;
    height: 6rpx;
    border-radius: 8rpx;
    background: rgba(71, 179, 79, 0.8);
}
