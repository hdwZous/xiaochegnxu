@import '../../common/css/reset.wxss';
@import '../../../../common/css/regular.wxss';

.row {
  box-sizing: border-box;
  width: 710rpx;
  height: 200rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0px 4rpx 16rpx 0px rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 0;
  transition: all 1s linear;
  -webkit-transition: all 1s linear;
  margin-bottom: 16rpx;
  position: relative;
}
.row.open {
  height: auto;
}

.row .price-wrap {
  width: 200rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 20rpx;
  font-family: regular;
  font-weight: 400;
  color: rgba(255, 87, 87, 1);
}

.price-wrap .price .price-sign {
  font-size: 28rpx;
}

.price-wrap .price .price-discount {
  font-size: 22rpx;
}

.price-wrap .price .price-num {
  font-size: 64rpx;
}

.price-wrap .price-use {
  font-size: 22rpx;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: rgba(51, 51, 51, 1);
}

.row .detail-wrap {
  flex: 1;
  box-sizing: border-box;
  padding-top: 24rpx;
  margin-right: 24rpx;
}

.detail-wrap .detail-site {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  margin-bottom: 24rpx;
}

.detail-wrap .detail-times {
  font-size: 22rpx;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  margin-bottom: 24rpx;
}

.detail-wrap .detail-space-line {
  border-top: 1rpx dashed #ECECEC;
}

.detail-wrap .des {
  padding-top: 10rpx;
  height: 36rpx;
  overflow: hidden;
  position: relative;
}
.detail-wrap .des.open {
  height: auto;
  padding-bottom: 24rpx;
}

.detail-wrap .des .arraw-down {
  width: 22rpx;
  height: 14rpx;
  position: absolute;
  right: 0;
  top: 18rpx;
  transition: all .5s;
}
.detail-wrap .des .arraw-down.open {
  transform: rotate(180deg);
}

.detail-wrap .des .des-row {
  width: 390rpx;
  white-space: pre-wrap;
  font-size: 22rpx;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: rgba(153, 153, 153, 1);
  /* line-height: 28rpx; */
  line-height: 36rpx;
}

