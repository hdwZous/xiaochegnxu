@import "/common/css/global.wxss";
.default-error-page {
  height: 100vh;
  background: #f8f8f8;
}
.live-box {
  background:#F6F6F6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.live-item {
  width: 670rpx;
  padding: 24rpx 16rpx;
  background:#fff;
  border-radius:24rpx;
  margin-top: 24rpx;
  position: relative;
}
.title {
  width:670rpx;
  height:44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:36rpx;
  font-weight:bold;
  color:#333;
  line-height:44rpx;
}
.photo-wrap {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.market-img-wrap {
  width:466rpx;
  height:372rpx;
  border-radius:16rpx;
  position: relative;
  background: #f6f6f6;
}
.market-img {
  width: 100%;
  height: 100%;
  border-radius:16rpx;
}
.live-status {
  height: 36rpx;
  background:rgba(0,0,0,0.5);
  border-radius: 8rpx 2rpx 8rpx 2rpx;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  justify-content: start;
}
.live-status .logo {
  width: 42rpx;
  height: 36rpx;
  border-radius:8rpx 0px 0px 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.live-icon {
  width: 28rpx;
  height: 28rpx;
}
.live-text {
  font-size:24rpx;
  color: #fff;
  padding: 0 8rpx;
}
.good-img-wrap {
  width:182rpx;
  display: flex;
  flex-direction: column;
}
.img-wrap {
  width:182rpx;
  height:182rpx;
  border-radius:16rpx;
  position: relative;
  margin-bottom: 8rpx;
}
.good-img {
  width:100%;
  height:100%;
  border-radius:16rpx;
}
.bag {
  width:100%;
  height: 100%;
  border-radius:16rpx;
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.icon-bag {
  width:48rpx;
  height:60rpx;
  border-radius: 5rpx;
}
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 16rpx;
}
.btn text {
  font-size: 24rpx;
  color: #333;
}
.icon-arrow-right {
  width: 12rpx;
  height: 20rpx;
  margin-left: 8rpx;
}

.mask {
  width:182rpx;
  height:182rpx;
  border-radius:16rpx;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 182rpx;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
}
.store-name {
  font-size:28rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 28rpx;
  display: flex;
  align-items: center;
}
.store-name image {
  width:32rpx;
  height:32rpx;
  margin-right: 8rpx;
}
.store-name .name {
  overflow: hidden;
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sub-wrap {
  position: absolute;
  right: 16rpx;
  bottom: 24rpx;
  width: 182rpx;
  height: 68rpx;
}
.sub-btn {
  width: 182rpx;
  height: 68rpx;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  z-index: 100;
  left: 0;
  top: 0;
}
.subscribe--live-player-subscribe__btn {
  font-size: 28rpx !important;
  font-weight: bold;
  width:182rpx !important;
  height:68rpx !important;
  line-height: 68rpx !important;
  text-align: center !important;
  border-radius:8rpx !important;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  background:#00CF38 !important;
}
.subscribe--live-player-notSubscribe {
  background:#00CF38 !important;
}
.subscribe--live-player-hasSubscribe  {
  background:linear-gradient(to right, #FF6461 , #FF2A26) !important;
}
.end-bottom {
  padding-top: 40rpx;
  color: #333;
}