.pageCont image {
    display: block;
    width: 100%;
    background: #c72536;
}

.imgCont {
    position: absolute;
    top: 0rpx;
    bottom: 140rpx;
    width: 100%;
}

.shareImg {
    position: fixed;
    bottom: 0;
    width: 100%;
    padding: 0;
    border: 0;
    outline: 0;
    border-radius: 0;
    display: block;
}

.shareImg image {
    height: 138rpx;
}

.shareImg::after {
    border: 0;
    border-radius: 0;
}

.scrollCont {
    position: absolute;
    top: 20rpx;
    left: 30rpx;
    height: 44rpx;
    width: 75%;
    border-radius: 44rpx;
    background: rgba(0, 0, 0, .1);
    /* z-index: 99; */
}

.swiper {
    height: 44rxpx;
}

.scrollCont image {
    width: 44rpx;
    height: 44rpx;
    border-radius: 44rpx;
}

.scrollCont .scrollItem {
    display: flex;
    display: -webkit-flex;
    justify-content: flex-start;
    align-items: center;
}

.scrollCont .scrollItem .text {
    text-indent: 10rpx;
    color: #fff;
    font-size: 26rpx;
}

.ruleImg image {
    height: 1380rpx;
}