/* pages/shareCard//index.wxss */
.share_content{
    padding-bottom: 200px;
}
.share_bg{
    padding: 20rpx;
    min-height: 100rpx;
    /* border-bottom: 1rpx solid gray; */
}
.share_title{
    color:#333;
    font-size:40rpx;
}
.share_btn{
    position: fixed;
    bottom: 20rpx;
    left: 0;
    right: 0;
    width: 100%;
}
.share_msg{
    color: rgba(0, 0, 0, .3);
    font-size: 30rpx;
    margin-top: 10px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-decoration: underline
}
.share_image{
    width: 250rpx;
    height: 200rpx;
    background-color: gray;
}