.wrap {
    position: relative;
    padding-top: 20rpx;
}
.swiper {
    margin: 0 auto;
    width: 710rpx;
    height: 190rpx;
    border-radius: 24rpx;
}
.img-wrapper {
    width: 100%;
    height: 100%;
    border-radius: 24rpx;
    background: #DADADA;
}
.image {
    width: 100%;
    height: 100%;
    border-radius: 24rpx;
}
.dot {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 20rpx;
}
.dot_item {
    margin: 0 5rpx;
    width: 6rpx;
    height: 6rpx;
    border-radius: 50%;
    background: rgba(255,255,255,.8);
}
.dot_active {
    width: 12rpx;
    height: 6rpx;
    border-radius: 20rpx;
    background: rgba(71,179,79,1);
}
