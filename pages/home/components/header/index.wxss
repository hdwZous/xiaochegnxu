.wrap {
    position: relative;
    padding-bottom: 6px;
    box-sizing: border-box;
}

.title_box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding-bottom: 4px;
}

.text {
    font-size: 18px;
    color: #ffffff;
    text-align: center;
}

.title_search {
    padding: 0 20rpx;
    align-items: center;
}

.title_icon_search {
    color: #000000;
    padding-right: 10px;
    font-size: 18px;
}

.title_search .icon_search {
    font-size: 14px;
    padding-right: 10rpx;
    color: #999999;
}

.title_search .input_box {
    height: 100%;
    padding: 0 30rpx;
    background: rgba(246, 246, 246, 1);
    border-radius: 17px;
    align-items: center;
}

.title_search .input {
    color: #999999;
    font-size: 28rpx;
    padding-top: 2rpx;
}

.title_search .placeholder {
    font-size: 14px;
    color: #999999;
}

.location {
    height: 32px;
    align-items: center;
}

.location_txt {
    max-width: 100%;
    display: inline-block;
    position: relative;
    padding: 0 15px 0 20px;
    box-sizing: border-box;
    font-size: 16px;
    color: #ffffff;
    vertical-align: -6px;
}

.location_left {
    padding-left: 20rpx;
    overflow: hidden;
}

.icon_location1 {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    color: #ffffff;
    font-size: 18px;
}

.icon_arrow {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    margin-top: 1px;
    color: #ffffff;
    font-size: 6px;
}

.location_right {
    justify-content: flex-end;
    align-items: center;
    padding-right: 20rpx;
}

.location_right .right_appExclusive {
  width: 22px;
  height: 25px;
  background-image: url('https://s.360buyimg.com/wximg/detention/entry.png');
  background-repeat: no-repeat;
  background-size: 22px 22px;
  background-position: left 2px;
  margin-right: 10px;
  position: relative;
}
.location_right .ad_pos{
    width: 300rpx;
    height: 68rpx;
    margin: 6rpx 20rpx 0 0 ;
}
.location_right .ad_pos .img{
    width: 100%;
    height: 100%;
}
.location_right .right_appExclusive::after {
  content: '';
  position: absolute;
  width:6px;
  height:6px;
  background:rgba(255,87,87,1);
  border-radius:50%;
  border:1px solid rgba(255,255,255,1);
  right: -1px;
  top: 0;
}

.icon_announcement {
    color: #ffffff;
    font-size: 20px;
    margin-top: 4rpx;
}

.search {
    padding: 4px 20rpx 0;
}

.search .icon_search {
    font-size: 14px;
    padding-right: 10rpx;
    color: #999999;
}

.search .input_box {
    padding: 0 30rpx;
    height: 32px;
    background: #ffffff;
    border-radius: 17px;
    align-items: center;
}

.search .input {
    color: #999999;
    font-size: 28rpx;
    padding-top: 2rpx;
}

.search .placeholder {
    font-size: 14px;
    color: #999999;
}
.hot_words_wrap {
    margin-top: 7px;
    padding: 0 20rpx;
}
.hot_words_case_item {
    margin-right: 16rpx;
    font-size: 24rpx;
    padding: 0 16rpx;
    border-radius: 20rpx;
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
}