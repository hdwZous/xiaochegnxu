.fission{
  width: 100%;
  height: 100rpx;
  padding-top: 8rpx;
}
.item-cont{
  width: 702rpx;
  margin: 0 24rpx;
  border-radius: 24rpx;
  justify-content: center;
  background-color: #fff;
}
.item-wrapper {
  position: relative;
}
.item-wrapper:first-child {
  border-radius: 24rpx 0 0 24rpx;
}
.item-wrapper:first-child .img {
  border-radius: 24rpx 0 0 24rpx;
}
.item-wrapper:last-child {
  border-radius: 0 24rpx 24rpx 0 !important;
}
.item-wrapper:last-child .img {
  border-radius: 0 24rpx 24rpx 0 !important;
}
.fission-item {
  position: relative;
  font-size: 0;
  line-height: 0
}
.bubbleBox{
  position: absolute;
  top: -8rpx;
  left: 88rpx;
  height: 28rpx;
}
.bubble {
  height: 28rpx;
  position: relative;
}
.words {
  display: block;
  /* position: absolute;
  top: 0rpx;
  left: 0rpx; */
  padding: 0rpx 12rpx;
  height: 28rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 24rpx;
  max-width: 86rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 28rpx;
  background: linear-gradient(to right, #FF6461, #FF2A26);

}
.triangle {
  position: absolute;
  display: block;
  width: 20rpx;
  height: 7rpx;
  bottom: -19%;
  left: 20%;

}


.three {
  height: 100rpx;
