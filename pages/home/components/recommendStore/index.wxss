@import "/common/css/regular";

.case {
  padding: 24rpx 0;
  background: #ffffff;
  border-radius: 24rpx;
}

.recommend_title {
  padding-left: 12px;
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  align-items: center;
}

.more {
  padding-right: 12px;
  font-family: "light";
  font-size: 24rpx;
  color: #333333;
  background-size: 14rpx;
  font-weight: normal;
  display: flex;
  align-items: center;
}

.more_arrow {
  display: inline-block;
  width: 8px;
  height: 13px;
  margin-left: 6rpx;
  background-image: url("https://storage.360buyimg.com/wximg/home/home_icons.png");
  background-repeat: no-repeat;
  background-position: 0 -40px;
  -webkit-background-size: 14px;
  background-size: 45px;
  vertical-align: -2px;
}

.wrap {
  white-space: nowrap;
  height: 260rpx;
  background: #ffffff;
}

.item {
  display: inline-block;
  padding: 0 4px;
  text-align: center;
  height: 100%;
}

.item_no_scroll {
  display: inline-block;
  width: 33.33%;
  text-align: center;
  height: 100%;
}

.item:first-child {
  padding-left: 12px;
}

.item:last-child {
  padding-right: 12px;
}

.sub_item {
  width: 188rpx;
  height: 260rpx;
  display: inline-block;
  border-radius: 6px;
  background: #f6f6f6;
  vertical-align: top;
  position: relative;
  overflow: hidden;
}

.image {
  height: 128rpx;
  border-radius: 6px 6px 0px 0px;
  background: #dadada;
}

.image .img {
  width: 100%;
  height: 100%;
  border-radius: 6px 6px 0px 0px;
}

.logo {
  display: inline-block;
  position: relative;
  margin-top: -56rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  background: #dadada;
  position: relative;
}

.logo .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.name {
  padding: 0 20rpx;
  margin-top: 8rpx;
  line-height: 1em;
  color: #333333;
  font-size: 28rpx;
  font-weight: 500;
}

.coupon {
  padding: 0 4rpx;
  display: inline-block;
  height: 28rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28rpx;
  border-radius: 4rpx;
  margin-top: 8rpx;
}

/* 膨胀 */
.expasion {
  /* width: 172rpx; */
  height: 32rpx;
  margin: 8rpx auto 0;
  border-radius: 4rpx;
  position: relative;
  box-sizing: border-box;
  padding-left: 32rpx;
  display: inline-flex;
}

.expasion .titile_img {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.expasion_text {
  font-size: 22rpx;
  color: #fff;
  height: 32rpx;
  line-height: 32rpx;
  max-width: 112rpx;
  padding-left: 8rpx;
}

.expasion_price {
  font-size: 24rpx;
  color: #fff;
  height: 32rpx;
  line-height: 32rpx;
  font-family: regular;
  padding-right: 2rpx;
}

/* 膨胀 */
.name.text {
  padding: 0 24rpx;
  height: 24rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 24rpx;
  margin-top: 8rpx;
}

.store_star {
  justify-content: center;
  margin-top: 8rpx;
}

.store_tab {
  margin: 0rpx 0 16rpx;
}

.store_tab_item {
  margin-left: 24rpx;
  color: rgb(51, 51, 51);
  font-size: 24rpx;
  padding: 4rpx 24rpx;
  background: rgb(246, 246, 246);
  border-radius: 24rpx;
}

.fresh_good_tag {
  position: absolute;
  width: 120rpx;
  height: 24rpx;
  line-height: 24rpx;
  left: 50%;
  bottom: 0;
  text-align: center;
  transform: translate(-50%, 50%);
  -webkit-transform: translate(-50%, 50%);
}

.tag_img {
  height: 100%;
  border-radius: 6rpx;
}

.active {
  color: rgb(0, 207, 55);
  font-weight: bold;
}

.default_img_case {
  text-align: center;
}

.default_img {
  display: inline-block;
  width: 250rpx;
  height: 250rpx;
  margin-top: -30rpx;
}

.default_txt {
  text-align: center;
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
}

.biz_tag_wrap {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 0;
}

.home_close_tip {
  margin: 8rpx;
  margin-bottom: 0;
  color: rgb(36, 134, 255);
  padding: 2rpx 4rpx 4rpx 4rpx;
  background-color: rgba(36, 134, 255, .1);
  font-size: 20rpx;
}