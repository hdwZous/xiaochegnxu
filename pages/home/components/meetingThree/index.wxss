.meeting-container {
  width: 100%;
}
.title {
  font-size: 40rpx;
  color: #FF1E19;
  text-align: center;
}
.meeting-swiper-wrapper {
  width: 100vw;
  height: 192rpx;
  padding: 4rpx 0 16rpx;
}
.img-wrapper {
  width: 212rpx;
  height: 164rpx;
  margin: 0 auto;
  margin-top: 28rpx;
  -webkit-transition: transform 200ms;
  transition: transform 200ms;
  transform: scale(1);
  -webkit-transform: scale(1);
  transform-origin: center bottom;
}
.meeting-swiper-wrapper .img {
  display: block;
  width: 100%;
  height: 100%;
}
.bigger {
  width: 248rpx;
  height: 192rpx;
  margin-top: 0;
}