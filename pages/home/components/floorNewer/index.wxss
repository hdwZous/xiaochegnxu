.newer-container {
  position: relative;
}
.newer-container .img {
  display: block;
  margin: 0 auto;
}
.newer-container .top_img{
  position: absolute;
  left: 50%;
  top: 0;
  z-index: 5;
  transform: translate(-50%,0);
}
.foods-container{
  margin: 0 auto;
  background: linear-gradient(180deg, #FF5B76 0%, #FF3355 100%);
  border-radius: 0px 0px 12px 12px;
  position: relative;
  margin-top: -24rpx;
}
.foods-container .box{
  padding: 24rpx 16rpx;
  box-sizing: border-box;
  margin: 0 auto;
}
.foods-container .box .list_box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background: linear-gradient(178deg, #FF526F 0%, #FF3355 100%);
}
.food-item{
  display: inline-flex;
  flex-direction: column;
  width: 216rpx;
  height: 382rpx;
  border-radius: 16rpx;
  background: #fff;
  margin-bottom: 10rpx;
} 

.food-item .pic-box{
  width: 216rpx;
  height:216rpx;
  position: relative;
}
.food-item .pic-box .img{
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0 ;
}
.food-item .pic-box .tag{
  position: absolute;
  padding: 4rpx 0;
  left: 8rpx;
  top: 0;
  width: 56rpx;
  height: 64rpx;
  line-height: 24rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  box-sizing: border-box;
}
.name-text{
  padding: 0 4px 0;
  box-sizing: border-box;
  height: 64rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
  line-height: 32rpx;
  margin-bottom: 4rpx;
}
.price-text1{
  padding: 0 8rpx 0;
  height: 34rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 34rpx;
  font-family: light;
}
.up_clickbox{
  margin-bottom: 4rpx;
}
.price-text2{
  height: 48rpx;
  display: flex;
  justify-content: center;
}
.price-text2 .imgbtn{
  width: 204rpx;
  height: 48rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}
.price-text2 .left{
  float: left;
  height: 48rpx;
  font-size: 34rpx;
  font-weight: 400;
  line-height: 44rpx;
  max-width: 128rpx ;
  font-family: light;
}
.price-text2 .right{
  float: right;
  width: 14px;
  height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #FF2957;
  line-height: 48rpx;
}
.btnbox{
  height: 72rpx;
  display: flex;
  justify-content: center;
  margin-top: 14rpx;
}
.btnbox .gobtn{
  height: 72rpx;
  width: 310rpx;
  animation: mybtn 0.8s infinite;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  line-height: 72rpx;
  border-radius: 36rpx;
  padding: 0 80rpx;
  box-sizing: border-box;
}

@-webkit-keyframes mybtn {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(.8);
  }

  100% {
    transform: scale(1);
  }
}