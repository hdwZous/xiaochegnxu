.scroll_container{
    position: relative;
    background: linear-gradient(to bottom, #fff, #f6f6f6);
   
}
.isFirstFloorBorderRadius{
    border-radius: 32rpx 32rpx 0 0;
}
.scroll_view {
   
    background-color: #00CF37;
}
.scroll_case {
    -webkit-overflow-scrolling: touch;
   
}
.img-box{
    width: 100%;
    height: 336rpx;
    position: absolute;
    z-index: 15;
}
.scroll_case_1{
    height: 180rpx;
}
.scroll_case_2{
    height: 320rpx;
}
.scroll_case_3{
    height: 460rpx;
}
.scroll_case_4{
    height: 600rpx;
}

.row_box{
    padding-top: 24rpx;
}
.case {
    flex-wrap: nowrap;
    height: 320rpx;
    box-sizing: border-box;
}
.process_case {
    position: absolute;
    left: 50%;
    bottom: 8rpx;
    width: 48rpx;
    height: 8rpx;
    transform: translate(-50%,0);
    background: #ebebeb;
    border-radius: 4rpx;
}
.process_case_3 {
    position: absolute;
    left: 50%;
    bottom: 8rpx;
    width: 72rpx;
    height: 8rpx;
    transform: translate(-50%,0);
    background: #ebebeb;
    border-radius: 4rpx;
}
.process {
    position: absolute;
    left: 0;
    top: 0;
    height: 8rpx;
    background: linear-gradient(
        270deg,
        rgba(0, 190, 52, 1) 0%,
        rgba(0, 203, 30, 1) 100%
    );
    border-radius: 4rpx;
    transition: left ease-out 0.1s;
}
.item {
    width: 100%;
    flex-wrap: wrap;
    align-content: flex-start;
    position: relative;
}
.row_item{
    width: 100%;
    flex-wrap: wrap;
    align-content: flex-start;
    position: absolute;
}
.row_up{
    left: 0;
    top: 0;
    z-index: 20;
}
.row_down{
    left: 0;
    bottom: 8rpx;
    z-index: 20;
}

.item_two {
    flex-wrap: wrap;
    align-content: flex-start;
}
.ball_case {
    position: relative;
    margin-bottom: 16rpx;
}
.ball_img {
    position: relative;
    margin: 0 auto;
    width: 84rpx;
    height: 84rpx;
}
.img {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    border-radius: 50%;
}
.ball_name {
    margin-top: 8rpx;
    text-align: center;
    font-size: 24rpx;
    line-height: 32rpx;
}
.ball_tag {
    position: absolute;
    /* top: -12rpx;
    left: 50%; */
    /* top: 14rpx;
    right: 11%; */
    left: 50rpx;
    bottom: 100rpx;
    color: #ffffff;
    font-size: 20rpx;
    line-height: 28rpx;
    padding: 0 10rpx;
    background: #ff1e19;
    border-radius: 16rpx;
    border: 2rpx solid rgba(255, 255, 255, 1);
    box-sizing: border-box;
    white-space: nowrap;
    animation: tagAnimation 6.3s infinite linear;
    transform: scale(1) rotate(-30deg);
}
@keyframes tagAnimation {
    0% {
        transform: scale(0) rotate(0);
    }
    5.6% {
        transform: scale(1.1) rotate(-3deg);
    }
    7.8% {
        transform: scale(1) rotate(3deg);
    }
    10.57% {
        transform: scale(1) rotate(0);
    }
    30.9% {
        transform: scale(1) rotate(0);
    }
    32.55% {
        transform: scale(1.1) rotate(0);
    }
    35.84% {
        transform: scale(1) rotate(0);
    }
    63.49% {
        transform: scale(1) rotate(0);
    }
    66.7% {
        transform: scale(1.1) rotate(0);
    }
    70% {
        transform: scale(0) rotate(0);
    }
    100% {
        transform: scale(0) rotate(0);
    }
}
.white-border-triangle {
    width: 20rpx;
    height: 8rpx;
    position: absolute;
    bottom: -8rpx;
    left: 20%;
    z-index: 3;
}
