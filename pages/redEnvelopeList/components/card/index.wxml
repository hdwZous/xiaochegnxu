<view class="box">
    <view class="wrap">
        <view class="top_border"></view>
        <view class="case"
              data-to="{{couponData.to}}"
              data-params="{{couponData.params}}"
              bindtap="clickCard"
        >
            <view class="radio_left"></view>
            <view class="radio_right"></view>
            <view class="flex-row">
                <view class="flex-none left">
                    <view class="price">{{couponData.amount}}<text class="symbol">{{couponData.amountUnit}}</text></view>
                </view>
                <view class="flex-auto mid">
                    <view class="name">{{couponData.couponTitle}}</view>
                    <view class="desc">{{couponData.couponTypeDesc}} {{couponData.limitRule}}</view>
                    <view class="time">{{couponData.avilableDate}}</view>
                </view>
                <!--<View class="flex-none right"></View>-->
            </view>
        </view>
        <view class="desc_case">
            <view class="description {{toggle ? '' : 'ellipsis'}}"
                  bindtap="clickDesc"
            >
                <view class="arrow {{toggle ? 'animate' : ''}}"></view>
                <block wx:if="{{toggle}}">
                    <view wx:for="{{couponData.couponDetailArr}}"
                          wx:for-item="subItem"
                          wx:for-index="index"
                          wx:key="{{subItem.id}}"
                    >{{subItem}}</view>
                </block>
                <block wx:else>
                    {{couponData.couponDetail}}
                </block>
            </view>
        </view>
    </view>
</view>