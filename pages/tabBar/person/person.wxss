.vip-card-wrap {
  border-radius: 0 0 50% 50%;
  height: 128rpx;
  position: absolute;
  bottom: 22rpx;
  left: -120rpx;
  right: -120rpx;
  color: #FFD9B5;
  font-size: 24rpx;
  overflow: hidden;
  z-index: 1;
}
.vip-card {
  border-radius: 24rpx 24rpx 0 0;
  background-repeat: no-repeat;
  display: flex;
  justify-content: space-between;
  align-items: center;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
  position: absolute;
  bottom: 0;
  left: 150rpx;
  right: 150rpx;
  padding: 0 30rpx 10rpx 0;
}
.vip-tip-wrap {
  display: flex;
  align-items: center;
}
.swiper {
  width:280rpx;
  height:32rpx;
}
.vip-divider {
  margin: 0 22rpx 0 8rpx;
  width: 1px;
  height: 10px;
  background: rgba(153, 153, 153, 0.3);
}
.icon-vip {
  width: 140rpx;
  height: 96rpx;
}
.btn-vip {
  display: flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  -webkit-border-radius: 24rpx;
  position: relative;
}
.icon-vip-all {
  width: 20rpx;
  height: 18rpx;
  margin-left: -6rpx;
  align-self: center;
}

button {
  padding-left: 0 !important;
  padding-right: 0 !important;
  border-radius: 4rpx !important;
  background: transparent !important;
}

button:after {
  border: 0;
}


.person-content-wrap {
  margin: 24rpx;
  margin-top: -58px;
  position: relative;
}
.person-content-wrap.logined {
  margin-top: 0;
}

.my-wallet-wrap {
  border-radius: 24rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 30rpx 30rpx;
}
.icon-my-wallet {
  width: 64rpx;
  height: 64rpx;
}
.wallet-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  position: relative;
}
.icon-wallet-divider {
  width: 20rpx;
  height: 100%;
  position: absolute;
  right: -32rpx;
}
.wallet-item-wrap {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex: 1;
  padding-left: 32rpx;
}
.wallet-item-tip {
  display: flex;
  align-items: center;
  height: 64rpx;
  font-size: 40rpx;
  font-family: JDDJ-1-Regular, JDDJ-1;
  font-weight: bold;
  color: #333;
  position: relative;
}
.redot {
  background-color: #ff0000;
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  position: absolute;
  top: 6rpx;
  right: -6rpx;
}
.redot.wallet {
  top: 10rpx;
  right: -14rpx;
}

.busi-list {
  font-size: 24rpx;
  color: #333;
}
.busi-item {
  border-radius: 24rpx;
  background: #FFFFFF;
  background-repeat: no-repeat;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
  padding: 26rpx 24rpx;
  margin-top: 24rpx;
}
.busi-item.activity-item {
  padding: 10rpx 20rpx 18rpx;
}
.busi-item-title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
}
.busi-module-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.busi-module-around {
  justify-content: space-around;
}
.busi-module-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
  width: 25%;
  position: relative;
}
.busi-item.activity-item .busi-module-item {
  margin-top: 28rpx;
}
  .icon-busi-wrap {
  position: relative;
}
.icon-busi-module {
  width: 64rpx;
  height: 64rpx;
}
.icon-activity-module {
  width: 106rpx;
  height: 106rpx;
  margin-top: 42rpx;
  margin-bottom: -6rpx;
}
.icon-feeds {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 292rpx;
  height: 44rpx;
  margin-top: 15px;
}

.add_mp_wrap {
  background: #fff;
  padding: 0rpx 20rpx 0 30rpx;
}

.add_mp {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 0;
  justify-content: space-between;
}
