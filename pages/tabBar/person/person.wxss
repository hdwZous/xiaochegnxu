@import "/common/css/global";

.person-page-bg {
  background-color: #f6f6f6;
  overflow-x: hidden;
}
.person_wrap {
  padding-top: 28%;
  position: relative;
  height: 200rpx;
  background-repeat: no-repeat;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}
.user-name {
  display: flex;
  line-height: 48rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}
.user-name.vplus {
  color: #453F3A;
}
.icon-v {
  width: 104rpx;
  height: 48rpx;
  margin-left: 12rpx;
}
.btn-set {
  cursor: pointer;
  background: rgba(0, 0, 0, 0.08);
  border-radius: 20rpx;
  display: inline-block;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #EDFFEA;
  padding: 6rpx 20rpx;
  margin-top: 16rpx;
}
.btn-set.vplus {
  color: #453F3A;
}
.bg-card-bottom {
  width: 100%;
  height: 48rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
}

.person_con {
  padding-left: 30rpx;
  position: absolute;
  left: 0;
  top: 146rpx;
  width: 100%;
  align-items: center;
  box-sizing: border-box;
}

.avatar {
  background-color: #FFFFFF;
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}

.avatar>image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
  border-radius: 50%;
}

.info {
  margin: 0 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.login {
  display: flex;
  align-items: center;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  font-size: 32rpx;
}
.icon-right {
  display: inline-block;
  height: 15rpx;
  width: 15rpx;
  border-bottom: 1px solid #fff;
  border-right: 1px solid #fff;
  transform: rotate( -45deg );
  transform-origin: center center;
}

