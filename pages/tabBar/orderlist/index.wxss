@import "/common/css/global.wxss";
@import "./public.wxss";

#order-container {
  background-color: #f6f6f6;
  min-height: 100vh;
}

.load-tip {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #666;
  margin: 10rpx 0;
  text-align: center;
}

.demo-item {
  margin: 16rpx 20rpx;
}

.store-wrap {
  background: #f6f6f6;
  padding: 32rpx 0 10rpx 20rpx;
}

.title {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-left: 20rpx;
}

.btn-all {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FEFFFE;
  border-radius: 16rpx;
  color: #666666;
  padding: 24rpx 0;
  margin: 16rpx 20rpx 40rpx;
}

.icon_arrow {
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
  background: url("https://storage.360buyimg.com/wximg/order/order_right_arrow.png") center no-repeat;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}

.icon-feeds {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 292rpx;
  height: 44rpx;
  margin-top: 15px;
}

.new-default {
  padding: 20rpx 20rpx 60rpx 20rpx;
  background: #FFF;
  border-radius: 16rpx;
  margin: 0rpx 20rpx;
}

.mgT40 {
  margin-top: 40rpx;
}

.seat {
  width: 100%;
  height: 72rpx;
}

/* 827到店新增tab */
.orderTab {
  position: relative;
  z-index: 1;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  display: flex;
}

.orderTab .tab {
  margin-left: 20rpx;
}

.checked {
  font-size: 40rpx;
}


.qrcode {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 240rpx;
  height: 240rpx;
}
.codeCenter{
  right: 0;
  margin: auto;
}

.barcode {
  position: absolute;
  right: 0;
  height: 240rpx;
  width: 80rpx;
}