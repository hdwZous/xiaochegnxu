<view class="flex-col wrap">
  <view class="section flex-auto">
    <scroll-view class="scroll" scroll-y>
      <view style="padding: 20rpx 0">
        <!-- 团信息 -->
        <group title="{{data.title}}" time="{{data.remainTime}}" group="{{data.userInfoList}}" btnTxt="{{data.btnText}}" failReason="{{data.failReason}}" tips="{{data.tips}}" txtBtn="{{data.txtBtn}}" bind:pageEvent="widgetEvent"></group>
      </view>
      <!-- 商品信息 -->
      <goods skuName="{{data.skuName}}"
             fromPositon="groupBuy-paySuccess"
             groupType="{{data.deliveryType}}"
             skuImgUrl="{{data.skuImgUrl}}"
             basicPrice="{{data.basicPrice}}"
             actPrice="{{data.actPrice}}"
             totalMembers="{{data.totalMembersDesc}}"
             storeName="{{data.orgName}}"
             buriedObj="{{recommendObj}}"
             groupMode="{{data.groupMode}}">
      </goods>
      <!-- 自提拼团流程 -->
      <view class="pregroup" wx:if="{{data.deliveryType==1}}">
        <view class="pregroup-title flex-row">
          <view class="title">自提拼团流程</view>
        </view>
        <view class="pregroup-rule">
          <image src="https://storage.360buyimg.com/wximg/groupbuy/openGroup_store.png" mode="widthFix"/>
        </view>
      </view>
      <!-- 拼团流程 -->
      <view class="pregroup" wx:elif="{{data.deliveryType==2}}">
        <view class="pregroup-title flex-row">
          <view wx:if="{{data.groupMode == 1}}" class="title">团长代收流程</view>
          <view wx:else class="title">拼团流程</view>
        </view>
        <view class="pregroup-rule">
          <image wx:if="{{data.groupMode == 1}}" src="https://storage.360buyimg.com/wximg/groupbuy/deliver_to_leader_rule.png" mode="widthFix"/>
          <image wx:else src="https://storage.360buyimg.com/wximg/groupbuy/openGroup_default.png" mode="widthFix"/>
        </view>
      </view>
      <!-- 预售团流程 -->
      <view class="pregroup" wx:elif="{{data.deliveryType==3}}">
        <view class="pregroup-title flex-row">
          <view class="title">预售团流程</view>
        </view>
        <view class="pregroup-rule">
          <image wx:if="{{data.groupMode == 1}}" src="https://storage.360buyimg.com/wximg/groupbuy/presell_deliver_to_leader_rule.png" mode="widthFix"/>
          <image wx:else src="https://storage.360buyimg.com/wximg/groupbuy/presale.png" mode="widthFix"/>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="flex-none flex-row btn">
    <view wx:if="{{data.groupMode == 1}}" class="flex-auto" bindtap="goToGroupBuyDetail">查看拼团</view>
    <view wx:else class="flex-auto" bindtap="goToOrderDetail">查看订单</view>
    <view class="border_right flex-none" bindtap="goToHome">进店领优惠</view>
  </view>
  <!-- 新人优惠券弹层 -->
  <newperson-pop 
  bind:pageBuried="pageBuried"
  showPop="{{showPop}}"
  isLogin="{{isLogin}}" 
  buriedObj="{{recommendObj}}"
  fromPostion="grounpBuy-orderInfo"
  />
  <!-- 分享到朋友圈弹层 -->
  <share-to-moments-dialog showDialog="{{showShare2MomentsDialog}}" imgSrc="{{momentsShareImgSrc}}" otherData="{{savePicDialogReportData}}" fromPostion="grounpBuy-orderInfo"></share-to-moments-dialog>
  <!-- 分享到微信弹层 -->
  <share-to-wx-dialog showDialog="{{showShare2WxDialog}}" bind:share2Moments="share2Moments" fromPostion="grounpBuy-orderInfo"></share-to-wx-dialog>
</view>