@import "../../../common/css/global";
page {
    background: #f4f4f4;
}

.wrap {
    height: 100vh;
}

.wrap .section {
    position: relative;
}

.wrap .scroll {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.wrap .btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #FFFFFF;
    color: #333333;
    font-size: 36rpx;
}

.wrap .border_right {
    border-right: 1rpx solid #E8E8E8;
    width: 67%;
    background: linear-gradient(270deg, rgba(243, 33, 37, 1) 0%, rgba(253, 130, 29, 1) 100%);
    color: #fff;
}


/* 预售团 */

.pregroup {
    margin: 20rpx;
    padding: 30rpx 20rpx 40rpx;
    border-radius: 12rpx;
    background: #fff;
    -webkit-box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
    box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
}

.pregroup-title {
    align-items: baseline;
}

.pregroup-title .title {
    font-size: 28rpx;
    color: #333333
}

.pregroup-rule image {
    width: 606rpx;
    height: 142rpx;
    display: block;
    margin: 40rpx auto 0
}