<view class="wrap" catchtap="elementTracker">
    <view class="pageCont flex-col">
        <!-- tab -->
        <view class="tab  flex-none flex-row">
            <view class="flex-auto" data-index="1" bindtap="clickTab">
                <view class="txt {{currentTab==1 ? 'active' : ''}}">
                    <text>老带新团</text>
                </view>
            </view>
            <view class="flex-auto item" data-index="2" bindtap="clickTab">
                <view class="txt {{currentTab==2 ? 'active' : ''}}">
                    <text>超值优惠团</text>
                </view>
            </view>
        </view>
        <view class="section flex-auto" wx:if="{{!showEmpty}}">
            <!-- 老带新团 -->
            <block wx:for="{{oldInviteNewList}}" wx:if="{{currentTab==1}}" wx:for-item="item" wx:for-index="index" wx:key="oldInvite{{index}}">
                <old-invite-new-order recommendObj="{{recommendObj}}" bind:pageEvent="onListHandle" data='{{item}}' />
            </block>
            <block wx:if="{{currentTab==2}}" wx:for="{{valueGroupList}}" wx:for-item="item" wx:for-index="index" wx:key="value{{index}}">
                <!-- 超值优惠团 -->
                <valueOrder recommendObj="{{recommendObj}}" bind:pageEvent='onListHandle' data='{{item}}' />
            </block>
            <!-- 底部提示 -->
            <view class="load-tip">{{loadTip}}</view>
        </view>
        <block wx:else>
            <new-default type="{{type}}" tips="{{tips}}" btnText="{{btnText}}" bind:defaultBtnEvent="onDefaultBtnEvent" fromPostion="grounpBuy-grounpOrder"></new-default>
        </block>
    </view>
    <!-- 分享到微信弹层 -->
    <share-to-wx-dialog showDialog="{{showShare2WxDialog}}" bind:share2Moments="share2Moments" buriedObj="{{recommendObj}}"></share-to-wx-dialog>
    <!-- 分享到朋友圈弹层 -->
    <share-to-moments-dialog showDialog="{{showShare2MomentsDialog}}" imgSrc="{{momentsShareImgSrc}}" otherData="{{savePicDialogReportData}}"></share-to-moments-dialog>
</view>