<navigation navTitle="{{'京东到家'}}" bgColor="{{'#ffffff'}}" color="{{'black'}}" buriedObj="{{recommendObj}}" fromPostion="grounpBuy-join"></navigation>
<!-- 返回app -->
<back-to-app />
<view wx:if="{{showPage}}" class="flex-col wrap">
  <view class='section flex-auto'>
    <scroll-view class="scroll flex-col" scroll-y>
      <view>
        <view style="padding: 20rpx 0">
          <!-- 商品信息 -->
          <goods skuName="{{data.skuName}}"
                 fromPositon="groupBuy-join"
                 groupType="{{data.deliveryType}}"
                 groupMode="{{data.groupMode}}"
                 skuImgUrl="{{data.skuImgUrl}}"
                 basicPrice="{{data.basicPrice}}"
                 actPrice="{{data.actPrice}}"
                 totalMembers="{{data.totalMembersDesc}}"
                 storeName="{{data.orgName}}"
                 promotionId="{{data.promotionId}}"
                 orgCode="{{data.orgCode}}"
                 storeId="{{data.storeId}}"
                 skuId="{{data.skuId}}"
                 buriedObj="{{recommendObj}}"
                 bind:pageEvent="goodsComponentEvent"></goods>
        </view>
        <!-- 团信息 -->
        <group title="{{data.title}}" time="{{data.remainTime}}" failReason="{{data.failReason}}" group="{{data.userInfoList}}" btnTxt="{{data.btnTxt}}" btnType="{{data.btnType}}" bind:pageEvent="widgetEvent"></group>
        <!-- 关注门店 -->
        <view wx:if="{{showAttentionModal}}">
          <attention-store storeId="{{data.storeId}}" recommendObj="{{recommendObj}}" />
        </view>
      </view>
      <!-- 自提拼团流程 -->
      <view class="pregroup" wx:if="{{data.deliveryType==1}}">
        <view class="pregroup-title flex-row">
          <view class="title">自提拼团流程</view>
        </view>
        <view class="pregroup-rule">
          <image src="https://storage.360buyimg.com/wximg/groupbuy/joinGroup_store.png" mode="widthFix"/>
        </view>
      </view>
      <!-- 拼团流程 -->
      <view class="pregroup" wx:elif="{{data.deliveryType==2}}">
        <view class="pregroup-title flex-row">
          <view wx:if="{{data.groupMode == 1}}" class="title">团长代收流程</view>
          <view wx:else class="title">拼团流程</view>
        </view>
        <view class="pregroup-rule">
          <image wx:if="{{data.groupMode == 1}}" src="https://storage.360buyimg.com/wximg/groupbuy/deliver_to_leader_rule.png" mode="widthFix"/>
          <image wx:else src="https://storage.360buyimg.com/wximg/groupbuy/joinGroup_default.png" mode="widthFix"/>
        </view>
      </view>
      <!-- 预售团流程 -->
      <view class="pregroup" wx:elif="{{data.deliveryType==3}}">
        <view class="pregroup-title flex-row">
          <view class="title">预售团流程</view>
          <view class="pregroup-time">
            该批预售起始发货时间:
            <text class="red">{{data.deliveryBeginTime}}</text>
          </view>
        </view>
        <view class="pregroup-rule">
          <image wx:if="{{data.groupMode == 1}}" src="https://storage.360buyimg.com/wximg/groupbuy/presell_deliver_to_leader_rule.png" mode="widthFix"/>
          <image wx:else src="https://storage.360buyimg.com/wximg/groupbuy/joinGroup_pre.png" mode="widthFix"/>
        </view>
      </view>
      <!-- 推荐商品 -->
      <view wx:if="{{data.recommendList&&data.recommendList.length>0}}" class='recommendGood flex-auto'>
        <view class='recommendTitle'>劲爆推荐</view>
        <view class='flex-row goodCont'>
          <block wx:for="{{data.recommendList}}" wx:for-item="recommendItem" wx:key="index">
            <recommend-good goodInfo="{{recommendItem}}" bind:pageEvent="recommendEvent" />
          </block>
        </view>
      </view>
      
    </scroll-view>
  </view>
  <view class="flex-none btn" bindtap="goToHome">
    <view class='flex-row btnTxt'>
      <text>进店领优惠</text>
      <image src='https://storage.360buyimg.com/wximg/groupbuy/next_333.png'></image>
    </view>
  </view>
  <!-- 分享到朋友圈弹层 -->
  <share-to-moments-dialog showDialog="{{showShare2MomentsDialog}}" imgSrc="{{momentsShareImgSrc}}" otherData="{{savePicDialogReportData}}" fromPostion="grounpBuy-join"></share-to-moments-dialog>
  <!-- 分享到微信弹层 -->
  <share-to-wx-dialog showDialog="{{showShare2WxDialog}}" bind:share2Moments="share2Moments" buriedObj="{{recommendObj}}" fromPostion="grounpBuy-join"></share-to-wx-dialog>
</view>