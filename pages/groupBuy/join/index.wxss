@import "../../../common/css/global";
page {
    background: #f4f4f4;
}

.wrap {
    height: 100vh;
}

.wrap .section {
    position: relative;
}

.wrap .scroll {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.wrap .btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #333;
}

.btnTxt {
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
}

.btnTxt image {
    width: 10rpx;
    height: 20rpx;
    margin-left: 10rpx;
    display: block;
}

.recommendGood {
    padding: 0 14rpx;
    background: #fff;
    margin-top: 20rpx;
}

.goodCont {
    flex-wrap: wrap;
    justify-content: space-between;
}

.recommendGood .recommendTitle {
    padding: 30rpx 0;
    font-size: 36rx;
    color: #333;
    font-weight: bold;
}

.pre-cont {
    background: #fff;
    margin: 20rpx 20rpx 0rpx;
}


/* 预售团 */

.pregroup {
    margin-top: 20rpx;
    background: #fff;
    padding: 30rpx 20rpx 40rpx;
    margin: 20rpx 20rpx 0;
    box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
    -webkit-box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
}

.pregroup-title {
    align-items: baseline;
}

.pregroup-title .title {
    font-size: 28rpx;
    color: #333333
}

.pregroup-title .pregroup-time {
    font-size: 24rpx;
    color: #999999;
    margin-left: 10rpx;
}

.pregroup-title .pregroup-time .red {
    color: #ff5757
}

.pregroup-rule image {
    width: 606rpx;
    height: 142rpx;
    display: block;
    margin: 40rpx auto 0
}