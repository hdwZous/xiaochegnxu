@import "/common/css/global.wxss";
.goodStore {
    background: #fff;
    padding-left: 20rpx;
    padding-bottom: 32rpx;
}

.goodStore .goodNameCont {
    padding-top: 30rpx;
}

.goodStore .goodNameCont .groupName {
    background: linear-gradient(135deg, rgba(254, 106, 72, 1), rgba(255, 63, 63, 1));
    border-radius: 16rpx 2rpx 16rpx 2rpx;
    font-size: 22rpx;
    color: #fff;
    width: 84rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    position: relative;
    top: 10rpx;
}

.goodStore .goodNameCont .goodName {
    font-size: 32rpx;
    color: #333;
    padding-left: 10rpx;
    font-weight: bold;
}

.goodStore .storeNameCont {
    padding-top: 30rpx;
    align-items: center;
}

.goodStore .storeNameCont image {
    display: block;
    width: 32rpx;
    height: 32rpx;
    background: #ccc;
    border-radius: 32rpx;
}

.goodStore .storeNameCont .storeName {
    color: #333;
    font-size: 26rpx;
    padding-left: 10rpx;
}