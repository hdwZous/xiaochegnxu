@import "/common/css/global.wxss";

.scroll {
  position: absolute;
  top: 0;
  width: 100%;
  bottom: 0;
  background: #F5F5F5;
}

.item {
  background: #fff;
  justify-content: center;
  margin-bottom: 20rpx;
  padding-bottom: 25rpx;
}

.item_title_wrap {
  flex: 1;
  align-items: center;
}

.item_title {
  color: #333333;
  font-size: 32rpx;
  line-height: 32rpx;
  background: #fff;
  padding-left: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 25rpx;
  font-weight: bold;
}

.item_title_arrow image {
  width: 20rpx;
  height: 20rpx;
}

.item_status_going {
  color: #FF5757;
  font-size: 28rpx;
  line-height: 28rpx;
  align-self: center;
  padding-right: 25rpx;
}

.item_status_success {
  color: #282828;
  font-size: 28rpx;
  line-height: 28rpx;
  align-self: center;
  padding-right: 25rpx;
}

.item_status_failed {
  color: #9E9E9E;
  font-size: 28rpx;
  line-height: 28rpx;
  align-self: center;
  padding-right: 25rpx;
}

.item_create_time {
  color: #666666;
  font-size: 24rpx;
  line-height: 24rpx;
  padding-left: 20rpx;
}

.middle {
  margin-top: 35rpx;
}

.placeholder {
  flex: 1;
}

.item_img_zone {
  padding-left: 20rpx;
  position: relative;
  align-items: center;
}

.item_img {
  width: 100rpx;
  height: 100rpx;
}

.item_total_member_desc {
  height: 32rpx;
  background: linear-gradient(45deg, rgba(254, 106, 72, 1) 0%, rgba(255, 63, 63, 1) 100%);
  border-radius: 16rpx 2rpx 16rpx 2rpx;
  letter-spacing: 2px;
  line-height: 32rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding-left: 12rpx;
  padding-right: 12rpx;
  position: absolute;
  bottom: 0rpx;
}

.item_price_zone {
  color: #333333;
  font-size: 24rpx;
  padding-right: 25rpx;
  align-self: center;
  justify-content: center;
  align-items: flex-end;
}

.item_group_price_prefix {
  color: #FF5757;
  font-size: 22rpx;
  align-self: center;
}

.item_group_price {
  color: #FF5757;
  font-size: 36rpx;
  align-self: center;
  font-weight: bold;
}

.item_basic_price_prefix {
  color: #999999;
  font-size: 22rpx;
  text-decoration: line-through;
  align-self: center;
}

.item_basic_price {
  color: #999999;
  font-size: 26rpx;
  text-decoration: line-through;
  align-self: center;
}

.middle_divider {
  background: #F5F5F5;
  height: 2rpx;
  padding-left: 20rpx;
  padding-right: 4rpx;
  margin: 30rpx 0rpx;
  margin-left: 20rpx;
}

.item_action_btn {
  width: 160rpx;
  height: 60rpx;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 60rpx;
  background: #FF5757;
  text-align: center;
  margin-right: 25rpx;
  align-self: center;
  border-radius: 4rpx;
  padding: 0rpx;
}

.item_people_time_info {
  padding-left: 20rpx;
  color: #333333;
  font-size: 24rpx;
  line-height: 60rpx;
}

.item_people_time_info .divider {
  width: 4rpx;
  height: 20rpx;
  background: #f5f5f5;
  margin-left: 18rpx;
  margin-right: 18rpx;
  align-self: center;
}

.item_left_time {
  margin-top: 15rpx;
}

button {
  padding: 0;
  margin: 0;
  background: #fff;
}

button::after {
  border: none;
  outline: none;
}