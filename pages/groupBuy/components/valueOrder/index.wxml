<!-- 列表内容 -->
<view class="container order-list-container">
  <view class="List">
    <view class="header">
      <view class="storeName log_enterstore" bindtap="enterStore" data-store-id="{{item.storeId}}" data-org-code="{{item.orgCode}}" data-sku-id="{{item.skuId}}" data-promotion-id="{{item.promotionId}}">
        {{item.storeName}}
        <image src="https://storage.360buyimg.com/wximg/groupbuy/next-step.png"></image>
      </view>
      <view class="status">
        <view wx:if="{{item.status == 1}}">待支付</view>
        <view wx:if="{{item.status == 2}}">待成团</view>
        <view wx:if="{{item.status == 3}}">拼团成功</view>
        <view wx:if="{{item.status == 4}}" class="fail">拼团失败</view>
      </view>
    </view>
    <view class="content" bindtap="toOrderDetail" data-order-id="{{item.orderId}}" data-group-mode='{{item.groupMode}}'>
      <view class="left goodsImg">
        <view class="group_tips">{{item.totalMembers}}人团</view>
        <image src="{{item.skuImgUrl}}" mode="aspectFit"></image>
      </view>
      <view class="right goodsMsg">
        <view class="skuPrice">¥{{item.totalPrice}}</view>
        <view class="totalNum">共1件</view>
        <view class="flags flex-row">
          <view class="collection" wx:if="{{item.groupMode == 1}}">团长代收</view>
          <view class="pre-flag" wx:if="{{item.deliveryType == 3}}">预售团</view>
          <view class="self-tag" wx:if="{{item.deliveryType == 1}}">到店自提</view>
          <view class="to-home" wx:if="{{item.deliveryType==2||item.deliveryType==3}}">送货到家</view>
        </view>
      </view>
    </view>
    <view class="footer">
      <view class="left">
        <view class="groupMsg" wx:if="{{item.status == 2}}">
          <view>{{item.totalMembers}}人团</view>
          <view class="line"></view>
          <view>还差{{item.leftMembers}}人</view>
        </view>
        <view class="groupMsg left-time" wx:if="{{item.status == 2}}">
          成团剩余时间：{{item.hour|| '00'}}:{{item.minute || '00'}}:{{item.second || '00'}}
        </view>
        <view class="groupMsg" wx:else>{{item.submitDateDesc}}</view>
      </view>
      <view class="right">
        <view class="welcome log_share" wx:if="{{item.status == 2}}" bindtap="showShare" data-deliver_type="{{item.deliveryType}}" data-group_type="{{item.groupMode}}" data-type="1" data-sku-id="{{item.skuId}}" data-org-Code="{{item.orgCode}}" data-store-Id="{{item.storeId}}" data-trade-name="{{item.skuName}}" data-order-id="{{item.orderId}}" data-group-id="{{item.groupCode}}" data-group-type="{{item.groupMode}}" data-from="collection">
          邀请参团
        </view>
        <view class="pay to_pay" wx:elif="{{item.status == 1}}" data-type="2" bindtap="rePay"  data-deliver_type="{{item.deliveryType}}" data-group_type="{{item.groupMode}}" data-order-id="{{item.orderId}}" data-group-mode="{{item.groupMode}}" data-group-code="{{item.groupCode}}" data-sku-id="{{item.skuId}}" data-org-Code="{{item.orgCode}}" data-store-Id="{{item.storeId}}" data-trade-name="{{item.skuName}}" data-group-Mode="{{item.groupMode}}">
          立即付款
        </view>
        <view class="noceMore log_more" bindtap="noceMore"  data-deliver_type="{{item.deliveryType}}" data-group_type="{{item.groupMode}}" data-type="2" data-sku-id="{{item.skuId}}" data-org-Code="{{item.orgCode}}" data-store-Id="{{item.storeId}}" data-trade-name="{{item.skuName}}" data-order-id="{{item.orderId}}" data-group-id="{{item.groupCode}}" data-group-Mode="{{item.groupMode}}" wx:else>
          再团一个
        </view>
      </view>
    </view>
  </view>
</view>