<view class="wrap">
  <view class="case">
    <rich-text class="title" nodes="{{title}}"></rich-text>
    <view class="time" wx:if="{{timeStr}}">
      <text>{{timeStr}}</text>
      后结束
    </view>
    <view class="time" wx:if="{{failReason}}">
      <text>{{failReason}}</text>
    </view>
    <scroll-view class="scroll" scroll-x wx:if="{{showGroup}}">
      <view class="group flex-row" style="-webkit-justify-content: {{group.length > 3 ? 'left' : 'center' }}">
        <view class="item  {{item.leader === 1?'headImg':'member'}} flex-none" wx:for="{{group}}" wx:for-item="item" wx:for-index="index" wx:key="group{{index}}">
          <image class="img" src="{{item.imgUrl||item.nickHeadUrl||'https://storage.360buyimg.com/wximg/groupbuy/member.png'}}"></image>
          <view class="leader_case" wx:if="{{item.leader === 1}}">团长</view>
        </view>
      </view>
    </scroll-view>
    <block wx:if="{{btnTxt}}">
      <button class="btn" open-type="share" wx:if="{{btnType === 'share'}}">{{btnTxt}}</button>
      <!-- 老带新-上报formId -->
      <form wx:elif="{{btnType === 'formId'}}" bindsubmit="clickBtn" report-submit="{{'true'}}" class="start-group">
        <button formType="submit" class="btn">{{btnTxt}}</button>
      </form>
      <view class="btn" wx:else bindtap="clickBtn">{{btnTxt}}</view>
    </block>
    <view class="txt_btn" wx:if="{{txtBtn}}" bindtap="clickTxtBtn">{{txtBtn}}</view>
    <view class="tips" wx:if="{{tips}}">{{tips}}</view>
  </view>
</view>