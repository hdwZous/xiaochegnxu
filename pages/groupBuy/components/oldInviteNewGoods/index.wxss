@import "/common/css/global.wxss";
.group-item {
    padding: 0 20rpx;
    background: #ffffff;
}

.group-item .group-cont {
    padding: 26rpx 0 28rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.group-item:last-child .group-cont {
    border: none
}

.group-cont .good-img {
    margin-right: 20rpx;
    position: relative;
}

.group-cont .good-img,
.group-cont .good-img image {
    width: 240rpx;
    height: 240rpx;
    border-radius: 8rpx;
    /* overflow: hidden; */
}

.group-cont .good-img .group-name {
    position: absolute;
    top: 0;
    left: 0;
    width: 94rpx;
    height: 40rpx;
    background: linear-gradient(45deg, rgba(254, 106, 72, 1) 0%, rgba(255, 63, 63, 1) 100%);
    border-radius: 8rpx 2rpx 8rpx 2rpx;
    font-size: 22rpx;
    color: #ffffff;
    line-height: 20rpx;
    display: inline-block;
    z-index: 9;
    text-align: center;
    line-height: 40rpx
}


/*  */

.group-right {
    flex: 1
}

.good-store .good-name {
    font-size: 32rpx;
    color: #333333
}

.good-store .store-name {
    align-items: center;
    margin-top: 10rpx;
}

.good-store .store-name image {
    width: 20rpx;
    height: 20rpx;
    border-radius: 100%
}

.good-store .store-name .name {
    font-size: 22rpx;
    color: #999999;
    margin-left: 10rpx;
}

.deliver-type {
    margin-top: 10rpx;
}

.deliver-type view {
    font-size: 20rpx;
    padding: 0 8rpx;
    border-radius: 2rpx;
    line-height: 30rpx;
    height: 30rpx;
    text-align: center;
    font-weight: 400;
    display: inline-block;
}

.deliver-type .self-num {
    background: #ffefd6;
    color: #FB861F
}

.group-price {
    justify-content: space-between;
    margin-top: 38rpx;
}

.group-price .price-cont {
    align-items: baseline;
}

.group-price .price-cont .now-price {
    font-size: 40rpx;
    color: #ff5757;
    margin-right: 10rpx;
}

.group-price .price-cont .old-price {
    text-decoration: line-through;
    font-size: 28rpx;
    color: #999999
}

.group-price .gostartGroup {
    /* padding: 10rpx 26rpx; */
    width: 130rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 6rpx;
    background: linear-gradient(270deg, rgba(243, 33, 37, 1) 0%, rgba(253, 130, 29, 1) 100%);
    font-size: 28rpx;
    color: #ffffff;
    font-weight: 600;
    text-align: center
}