<view wx:if="{{showPage}}" class="flex-col wrap">
  <view class="section flex-auto">
    <scroll-view class="scroll" scroll-y>
      <view style="padding: 20rpx 0">
        <!-- 团信息 -->
        <group title="{{groupInfoVO.title}}" time="{{groupRemainTime}}" group="{{groupInfoVO.joinList}}" btnTxt="{{groupInfoVO.buttonText}}" failReason="{{groupInfoVO.text}}" tips="{{groupInfoVO.tips}}" txtBtn="{{}}" btnType="{{btnType}}" bind:pageEvent="widgetEvent"></group>
        <!-- 跑马灯 -->
        <view class="horseLamp" wx-if="{{groupInfoVO.openGroupList.length>0}}">
          <horse-race-lamp winList="{{groupInfoVO.openGroupList}}" backgroundColor="rgba(0,0,0,0.5)" fontColor="#fff"  fromPostion="grounpBuy-oldInviteNew-result"></horse-race-lamp>
        </view>
      </view>
      <!-- 商品信息 -->
      <goods fromPositon="groupBuy-oldInviteNew-result" skuName="{{groupInfoVO.skuName}}" skuImgUrl="{{groupInfoVO.skuImgUrl}}" basicPrice="{{groupInfoVO.basicPrice}}" actPrice="{{groupInfoVO.groupPrice}}" totalMembers="{{groupInfoVO.totalMembersDesc}}" storeName="{{groupInfoVO.orgName}}" storeIcon="{{groupInfoVO.logoUrl}}" buriedObj="{{recommendObj}}"></goods>
      <!-- 活动规则 -->
      <view class="groupRule" wx:if="{{showImg}}">
        <view class="title">
          <image src="https://storage.360buyimg.com/wximg/groupbuy/title1.png" />
        </view>
        <image src="https://storage.360buyimg.com/wximg/groupbuy/rule.png" />
      </view>
      <!-- 推荐商品 -->
      <view class="recommand-cont" wx:if="{{recommendInfoList.length>0}}">
        <view class="title" wx:if="{{showImg}}">
          <image src="https://storage.360buyimg.com/wximg/groupbuy/title2.png" />
        </view>
        <!-- 商品列表 -->
        <old-invite-new-goods list="{{recommendInfoList}}" recommendObj="{{recommendObj}}" backgroundColor="#fafafa" source="groupDetail"></old-invite-new-goods>
      </view>
    </scroll-view>
  </view>
  <view class="flex-none flex-row btn">
    <view class="flex-auto" bindtap="goToGroupList">更多拼团</view>
    <view class="border_right flex-none" bindtap="goToStoreHome">进店领优惠</view>
  </view>
</view>
<block wx:else>
  <default fromPositon='groupBuy-oldInviteNew-result' type="{{type}}" tips="{{tips}}" btnText="{{btnText}}" src="{{src}}" buriedObj="{{recommendObj}}" bind:defaultBtnEvent="onDefaultBtnEvent" fromPostion="grounpBuy-oldInviteNew-result"></default>
</block>
<dialog showDialog="{{showRuleDialog}}" height="310" data-type="rule" useClose="{{useClose}}">
  <view class="dialog-content flex-col" style="padding: 40rpx 19px 40rpx;height:230rpx">
    <view class="flex-auto contentTxt">{{dialogTxt}}</view>
    <view class="goHomeBtn" bindtap="dailogClick">{{dialogBtn}}</view>
  </view>
</dialog>