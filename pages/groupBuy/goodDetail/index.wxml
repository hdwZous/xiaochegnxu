<!-- pages/groupBuy/goodDetail/index.wxml -->
<view class='pageCont' wx:if="{{showPage}}">
  <!-- 轮播图 -->
  <good-img goodImg="{{goodInfo.bigImgUrls}}" />
  <!-- 商品价格 -->
  <view class='priceTime flex-row'>
    <!-- 价格 -->
    <view class='priceDetail flex-row'>
      <view class='nowpPrice'>
        <label>￥</label>
        <text>{{goodInfo.actPrice}}</text>
      </view>
      <view class='oldPrice flex-col'>
        <view class='old'>
          <label>￥</label>
          <text>{{goodInfo.basicPrice}}</text>
        </view>
        <view class='groupNum'>{{goodInfo.joinNumDesc}}</view>
      </view>
    </view>
  </view>
  <!-- 店铺名称商品名称 -->
  <good-store orgName="{{goodInfo.orgName}}" logoUrl="{{goodInfo.logoUrl}}" totalMembersDesc="{{goodInfo.totalMembersDesc}}" skuName="{{goodInfo.skuName}}" />
  <!-- 自提拼团流程 -->
  <view class="pregroup" wx:if="{{goodInfo.deliveryType==1}}">
    <view class="pregroup-title flex-row">
      <view class="title">自提拼团流程</view>
    </view>
    <view class="pregroup-rule">
      <image src="https://storage.360buyimg.com/wximg/groupbuy/openGroup_store.png" />
    </view>
  </view>
  <!-- 拼团流程 -->
  <view class="pregroup" wx:elif="{{goodInfo.deliveryType==2}}">
    <view class="pregroup-title flex-row">
      <view class="title">拼团流程</view>
    </view>
    <view class="pregroup-rule">
      <image wx:if="{{goodInfo.groupMode == 1}}" src="https://storage.360buyimg.com/wximg/groupbuy/deliver_to_leader_rule.png" mode="widthFix"/>
      <image wx:else src="https://storage.360buyimg.com/wximg/groupbuy/joinGroup_default.png" mode="widthFix"/>
    </view>
  </view>
  <!-- 预售团流程 -->
  <view class="pregroup" wx:elif="{{goodInfo.deliveryType==3}}">
    <view class="pregroup-title flex-row">
      <view class="title">预售团流程</view>
      <view class="pregroup-time">
        该批预售起始发货时间:
        <text class="red">{{goodInfo.deliveryBeginTime}}</text>
      </view>
    </view>
    <view class="pregroup-rule">
      <image wx:if="{{goodInfo.groupMode == 1}}" src="https://storage.360buyimg.com/wximg/groupbuy/presell_deliver_to_leader_rule.png" mode="widthFix"/>
      <image wx:else src="https://storage.360buyimg.com/wximg/groupbuy/joinGroup_pre.png" mode="widthFix"/>
    </view>
  </view>
  <!-- 商品详情 -->
  <view wx:if="{{goodInfo.productDetailHtml}}" class='goodDetail'>
    <view class="detailCont">
      <view class="good_detail_Title">商品详情</view>
      <richtext detailInfo="{{goodInfo.productDetailHtml}}"></richtext>
    </view>
  </view>
</view>