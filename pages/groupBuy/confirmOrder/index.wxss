@import "/common/css/global.wxss";

page {
    background-color: #FAFAFA;
    width: 100%;
}

.take-goods {
    margin: 20rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
    box-shadow: 0px 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.06);
    -webkit-box-shadow: 0px 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.06);
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
    background-color: white;
}

.take-goods .take-title {
    height: 100rpx;
    line-height: 100rpx;
}

.take-goods .line {
    height: 2rpx;
    width: 100%;
    background-color: #f5f5f5;
    opacity: 0.08;
}

.take-goods .take-address-info {
    padding: 30rpx 0;
}

.take-goods .take-address-info .store {
    line-height: 42rpx;
    position: relative;
    margin-bottom: 8rpx;
}

.take-goods .take-address-info .store .modify {
    background: url("https://storage.360buyimg.com/wximg/groupbuy/next1.png") no-repeat center;
    /*background: url("https://storage.360buyimg.com/wximg/groupbuy/black-location.png") no-repeat center;*/
    background-size: 100%;
    -webkit-background-size: 100%;
    display: inline-block;
    width: 15rpx;
    height: 26rpx;
    position: absolute;
    right: 20rpx;
    bottom: 8rpx;
    line-height: 42rpx;
}

.take-goods .take-address-info .address-info {
    font-size: 26rpx;
    color: #999;
    line-height: 36rpx;
    position: relative;
    margin-bottom: 6rpx;
}

.take-goods .take-address-info .address-info .details {
    display: inline-block;
    width: 80%;
}

.take-goods .take-address-info .address-info .distance {
    position: absolute;
    right: 20rpx;
}

.take-goods .take-address-info .open-time {
    font-size: 26rpx;
    color: #999;
    line-height: 36rpx;
}

.pay {
    position: absolute;
    padding-left: 20rpx;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.pay .pay-text {
    color: #666666;
    font-size: 30rpx;
}

.pay .money {
    color: #FF5757;
    font-size: 52rpx;
    font-weight: bolder;
}

.pay .icon {
    color: #FF5757;
    font-size: 32rpx;
    font-weight: bolder;
}

.pay .pay-btn {
    position: absolute;
    right: 0;
    top: 0;
    display: inline-block;
    width: 250rpx;
    height: 100rpx;
    background: linear-gradient(-90deg, rgba(243, 33, 37, 1), rgba(253, 130, 29, 1));
    font-size: 36rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 100rpx;
}

.pay .pay-btn button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.receipt-address {
    margin: 20rpx;
    font-size: 30rpx;
    color: #333;
    padding-left: 20rpx;
    box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
    -webkit-box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
    background-color: white;
    position: relative;
}

.receipt-address .receipt-address-title {
  align-items: center;
  -webkit-align-items: center;
  position: relative;
}

.receipt-address .receipt-address-title .receipt-address-detail {
    font-size: 32rpx;
    color: rgba(0, 0, 0, 0.87);
    line-height: 40rpx;
    font-weight: bolder;
}

.receipt-address .receipt-address-title .receipt-address-left {
  width: 90%;
  margin: 30rpx 0;
}

.receipt-address .receipt-address-title .receipt-address-contact {
  margin-top: 10rpx;
}

.receipt-address .receipt-address-title .receipt-address-warn {
    font-size: 24rpx;
    color: #999;
    line-height: 34rpx;
    margin-top: 10rpx;
}

.receipt-address-name {
    margin-right: 30rpx;
}

.receipt-address .receipt-address-right {
    background: url("https://storage.360buyimg.com/wximg/groupbuy/grey-right.png") no-repeat center;
    background-size: 100%;
    -webkit-background-size: 100%;
    display: inline-block;
    font-size: 28rpx;
    color: #333;
    width: 12rpx;
    height: 20rpx;
    position: absolute;
    right: 20rpx;
}

.receipt-address .receipt-address-tag {
    border-radius: 4rpx;
    -webkit-border-radius: 4rpx;
    color: white;
    font-size: 20rpx;
    padding: 0 6rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    margin-right: 20rpx;
}

.receipt-address .blue {
    background: #2486FF;
}

.receipt-address .grey {
    background: #999;
}

.receipt-address .receipt-address-type {
    text-align: right;
    margin-right: 20rpx;
}

.receipt-address .deliver-time {
    font-size: 30rpx;
    color: #2486FF
}

.receipt-address .deliver-time-blue-right {
    background: url("https://storage.360buyimg.com/wximg/groupbuy/blue-right.png") no-repeat center;
    background-size: 100%;
    -webkit-background-size: 100%;
    display: inline-block;
    font-size: 28rpx;
    color: #333;
    width: 12rpx;
    height: 20rpx;
    margin-right: 20rpx;
}

.receipt-address .receipt-address-tips {
    align-items: center;
    -webkit-align-items: center;
    height: 100rpx;
}

.pre-sale {
    margin: 20rpx;
    font-size: 30rpx;
    color: #333;
    box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
    -webkit-box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
    background-color: white;
}

.pre-sale .text {
    color: #333333;
    font-size: 28rpx;
    line-height: 40rpx;
    height: 40rpx;
    margin-top: 30rpx;
    padding-left: 20rpx;
    display: inline-block;
}

.pre-sale .img {
    /*padding-left: 58rpx;*/
    padding-bottom: 30rpx;
    padding-top: 40rpx;
    text-align: center;
}

.pre-sale .pregroup-time {
    font-size: 24rpx;
    color: #999999;
    margin-left: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    display: inline-block;
}

.pre-sale .red {
    color: #ff5757
}

.scrollCont {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    padding-bottom: 25rpx;
    width: 100%;
    overflow: auto;
}

.remark {
    color: #FF5757;
    font-size: 22rpx;
    margin-top: 10rpx;
}

.remark-cont {
    background: #fff;
    font-size: 28rpx;
    color: #333333;
    margin: 0 20rpx;
    padding: 0 20rpx;
    height: 100rpx;
    border-radius: 12rpx;
    box-shadow: 0px 4px 16px 0px rgba(0, 0, 0, 0.06);
    justify-content: space-between;
    align-items: center
}

.remark-cont .input-text {
    justify-content: center;
    align-items: center
}

.input-placeholder {
    color: #999999;
}

.remark-cont .input-text .input {
    max-width: 288rpx;
    margin-right: 20rpx;
    text-align: right;
    color: #333333
}

.receipt-address-right {
    background: url("https://storage.360buyimg.com/wximg/groupbuy/grey-right.png") no-repeat center;
    background-size: 100%;
    -webkit-background-size: 100%;
    display: inline-block;
    font-size: 28rpx;
    color: #333;
    width: 12rpx;
    height: 20rpx;
}