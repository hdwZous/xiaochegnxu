.detention {
  background:rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.wrap {
  width: 640rpx;
  background:rgba(240,61,49,1);
  border-radius: 24rpx;
}

.close {
  width: 76rpx;
  height: 76rpx;
  margin-top: 60rpx;
}

.headpic {
  width: 640rpx;
  height: 250rpx;
  /* margin-bottom: 30rpx; */
}

.wrap .coupon {
  width: 600rpx;
  margin: 20rpx auto;
}

.wrap .leave {
  width: 192rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius:40rpx;
  border:2rpx solid rgba(255,192,192,1);
  font-size: 28rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium, PingFang SC;
  color:rgba(255,221,221,1);
  margin: 48rpx auto;
}