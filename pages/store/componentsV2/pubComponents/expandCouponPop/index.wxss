.font80 {
  font-size: 80rpx;
}
.font62 {
  font-size: 62rpx !important;
}
.font48 {
  font-size: 48rpx;
}
.font40 {
  font-size: 40rpx !important;
}
.mask {
    z-index: 12;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.7);
}
.pop-wrapper {
  width: 580rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 13;
}
.pop-container {
  width: 580rpx;
  height: 706rpx;
  background-image: url("https://storage.360buyimg.com/wximg/common/expandCouponPopBg.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
/* 弹层顶部部分 */
.top-content {
  width: 646rpx;
  height: 174rpx;
  background: url("https://storage.360buyimg.com/wximg/common/expandCouponPop-top.png") no-repeat;
  background-size: 100% 100%;
}
.top-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #391715;
  line-height: 66rpx;
  margin-left: 40rpx;
}
.top-text1 {
  padding-top: 50rpx;
}


/* 弹层中间券部分 */
.center {
  height: 268rpx;
  width: 464rpx;
  margin: 0 auto;
  margin-top: 44rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.small-coupon-bg {
  width: 142rpx;
  height: 168rpx;
  background: url("https://storage.360buyimg.com/wximg/common/expandCouponBig.png") no-repeat;
  background-size: 100% 100%;
}
.big-coupon-bg {
  width: 212rpx;
  height: 268rpx;
  position: relative;
  background: url("https://storage.360buyimg.com/wximg/common/expandCouponBig.png") no-repeat;
  background-size: 100% 100%;
}
.arrow {
  width: 72rpx;
  height: 100%;
  margin: 0 16rpx;
}
.arrow-img {
  width: 72rpx;
  height: 52rpx;
  margin-top: 134rpx;
}


/* 左边小券 */ 
.small-price-wrap {
  font-family: regular;
  font-weight: 400;
  color: #FF1E19;
  text-align: center;
  margin-top: 8rpx;
  height: 48rpx;
}

.small-price-wrap .price-unit {
  font-size: 28rpx;
}

.small-price-wrap .price-money {
  font-size: 48rpx;
}

.small-limit-wrap {
  width: 122rpx;
  height: 24rpx;
  margin: 0 auto;
  font-size: 18rpx;
  font-weight: 400;
  color: #999999;
  text-align: center;
  margin-top: 4rpx;
}
.small-title {
  width: 126rpx;
  height: 24rpx;
  margin: 44rpx auto 0 auto;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
  line-height: 24rpx;
}
/* 右侧膨胀券 */
.big-price-wrap {
  font-family: regular;
  font-weight: 400;
  color: #FF1E19;
  text-align: center;
  margin-top: 28rpx;
  height: 80rpx;
}
.big-left-top-icon {
  position: absolute;
  top: 0rpx;
  left: 8rpx;
  padding: 0 8rpx;
  height: 32rpx;
  background: #FFDDDD;
  border-radius: 17rpx 0rpx 17rpx 0rpx;
  font-size: 20rpx;
  line-height: 32rpx;
  font-weight: 400;
  color: #FF1E19;
}
.big-price-wrap {
  height: 80rpx;
}
.big-price-wrap .big-price-unit {
  font-size: 44rpx;
}

.big-price-wrap .big-price-money {
  font-size: 80rpx;
}

.big-limit-wrap {
  width: 100%;
  /* width: 122rpx; */
  height: 24rpx;
  margin: 0 auto;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  text-align: center;
  margin-top: 8rpx;
}
.big-store-logo {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0rpx auto 0 auto;
  margin-top: 12rpx;
  border-radius: 32rpx;
  border: 1rpx solid #FFFFFF;
}
.big-title {
  width: 196rpx;
  height: 24rpx;
  margin: 8rpx auto 0 auto;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
  line-height: 24rpx;
}



/* 弹层底部部分 */
.btn {
  width: 500rpx;
  height: 88rpx;
  margin: 0 auto;
  margin-top: 84rpx;
  background: linear-gradient(270deg, #1F2227 0%, #32363E 100%);
  border-radius: 44rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
}

.close {
  display: block;
  width: 76rpx;
  height: 76rpx;
  margin: 60rpx auto 0;
}