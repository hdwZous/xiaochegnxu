<scroll-view class="scroll-view" 
              scroll-x="true" 
              enable-flex>
  <block wx:for="{{floor.diamonds}}" 
         wx:key="index" 
         wx:for-item="diamond">
    <view class="category-item log-store-home-promote-label ep_three-in-row-cate" 
          data-item="{{diamond}}" 
          data-params="{{diamond.params}}"
          data-user-action="{{diamond.userAction}}"
          data-trace-id="{{traceId}}"
          data-page-id="{{buriedObj.pageIdFirstPage}}"
          data-current-page-name="{{buriedObj.currentPageName}}"
          data-pre-page-name="{{buriedObj.prePageName}}"
          bindtap="clickCategory" 
          aria-role="link" 
          aria-label="{{diamond.mainTitle}}.{{diamond.subTitle}}">
      <view class="category-name" aria-hidden="true">{{diamond.mainTitle}}</view>
      <view class="category-desc" aria-hidden="true">{{diamond.subTitle}}</view>
    </view>
  </block>
  <view class="tomore-item log_store_home_promote_more" 
        wx:if="{{floor.diamonds.length >= 10}}" 
        data-to="{{floor.to}}" 
        data-params="{{floor.params}}" 
        data-user-action="{{floor.userAction}}" 
        bindtap="clickMoreBtn">
    <image aria-hidden="true" class="look-more" src="https://storage.360buyimg.com/wximg/common/look-more.png" />
    <view aria-role="link" aria-label="查看更多" class="tomore-text">查看更多</view>
  </view>
</scroll-view>