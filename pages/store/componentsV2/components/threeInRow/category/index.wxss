.scroll-view {
  height: 94rpx;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}
.category-item {
  height: 74rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx 20rpx;
  background: #fff;
  border-radius:8rpx;
  margin-right: 20rpx;
}
.category-name {
  font-size:28rpx;
  line-height: 28rpx;
  color: #333;
  font-weight: bold;
}
.category-desc {
  font-size:24rpx;
  line-height: 24rpx;
  color: #666;
}
.tomore-item {
  display: flex;
  justify-content: center;
  align-items: center;
}
.look-more {
  width: 30rpx;
  height: 30rpx;
}
.tomore-text {
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-left: 6rpx;
}