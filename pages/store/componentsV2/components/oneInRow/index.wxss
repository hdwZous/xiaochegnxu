@import "/common/css/light.wxss";
@import "/common/css/regular.wxss";
.scroll_item {
    width: 100%;
    align-items: flex-start;
    -webkit-align-items: flex-start;
    padding: 30rpx 20rpx;
    border-bottom: 1rpx #f5f5f5 solid;
    position: relative;
    box-sizing: border-box;
}
.anchored_product {
    /* background: #fffaeb; */
    background-color: rgba(71,179,79,.05);
}
/* 左边 */
.scroll_item .left {
    width: 160rpx;
    height: 160rpx;
    border-radius: 8rpx;
    display: inline-block;
    background: #f5f5f5;
    position: relative;
    overflow: hidden;
}
.scroll_item .left .sku_img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 8rpx;
}
.left .freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}
.store_stockCount_tag {
    position: absolute;
    left: 0px;
    top: 0rpx;
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
    text-align: center;
    line-height: 160rpx;
    color: #fff;
    font-size: 26rpx;
    background-color: rgba(0, 0, 0, 0.5);
}
.store-sku-remain {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 28rpx;
    font-size: 20rpx;
    color: #fff;
    text-align: center;
    line-height: 28rpx;
    border-radius: 0 0 8rpx 8rpx;
    background: linear-gradient(to right, #ff5c37 0%, #ff9248 100%);
}

/* 右边 */
.scroll_item .right {
    width: 140rpx;
    min-height: 160rpx;
    height: 100%;
    padding-left: 12rpx;
    position: relative;
    justify-content: space-between;
}
.scroll_item .coupon_case {
    position: relative;
}
.scroll_item .name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 40rpx;
    word-break: break-all;
}
.scroll_item  .sku-name-tag {
    height: 28rpx;
    /* line-height: 30rpx; */
    font-size: 20rpx;
    padding: 0rpx 8rpx;
    color: #fff;
    border-radius: 4rpx;
    margin-right: 8rpx;
    vertical-align: 5rpx;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}
.scroll_item .description {
  font-size: 24rpx;
  line-height: 30rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: 8rpx;
}
.scroll_item .desc-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}
.bangdan {
    display: inline-flex;
    height: 40rpx;
    background: #FFF3F3;
    border-radius: 3rpx;
    padding-left: 8rpx;
    padding-right: 8rpx;
    align-items: center;
    margin-top: 8rpx;
}
.bangdan image {
    width: 28rpx;
    height: 28rpx;
}
.bangdan .text {
    max-width: 270rpx;
    font-size: 20rpx;
    line-height: 40rpx;
    color: red;
    margin-left: 8rpx;
}
.scroll_item .month_sales {
    height: 28rpx;
    font-size: 22rpx;
    font-weight: 300;
    color: rgba(102, 102, 102, 1);
    line-height: 28rpx;
    margin-top: 8rpx;
}
/* 标签 */
.scroll_item .scroll_view {
    height: 20px;
    margin-top: 14rpx;
} 
.scroll_view .tags {
    padding: 0 0 2rpx 2rpx;
}
.scroll_view .tag {
    font-size: 20rpx;
    padding: 0 6rpx 0 4rpx;
    color: #ff1e19;
    /* border-radius: 8rpx 0 8rpx 0; */
    border-radius: 4rpx;
    margin-right: 10rpx;
    border: 2rpx solid #ff1e19;
}
.scroll_view .disable-tag {
  margin-right: 8rpx;
}
.scroll_item .shadow_box {
    width: 20px;
    height: 20px;
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 2;
    background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
    pointer-events: none;
}

/* 价格 */
.scroll_item .price {
    bottom: 10rpx;
    font-size: 32rpx;
    line-height: 38rpx;
    margin-top: 20rpx;
    font-weight: 300;
    font-family: "regular";
}
/* 加车 */
.scroll_item .add_cart_box {
    position: absolute;
    bottom: 30rpx;
    right: 24rpx;
    z-index: 8;
}
.scroll_item .add_cart_box_img {
    width: 24rpx;
    height: 44rpx;
    position: absolute;
    bottom: 24rpx;
    right: 0;
    z-index: 8;
    background: url("https://s.360buyimg.com/wximg/store/nextstep.png") no-repeat;
}
.buy {
  position: absolute;
  right: 24rpx;
  bottom: 30rpx;
  min-width: 58rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 6rpx 8rpx;
  background: linear-gradient(270deg, #00CF37 0%, #45DC6D 100%);
  border-radius: 22rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
}
.go-detail-wrapper {
    position: absolute;
    bottom: 30rpx;
    right: 24rpx;
    z-index: 8;
}
.go-detail {
  width: 44rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-top: 16rpx;
}

.sky-yhe-one-business-tag {
    position: absolute;
    left: 16rpx;
    top: 16rpx;
  }
