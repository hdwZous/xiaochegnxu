@import "../../../../../common/css/regular.wxss";
@import "../../../../../common/css/light.wxss";
.good-item {
  display: flex;
  justify-content: space-between;
  /* border-bottom: solid 2rpx #f6f6f6; */
  padding-top: 24rpx;
  width: 100%
}
.left {
  width:160rpx;
  height:160rpx;
  border-radius:8rpx;
  margin-left: 24rpx;
  position: relative;
}
.right {
  width: 526rpx;
  margin-bottom: 20rpx;
  position: relative;
  min-height: 160rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 16rpx;
}
.good-pic {
  width:160rpx;
  height:160rpx;
  border-radius:8rpx;
}
.store_stockCount_tag {
  position: absolute;
  left: 0px;
  top: 0rpx;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  text-align: center;
  line-height: 160rpx;
  color: #FFF;
  font-size: 26rpx;
  background-color: rgba(0, 0, 0, 0.5);
}
.store-sku-remain {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 28rpx;
  font-size: 20rpx;
  color: #FFF;
  text-align: center;
  line-height: 28rpx;
  border-radius: 0 0 8rpx 8rpx;
  background:linear-gradient(to right, #FF5C37 0%,#FF9248 100%)
}
.freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}
.good-title {
  width:516rpx;
  font-size:32rpx;
  line-height: 40rpx;
  font-weight:bold;
  color: #333333;
  display: -webkit-box;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 5rpx;
}
.description {
  font-size: 24rpx;
  line-height: 30rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: 8rpx;
}
.desc-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}
.good-sale-highopinion {
    font-size: 22rpx;
    line-height: 28rpx;
    color: #666;
    margin-bottom: 5rpx;
}
.hign-opinion {
  margin-left: 16rpx;
}
.good-tag-list {
  display: flex;
  justify-content: flex-start;
}
.good-tag {
  margin-right: 10rpx;
  padding: 0rpx 6rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 30rpx;
  border-radius: 4rpx;
  border: 2rpx solid #ff1e19;
}
.price-car-wrapper {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin-top: 16rpx;
  position: relative;
}
.price-group {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.car-btn {
  display: flex;
  align-items: flex-end;
  position: absolute;
  right: 40rpx;
}
.add-group {
  position: relative;
}
/* 预售标 */
.sku-name-tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  color: #fff;
  border-radius: 4rpx;
  margin-right: 6rpx;
  display: inline;
}
/* 预售购买按钮 */
.buy {
  /* position: absolute;
  right: 14rpx;
  bottom: 10rpx; */
   position: relative;
  width: 80rpx;
  height: 48rpx;
  background: linear-gradient(90deg, #45DC6D 0%, #00CF37 100%);
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
  line-height: 48rpx;
}
.disabled-tag {
  margin-right: 8rpx;
}
.sky-yhe-one-business-tag {
  position: absolute;
  left: 16rpx;
  top: 16rpx;
}
.good-title-name {
  margin-left: 8rpx;
}