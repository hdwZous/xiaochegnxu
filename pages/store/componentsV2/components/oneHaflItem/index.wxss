@import "../../../../../common/css/regular.wxss";
@import "../../../../../common/css/light.wxss";
.item-content-gray {
  width: 424rpx;
  height: 140rpx;
  display: inline-flex;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}
.item-wrapper {
  width: 424rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  display: inline-flex;
}
.item-wrapper:first-child {
  margin-left: 20rpx;
}
.item-content {
  display: inline-flex;
  width: 100%;
  height: 100%;
}
.item-wrapper .left {
  width:140rpx;
  height:140rpx;
  background:#F4F4F4;
  position: relative;
}
.left .img {
  width:140rpx;
  height:140rpx;
}
.left .freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}

.item-wrapper .right {
  width:284rpx;
  height:140rpx;
  background:#fff;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.right .pro-title {
  width: 264rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
  color: #333;
}
.sku-name-tag {
  /* font-size: 20rpx;
  padding: 2rpx 8rpx;
  color: #fff;
  border-radius: 4rpx; */
  margin-right: 6rpx;
  display: inline;
}
.right .pro-sale-slogan {
  display: inline-block;
  padding: 0rpx 6rpx;
  color: #fff;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius:8rpx 0 8rpx 0;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 6rpx;
}
.right .pro-price {
  display: flex;
  align-items: center;
  margin-top: 14rpx;
}
.right .add-car {
  position: absolute;
  right: 14rpx;
  bottom: 10rpx;
}

.right  .go-detail-wrapper {
  position: absolute;
  right: 3rpx;
  bottom: 22rpx;
}
.right  .go-detail {
  width: 44rpx;
  height: 36rpx;
  vertical-align: middle;
}

.right .buy {
  position: absolute;
  right: 14rpx;
  bottom: 10rpx;
  width: 80rpx;
  height: 48rpx;
  background: linear-gradient(90deg, #45DC6D 0%, #00CF37 100%);
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
  line-height: 48rpx;
}
.margin4 {
  margin-left: 4rpx;
}
.good-title-name {
  margin-left: 8rpx;
}