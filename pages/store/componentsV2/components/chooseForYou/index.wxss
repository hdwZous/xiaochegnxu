.padTB {
  padding: 60rpx 0 32rpx 0;
}


.choose-for-you-wrapper {
  width: 710rpx;
  margin: 48rpx auto 0 auto;
  padding-bottom: 50rpx;
}
.floor-title {
  font-size:36rpx;
  line-height: 38rpx;
  color: #333;
  font-weight: bold;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pro-list-wrapper {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.pro-item-wrapper {
  width:344rpx;
  background:#fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.pro-pic-wrapper {
  width:344rpx;
  height:346rpx;
  position: relative;
}
.pro-pic-wrapper .img {
  width:344rpx;
  height:346rpx;
  border-radius: 8rpx;
}
.pro-pic-wrapper .pro-sale-slogan {
  position: absolute;
  bottom: 0;
  left: 20rpx;
  display: inline-block;
  padding: 0rpx 8rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 30rpx;
  height: 30rpx;
  border-radius:12rpx 0rpx 8rpx 0;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pro-pic-wrapper .freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}
.pro-title {
  width:304rpx;
  height:68rpx;
  font-size:28rpx;
  line-height: 34rpx;
  color: #333;
  margin: 20rpx 0 20rpx 20rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price-car-wrapper {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  position: relative;
}
.price-group {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}
.car-btn {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  position: absolute;
  right: 0;
}
.add-group {
  position: relative;
}
.go-detail {
  width: 44rpx;
  height: 36rpx;
  vertical-align: middle;
}
.tomore {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #47B34F;
  font-size: 24rpx;
}
.tomore .more-icon {
   width: 23rpx;
  height: 22rpx;
  /* vertical-align: middle; */
  margin-left: 4rpx;
}

/* 预售标 */
.sku-name-tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  color: #fff;
  border-radius: 4rpx;
  margin-right: 6rpx;
  display: inline;
}

/* 预售购买按钮 */
.buy {
  /* position: absolute;
  right: 14rpx;
  bottom: 10rpx; */
   position: relative;
  width: 80rpx;
  height: 48rpx;
  background: linear-gradient(90deg, #45DC6D 0%, #00CF37 100%);
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
  line-height: 48rpx;
}