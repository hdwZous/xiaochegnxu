<view class="maincate-wrapper"
      style="padding-bottom: {{data.length >=9 ? '8rpx' : '32rpx'}}"
      wx:if="{{data.length >= 3}}">
    <!-- 兜底样式 只有文字 -->
    <scroll-view wx:if="{{floorStyle == 'tplm2' || data.length < 5}}" 
                class="scroll-wrapper default-floor" 
                scroll-x="true">
        <block wx:for="{{data}}" wx:for-item="item" wx:key="index">
            <view class="cate-item-wrapper ep_cate" 
                  data-item="{{item}}" 
                  bindtap="anchorProduct"
                  data-user-action="{{item.userAction}}"
                  data-trace-id="{{traceId}}"
                  data-page-id="{{buriedObj.pageIdFirstPage}}"
                  data-current-page-name="{{buriedObj.currentPageName}}"
                  data-pre-page-name="{{buriedObj.prePageName}}">
            <view class="only-title"  
                  aria-role="button"
                  aria-label="分类：{{item.cateTitle}}">{{item.cateTitle}}</view>
            </view>
        </block>
        <view class="tomore-item log_store_home_ball_more" bindtap="anchorProduct">
            <image class="look-more" src="https://storage.360buyimg.com/wximg/common/look-more.png" />
            <view class="tomore-text" aria-role="button" aria-label="查看更多分类">查看更多</view>
        </view>
    </scroll-view>
    <!-- 图+文字 -->
    <block wx:elif="{{floorStyle == 'tplm3' ||  floorStyle == 'tplm4'}}">
        <!-- 五个球等分 -->
        <view wx:if="{{data.length == 5}}"
              class='average-wrapper'>
            <block  wx:for="{{data}}"
                    wx:for-item="item"
                    wx:key="index">
                <view class="average-item ep_cate"     
                      data-item="{{item}}" 
                      bindtap="anchorProduct" 
                      data-user-action="{{item.userAction}}"
                      data-trace-id="{{traceId}}"
                      data-page-id="{{buriedObj.pageIdFirstPage}}"
                      data-current-page-name="{{buriedObj.currentPageName}}"
                      data-pre-page-name="{{buriedObj.prePageName}}" 
                      hover-class="none">
                        <view class='img-con' aria-role="button"
                      aria-label="分类：{{item.cateTitle}}">
                            <webp-img webp-img="img" src="{{item.imgUrl}}" mode="widthFix"></webp-img>
                        </view>
                        <view class="title ellipsis" aria-role="button"
                      aria-label="分类：{{item.cateTitle}}">{{item.cateTitle}}</view>
                </view>
            </block>
        </view>
        <!-- 一行横划 -->
        <view wx:elif="{{data.length > 5 && data.length < 9}}"
              class="one-row-slider">
            <scroll-view class="scroll-wrapper" scroll-x>
                <block wx:for="{{data}}"
                       wx:key="index"
                       wx:for-item="item">
                    <view class="cate-item-wrapper ep_cate" 
                          data-item="{{item}}" 
                          bindtap="anchorProduct" 
                          data-user-action="{{item.userAction}}"
                          data-trace-id="{{traceId}}"
                          data-page-id="{{buriedObj.pageIdFirstPage}}"
                          data-current-page-name="{{buriedObj.currentPageName}}"
                          data-pre-page-name="{{buriedObj.prePageName}}" 
                          hover-class="none">
                            <view class='img-con' aria-role="button"
                           aria-label="分类：{{item.cateTitle}}">
                                <webp-img webp-img="img" src="{{item.imgUrl}}" mode="widthFix"></webp-img>
                            </view>
                           <view class="title"
                                 aria-role="button"
                                 aria-label="分类：{{item.cateTitle}}">{{item.cateTitle}}</view>
                       </view>
                </block>
            </scroll-view>
        </view>
        <!-- 两行 -->
        <view wx:else class='two-row'>
            <block wx:for="{{data}}" wx:for-item="item" wx:key="index">
                <view class="two-row-item ep_cate" 
                      data-item="{{item}}" 
                      bindtap="anchorProduct" 
                      data-user-action="{{item.userAction}}" 
                      hover-class="none"
                      data-trace-id="{{traceId}}"
                      data-page-id="{{buriedObj.pageIdFirstPage}}"
                      data-current-page-name="{{buriedObj.currentPageName}}"
                      data-pre-page-name="{{buriedObj.prePageName}}">
                    <view class='img-con' aria-role="button"
                          aria-label="分类：{{item.cateTitle}}">
                        <webp-img webp-img="img" src="{{item.imgUrl}}" mode="widthFix"></webp-img>
                    </view>
                    <view class="title ellipsis" 
                          aria-role="button"
                          aria-label="分类：{{item.cateTitle}}">{{item.cateTitle}}</view>
                </view>
            </block>
        </view>
    </block>
</view>