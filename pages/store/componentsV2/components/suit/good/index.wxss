.suit-item-wrapper {
  display: inline-block;
  width:192rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}

.suit-item-wrapper .pro-pic {
  display: block;
  width:192rpx;
  height:192rpx;
  border-radius:8rpx;
  overflow: hidden;
  position: relative;
  background: red;
}
.pro-pic .img {
  width:192rpx;
  height:192rpx;
  border-radius:8rpx;
}
.pro-pic  .pro-sale-slogan {
  position: absolute;
  bottom: 0;
  right: 0;
  display: inline-block;
  padding: 0rpx 8rpx;
  color: #fff;
  font-size: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
  background:rgba(0,0,0,0.3);
  border-radius:8rpx 0rpx 8rpx 0rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pro-pic .freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}

.pro-sale-slogan .pro-num {
  margin-left: 4rpx;
  font-family: light;
}
.suit-item-wrapper .bottom {
  width: 192rpx;
}
.bottom .pro-title {
  width: 100%;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;-webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 8rpx;
  white-space:normal;
}
.pro-logo {
  display: inline-block;
  padding: 0rpx 8rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
  color: #fff;
  height: 28rpx;
  line-height: 28rpx;
  margin-right: 8rpx;
}