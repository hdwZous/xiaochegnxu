::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.suit-wrapper {
  width: 100%;
  border-radius:20rpx 0px 0px 0px;
  margin-top: 32rpx;
  /* margin-bottom: 30rpx; */
}
.store-floor-tit {
  position: relative;
  padding: 0rpx 0 0rpx 20rpx;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.store-floor-tit .logo-title {
    display: flex;
    align-items: center;
    max-width: 78%;
    height: 67rpx;
}
.store-floor-tit .title {
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  /* line-height: 36rpx; */
  color: #333;
  font-weight: bold;
  margin-left: 4rpx;
  height: 67rpx;
  line-height: 67rpx;
}
.store-floor-tit .tomore {
  /* position: absolute;
  right: 20rpx;
  bottom: 8rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  height: 96rpx;
  
}
.tomore .more-text {
  color: #333;
  font-size: 24rpx;
  /* line-height: 26rpx; */
}
.tomore .more-icon {
  width: 26rpx;
  height: 26rpx;
  /* margin-left: 4rpx;
  vertical-align: middle; */
}
.store-floor-tit .title-icon {
  width: 36rpx;
  height: 36rpx;
}


.suit-content-wrapper {
  width: 710rpx;
  margin-top: 20rpx;
}
/* 套装名称列表 */
.suit-name-list {
  width: 100%;
  height: 80rpx;
  background: #F8F8F8;
  margin: 0 20rpx;
  border-radius: 12rpx 12rpx 0 0;
}
.suit-scroll {
  display: flex;
  height: 100%;
  white-space: nowrap;
}
.suit-name-item {
  display: inline-flex;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
  font-size: 24rpx;
  color: #666;
  /* padding: 0 24rpx; */
}
.suit-name-item .suit-radius {
  width: 28rpx;
  height: 80rpx;
  position: relative;
}
.suit-name-item .img {
  width: 100%;
  height: 100%;
  position: absolute;
}
.suit-name-wrapper {
  /* padding: 0 24rpx; */
}
.suit-name-wrapper .suit-name {
  max-width: 192rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-top: 24rpx;
}
.suit-name-wrapper .current-suit-line {
  width:48rpx;
  height:6rpx;
  background:#00CF37;
  border-radius:3rpx;
  margin: 8rpx auto 0 auto;
  text-align: center;
}
.current-suit {
  font-size: 24rpx;
  color: #00CF37;
  font-weight: bold;
  background: #fff;
}


/* 套装商品 */
.pro-list-wrapper {
  width:100%;
  /* height:404rpx; */
  border-radius:0rpx 0rpx 12rpx 12rpx;
  margin: 0rpx 0 0 20rpx;
  background: #fff;
}
.scroll-wrapper {
  margin-bottom: 20rpx;
}
.scroll-block {
  background:#fff;
  margin-right: 20rpx;
  margin-top: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  display: inline-flex;
  border-radius:12rpx 8rpx 8rpx 12rpx;
}
.dividing-line {
  width: 670rpx;
  height: 1rpx;
  background: #F5F5F5;
  margin: 0 auto;
}
.suit-price-btn {
  display: flex;
  align-items: center;
  padding: 24rpx 0rpx;
  justify-content: flex-end;
}
.suit-price-btn .price-wrapper {
  display: flex;
  align-items: flex-end;
}
.suit-price-btn .suit-price {
  font-size:24rpx;
  line-height: 24rpx;
  color: #666;
}
.suit-price-btn .main-price {
  font-size:36rpx;
  color: #FF1E19;
  margin-right: 8rpx;
  font-family: regular;
}
.suit-price-btn .mino-price {
  font-size:24rpx;
  line-height: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 16rpx;
  font-family: light;
}
.suit-price-btn .tobuy {
  font-size:28rpx;
  color: #fff;
  width:176rpx;
  height:64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 32rpx;
  background: linear-gradient(to right, #00CB1E, #00BE34);
  margin-right: 24rpx;
}

.add-car {
  margin-right: 24rpx;
}