.store-close-tips {
  padding: 0 20rpx;
  height: 68rpx;
  position: fixed;
  bottom: 268rpx;
  z-index: 4;
  /* transform: translateY(70rpx);
  transition: transform 0.5s ease; */
}
.show-tips {
  animation: upShowClose 0.5s ease;
  transform: translateY(0%);
}
.hide-tips {
  animation: downShowClose 0.5s ease;
  transform: translateY(100%);
}
@keyframes upShowClose {
  from{
    transform: translateY(100%);
  }
  to{
    transform: translateY(0%);
  }
}
@keyframes downShowClose {
  from{
    transform: translateY(0%);
  }
  to{
    transform: translateY(100%);
  }
}
.store-close-text {
  width: 710rpx;
  height: 100%;
  border-radius: 34rpx;
  color: #fff;
  line-height: 68rpx;
  font-size: 28rpx;
  text-align: center;
  position: relative;
}
.store-close-text1 {
  background-image: linear-gradient(135deg, rgb(76, 156, 255) 0%, rgb(36, 134, 255) 100%);
  box-shadow: rgb(52 139 237 / 26%) 0px 2rpx 8rpx;
}
.store-close-text2 {
  background: linear-gradient(90deg, #FF5C37 0%, #FF9248 100%);
  box-shadow: 0px 4rpx 16rpx 0px rgba(255,139,70,0.3900);
}
.store-close-btn {
  position: absolute;
  right: 28rpx;
  top: 22rpx;
  display: block;
  width: 26rpx;
  height: 26rpx;
}
