<wxs module="tool" src="../../../../../common/util/tools.wxs"></wxs>
<view wx:if="{{showTip}}" 
     class="store-close-tips {{showTip ? 'show-tips' : 'hide-tips'}}"
     style="bottom: {{transHeight}}rpx">
  <view class="store-close-text"
        style="background: linear-gradient(90deg, {{info.startColor}} 0%, {{info.endColor}} 100%); box-shadow: 0px 4rpx 16rpx 0px {{tool.changeColor(info.bgAlpha || 0.26, info.bgColor)}};">
    {{info.closeText || ''}}
    <image class="store-close-btn" src="https://storage.360buyimg.com/wximg/common/close_white.png" bindtap="closeStoreTip" />
  </view>
</view>