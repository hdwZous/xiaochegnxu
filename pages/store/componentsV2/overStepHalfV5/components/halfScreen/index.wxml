<view class="half_bg" wx:if="{{isShow}}" catchtap="_hide" catchtouchmove="true">
</view>
<!--   style="{{'height:'+height+';transform:translateY('+height+');-webkit-transform: translateY('+height+');z-index:20;'}}" -->
<view catchtouchmove="true" 
     class="half_content flex_col {{ isShow ? 'show_content' : firstShowed ? 'hide_cont' : '' }}">
    <view class="title flex_none">
        <view>选择收货地址</view>
        <view class="dj_icon ts_close close" bindtap="_hide"></view>
    </view>
    <view class="slot_content flex_auto">
      <view class="wrap flex_col flex_auto">
          <!-- 地址列表 -->
          <view class="address flex_auto">
            <!-- 地址 -->
            <scroll-view class="scroll" scroll-y>
              <block wx:if="{{!showEmpty}}">
                <!-- 可配送范围地址 -->
                <view wx:if="{{inAddress.length>0}}">
                  <!-- 地址详情 -->
                  <view class="item flex-row log_select_address" wx:for="{{inAddress}}" wx:for-item="item" wx:for-index="index" wx:key="inAddress" data-poi="{{item.poi}}" data-latitude="{{item.latitude}}" data-longitude="{{item.longitude}}" data-city-id="{{item.cityId}}" data-county-id="{{item.countyId}}" data-id="{{item.id}}" data-county-name="{{item.countyName}}" data-city-name="{{item.cityName}}" data-address-name="{{item.addressName}}" data-mobile="{{item.mobile}}" data-name="{{item.name}}" bindtap="selectAddress">
                    <view wx:if="{{showChooseIcon}}" class="selectd-box">
                      <view class='icon-cont {{item.target?"choose":"noChoose"}}'></view>
                    </view>
                    <view class="info">
                      <view class="location">
                        <view class="tag" wx:if="{{item.tags}}">{{item.tagName}}</view>
                        <view class="text">{{item.fullAddress}}</view>
                      </view>
                      <view class="txt">
                        <text class="name">{{item.name}}</text>
                        {{item.mobile}}
                      </view>
                    </view>
                    <view class="edit log_edit_address" catchtap="goToEditAddress" data-from="edit" data-can-delivery="{{item.canDelivery}}" data-longitude="{{item.longitude}}" data-latitude="{{item.latitude}}" data-city-id="{{item.cityId}}" data-city-name="{{item.cityName}}" data-county-name="{{item.countyName}}" data-poi="{{item.poi}}" data-county-id="{{item.countyId}}" data-id="{{item.id}}" data-address-detail="{{item.addressDetail}}" data-name="{{item.name}}" data-mobile="{{item.mobile}}" data-tags="{{item.tags}}"></view>
                  </view>
                </view>
                <!-- 不可配送范围地址 -->
                <view wx:if="{{outAddress.length>0}}">
                  <!-- 地址头部 -->
                  <view class="disabled_title">* 以下地址超出配送范围</view>
                  <!-- 地址详情 -->
                  <view class="item disabled" wx:for="{{outAddress}}" wx:for-item="item" wx:for-index="index" wx:key="outAddress">
                    <view class="info">
                      <view class="location">
                        <view class="tag" wx:if="{{item.tags}}">{{item.tagName}}</view>
                        <view class="text">{{item.fullAddress}}</view>
                      </view>
                      <view class="txt">
                        <text class="name">{{item.name}}</text>
                        {{item.mobile}}
                      </view>
                    </view>
                    <view class="edit log_edit_address" catchtap="goToEditAddress" data-from="edit" data-can-delivery="{{item.canDelivery}}" data-longitude="{{item.longitude}}" data-latitude="{{item.latitude}}" data-city-id="{{item.cityId}}" data-city-name="{{item.cityName}}" data-county-name="{{item.countyName}}" data-poi="{{item.poi}}" data-county-id="{{item.countyId}}" data-id="{{item.id}}" data-address-detail="{{item.addressDetail}}" data-name="{{item.name}}" data-mobile="{{item.mobile}}" data-tags="{{item.tags}}"></view>
                  </view>
                </view>
                <view class="blank_white"></view>
              </block>
              <block wx:else>
                <default fromPositon='store-overStepHalf5-halfScreen' type="{{type}}" btnText="{{btnText}}" tips="{{tips}}" src="{{src}}" bind:defaultBtnEvent="onDefaultBtnEvent"  buriedObj="{{buriedObj}}"></default>
              </block>
            </scroll-view>
            <!-- 登录默认页 -->
          </view>
          <!-- 新建地址按钮 -->
          <view class="btn_box flex_none" style="{{isIPX?'height:160rpx':''}}">
            <view class="btn flex_auto log_add_address" data-from="order_settle" wx:if="{{!showEmpty}}" bindtap="goToEditAddress">
              新建收货地址
            </view>
          </view>
        </view>
    </view>
</view>