.top {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding-top: 48rpx;
  position: fixed;
  z-index: 12;
  top: 0;
  left: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
}

.close_icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 24rpx;
  right: 24rpx;
  background: url(https://storage.360buyimg.com/wximg/store/overhalf_close_store.png) no-repeat center;
  background-size: 100% 100%;
}

.title {
  margin-bottom: 18rpx;
  height: 48rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  line-height: 48rpx;
  text-align: center;
}

.sub_title {
  height: 36rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.address_box {
  height: 96rpx;
  margin-bottom: 32rpx;
}

.add_content {
  height: 96rpx;
  width: 700rpx;
  border-radius: 24rpx;
  border: 1px solid #C0E5CA;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 0 44rpx 0 64rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 96rpx;
  position: relative;
  background-color: #F3FFF7;
}

.change_icon {
  position: absolute;
  left: 24rpx;
  top: 32rpx;
  width: 32rpx;
  height: 32rpx;
  background: url(https://storage.360buyimg.com/wximg/store/store_overhalf_address.png) no-repeat center;
  background-size: 100% 100%;
}

.title_text {
  width: 450rpx;
  overflow: hidden;
  height: 96rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.go_address {
  background: url(https://storage.360buyimg.com/wximg/store/store_overhalf_goaddress.png) no-repeat center;
  background-size: 100% 100%;
  position: absolute;
  right: 24rpx;
  top: 38rpx;
  width: 12rpx;
  height: 20rpx;
}

.right_text {
  font-size: 28rpx;
  font-weight: 600;
  color: #00CF37;
  line-height: 96rpx;
  position: absolute;
  right: 44rpx;
  top: 0rpx;
}

.radius-left-bottom,
.radius-right-bottom {
  display: block;
  position: absolute;
  z-index: 13;
  bottom: -24rpx;
  height: 24rpx;
  width: 24rpx;
  background-color: #fff;
}

.radius-left-bottom {
  left: 0;
}

.radius-right-bottom {
  right: 0;
}

.radius-left-bottom::after,
.radius-right-bottom::after {
  content: '';
  display: block;
  height: 100%;
  width: 100%;
  background-color: #f6f6f6;
}

.radius-left-bottom::after {
  border-radius: 24rpx 0 0 0;
}

.radius-right-bottom::after {
  border-radius: 0 24rpx 0 0;
}
