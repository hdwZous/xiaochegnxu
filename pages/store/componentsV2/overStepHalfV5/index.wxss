.bg{
    background: rgba(0,0,0,.6);   
    position: fixed;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 10;
}
.content{
    /* background: #fff;  */
    background: #f6f6f6;
    position: fixed;
    width: 100%;
    overflow: hidden;
    /* min-height: 0;
    max-height: 0; */
    bottom: 0;
    left: 0;
    right: 0;
    top: 100%;
    height: 80vh;
    z-index: 15;
    border-radius: 24rpx 24rpx 0px 0px;
    /* transition: all 0.5s ease; */
    /* -webkit-transition: all 0.5s ease; */
}
.show_cont{
    /* max-height: 80vh; */
    /* top: 20%; */
    /* background: #fff; */
    /* overflow: hidden;
    background: #f6f6f6; */
    animation: upShow 0.5s ease;
    transform: translateY(-100%);
}
@keyframes upShow {
  from{
    transform: translateY(0%);
  }
  to{
    transform: translateY(-100%);
  }
}
.hide_cont{
  /* max-height: 80vh; */
  /* top: 20%; */
  /* background: #fff; */
  /* overflow: hidden;
  background: #f6f6f6; */
  animation: downShow 0.5s ease;
  transform: translateY(0%);
}
@keyframes downShow {
  from{
    transform: translateY(-100%);
  }
  to{
    transform: translateY(0%);
  }
}

.list_title{
    margin: 48rpx 0 16rpx 0;
    height: 36rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #999999;
    line-height: 36rpx;
    text-align: center;
    position: relative;
}
.list_title::before{
    position: absolute;
    content: '';
    width: 48rpx;
    height: 2rpx;
    left: 192rpx;
    top:18rpx;
    background-color:#ccc;
}
.list_title.sub::before{
    position: absolute;
    content: '';
    width: 48rpx;
    height: 2rpx;
    left: 218rpx;
    top:18rpx;
    background-color:#ccc;
}
.list_title::after{
    position: absolute;
    content: '';
    width: 48rpx;
    height: 2rpx;
    right: 192rpx;
    top:18rpx;
    background-color:#ccc;
}
.list_title.sub::after{
    position: absolute;
    content: '';
    width: 48rpx;
    height: 2rpx;
    right: 218rpx;
    top:18rpx;
    background-color:#ccc;
}
.store-wrap {
  background-color: #f6f6f6;
}
.store-wrap:nth-child(2) {
  /* padding-top: 300rpx; */
  border-radius: 24rpx 24rpx 0 0;
}
.default-wrap {
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
}
.default-content {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.no_data_img {
  display: block;
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto;
}

.no_data_btn {
  width: 220rpx;
  height: 64rpx;
  background: linear-gradient(270deg, #00BE34 0%, #00CB1E 100%);
  border-radius: 34rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
  line-height: 64rpx;
  margin: 0 auto;
  margin-top: 24rpx;
}
.default-wrap .default-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  line-height: 32rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 16rpx;
}
.default-wrap .default-subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  text-align: center;
  margin-top: 10rpx;
}


.blank {
  width: 100%;
  height: 80rpx;
  position: fixed;
  z-index: 12;
  background: #f6f6f6;
  border-radius: 24rpx 24rpx 0 0;
}
.close_icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  z-index: 13;
  top: 24rpx;
  right: 24rpx;
  background: url(https://storage.360buyimg.com/wximg/store/overhalf_close_store.png) no-repeat center;
