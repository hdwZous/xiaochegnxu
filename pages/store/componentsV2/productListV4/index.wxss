/* 排序 */
.sort-wrap {
    width: 100%;
    height: 70rpx;
    background: white;
    font-size: 24rpx;
    font-weight: 400;
    color: #666;
    line-height: 70rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
} 
.sort_box {
    justify-content: flex-end;
    -webkit-justify-content: flex-end;
}
.sort_item_checked {
    color: #47b34f;
}
.sort_item {
    margin-left: 28rpx;
}
.img_group {
    display: flex;
    width: 10rpx;
    height: 100%;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-left: 8rpx;
}
.img_sort {
    width: 10rpx;
    height: 6rpx;
    margin-bottom: 1px;
}
.triangle-up {
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-bottom-width: 9rpx;
  border-bottom-style: solid;
  border-radius: 24rpx;
}
.triangle-down {
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-top-width: 9rpx;
  border-top-style: solid;
  border-radius: 24rpx;
  margin-top: 5rpx;
}


/* 商品列表 */
.product_scroll {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: block;
    padding: 0 0 70rpx;
    position: relative;
}
.current_cate_num {
    max-width: 200rpx;
    white-space: nowrap;
    font-weight: bold;
    color: #333;
    font-size: 24rpx;
    padding-left: 20rpx;
}
.scroll_item {
    width: 100%;
    align-items: flex-start;
    -webkit-align-items: flex-start;
    padding: 30rpx 20rpx;
    position: relative;
    box-sizing: border-box;
    position: relative;
}
.anchored_product {
    /* background: #fffaeb; */
    background-color: rgba(71,179,79,.05);
}
/* 骨架图 */
/* 左边 */
.scroll_item .left {
    width: 160rpx;
    height: 160rpx;
    border-radius: 8rpx;
    display: inline-block;
    background: #f5f5f5;
    position: relative;
    overflow: hidden;
}
.scroll_item .empty_right {
    width: 140rpx;
    min-height: 160rpx;
    height: 100%;
    padding-left: 12rpx;
    position: relative;
    justify-content: space-evenly;
}
.name_grey {
    background: #f5f5f5;
    width: 100%;
    height: 40rpx;
    margin-bottom: 10rpx;
}
.description_grey {
    background: #f5f5f5;
    width: 100%;
    height: 30rpx;
    margin-bottom: 10rpx;
}
.month_sales_grey {
    background: #f5f5f5;
    width: 100%;
    height: 30rpx;
    margin-bottom: 10rpx;
}
.price_grey {
    background: #f5f5f5;
    bottom: 10rpx;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 38rpx;
    height: 30rpx;
    margin-bottom: 10rpx;
    width: 20%;
}
/* 底部提示 */
.product_bottom_text {
    padding: 60rpx 0 20rpx;
    text-align: center;
    color: #333;
    font-size: 24rpx;
    height: 200px; 
}

.blank_white_item {
    height: 60rpx;
}

.scroll_item_line {
  border-bottom: 1rpx #f5f5f5 solid;
  margin: 0 24rpx;
}
