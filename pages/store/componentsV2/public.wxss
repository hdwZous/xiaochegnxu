@import "/common/css/light.wxss";
@import "/common/css/regular.wxss";
@import "/common/css/global.wxss";

/* 门店tab最外层scroll-view */
.store-scroll-view {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  position: relative;
  background: #f8f8f8;
}

/* 减运和会员楼层的标题 */
.xscroll {
    width: auto;
    height: auto;
    background: #fff;
    border-radius: 22rpx 0 0 22rpx;
    overflow: hidden;
}
.itemArea {
    margin-left: 24rpx;
}


.store-floor-tit {
  position: relative;
  padding: 0rpx 0 0rpx 20rpx;
  /* margin-bottom: 30rpx; */
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
/* 支付宝 */
.store-floor-tit .floor-title1 {
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  /* line-height: 36rpx; */
  color: #333;
  font-weight: bold;
  margin-left: 4rpx;
  
  height: 96rpx;
  line-height: 96rpx;
}
.tomore {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 24rpx;
}
.tomore .more-text {
  line-height: 26rpx;
}
.tomore .more-icon {
   width: 26rpx;
  height: 26rpx;
}
.abs {
  position: absolute;
  right: 20rpx;
  bottom: 36rpx;
}


/* threeItem和threeHalfItem公用 */
.item-wrapper {
  display: inline-flex;
  flex-direction: column;
  width:210rpx;
  border-radius: 8rpx;
}

.item-wrapper .pro-pic {
  width:210rpx;
  height:210rpx;
  border-radius:8rpx;
  position: relative;
  /* padding-top: 20rpx; */
  margin-top: 20rpx;
}
.pro-pic .freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 24rpx;
}
.pro-pic .img {
  width:210rpx;
  height:210rpx;
  border-radius:8rpx;
}
.pro-pic  .pro-sale-slogan {
  position: absolute;
  bottom: 0;
  left: 0;
  display: inline-block;
  padding: 0rpx 6rpx;
  color: #fff;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius:0 8rpx 0 8rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-wrapper .bottom {
  position: relative;
  padding: 0 0 20rpx 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bottom .pro-title {
  width: 210rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #333;
  margin-top: 10rpx;
  text-align: left;
}

.bottom .price-car-wrapper {
   display: flex;
  justify-content: space-between;
  height: 66rpx;
  position: relative;
}
.bottom  .price-group {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bottom .car-btn {
  display: flex;
  align-items: center;
  position: absolute;
  right: 0px;
}
.add-group {
  position: relative;
}

.blank {
    height: 10rpx;
}

.initial {
    white-space: initial;
}
.go-detail {
  width: 44rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-top: 16rpx;
}
/* 预售标 */
.sku-name-tag {
    font-size: 20rpx;
    padding: 0rpx 8rpx;
    color: #fff;
    border-radius: 4rpx;
    margin-right: 8rpx;
    display: inline-flex;
    height: 28rpx;
    align-items: center;
}
/* 预售购买按钮 */
.buy {
  /* position: absolute;
  right: 14rpx;
  bottom: 10rpx; */
   position: relative;
  width: 80rpx;
  height: 48rpx;
  background: linear-gradient(90deg, #45DC6D 0%, #00CF37 100%);
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
  line-height: 48rpx;
}


/* 支付宝 开始*/
.wrap3 {
    display: flex;
}

.reduceGoods-index,
.storeIndex-index,
.storeChannel-index,
.storeVip-index {
    display: block;
    height: 100% !important;
}

.productListV4-index {
    display: block;
    height: 100% !important;
}
.oneHaflItem-index {
    display: inline-flex !important;
    height: 100% !important;
}
/* 支付宝 结束*/