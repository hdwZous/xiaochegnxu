@import "../../../../common/css/regular.wxss";
@import "../../../../common/css/light.wxss";

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.marR {
  margin-right: 22rpx !important;
}
.container {
  background: #f6f6f6;
}
.suit-list-wrapper {
  width: 100%;
  background: #fff;
}

.suit-item {
  padding-bottom: 24rpx;
  /* border-bottom: solid 2rpx #F6F6F6; */
}
/* 套装标题 */
.suit-title {
  position: relative;
  padding: 26rpx 0 0rpx 20rpx;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.suit-title .title-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}
.suit-title .title {
  font-size: 28rpx;
  color: #333;
}

/* 商品容器 */
.pro-wrapper {
  margin: 18rpx 0rpx 0 24rpx;
  display: flex;
  justify-content: space-between;
}
/* 商品数量 */
.pro-sale-slogan {
  height: 32rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  display: inline-block;
  padding: 0rpx 8rpx;
  color: #fff;
  font-size: 20rpx;
  background:rgba(0,0,0,0.3);
  border-radius:8rpx 0rpx 12rpx 0rpx;
}
.pro-sale-slogan .pro-num {
  margin-left: 4rpx;
  font-family: light;
}

/* 一行两个商品  */
.pro-wrapper  .two-item {
  width: 344rpx;
}
.pro-wrapper .two-pic-wrapper {
  width:344rpx;
  height:344rpx;
  border-radius:12rpx;
  overflow: hidden;
  position: relative;
}
.pro-wrapper .img {
  width: 100%;
  height: 100%;
}
.pro-wrapper .two-pro-title {
  width:344rpx;
  height:72rpx;
  font-size:28rpx;
  color:#333;
  line-height:36rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 8rpx;
}


/* 一行三个商品  */
.pro-wrapper  .three-item {
  width: 224rpx;
}
.pro-wrapper .three-pic-wrapper {
  width:224rpx;
  height:224rpx;
  border-radius:12rpx;
  overflow: hidden;
  position: relative;
}
.pro-wrapper .img {
  width: 100%;
  height: 100%;
}
.pro-wrapper .three-pro-title {
  width:224rpx;
  height:72rpx;
  font-size:28rpx;
  color:#333;
  line-height:36rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 8rpx;
}



/* 一行四个以上 */
.scroll-view {
  display: flex;
  flex-wrap: nowrap;
  height: 304rpx;
  /* white-space: nowrap; */
}
.scroll-view .four-item {
  /* display: inline-block; */
  width: 210rpx;
  height: 304rpx;
  /* white-space: normal; */
  padding-right: 20rpx;
}
.four-item .four-pic-wrapper {
  width: 210rpx;
  height: 210rpx;
  border-radius:8rpx;
  overflow: hidden;
  position: relative;
}
.four-item .four-pro-title {
  width:210rpx;
  height:68rpx;
  font-size:28rpx;
  color:#333;
  line-height:34rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 8rpx;
}  
.suit-price-btn {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  justify-content: flex-end;
}
.price-wrapper {
  display: flex;
  align-items: flex-end;
}
.suit-price-btn .suit-price {
  font-size:24rpx;
  line-height: 24rpx;
  color: #666;
}

.suit-price-btn .main-price {
  font-size:36rpx;
  font-family: regular;
  line-height: 36rpx;
  color: #FF1E19;
  margin-right: 8rpx;
}
.suit-price-btn .mino-price {
  font-family: light;
  font-size:24rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 16rpx;
}
.suit-price-btn .tobuy {
  font-size:28rpx;
  color: #fff;
  width:176rpx;
  height:64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 32rpx;
  background: linear-gradient(to right, #00CB1E, #00BE34);
  margin-right: 24rpx;
}

.more-suit-text {
  font-size:24rpx;
  color: #333;
  text-align: center;
  padding: 56rpx 0 200rpx 0;
  background: #fff;
}
.footer {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background: #fff;
  z-index: 11;
}

/* 冷藏和冷冻标 */
.freeze-wrap {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
}
.freeze-wrap .component-tag {
  font-size: 20rpx;
  color: #fff;
  line-height: 32rpx;
  height: 32rpx;
  padding: 0 6rpx;
  border-radius: 4rpx;
  font-weight: 400;
  display: flex;
  align-items: center
}
.freeze-wrap .image-tag {
  display: block;
  width: 76rpx;
  height: 32rpx;
  border-radius: 4rpx;
}
.freeze-wrap .freeze-icon {
  width: 18rpx;
  height: 21rpx;
}
.add-car {
  margin-right: 24rpx;
}