<!-- 1:满额促销
        2:多买优惠
        3:新人专享
        4:为你优选（没有看见过该入口）
        5:cms配置楼层（没有看见过该入口）
        6:爆品抢购
        7:减运费 || 会员
        8:虚拟tab（频道入店）中楼层 -->
<!-- 如果搜索关键字不展示该楼层 -->
<view class="promotion-wrapper" 
      wx:if="{{(landType == 1 || landType == 2 || landType == 3 || landType == 6) && promoLabels.length > 1 && !keyword}}">
    <view class='left-scroll'>
        <scroll-view class="scroll-view" 
                    scroll-x="true" 
                    scroll-with-animation 
                    scroll-anchoring 
                    scroll-into-view="{{curIndex}}" 
                    enable-flex>
            <block wx:for="{{promoLabels}}" 
                    wx:key="index" 
                    wx:for-item="promote">
                <view id='_{{index}}' 
                    class='promotion-item {{promote.checked ? "cur-promotion-item" : ""}}' 
                    bindtap="clickPromo" 
                    data-index="{{index}}">
                        <view class='slogan ellipsis'>{{promote.slogan}}</view>
                        <view wx:if="{{promote.subSlogan}}" class='first-ladder ellipsis'>{{promote.subSlogan}}</view>
                </view>
            </block>
        </scroll-view>
    </view>
    <view class='right-arrow' 
          data-is-show="{{true}}" 
          bindtap="showPop"
          wx:if="{{promoLabels.length > 3}}">
        <image class='arrow-icon' 
               src="https://storage.360buyimg.com/wximg/common/arrow-bottom.png" />
    </view>
</view>

<view class='mask' 
      wx:if="{{showPromoteModal}}" 
      data-is-show="{{false}}" 
      bindtap="showPop"
      style="top: {{capsule.top + capsule.height + 10}}px">
    <view class="content-wrapper" 
          catchtap="stopBubble">
        <view class="mask-title">
            <view class="title">全部活动</view>
            <image class='arrow-icon' bindtap="showPop" data-is-show="{{false}}" src="https://storage.360buyimg.com/wximg/common/arrow-bottom.png" />
        </view>
        <view class="promotion-names">
            <block wx:for="{{promoLabels}}" 
                   wx:key="index" 
                   wx:for-item="promote">
                <view class='promotion-name {{promote.checked ? "cur-promotion-name" : ""}}' 
                      bindtap="clickPromo" 
                      data-index="{{index}}"
                      data-is-layer="{{true}}">
                    <view class='slogan ellipsis'>{{promote.slogan}}</view>
                    <view wx:if="{{promote.subSlogan}}" class='ellipsis first-ladder'>
                        {{promote.subSlogan}}
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>