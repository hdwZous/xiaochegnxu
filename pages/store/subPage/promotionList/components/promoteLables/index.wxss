@import "../../../../../../common/css/regular.wxss";
@import "../../../../../../common/css/light.wxss";
/* 顶部分类 */
.promotion-wrapper {
  width: 100%;
  height: 122rpx;
  /* height: 76rpx; */
  background: #fff;
  box-shadow:0rpx 8rpx 24rpx 0rpx rgba(0,0,0,0.06);
  display: flex;
  /* margin-bottom: 16rpx; */
}
.promotion-wrapper .left-scroll {
  /* flex: 1; */
  width: 670rpx;
}
.left-scroll .scroll-view {
  width: 100%;
  height: 122rpx;
  /* height: 60rpx; */
  /* padding: 14rpx 0; */
  white-space: nowrap;
  /* margin-left: 20rpx; */
}

.promotion-wrapper .right-arrow {
    width: 88rpx;
    height: 122rpx;
    text-align: center;
    line-height: 122rpx;
}
 .arrow-icon {
  width:32rpx;
  height:16rpx;
}
.left-scroll .promotion-item {
  /* display: inline-block; */
  padding: 0rpx 32rpx;
  /* background: #FAFAFA; */
  /* border-radius:8rpx; */ 
  /* margin-right: 20rpx; */
  height: 122rpx;
  position: relative;
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.promotion-item::after {
    content: '';
    width: 2rpx;
    height: 40rpx;
    background: #E8E8E8;
    position: absolute;
    right: 0;
}
.promotion-item:last-child::after {
    content: '';
    width: 0;
    height: 0;
}
.promotion-item .slogan {
    height: 40rpx;
    font-size: 32rpx;
    line-height: 40rpx;
    color: #333333;
    font-weight: bold;
    max-width: 260rpx;
}
.promotion-item .first-ladder {
    margin-top: 2rpx;
    height: 32px;
    font-size: 24rpx;
    font-weight: 300;
    color: #666666;
    line-height: 32rpx;
    max-width: 260rpx;
}
.cur-promotion-item .slogan {
  color: #00CF37;
}
.cur-promotion-item .first-ladder {
    margin-top: 0rpx;
    height: 36rpx;
    font-size: 24rpx;
    font-weight: 300;
    color: #FFFFFF;
    line-height: 36rpx;
    background: #00CF37;
    border-radius: 18rpx;
    padding: 0 16rpx;
}



/* 蒙层 */
.mask {
  background: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 12;
}
.content-wrapper {
  width: 100%;
  background: #fff;
  max-height: 66vh;
  overflow-y: auto;
}
.content-wrapper .mask-title {
  width: 100%;
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mask-title .title {
  color: #333;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.mask-title .arrow-icon {
  margin-right: 28rpx;
  transform: rotate(180deg);
}

.promotion-names {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
}
.promotion-names .promotion-name {
  display: inline-block;
  width: 296rpx;
  /* width: 302rpx; */
  /* height: 56rpx; */
  /* padding: 0 24rpx 0 20rpx; */
  padding: 24rpx;
  background:#FAFAFA;
  border-radius:8rpx;
  margin-left:20rpx;
  margin-bottom: 16rpx;
  /* margin-bottom: 32rpx; */
  /* font-size: 28rpx; */
  /* line-height: 56rpx; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.promotion-names .cur-promotion-name {
  background:#E7F9E9;
  color: #47B34F;
}
.promotion-names .slogan {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    line-height: 40rpx;
    max-width: 296rpx;
}
.promotion-names .first-ladder {
    font-size: 24rpx;
    height: 32rpx;
    font-weight: 300;
    color: #666;
    line-height: 32rpx;
    max-width: 296rpx;
}
.cur-promotion-name .slogan, .cur-promotion-name .first-ladder {
  color: #47B34F;
}