<view class="nav_box">
    <!--状态栏高度-->
    <view class="status_bar" style="height:{{capsule.top}}px"></view>
    <!--导航 与 搜索框-->
    <view class="nav_bar flex_row  align_item_center" style="width:{{capsule.left-10}}px;height:{{capsule.height + 10}}px">
        <!-- 返回按钮 -->
        <view class="nav_left flex align_item_center" data-type="{{showBack?'goBack':'goHome'}}" bindtap="{{showBack?'goBack':showHome?'goHome':''}}">
            <view class="flex_row align_item_center">
                <view class="back_black"  wx:if="{{showBack}}"></view>
                <view class="home_box" wx:if="{{showHome}}">
                    <view class="home_black" ></view>
                </view>
            </view>
        </view>

        <block wx:if="{{landType == 6}}">
          <!--搜索框-->
          <view class="log-foucus-search search_box flex_auto flex_row just_content_center align_item_center" bindtap="clickInput">
              <view class="flex_auto flex_row input_box" >
                  <view class="icon_search flex_none"></view>
                  <input class="place_holder flex_auto" 
                        type="text" 
                        placeholder="搜索你想要的商品" 
                        value="{{keyword}}"
                        bindconfirm="bindConfirm"
                        bindinput="bindKeyInput" />
              </view>
              <view class="search_opacity"></view>
          </view>
          <!-- 搜索按钮 -->
          <view class="log-search search-btn" data-keyword="{{keyword}}" wx:if="{{showSearchModal}}" bindtap="bindConfirm">搜索</view>
        </block>
       <view wx:else class="title">{{title}}</view>
          
    </view>
</view>
<view class="mask"
      style="top: {{capsule.top + capsule.height + 10}}px"
      wx:if="{{showSearchModal}}" 
      bindtap="hideMask"></view>


