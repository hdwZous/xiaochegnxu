/* pages/exchange.wxss */

page {
  height: 100%;
}

.exchange-bg {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  align-items: center;
  background: url(https://storage.360buyimg.com/wximg/exchange/bg_exchange.jpg);
  background-size: contain
}

.exchange-title {
  margin-top: 660rpx;
  color: #8c8c8c;
  font-size: 28rpx;
}

.exchange-info {
  width: 600rpx;
  margin-top: 15rpx;
  margin-left: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.exchange-name {
  color: #8c8c8c;
  font-size: 28rpx;
}

.exchange-text {
  color: #b3b3b3;
  font-size: 28rpx;
  width: 380rpx;
  padding: 10rpx;
  border-radius: 8rpx;
  border-width: 1px;
  border-color: #d9d9d9;
  border-style: solid;
}

.icon-clear {
  margin-left: -50rpx;
  z-index: 10;
}

.exchange-to {
  margin-top: 50rpx;
  font-size: 38rpx;
  color: #ff211c;
  width: 450rpx;
  height: 96rpx;
  background: url(https://storage.360buyimg.com/wximg/exchange/btn_exchange.png);
  background-size: contain
}

.exchange-to-home {
  color: #fff;
  font-size: 28rpx;
  margin-top: 15rpx;
}
