.wrapper {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #fff;
}

.keywords-box {
  margin-top: 56rpx;
}

.search-group {
  margin-top: 40rpx;
  padding: 0 4rpx 0 24rpx;
  padding-bottom: 24rpx;
  margin-top: 32rpx;
}

.search-group:first-child {
  margin-top: 0
}

.search-group>.title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.search-group>.title .clear {
  font-size: 24rpx;
  color: #666;
  float: right;
  margin-right: 12rpx;
  font-weight: normal;
}

.search-group .words {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.search-group .words .item {
  font-size: 26rpx;
  color: #333;
  padding: 0rpx 24rpx;
  background: #f4f4f4;
  border-radius: 60rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  max-width: 279rpx;
  height: 52rpx;
  line-height: 52rpx;
  display: flex;
  align-items: center;
}

.search-group .words .item .icon {
  position: relative;
  top: -2rpx;
  display: inline-block;
  margin-right: 8rpx;
  width: 28rpx;
  height: 28rpx;
}

.search-group .words .item .hot-text {
  display: inline-block;
  max-width: 230rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.search-group .type{
  font-weight: 500;
}

.search_text{
  display: inline-block;
  max-width: 230rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}