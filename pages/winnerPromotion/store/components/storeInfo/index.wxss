.store-info {
  position: fixed;
  top: 0;
  bottom: 0;
  margin-top: 240rpx;
  z-index: 2;
  background: #ffffff;
  font: status-bar;
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
}
/* 门店行 */
.store {
  display: flex;
  padding: 0 20rpx;
  width: 100%;
}
.store-header-box {
  position: relative;
  margin-top: -50rpx;
}
.channel-tag {
  position: absolute;
  top: 0;
  left: 0;
  margin: -10rpx 0 0 -4rpx;
  width: 102rpx;
  height: 38rpx;
}
.store-header {
  width: 136rpx;
  height: 136rpx;
  border-radius: 12rpx;
  box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.05);
}
.store_name_box {
  padding: 20rpx 20rpx 20rpx;
  /*margin-top: 16rpx;*/
  box-sizing: border-box;
}
.store-name {
  height: 44rpx;
  width: 550rpx;
  font-size: 36rpx;
  font-weight: bolder;
  color: #333;
  line-height: 44rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  white-space: nowrap;
}

/* 优惠券行 */
.coupon-box {
  padding: 24rpx;
  display: flex;
  white-space: nowrap;
  width: 75%;
  overflow: hidden;
}

.coupon-right-text {
  font-weight: 400;
  color: #666666;
  line-height: 36rpx;
  font-size: 22rpx;
  position: absolute;
  right: 24rpx;
}

.coupon-right-text-arrow {
  width: 22rpx;
  height: 22rpx;
  vertical-align: text-bottom;
}
