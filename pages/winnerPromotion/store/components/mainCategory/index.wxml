<scroll-view scroll-y class="left-category">
  <!-- 一级分类 -->
  <scroll-view scroll-anchoring enable-flex scroll-with-animation scroll-into-view="main_{{cateIndex}}" scroll-y class="cate_scroll flex-auto">
    <view wx:for="{{cateList}}" wx:key="index" wx:for-item="item" class="cate_item_view  {{index==cateIndex?'par_cate_item_checked':''}}" id="main_{{index}}">
      <view class="log_classify cate_item {{index==cateIndex?'cate_item_checked':''}}" data-index="{{index}}" data-item="{{item}}" bindtap="clickClassify">
        <view class="cate_title_wrap">
          <view class="cate_title ellipsis2">{{item.title}}</view>
        </view>
      </view>
    </view>
    <view class="blank_white_item" style="height:440rpx"></view>
  </scroll-view>
</scroll-view>