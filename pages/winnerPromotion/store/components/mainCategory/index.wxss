@import "../../../common/wxss/global.wxss";

.left-category {
  width: 160rpx;
  height: 100%;
  position: relative;
  z-index: 10;
}

.cate_scroll {
  width: 174rpx;
  height: 100%;
  box-sizing: border-box;
  display: block;
}

/* 一级分类 */
.cate_item_view:first-child {
  /* margin-top: 4rpx; */
  /* margin-top: 8rpx; */
}
.cate_item_view {
  background: white;
  width: 160rpx;
}
.cate_item {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100rpx;
  background: #f4f4f4;
  align-items: center;
  -webkit-align-items: center;
  justify-content: center;
  -webkit-justify-content: center;
  position: relative;
  color: #666;
  word-break: break-all;
}
.cate_item_line {
  width: 140rpx;
  height: 2rpx;
  margin: 0 auto;
  background-color: #f4f4f4;
}
.cate_title {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 34rpx;
  width: 120rpx;
}
.cate_title_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: auto;
  position: relative;
}
.cate_title_wrap .arrow {
  width: 14rpx;
  height: 8rpx;
  background: url("https://storage.360buyimg.com/wximg/common/arrow-bottom.png")
    no-repeat;
  background-size: 100% 100%;
  position: absolute;
  right: 6rpx;
  top: 50%;
}
.cate_title_wrap .arrow_up {
  transform: rotate(180deg);
}
.cate_title_wrap .arrow_down {
  transform: rotate(0deg);
}
.par_cate_item_checked {
  width: 160rpx;
  /* box-shadow: 4rpx 0px 8rpx 0px rgba(0, 0, 0, 0.04); */
  overflow: hidden;
  /* border-radius: 0px 16rpx 16rpx 0px; */
  position: relative;
  z-index: 11;
}
.cate_item_checked {
  background: white;
  color: #333;
  font-weight: bolder;
  word-break: break-all;
}

.cate_item_checked .cate_title {
  font-weight: bolder;
}
.blank_white_item {
  height: 380rpx;
  width: 160rpx;
  background: #f4f4f4;
}
