@import '../../../common/wxss/global.wxss';

/* 三级分类 */
.subCateBox {
  margin-left: 20rpx;
  padding: 0 0 10rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  align-items: center;
}
.sub_cate {
  height: 64rpx;
  /* padding-left: 20rpx; */
  flex-wrap: nowrap;
  white-space: nowrap;
  width: 10rpx;
}
.sub_cate_item {
  width: 176rpx;
  height: 100%;
  background: #f8f8f8;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  text-align: center;
  line-height: 64rpx;
  display: inline-block;
  margin-right: 12rpx;
  border-radius: 4rpx;
}
.store_deliver_msg {
  height: 32rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  position: absolute;
  left: 176rpx;
  top: -40rpx;
  color: white;
  font-weight: 300;
  line-height: 32rpx;
  padding: 0 20rpx;
  max-width: 480rpx;
  font-size: 22rpx;
}
.sub_cate_item_checked {
  background: rgb(254, 111, 65, 0.1);
  color: #fe6f41;
  font-size: 24rpx;
}
.dis_num {
  margin-right: 10rpx;
}
.more_sub_cate {
  width: 54rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(255, 255, 255, 1)
    url('https://storage.360buyimg.com/wximg/storev1/drag_down.png') no-repeat
    center;
  background-size: 16rpx 8rpx;
}
.more_sub_cate_icon {
  display: inline-block;
  width: 16rpx;
  height: 8rpx;
  background: url('https://storage.360buyimg.com/wximg/storev1/drag_down.png')
    no-repeat center;
  background-size: cover;
}

.opacity {
  opacity: 0;
}
.store_head_opacity {
  padding-top: 80rpx;
  box-sizing: border-box;
}

.sub_cat_wrap {
  transition: All 0.5s ease;
  -webkit-transition: All 0.5s ease;
  position: absolute;
  top: 0;
  left: 0;
  color: #333;
  height: 100%;
  width: 100%;
  z-index: 9;
  background: rgba(0, 0, 0, 0.8);
}
.second_cat_down {
  width: 100%;
  background: white;
}
.second_cat_title {
  width: 100%;
  height: 28rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  line-height: 28rpx;
  padding: 20rpx 20rpx 0;
  background: #fff;
  position: relative;
  box-sizing: content-box;
}
.up_wrap {
  position: absolute;
  right: 60rpx;
  bottom: 0;
  width: 28rpx;
  height: 28rpx;
  align-items: center;
  -webkit-align-items: center;
  justify-content: center;
  -webkit-justify-content: center;
  background: #fff;
  display: flex;
  display: -webkit-flex;
}
.second_cat_title .up {
  width: 14rpx;
  height: 8rpx;
  background: url('https://storage.360buyimg.com/wximg/store/icon_up-shop.png')
    no-repeat center;
  background-size: cover;
}
.second_cat_content {
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
  background: #fff;
  align-content: flex-start;
  -webkit-align-content: flex-start;
  padding: 20rpx 20rpx 0 14rpx;
}

.second_cat_content .down_box {
  width: 33.33%;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
  margin-bottom: 20rpx;
  border-radius: 4rpx;
}
.second_cat_content .down_item {
  width: 176rpx;
  height: 64rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
  line-height: 64rpx;
  background: #f8f8f8;
  text-align: center;
  border-radius: 4rpx;
}
.second_cat_content .down_item_checked {
  width: 176rpx;
  height: 64rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #fe6f41;
  line-height: 64rpx;
  background: rgb(254, 111, 65, 0.1);
}
