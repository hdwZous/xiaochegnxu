.product-box {
  height: 100%;
  box-sizing: border-box;
}

.sort-box {
  display: flex;
  display: -webkit-flex;
  height: 70rpx;
  background: white;
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
  line-height: 70rpx;
  box-sizing: border-box;
  padding: 0 40rpx 0 0;
}

.product-title {
  max-width: 200rpx;
  white-space: nowrap;
  font-weight: bold;
  color: #666666;
  font-size: 24rpx;
  padding-left: 20rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right-sort {
  display: flex;
  display: -webkit-flex;
  justify-content: flex-end;
  flex: 1;
}

.month-sale-sort {
  padding-left: 20rpx;
}
.price-sort {
  padding-left: 20rpx;
  display: flex;
}

.sort_item_checked {
  color: #fe6f41;
}

.img_group {
  display: flex;
  width: 10rpx;
  height: 100%;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-left: 8rpx;
}
.img_sort {
  width: 10rpx;
  height: 6rpx;
  margin-bottom: 1px;
}
.triangle-up {
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-bottom-width: 9rpx;
  border-bottom-style: solid;
  border-radius: 24rpx;
}
.triangle-down {
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-top-width: 9rpx;
  border-top-style: solid;
  border-radius: 24rpx;
  margin-top: 5rpx;
}

.swiper_box {
  display: flex;
  display: -webkit-flex;
  position: relative;
  height: 100%;
}
.scroll_swiper {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.blank_white_item {
  padding: 60rpx 0 20rpx;
  text-align: center;
  color: #333;
  font-size: 24rpx
}