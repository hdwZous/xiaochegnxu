.product {
  display: flex;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 0.5px #f5f5f5 solid;

  position: relative;
}

.product-picture {
  width: 160rpx;
  height: 160rpx;
  text-align: center;
}
.product-picture image {
  width: 160rpx;
  height: 160rpx;
}
.product-info {
  margin-left: 16rpx;
}

.product-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
  word-break: break-all;

  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-subtitle {
  height: 28rpx;
  font-size: 22rpx;
  font-weight: 300;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  margin-top: 8rpx;

  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.product-major-price {
  height: 44rpx;
  font-size: 36rpx;
  font-family: JDDJ-1-Regular, JDDJ-1;
  font-weight: 500;
  color: #fe6f41;
  line-height: 44rpx;
  margin-top: 22rpx;
}

.product-mirror-price {
  height: 30rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 500;
  color: #999999;
  line-height: 30prx;
  margin-top: 8rpx;
  text-decoration: line-through;
}

.product-text {
  height: 28rpx;
  font-size: 22rpx;
  font-weight: 300;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  margin-top: 8rpx;
}

.product-highOpinion {
  margin-left: 10rpx;
}

.product-cart-box {
  position: absolute;
  display: flex;
  right: 20rpx;
  bottom: 20rpx;
  vertical-align: middle;
}

.incart-count {
  height: 48rpx;
  font-size: 32rpx;
  font-family: JDDJ-1-Regular, JDDJ-1;
  font-weight: 400;
  color: #333333;
  line-height: 48rpx;
}

.btn-minus {
  margin-right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  background: url('https://image3.imdada.cn/a0a377817aa84c66b4952f510532f1ad.png');
  background-size: contain;
}
.btn-plus {
  margin-left: 20rpx;
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  background: url('https://image3.imdada.cn/b8ac19807ab04bbe97b21150d8935409.png');
  background-size: contain;
}
