.bg {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 50vh;
  z-index: -1;
  padding-bottom: 68rpx;
}

.filter {
  -webkit-filter: blur(100rpx); /* Chrome, Opera */
  filter: blur(100rpx);
  height: 100%;
  width: 100%;
}
.glass {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.55);
  /*box-shadow: rgba(162,165,165,0.7);*/
}
