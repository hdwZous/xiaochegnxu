.search-wrapper {
  width: 100%;
  height: 98rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.search-container {
  width: 682rpx;
  height: 60rpx;
  background: #f8f8f8;
  border-radius: 60rpx;
  padding-left: 20rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}

.input-search__icon {
  width: 28rpx;
  height: 28rpx;
}

.search-content {
  flex: 1;
  width: 94%;
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius: 0 60rpx 60rpx 0;
}

.search-key__box {
  height: 60rpx;
  padding: 0 18rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  background: #f8f8f8;
  position: relative;
  z-index: 1
}

.search-key__box .search-key {
  height: 44rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 22rpx;
  line-height: 44rpx;
  font-size: 22rpx;
  color: #333;
}
