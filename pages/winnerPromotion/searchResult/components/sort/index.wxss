.sort-wrapper {
  box-sizing: border-box;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 84rpx;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
}

.sort-item {
  color: #333;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sort-item.selected {
  color: #FE6F41;
  font-weight: bold;
}

.sort-item image {
  width: 24rpx;
  height: 20rpx;
}

.price-triangle {
  margin-left: 6rpx;
}

.price-triangle__up {
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-bottom-width: 9rpx;
  border-bottom-style: solid;
  border-radius: 24rpx;
}

.price-triangle__down {
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-top-width: 9rpx;
  border-top-style: solid;
  border-radius: 24rpx;
  margin-top: 5rpx;
}

.filter-selected__count {
  border-radius: 14rpx;
  width: 28rpx;
  height: 28rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 28rpx;
  color: #FE6F41;
  background: rgb(254, 111, 65, 0.1);
  margin-left: 6rpx;
}

.filter-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 20;
}

.content-wrapper {
  box-sizing: border-box;
  position: relative;
  width: 610rpx;
  height: 100vh;
  padding: 0 10rpx 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 21;
  display: flex;
  transition: All 0.5s ease;
  -webkit-transition: All 0.5s ease;
}

.filter-wrapper {
  padding-bottom: 210rpx;
}

