.fitler-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  margin-top: 40rpx;
  margin-right: 30rpx;
  display: flex;
}

.filter-right {
  display: flex;
  align-items: center;
}

.selected-filter {
  flex: 1;
  text-align: right;
  max-width: 420rpx;
  margin-left: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #FE6F41;
  font-size: 24rpx;
}

.arrow-icon {
  width: 14rpx;
  height: 14rpx;
  margin-top: -6rpx;
  margin-left: 10rpx;
  border: 1rpx solid #b2b2b2;
  border-top-width: 0;
  border-left-width: 0;
  transform-origin: center center;
  transform: rotate(45deg);
  transition: all ease-in 400ms;
}

.arrow-icon__up {
  margin-top: 12rpx;
  transform: rotate(225deg);
}

.filter-category {
  margin-top: 68rpx;
  display: flex;
  justify-content: space-between;
}

.filter-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.filter-item {
  width: 120rpx;
  height: 64rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #333;
  background: #f8f8f8;
  line-height: 64rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 25rpx;
}

.filter-select {
  color: #FE6F41;
  background: rgb(254, 111, 65, 0.1);
}

.btn-box {
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
}

.filter-reset {
  width: 304rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  background: #fff;
}

.filter-reset__no {
  color: #ccc;
}

.filter-reset__yes {
  color: #333;
}

.filter-confirm {
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #fff;
}

.filter-confirm__no {
  background: linear-gradient(340deg, #aaa 0%, #ccc 100%);
}

.filter-confirm__yes {
  background: linear-gradient(to right, #FF9248, #FF5C37);
}
