<!-- 最外层增加scroll为了防止mini购物车事件发到这里 -->
<view class="search-result__page {{isFixed ? 'fixed' : ''}}">
  <search-box
    searchKey="{{searchKey}}"
    orgCode="{{orgCode}}"
    storeId="{{storeId}}"
  />
  <!-- 医药屏蔽或其他异常情况 -->
  <block wx:if="{{isEmpty}}">
    <block wx:if="{{showMedicineDefault}}">
      <view class="none-medicine">
        <image
          class="medicine-img"
          src="https://s.360buyimg.com/wximg/defaultPage/medicine.jpg"
          mode="widthFix"
        />
      </view>
    </block>
    <block wx:else>
      <exception
        isRest="{{type == 4}}"
        type="{{type}}"
        tips="{{tips}}"
        btnText="{{btnText}}"
        bind:defaultBtnEvent="handleExceptionReload"
      />
    </block>
  </block>

  <view
    wx:else
    class="container mar_top185"
  >
    <!-- 排序 -->
    <view
      class="sort-fixed"
      style="z-index:{{forbidScroll ? 12 : 11}}"
    >
      <sort
        showFilter="{{showFilter}}"
        filterOptions="{{filterOptions}}"
        storeId="{{storeId}}"
        filterList="{{filterList}}"
        bind:clickChangeZIndex="clickChangeZIndex"
        bind:sortChange="handleSortChange"
      />
    </view>
    <!-- 品类筛选 -->
    <view
      class
      wx:if="{{displayFilterFloor.itemList.length >=2 }}"
    >
      <category-filter
        filterList="{{filterList}}"
        displayFilterFloor="{{displayFilterFloor}}"
        bind:categoryChange="handleCategoryChange"
      />
    </view>
    <block wx:if="{{goodList.length > 0}}">
      <good-list goodList="{{goodList}}" />
    </block>
    <block wx:else>
      <exception
        isRest="{{ true }}"
        height="40vh"
        type="{{type}}"
        tips="{{tips}}"
        btnText="{{btnText}}"
        bind:defaultBtnEvent="handleExceptionReload"
      ></exception>
    </block>
  </view>
  <view
    class="back-top"
    wx:if="{{showBackTop}}"
    catchtap="handleBackTop"
  ></view>
  <view class="footer">
    <shop-cart
      storeId="{{storeId}}"
      orgCode="{{orgCode}}"
    ></shop-cart>
  </view>
</view>
