/* 预估到手价 */
.hand-price {
  display: flex;
  align-items: center;
  height: 32rpx;
}

.hand-price-left {
  font-size: 24rpx;
  background: linear-gradient(137deg, #FF3F12 0%, #FF9248 100%);
  border-radius: 2px 0px 0px 2px;
  /* border: 1rpx solid transparent; */
  color: #fff;
  padding: 0 8rpx;
  font-family: regular;
  height: 32rpx;
  display: flex;
  align-items: center;
}

.hand-price-right {
  font-size: 20rpx;
  color: #FF6138;
  border-radius: 0rpx 4rpx 4rpx 0rpx;
  padding: 0 8rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
