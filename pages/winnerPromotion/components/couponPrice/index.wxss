.container {
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  padding: 0 8rpx;
  font-family: regular;
  align-items: center;
}

.container02 {
  padding: 0 16rpx;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
}

.icon_img {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.mask_wrap {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 80%;
}

.content {
  min-height: 250rpx;
  max-height: 30vh;
  overflow: scroll;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
}

.item {
  color: #333;
  font-size: 24rpx;
  line-height: 1.5;
  margin-top: 30rpx;
  text-indent: 2em;
}

.title {
  /* margin-top: 34rpx; */
  text-align: center;
  color: #030303;
  font-size: 36rpx;
  margin-top: 4rpx;
  font-weight: bold;
  text-indent: 0;
}

.close_wrap {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.close {
  width: 74rpx;
  height: 74rpx;
  background: url("https://storage.360buyimg.com/wximg/bargain/close.png") no-repeat center;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}

