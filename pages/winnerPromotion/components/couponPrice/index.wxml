<view
  class="mask"
  bind:tap="handleMask"
  wx:if="{{visible}}"
>
  <view class="mask_wrap">
    <view
      class="content"
      catch:tap="{{false}}"
    >
      <view
        class="item {{item.text.title &&'title'}}"
        wx:for="{{initData.explainText || minorPrice.explainText}}"
        wx:key="index"
      >{{item.text.title || item.text.content}}</view>
    </view>
    <view class="close_wrap">
      <view class="close"></view>
    </view>
  </view>
</view>
