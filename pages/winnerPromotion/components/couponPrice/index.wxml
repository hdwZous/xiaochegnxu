<!-- 主价格 -->
<view
  class="main-price"
  wx:if="{{majorPrice && majorPrice.price}}"
>
  <view
    class="price01_wrap"
  >
    <view
      class="price01"
      style="font-size:{{majorPriceFz}}"
    >{{majorPrice.price == '暂无报价' ? '' : '¥'}}{{majorPrice.price}}</view>
    <!-- <view
      class="weight {{!isBottom && 't2'}}"
      wx:if="{{majorPrice.weight && majorPrice.price != '暂无报价'}}"
    >
      <text class="line">/</text>
      {{tool.filterStr(majorPrice.weight)}}
    </view> -->
    <view
      class="sale-qi"
      wx:if="{{intervalPrice}}"
    >起</view>
  </view>
  <block wx:if="{{majorPrice.priceType == 3 || majorPrice.priceType == 4}}">
    <view
      class="vip-icon"
      wx:if="{{!majorPrice.deleteLine}}"
      style="background: url('{{majorPrice.vipPriceIcon}}') no-repeat;  background-size: auto 100%;"
    ></view>
    <view
      wx:else
      class="gray-icon"
      style="background: url('{{majorPrice.iconGray}}') no-repeat; background-size: auto 100%"
    >{{majorPrice.iconGrayText}}</view>
  </block>
</view>
<!-- 次要价格 只展示deleline为true的价格 -->
<view
  class="mino-price"
  wx:if="{{minorPrice && minorPrice.price && minorPrice.deleteLine}}"
>
  <view 
    style="color:{{minorPrice.priceColor}};text-decoration:{{minorPrice.deleteLine ? 'line-through' : 'none'}};font-size:{{minorPriceFz}}"
  >¥{{minorPrice.price}}</view>
</view>


