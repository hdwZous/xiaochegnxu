@import "../../common/wxss/regular.wxss";
@import "../../common/wxss/light.wxss";

.mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.69);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 11;
}
.icon_circle_close {
    position: absolute;
    top: 16rpx;
    right: 14rpx;
    width: 48rpx;
    height: 48rpx;
    background: url('https://storage.360buyimg.com/wximg/common/close_circle.png') no-repeat;
    background-size: 100% 100%;
}
.no-data {
    position: relative;
    width: 480rpx;
    background: #fff;
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 12;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 24rpx;
}
.no-data .no-scan {
    width: 264rpx;
    height: 216rpx;
    background: url('https://storage.360buyimg.com/wximg/common/no-scan.png') no-repeat;
    background-size: 100% 100%;
    margin: 64rpx 0 48rpx 0;
}
.no-data .no-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
    line-height: 40rpx;
    text-align: center;
    margin-bottom: 48rpx;
}
.no-data .no-continue, .one .no-continue {
    width: 432rpx;
    height: 88rpx;
    background: linear-gradient(to right, #FF9248, #FF5C37);
    border-radius: 44rpx;
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 24rpx;
}


.one {
    position: relative;
    width: 480rpx;
    border-radius: 24rpx;
    background: #fff;
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 12;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
}
.one .product-img {
    width: 100%;
    height: 480rpx;
    border-radius: 24rpx 24rpx 0 0;
}
.one .sku-name{
    width: 432rpx;
    max-height: 72rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #333333;
    line-height: 36rpx;
    margin: 24rpx 0 0 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;

}
.one .price-car-wrapper {
    width: 100%;
    margin: 8rpx 0 24rpx 0;
    position: relative;
}
.one .price-group {
    padding-left: 24rpx;
}
.one .has-add {
    width: 128rpx;
    height: 92rpx;
    background: url('https://storage.360buyimg.com/wximg/common/has-add.png') no-repeat;
    background-size: 100% 100%;
    position: absolute;
    right: 0;
    bottom: 116rpx;
}

.some {
    position: absolute;
    bottom: 0rpx;
    left: 0;
    right: 0;
    background: #ffffff;
    overflow: scroll;
    border-radius: 20rpx 20rpx 0 0;
    height: auto;
    min-height: 0;
    max-height: 0;
    z-index: 12;
    transition: All 0.5s ease;
    -webkit-transition: All 0.5s ease;
    -webkit-overflow-scrolling: touch
}
.show_cont{
    /* max-height: 52vh; */
    max-height: 66vh;
    min-height: 40vh;
}
.some .header {
    position: sticky;
    top: 0;
    z-index: 10;
    width: 100%;
    height:46px;
    line-height: 46px;
    background: #ffffff;
    border-radius:10px 10px 0px 0px;
    font-size: 32rpx;
    color: #333333;
    font-weight: bold;
    text-align: center;
}
.some .some-close_icon {
    height: 26rpx;
    width: 26rpx;
    background: url('https://storage.360buyimg.com/wximg/common/close_icon.png') no-repeat;
    background-size: 100% 100%;
    position: absolute;
    right: 24rpx;
    top: 34rpx;
}
.icon_close {
    position: absolute;
    width: 46px;
    height: 46px;
    right: 0;
    top: 0;
    color: #c1c1c1;
    font-size: 25rpx;
}
.some .scroll-view {
    /* max-height: 37vh; */
    max-height: 45vh;
}
.some .continue {
    width: 702rpx;
    height: 88rpx;
    background: linear-gradient(to right, #FF9248, #FF5C37);
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    margin: 0 auto;
    margin-top: 20rpx;
    margin-bottom: 48rpx;
    border-radius: 44rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.some .good-item {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding-top: 24rpx;
}
.some .left {
  width:160rpx;
  height:160rpx;
  border-radius:8rpx;
  margin-left: 24rpx;
  position: relative;
}
.some .right {
  width: 526rpx;
  margin-right: 24rpx;
  margin-bottom: 20rpx;
  position: relative;
  min-height: 160rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.some .good-pic {
  width:160rpx;
  height:160rpx;
  border-radius:8rpx;
}
.some .good-title {
  width:526rpx;
  font-size:32rpx;
  line-height: 40rpx;
  font-weight:bold;
  color: #333333;
  display: -webkit-box;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 5rpx;
}
.some .description {
  font-size: 24rpx;
  line-height: 30rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: 8rpx;
}
.some .desc-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}
.some .good-sale-highopinion {
    font-size: 22rpx;
    line-height: 28rpx;
    color: #666;
    margin-bottom: 5rpx;
}
.some .hign-opinion {
  margin-left: 16rpx;
}
.some .good-tag-list {
  display: flex;
  justify-content: flex-start;
}
.some .good-tag {
  margin-right: 10rpx;
  padding: 0rpx 6rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 30rpx;
  border-radius: 4rpx;
  border: 2rpx solid #ff1e19;
}
.some .price-car-wrapper {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin-top: 16rpx;
  position: relative;
}
.some .price-group {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.some .car-btn {
  display: flex;
  align-items: flex-end;
  position: absolute;
  right: 0;
}
.some .add-group {
  position: relative;
}
.icon_scan {
    width: 32rpx;
    height: 32rpx;
    background: url('https://storage.360buyimg.com/wximg/common/scan.png') no-repeat;
    background-size: 100% 100%;
    margin-right: 16rpx;
}