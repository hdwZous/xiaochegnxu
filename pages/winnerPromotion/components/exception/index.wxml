<view
  id="default-container"
  class="default flex-col {{ isRest ? '' : 'height-fill'}} {{ readySuccess ? '' : 'view-opacity' }}"
  style="{{  isRest ? 'height:' +  restHeight : '' }}"
>
  <block wx:if="{{!guideData}}">
    <block wx:if="{{src}}">
      <image
        class="net_error {{type==0?'loading':''}}"
        src="{{src}}"
      />
    </block>
    <block wx:if="{{type!=0}}">
      <view class="text">{{tips}}</view>
      <block wx:if="{{btnType}}">
        <button
          bindtap="dealDefault"
          class="btn"
          open-type="{{btnType}}"
        >{{btnText}}</button>
      </block>
      <block wx:else>
        <view
          wx:if="{{btnText}}"
          bindtap="dealDefault"
          class="btn"
        >{{btnText}}</view>
      </block>
    </block>
  </block>
  <block wx:else>
    <image
      wx:if="{{guideData.imgUrl}}"
      class="net_error"
      src="{{guideData.imgUrl}}"
    />
    <view
      wx:if="{{tips}}"
      class="text"
      style="margin-top: 20rpx"
    >{{tips}}</view>
    <view
      wx:if="{{guideData.desc}}"
      class="text"
      style="color:{{guideData.descColorCode}};margin-top: 20rpx"
    >{{guideData.desc}}</view>
    <view
      wx:if="{{guideData.linkText}}"
      bindtap="dealDefault"
      class="guide-btn"
      style="background-color: {{guideData.descColorCode}}"
    >{{guideData.linkText}}</view>
  </block>
</view>
