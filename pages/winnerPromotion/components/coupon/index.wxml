<view class="coupon-item">
  <view class="coupon-item__left">
    <view class="coupon-item__price">
      <view class="price-box">
        <text
          class="price-unit"
          wx:if="{{coupon.priceUnit===1}}"
        >¥</text>
        <text class="price-value">{{coupon.price}}</text>
        <text
          class="price-unit"
          wx:if="{{coupon.priceUnit===2}}"
        >折</text>
      </view>
      <view class="price-desc">{{coupon.couponLimit}}</view>
    </view>
    <view class="coupon-item__info">
      <view class="title">{{coupon.couponTitle}}</view>
      <view class="small">{{coupon.couponExpire}}</view>
    </view>
  </view>
  <view class="coupon-item__right">
    <view
      class="coupon-item__button {{coupon.markState !== 2 ? 'disabled': ''}}"
      bind:tap="handleTapCoupon"
    >{{buttonLabel}}</view>
  </view>
</view>
