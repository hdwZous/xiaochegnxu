.coupon-item {
  display: flex;
  justify-content: space-between;
  border-radius: 4rpx;
  height: 148rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.10);
  border: 1rpx solid rgba(255, 69, 94, 0.12);
}

.coupon-item__right {
  flex-shrink: 0;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 180rpx;
}

.coupon-item__right::before {
  position: absolute;
  top: 0;
  bottom: 0;
  left: -1rpx;
  margin: auto;
  content: '';
  display: block;
  width: 0;
  height: 90rpx;
  border-left: 1rpx dashed rgba(0, 0, 0, 0.1);
}

.coupon-item__button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 112rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background-color: rgba(255, 69, 94, 1);
  font-size: 24rpx;
  color: #fff;
}

.coupon-item__button.disabled {
  background-color: transparent;
  border: 1px solid #ccc;
  color: #999;
}

.coupon-item__left {
  position: relative;
  width: 530rpx;
  display: flex;
}

.coupon-item__left::before,
.coupon-item__left::after {
  position: absolute;
  right: -12rpx;
  content: '';
  display: block;
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background-color: #f8f8f8;
}

.coupon-item__left::before {
  top: -12rpx;
}

.coupon-item__left::after {
  bottom: -12rpx;
}

.coupon-item__price {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 184rpx;
}

.coupon-item__price .price-box {
  color: #FF455E;
  font-weight: 500;
}

.coupon-item__price .price-unit {
  font-size: 30rpx;
}

.coupon-item__price .price-value {
  font-size: 56rpx;
  line-height: 56rpx;
}

.coupon-item__price .price-desc {
  font-size: 22rpx;
  color: #666666;
}

.coupon-item__info {
  display: flex;
  flex-direction: column;
  justify-content: center;

  width: 346rpx;
  height: 100%;
}

.coupon-item__info .title {
  width: 100%;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.coupon-item__info .small {
  margin-top: 14rpx;
  font-weight: 400;
  color: #666666;
  font-size: 20rpx;
  line-height: 28rpx;
}

.footer {
  padding: 10rpx 20rpx 30rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 300;
  color: #999999;
}
