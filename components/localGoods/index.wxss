.local_goods_wrap {
    width: 344rpx;
    height: 522rpx;
    border-radius: 24rpx;
    background: #ffffff;
}
.local_title_case {
    padding: 40rpx 0 20rpx;
    align-items: center;
    justify-content: center;
}
.local_left_icon {
    width: 40rpx;
    height: 40rpx;
    background: url("https://storage.360buyimg.com/wximg/home/local_goods_left_icon.png")
        no-repeat center;
    background-size: 100% 100%;
}
.local_right_icon {
    width: 40rpx;
    height: 40rpx;
    background: url("https://storage.360buyimg.com/wximg/home/local_goods_right_icon.png")
        no-repeat center;
    background-size: 100% 100%;
}
.local_title {
    margin: 0 10rpx;
    color: rgba(51, 51, 51, 1);
    font-size: 32rpx;
    font-weight: bold;
}
.local_goods_case {
    padding: 16rpx;
    align-items: center;
}
.local_goods_logo {
    width: 100rpx;
    height: 100rpx;
    margin-right: 16rpx;
    border-radius: 8rpx;
}
.local_goods_img {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    border-radius: 8rpx;
}
.local_goods_info {
    overflow: hidden;
}
.local_goods_name {
    font-size: 24rpx;
    color: rgba(51, 51, 51, 1);
}
.local_goods_price {
    margin-top: 24rpx;
    font-size: 28rpx;
    font-weight: bold;
    font-family: "regular";
    color: rgb(255, 30, 25);
}
