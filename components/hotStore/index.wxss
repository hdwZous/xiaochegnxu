.hot_store_wrap {
    border-radius: 24rpx;
    background: #ffffff
        url("https://static-o2o.360buyimg.com/daojia/react/images/homeStore.266a76b6.png")
        no-repeat top center;
    background-size: 344rpx 160rpx;
    width: 344rpx;
    height: 614rpx;
}
.hot_store_title {
    padding: 40rpx 0 0;
    color: rgba(51, 51, 51, 1);
    font-size: 32rpx;
    text-align: center;
    font-weight: bold;
}
.hot_store_item {
    padding: 24rpx 0;
    margin: 0 24rpx;
    align-items: center;
    border-bottom: 1px solid rgba(246, 246, 246, 1);
}
.hot_store_item:last-child {
    border-bottom: 1px solid transparent;
}
.hot_store_name {
    line-height: 1em;
}
.hot_img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.hot_store_left {
    margin-right: 16rpx;
}
.hot_store_right {
    overflow: hidden;
}
.coupon_tag_case {
    overflow: hidden;
    margin-right: 10rpx;
    margin-top: 10rpx;
    display: inline-block;
}
.coupon_tag {
    padding: 0 10rpx;
    position: relative;
    border-radius: 4rpx;
    font-size: 20rpx;
}
.left_radio {
    position: absolute;
    width: 10rpx;
    height: 10rpx;
    left: -8rpx;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 50%;
    background: #ffffff;
    border: 1px solid rgb(252, 140, 138);
}
.right_radio {
    position: absolute;
    width: 10rpx;
    height: 10rpx;
    right: -8rpx;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 50%;
    background: #ffffff;
    border: 1px solid rgb(252, 140, 138);
}
