.product-detail-add-btn {
  min-width: 160rpx;
  display: inline-block;
  padding: 0 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 22px;
  box-sizing: border-box;
  background: linear-gradient(270deg, rgba(0, 190, 52, 1) 0%, rgba(0, 203, 30, 1) 100%);
}

.product-detail-add-btn.gray {
  background: linear-gradient(135deg, #CCCCCC 0%, #AAAAAA 100%);
}