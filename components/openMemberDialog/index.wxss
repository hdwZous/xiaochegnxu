.omd_wrap {
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  position: fixed;
  background: rgba(0, 0, 0, 0.45);
  z-index: 30;
}

.content_box {
  width: 630rpx;
  height: 800rpx;
  font-size: 0;
  background-image: url("https://storage.360buyimg.com/wximg/storewin/st-member-bc.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center;
}

.close_icon {
  width: 74rpx;
  height: 74rpx;
  margin-top: 40rpx;
}

.content_title {
  font-size: 48rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #6E5645;
  margin-top: 98rpx;
  line-height: 44rpx;
}

.content_desc {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #AF7D59;
  text-align: center;
  margin-top: 20rpx;
}

.coupon_wrap {
  width: 556rpx;
  height: 378rpx;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx;
  overflow-y: scroll;
  background: #FFFFFF;
  border-radius: 20rpx 20rpx 0px 0px;
  margin-top: 44rpx;
}
.coupon_wrap_height1{
  height: 460rpx;
  margin-top:26rpx;
}
.coupon_wrap_height2{
  height: 380rpx;
  margin-top:44rpx;
}
.coupon-box {
  width: 516rpx;
  height: 116rpx;
  background-image: url("https://storage.360buyimg.com/wximg/storewin/st-member-coupon.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center;
  margin-top: 8rpx;
}

.coupon_wrap .coupon-box:first-of-type {
  margin-top: 20rpx;
}

.coupon-box .coupon_left {
  width: 172rpx;
  height: 100%;
  position: relative;
}

.coupon-box .coupon_right {
  width: 344rpx;
  height: 100%;
  box-sizing: border-box;
  padding-left: 26rpx;
}

.coupon_left .left_top_icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 72rpx;
  height: 28rpx;
  padding: 0 10rpx;
  line-height: 28rpx;
  text-align: center;
  background: #FFDFC9;
  border-radius: 8rpx 0px 10rpx 0px;
  font-size: 20rpx;
  font-weight: 400;
  color: #FF5757;
}

.coupon_left .price {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 116rpx;
  font-size: 60rpx;
  font-family: 'regular';
  font-weight: 500;
  color: #FF1E1A;
}

.coupon_left .price.small {
  font-family: PingFangSC-Medium, PingFang SC;
  font-size: 32rpx;
}

.coupon_left .price .price-symbol {
  font-size: 28rpx;
  margin-right: 4rpx;
}

.coupon_right .right_des {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 28rpx;
}

.coupon_right .right_detail {
  flex: 1;
}

.coupon_right .right_tag_box {
  margin-top: 14rpx;
}

.coupon_right .right_tag_box .tag {
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  padding: 0 6rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF5757;
  margin-right: 10rpx;
}

.open-btn {
  width: 382rpx;
  height: 80rpx;
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  color: #FFEAC7;
  background: url('https://storage.360buyimg.com/wximg/common/open_member.png') no-repeat;
  background-size: 100% 100%;
}

.open-agreement {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #AF7D59;
  line-height: 30rpx;
  margin-top: 18rpx;
}

.open-agreement .txt {
  display: inline-block;
  text-decoration: underline;
}