.swiper_case {
    position: relative;
}
.swiper_wrap {
    width: 344rpx;
    height: 575rpx;
}
.swiper_item {
    width: 344rpx;
    height: 575rpx;
}
.swiper_img {
    width: 100%;
    height: 100%;
    border-radius: 24rpx;
}
.dot {
    position: absolute;
    left: 50%;
    bottom: 20rpx;
    transform: translateX(-50%);
}
.dot_item {
    width: 20rpx;
    height: 10rpx;
    background: rgba(255, 255, 255, 0.4);
    margin: 0 8rpx;
    border-radius: 6rpx;
}
.active {
    background: #ffffff;
}