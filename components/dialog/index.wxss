@import "/common/css/global.wxss";
.confirm-dialog-case {
    position: relative;
}
.confirm-dialog-top {
    z-index: 3;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 40rpx;
    border-radius: 24rpx 24rpx 0 0;
}
.confirm-dialog-bottom {
    z-index: 3;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 40rpx;
    border-radius: 0 0 24rpx 24rpx;
}
.confirm-dialog-bg{
    display:-webkit-flex;
    display:flex;
    -webkit-justify-content:center;
    justify-content:center;
    -webkit-align-items:center;
    align-items:center;
    z-index:1000;
    position:fixed;
    top:0;
    bottom:0;
    left:0;
    right:0;
    background:rgba(0,0,0,.7);
}
.confirm-dialog-bg .confirm-dialog-body{

    background: white;
    border-radius:24rpx;
    -webkit-border-radius:24rpx;
    position: relative;
    max-height: 692rpx;
}


.confirm-dialog-bg .confirm-dialog-close{
    position: relative;
    /* bottom: -60rpx; */
    background: url("https://storage.360buyimg.com/wximg/bargain/close.png") center no-repeat;
    background-size: cover;
    -webkit-background-size: cover;
    width: 74rpx;
    height: 74rpx;
    display: inline-block;
    margin-top: 40rpx;
}
