/* 0.5px边框 */
.old-coupon-one-right .btn-has-grap {
  position: relative;
}
.old-coupon-one-right .btn-has-grap:after {
  /*z-index: -999;*/
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid;
  width: 200%;
  height: 200%;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(0.5, 0.5);
  transform: scale(0.5, 0.5);
  box-sizing: border-box;
  border-radius: 60rpx;
}

.leftIcon{
  position: absolute;
  left:0;
  top:0;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  background:linear-gradient(315deg,rgba(255,81,56,1) 0%,rgba(255,125,125,1) 100%);
  border-radius:4rpx 0px 8rpx 0px;
  padding:0 6rpx;
}
.leftArrow{
  width: 14rpx;
  height: 16rpx;
  padding-left: 6rpx;
  padding-right: 4rpx;
}
.boxShadow{
  box-shadow:0px 2px 8px 0px rgba(0,0,0,0.06);
}
.desc_wrap{
  display: flex;
  border-top-width: 0 !important;
  padding-bottom: 20rpx;
}
.desc_left{
  width: 180rpx;
}
.desc_right{
  width: calc(100% - 200rpx);
  display: flex;
  justify-content: space-between;
  border-top: 1rpx dashed #ECECEC;
  box-sizing: border-box;
  margin-right: 24rpx;
  padding-top: 10rpx;
  font-size: 22rpx;
  color: #999;
}
.desc_arrow{
  transition: all ease 0.3s;
  width: 13px;
  height: 13px;
}
.desc_arrow image{
  width: 100%;
  padding-left: 10rpx;
}
.arrow_up{
  transform: rotateX(180deg);
}
/* 单选按钮 */
.ration_wrap{
  position: absolute;
  top:50%;
  width: 44rpx;
  height: 44rpx;
  left:-22rpx;
  top:50%;
  transform: translateY(-50%);
  z-index: 10;
}
