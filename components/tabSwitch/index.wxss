@import "/common/css/global.wxss";
.top-tab{
  /* height: 60rpx; */
  margin-left: 34rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 32rpx;
  align-items: baseline;
}
.tab-item{
  margin-right: 60rpx;
  position: relative;
}
.tab-active{
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 40rpx;
}
.scale {
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-animation: moveScale .5s 1;
  animation: moveScale .5s 1;
}


.fadeInLeft {
  -webkit-animation: fadeInLeft .5s 1;
  animation: fadeInLeft .5s 1;
}
.fadeCommon{
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: -1;
  width: 100%;
  height: 8rpx;
  background: #4BD662;
  overflow: hidden;
}
.fadeInRight{
  -webkit-animation: fadeInRight .5s 1;
  animation: fadeInRight .5s 1;
}
@keyframes fadeInLeft{
  from {
      opacity: 0;
      -webkit-transform: translate(-100rpx,0); 
      transform: stranslate(-100rpx,0); 
  }
  to {
      opacity:1;
      -webkit-transform: translate(0,0); 
      transform: stranslate(0,0); 
  }
}

@keyframes fadeInRight{
  from {
      opacity: 0;
      -webkit-transform: translate(100rpx,0); 
      transform: stranslate(100rpx,0); 
  }
  to {
      opacity:1;
      -webkit-transform: translate(0,0); 
      transform: stranslate(0,0); 
  }
}
@keyframes moveScale {
  0% {
    transform: scale(0.7);
  }

  100% {
    transform: scale(1);
  }
}