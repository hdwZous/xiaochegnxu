.animation {
    -webkit-transform-origin: center;
    transform-origin: center;
    -webkit-animation:mymove 0.6s infinite;
    animation:mymove 0.6s infinite;
    animation-direction:alternate;
}
@-webkit-keyframes mymove {
    1% {transform: translateY(0rpx);}
    10% {transform: translateY(-2rpx);}
    20% {transform: translateY(-4rpx);}
    30% {transform: translateY(-6rpx);}
    40% {transform: translateY(-8rpx);}
    50% {transform: translateY(-10rpx);}
    60% {transform: translateY(-12rpx);}
    70% {transform: translateY(-14rpx);}
    80% {transform: translateY(-16rpx);}
    90% {transform: translateY(-18rpx);}
    100% {transform: translateY(-20rpx);}
}
@keyframes mymove {
    1% {transform: translateY(0rpx);}
    10% {transform: translateY(-2rpx);}
    20% {transform: translateY(-4rpx);}
    30% {transform: translateY(-6rpx);}
    40% {transform: translateY(-8rpx);}
    50% {transform: translateY(-10rpx);}
    60% {transform: translateY(-12rpx);}
    70% {transform: translateY(-14rpx);}
    80% {transform: translateY(-16rpx);}
    90% {transform: translateY(-18rpx);}
    100% {transform: translateY(-20rpx);}
}

