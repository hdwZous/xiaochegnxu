.wrap {
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.7);
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
}
.wrap .content{
    width: 540rpx;
    background-color: #fff;
    border-radius: 20rpx;
    position: absolute;
    left:50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color:#000;
    font-size: 28rpx;
    padding: 0 56rpx 20rpx;
}
.text{
    text-align: left;
    margin-bottom: 30rpx;
    max-height: 540rpx;
    overflow-y: scroll;
}
.subtext{
    text-indent: 56rpx;
}
.link-text{
    display: inline;
    color:#47B34F;
}
.title{
    text-align: center;
    font-size: 36rpx;
    padding: 40rpx 0 30rpx;
}
.btn-box{
    display: flex;
    align-items: center;
}
.btn_text{
    font-size: 36rpx;
    width:300rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 0 auto;
}
.sure{
    background-color: #47B34F;
    color:#fff;
    border-radius: 40rpx;
    margin-bottom: 10rpx;
}
.disagree{
    color:#000;
}
.icon_close {
    position: absolute;
    width:120rpx;
    height: 120rpx;
    left:50%;
    top: 95%;
    transform: translate(-50%,-50%);
    text-align: center;
}
.icon_close .img {
    width: 74rpx;
    height: 74rpx;
}
.content_img {
    width: 100%;
    height: 100%;
}